\v 1 Und \w da|strong="H1961"\w* \w Salomo|strong="H8010"\w* \w hatte|strong="H3615"\w* \w ausgebaut|strong="H1129"\w* des \w HERRN|strong="H3068"\w* \w Haus|strong="H1004"\w* und des \w Königs|strong="H4428"\w* \w Haus|strong="H1004"\w* und \w alles|strong="H3605"\w*, was \w er|strong="H8010"\w* \w begehrte|strong="H2837"\w* \w und|strong="H0834"\w* \w Lust|strong="H2654"\w* hatte zu \w machen|strong="H6213"\w*,  
\v 2  \w erschien|strong="H7200"\w* \w ihm|strong="H8010"\w* der \w HERR|strong="H3068"\w* zum \w andernmal|strong="H8145"\w*, \w wie|strong="H0834"\w* er \w ihm|strong="H0413"\w* \w erschienen|strong="H7200"\w* war zu \w Gibeon|strong="H1391"\w*.  
\v 3 Und der \w HERR|strong="H3068"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: Ich habe dein \w Gebet|strong="H8605"\w* und \w Flehen|strong="H8467"\w* \w gehört|strong="H8085"\w*, \w das|strong="H0834"\w* du vor \w mir|strong="H6440"\w* gefleht \w hast|strong="H2603"\w*, und \w habe|strong="H2088"\w* dies \w Haus|strong="H1004"\w* \w geheiligt|strong="H6942"\w*, \w das|strong="H0834"\w* du gebaut \w hast|strong="H1129"\w*, daß ich meinen \w Namen|strong="H8034"\w* \w dahin|strong="H8033"\w* \w setze|strong="H7760"\w* \w ewiglich|strong="H5769"\w*; und meine \w Augen|strong="H5869"\w* und mein \w Herz|strong="H3820"\w* sollen \w da|strong="H8033"\w* \w sein|strong="H1961"\w* \w allewege|strong="H3605"\w*.  
\v 4 Und du, \w so|strong="H0518"\w* \w du|strong="H0859"\w* vor \w mir|strong="H6440"\w* \w wandelst|strong="H3212"\w*, \w wie|strong="H0834"\w* dein \w Vater|strong="H0001"\w* \w David|strong="H1732"\w* gewandelt \w hat|strong="H1980"\w*, mit \w rechtschaffenem|strong="H8537"\w* \w Herzen|strong="H3824"\w* und \w aufrichtig|strong="H3476"\w*, daß du \w tust|strong="H6213"\w* \w alles|strong="H3605"\w*, \w was|strong="H0834"\w* ich dir geboten \w habe|strong="H6680"\w*, und meine \w Gebote|strong="H2706"\w* und \w Rechte|strong="H4941"\w* \w hältst|strong="H8104"\w*:  
\v 5 so will ich \w bestätigen|strong="H6965"\w* den \w Stuhl|strong="H3678"\w* deines \w Königreiches|strong="H4467"\w* \w über|strong="H5921"\w* \w Israel|strong="H3478"\w* \w ewiglich|strong="H5769"\w*, \w wie|strong="H0834"\w* ich \w deinem|strong="H5921"\w* \w Vater|strong="H0001"\w* \w David|strong="H1732"\w* geredet \w habe|strong="H1696"\w* und \w gesagt|strong="H0559"\w*: Es soll dir \w nicht|strong="H3808"\w* \w gebrechen|strong="H3772"\w* an einem \w Mann|strong="H0376"\w* \w auf|strong="H4480"\w* \w dem|strong="H5921"\w* \w Stuhl|strong="H3678"\w* \w Israels|strong="H3478"\w*.  
\v 6  \w Werdet|strong="H0518"\w* \w ihr|strong="H0859"\w* \w aber|strong="H7725"\w* euch \w von|strong="H4480"\w* \w mir|strong="H0310"\w* \w abwenden|strong="H7725"\w*, ihr und eure \w Kinder|strong="H1121"\w*, und \w nicht|strong="H3808"\w* \w halten|strong="H8104"\w* meine \w Gebote|strong="H4687"\w* und \w Rechte|strong="H2708"\w*, \w die|strong="H0834"\w* ich \w euch|strong="H6440"\w* vorgelegt \w habe|strong="H5414"\w*, und \w hingehen|strong="H1980"\w* und \w andern|strong="H0312"\w* \w Göttern|strong="H0430"\w* \w dienen|strong="H5647"\w* und sie \w anbeten|strong="H7812"\w*:  
\v 7 so werde ich \w Israel|strong="H3478"\w* \w ausrotten|strong="H3772"\w* \w von|strong="H4480"\w* dem \w Lande|strong="H0127"\w*, \w das|strong="H0834"\w* ich ihnen gegeben \w habe|strong="H5414"\w*; und das \w Haus|strong="H1004"\w*, \w das|strong="H0834"\w* ich geheiligt \w habe|strong="H6942"\w* meinem \w Namen|strong="H8034"\w*, will \w ich|strong="H4480"\w* \w verwerfen|strong="H7971"\w* von meinem \w Angesicht|strong="H6440"\w*; und \w Israel|strong="H3478"\w* wird ein \w Sprichwort|strong="H4912"\w* und eine \w Fabel|strong="H8148"\w* \w sein|strong="H1961"\w* unter \w allen|strong="H3605"\w* \w Völkern|strong="H5971"\w*.  
\v 8  \w Und|strong="H2088"\w* das \w Haus|strong="H1004"\w* wird \w eingerissen|strong="H5945"\w* \w werden|strong="H1961"\w*, daß \w alle|strong="H3605"\w*, \w die|strong="H5921"\w* \w vorübergehen|strong="H5674"\w*, werden sich \w entsetzen|strong="H8074"\w* und \w zischen|strong="H8319"\w* und \w sagen|strong="H0559"\w*: \w Warum|strong="H5921"\w* hat der \w HERR|strong="H3068"\w* \w diesem|strong="H2063"\w* \w Lande|strong="H0776"\w* und \w diesem|strong="H2088"\w* \w Hause|strong="H1004"\w* \w also|strong="H3602"\w* \w getan|strong="H6213"\w*?  
\v 9 so wird man \w antworten|strong="H0559"\w*: \w Darum|strong="H5921"\w*, daß sie den \w HERRN|strong="H3068"\w*, ihren \w Gott|strong="H0430"\w*, verlassen \w haben|strong="H5800"\w*, \w der|strong="H0834"\w* ihre \w Väter|strong="H0001"\w* \w aus|strong="H4480"\w* \w Ägyptenland|strong="H0776"\w* \w führte|strong="H3318"\w*, und haben \w angenommen|strong="H2388"\w* \w andere|strong="H0312"\w* \w Götter|strong="H0430"\w* und sie \w angebetet|strong="H7812"\w* und ihnen \w gedient|strong="H5647"\w*, \w darum|strong="H5921"\w* hat der \w HERR|strong="H3068"\w* \w all|strong="H3605"\w* \w dies|strong="H2063"\w* \w Übel|strong="H7451"\w* \w über|strong="H5921"\w* sie \w gebracht|strong="H0935"\w*.  
\v 10  \w Da|strong="H1961"\w* \w nun|strong="H4480"\w* die \w zwanzig|strong="H6242"\w* \w Jahre|strong="H8141"\w* \w um|strong="H7097"\w* \w waren|strong="H7097"\w*, in \w welchen|strong="H0834"\w* \w Salomo|strong="H8010"\w* die \w zwei|strong="H8147"\w* \w Häuser|strong="H1004"\w* \w baute|strong="H1129"\w*, des \w HERRN|strong="H3068"\w* \w Haus|strong="H1004"\w* und des \w Königs|strong="H4428"\w* \w Haus|strong="H1004"\w*,  
\v 11 dazu \w Hiram|strong="H2438"\w*, der \w König|strong="H4428"\w* zu \w Tyrus|strong="H6865"\w*, \w Salomo|strong="H8010"\w* \w Zedernbäume|strong="H0730"\w* und \w Tannenbäume|strong="H1265"\w* und \w Gold|strong="H2091"\w* nach \w allem|strong="H3605"\w* seinem \w Begehr|strong="H2656"\w* \w brachte|strong="H5375"\w*: \w Da|strong="H0227"\w* \w gab|strong="H5414"\w* der \w König|strong="H4428"\w* \w Salomo|strong="H8010"\w* \w Hiram|strong="H2438"\w* \w zwanzig|strong="H6242"\w* \w Städte|strong="H5892"\w* im \w Land|strong="H0776"\w* \w Galiläa|strong="H1551"\w*.  
\v 12 Und \w Hiram|strong="H2438"\w* zog \w aus|strong="H3318"\w* \w von|strong="H4480"\w* \w Tyrus|strong="H6865"\w*, die \w Städte|strong="H5892"\w* zu \w besehen|strong="H7200"\w*, \w die|strong="H0834"\w* ihm \w Salomo|strong="H8010"\w* gegeben \w hatte|strong="H5414"\w*; und sie \w gefielen|strong="H3474"\w* \w ihm|strong="H5869"\w* \w nicht|strong="H3808"\w*,  
\v 13 und er \w sprach|strong="H0559"\w*: \w Was|strong="H4100"\w* sind \w das|strong="H0428"\w* für \w Städte|strong="H5892"\w*, mein \w Bruder|strong="H0251"\w*, \w die|strong="H0834"\w* du mir gegeben \w hast|strong="H5414"\w*? Und \w hieß|strong="H7121"\w* das \w Land|strong="H0776"\w* \w Kabul|strong="H3521"\w* bis \w auf|strong="H5704"\w* \w diesen|strong="H2088"\w* \w Tag|strong="H3117"\w*.  
\v 14 Und \w Hiram|strong="H2438"\w* hatte \w gesandt|strong="H7971"\w* dem \w König|strong="H4428"\w* Salomo \w hundertzwanzig|strong="H3967"\w* \w Zentner|strong="H3603"\w* \w Gold|strong="H2091"\w*.  
\v 15  \w Und|strong="H2088"\w* also verhielt sich'\w s|strong="H1697"\w* mit den \w Fronleuten|strong="H4522"\w*, \w die|strong="H0834"\w* der \w König|strong="H4428"\w* \w Salomo|strong="H8010"\w* \w aushob|strong="H5927"\w*, zu \w bauen|strong="H1129"\w* des \w HERRN|strong="H3068"\w* \w Haus|strong="H1004"\w* und sein \w Haus|strong="H1004"\w* und \w Millo|strong="H4407"\w* und die \w Mauer|strong="H2346"\w* \w Jerusalems|strong="H3389"\w* und \w Hazor|strong="H2674"\w* und \w Megiddo|strong="H4023"\w* und \w Geser|strong="H1507"\w*.  
\v 16 Denn \w Pharao|strong="H6547"\w*, der \w König|strong="H4428"\w* in \w Ägypten|strong="H4714"\w*, war \w heraufgekommen|strong="H5927"\w* und hatte \w Geser|strong="H1507"\w* \w gewonnen|strong="H3920"\w* und mit \w Feuer|strong="H0784"\w* \w verbrannt|strong="H8313"\w* und die \w Kanaaniter|strong="H3669"\w* \w erwürgt|strong="H2026"\w*, die in der \w Stadt|strong="H5892"\w* \w wohnten|strong="H3427"\w*, und hatte sie seiner \w Tochter|strong="H1323"\w*, \w Salomos|strong="H8010"\w* \w Weib|strong="H0802"\w*, zum \w Geschenk|strong="H7964"\w* \w gegeben|strong="H5414"\w*.  
\v 17 Also \w baute|strong="H1129"\w* \w Salomo|strong="H8010"\w* \w Geser|strong="H1507"\w* und das \w niedere|strong="H8481"\w* Beth-\w Horon|strong="H1032"\w*  
\v 18 und \w Baalath|strong="H1191"\w* und \w Thamar|strong="H8412"\w* in der \w Wüste|strong="H4057"\w* im \w Lande|strong="H0776"\w*  
\v 19 und \w alle|strong="H3605"\w* \w Städte|strong="H4543"\w* der \w Kornhäuser|strong="H5892"\w*, \w die|strong="H0834"\w* \w Salomo|strong="H8010"\w* \w hatte|strong="H1961"\w*, und alle \w Städte|strong="H5892"\w* der \w Wagen|strong="H7393"\w* und die \w Städte|strong="H5892"\w* der \w Reiter|strong="H6571"\w*, und \w wozu|strong="H0834"\w* \w er|strong="H8010"\w* \w Lust|strong="H2837"\w* \w hatte|strong="H2836"\w* zu \w bauen|strong="H1129"\w* in \w Jerusalem|strong="H3389"\w*, im \w Libanon|strong="H3844"\w* und im \w ganzen|strong="H3605"\w* \w Lande|strong="H0776"\w* seiner \w Herrschaft|strong="H4475"\w*.  
\v 20 Und \w alles|strong="H3605"\w* \w übrige|strong="H3498"\w* \w Volk|strong="H5971"\w* \w von|strong="H4480"\w* den \w Amoritern|strong="H0567"\w*, \w Hethitern|strong="H2850"\w*, \w Pheresitern|strong="H6522"\w*, \w Hevitern|strong="H2340"\w* und \w Jebusitern|strong="H2983"\w*, \w die|strong="H0834"\w* \w nicht|strong="H3808"\w* \w von|strong="H4480"\w* den \w Kindern|strong="H1121"\w* \w Israel|strong="H3478"\w* \w waren|strong="H1992"\w*,  
\v 21 derselben \w Kinder|strong="H1121"\w*, \w die|strong="H0834"\w* sie \w hinter|strong="H0310"\w* sich \w übrigbleiben|strong="H3498"\w* \w ließen|strong="H3498"\w* im \w Lande|strong="H0776"\w*, \w die|strong="H0834"\w* die \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w* \w nicht|strong="H3808"\w* \w konnten|strong="H3201"\w* \w verbannen|strong="H2763"\w*: die \w machte|strong="H5927"\w* \w Salomo|strong="H8010"\w* zu \w Fronleuten|strong="H5647"\w* bis \w auf|strong="H5704"\w* \w diesen|strong="H2088"\w* \w Tag|strong="H3117"\w*.  
\v 22 Aber \w von|strong="H4480"\w* den \w Kindern|strong="H1121"\w* \w Israel|strong="H3478"\w* \w machte|strong="H5414"\w* \w er|strong="H8010"\w* \w nicht|strong="H3808"\w* \w Knechte|strong="H5650"\w*, \w sondern|strong="H3588"\w* ließ \w sie|strong="H1992"\w* \w Kriegsleute|strong="H0582"\w* und seine \w Knechte|strong="H5650"\w* und \w Fürsten|strong="H8269"\w* und \w Ritter|strong="H7991"\w* und \w über|strong="H8269"\w* seine \w Wagen|strong="H7393"\w* und \w Reiter|strong="H6571"\w* sein.  
\v 23 Und \w die|strong="H0428"\w* \w obersten|strong="H8269"\w* \w Amtleute|strong="H5324"\w*, \w die|strong="H0834"\w* \w über|strong="H5921"\w* \w Salomos|strong="H8010"\w* \w Geschäfte|strong="H4399"\w* waren, deren waren \w fünfhundertfünfzig|strong="H2568"\w*, die über das \w Volk|strong="H5971"\w* \w herrschten|strong="H7287"\w*, das die \w Geschäfte|strong="H4399"\w* \w ausrichtete|strong="H6213"\w*.  
\v 24  \w Und|strong="H0389"\w* die \w Tochter|strong="H1323"\w* \w Pharaos|strong="H6547"\w* \w zog|strong="H5927"\w* \w herauf|strong="H5927"\w* \w von|strong="H4480"\w* der \w Stadt|strong="H5892"\w* \w Davids|strong="H1732"\w* \w in|strong="H0413"\w* ihr \w Haus|strong="H1004"\w*, \w das|strong="H0834"\w* er für sie gebaut \w hatte|strong="H1129"\w*. \w Da|strong="H0227"\w* baute \w er|strong="H1129"\w* auch \w Millo|strong="H4407"\w*.  
\v 25 Und \w Salomo|strong="H8010"\w* \w opferte|strong="H5927"\w* des \w Jahres|strong="H8141"\w* \w dreimal|strong="H7969"\w* \w Brandopfer|strong="H5930"\w* und \w Dankopfer|strong="H8002"\w* \w auf|strong="H5921"\w* dem \w Altar|strong="H4196"\w*, \w den|strong="H0834"\w* er dem \w HERRN|strong="H3068"\w* gebaut \w hatte|strong="H1129"\w*, und \w räucherte|strong="H6999"\w* \w auf|strong="H0853"\w* \w ihm|strong="H0834"\w* \w vor|strong="H6440"\w* dem \w HERRN|strong="H3068"\w*. Und \w ward|strong="H7999"\w* also das \w Haus|strong="H1004"\w* \w fertig|strong="H7999"\w*.  
\v 26  \w Und|strong="H4428"\w* \w Salomo|strong="H8010"\w* \w machte|strong="H6213"\w* auch \w Schiffe|strong="H0590"\w* zu Ezeon-\w Geber|strong="H6100"\w*, \w das|strong="H0834"\w* bei \w Eloth|strong="H0359"\w* liegt \w am|strong="H5921"\w* \w Ufer|strong="H8193"\w* des \w Schilfmeers|strong="H5488"\w* im \w Lande|strong="H0776"\w* der \w Edomiter|strong="H0123"\w*.  
\v 27 Und \w Hiram|strong="H2438"\w* \w sandte|strong="H7971"\w* seine \w Knechte|strong="H5650"\w* im \w Schiff|strong="H0590"\w*, die gute \w Schiffsleute|strong="H0582"\w* und auf dem \w Meer|strong="H3220"\w* \w erfahren|strong="H3045"\w* \w waren|strong="H3045"\w*, \w mit|strong="H5973"\w* den \w Knechten|strong="H5650"\w* \w Salomos|strong="H8010"\w*;  
\v 28 und sie \w kamen|strong="H0935"\w* gen \w Ophir|strong="H0211"\w* und \w holten|strong="H3947"\w* \w daselbst|strong="H4480"\w* \w vierhundertzwanzig|strong="H0702"\w* \w Zentner|strong="H3603"\w* \w Gold|strong="H2091"\w* und brachten'\w s|strong="H0935"\w* \w dem|strong="H0413"\w* \w König|strong="H4428"\w* \w Salomo|strong="H8010"\w*.   
\c 10  
\p
\v 1 Und da das \w Gerücht|strong="H8088"\w* von \w Salomo|strong="H8010"\w* und von dem \w Namen|strong="H8034"\w* des \w HERRN|strong="H3068"\w* \w kam|strong="H8085"\w* vor die \w Königin|strong="H4436"\w* von \w Reicharabien|strong="H7614"\w*, kam \w sie|strong="H0935"\w*, Salomo zu \w versuchen|strong="H5254"\w* mit \w Rätseln|strong="H2420"\w*.  
\v 2 Und sie \w kam|strong="H0935"\w* gen \w Jerusalem|strong="H3389"\w* mit \w sehr|strong="H3966"\w* \w vielem|strong="H3515"\w* \w Volk|strong="H2428"\w*, mit \w Kamelen|strong="H1581"\w*, die \w Spezerei|strong="H1314"\w* \w trugen|strong="H5375"\w* \w und|strong="H3966"\w* \w viel|strong="H7227"\w* \w Gold|strong="H2091"\w* \w und|strong="H3368"\w* \w Edelsteine|strong="H0068"\w*. Und da sie \w zum|strong="H0413"\w* König \w Salomo|strong="H8010"\w* \w hineinkam|strong="H0935"\w*, \w redete|strong="H1696"\w* \w sie|strong="H0413"\w* ihm \w alles|strong="H3605"\w*, \w was|strong="H0834"\w* \w sie|strong="H5973"\w* \w sich|strong="H3824"\w* vorgenommen \w hatte|strong="H1961"\w*.  
\v 3 Und \w Salomo|strong="H8010"\w* \w sagte|strong="H5046"\w* es \w ihr|strong="H3605"\w* \w alles|strong="H1697"\w*, und \w war|strong="H1961"\w* \w dem|strong="H4480"\w* \w König|strong="H4428"\w* \w nichts|strong="H3808"\w* \w verborgen|strong="H5956"\w*, \w das|strong="H0834"\w* er ihr \w nicht|strong="H3808"\w* \w sagte|strong="H5046"\w*.  
\v 4 Da aber die \w Königin|strong="H4436"\w* von \w Reicharabien|strong="H7614"\w* \w sah|strong="H7200"\w* \w alle|strong="H3605"\w* \w Weisheit|strong="H2451"\w* \w Salomos|strong="H8010"\w* und das \w Haus|strong="H1004"\w*, \w das|strong="H0834"\w* er gebaut \w hatte|strong="H1129"\w*,  
\v 5 und die \w Speise|strong="H3978"\w* für seinen \w Tisch|strong="H7979"\w* und seiner \w Knechte|strong="H5650"\w* \w Wohnung|strong="H4186"\w* und seiner \w Diener|strong="H8334"\w* \w Amt|strong="H4612"\w* und ihre \w Kleider|strong="H4403"\w* und seine \w Schenken|strong="H8248"\w* und seine \w Brandopfer|strong="H5930"\w*, \w die|strong="H0834"\w* er im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w opferte|strong="H5927"\w*, \w konnte|strong="H1961"\w* sie \w sich|strong="H3808"\w* \w nicht|strong="H7307"\w* \w mehr|strong="H5750"\w* \w enthalten|strong="H7307"\w*  
\v 6 und \w sprach|strong="H0559"\w* \w zum|strong="H0413"\w* \w König|strong="H4428"\w*: \w Es|strong="H1697"\w* ist \w wahr|strong="H0571"\w*, \w was|strong="H0834"\w* ich in meinem \w Lande|strong="H0776"\w* gehört \w habe|strong="H8085"\w* \w von|strong="H5921"\w* deinem \w Wesen|strong="H1697"\w* und \w von|strong="H5921"\w* deiner \w Weisheit|strong="H2451"\w*.  
\v 7 Und ich habe \w es|strong="H1697"\w* \w nicht|strong="H3808"\w* wollen \w glauben|strong="H0539"\w*, \w bis|strong="H5704"\w* ich gekommen \w bin|strong="H0935"\w* und habe es mit meinen \w Augen|strong="H5869"\w* \w gesehen|strong="H7200"\w*. Und \w siehe|strong="H2009"\w*, es ist mir \w nicht|strong="H3808"\w* die \w Hälfte|strong="H2677"\w* \w gesagt|strong="H5046"\w*. Du \w hast|strong="H3254"\w* \w mehr|strong="H3254"\w* \w Weisheit|strong="H2451"\w* und \w Gut|strong="H2896"\w*, denn \w das|strong="H0413"\w* \w Gerücht|strong="H8052"\w* ist, \w das|strong="H0834"\w* ich gehört \w habe|strong="H8085"\w*.  
\v 8  \w Selig|strong="H0835"\w* sind die \w Leute|strong="H0582"\w* \w und|strong="H0835"\w* \w deine|strong="H0428"\w* \w Knechte|strong="H5650"\w*, die \w allezeit|strong="H8548"\w* vor \w dir|strong="H6440"\w* \w stehen|strong="H5975"\w* und deine \w Weisheit|strong="H2451"\w* \w hören|strong="H8085"\w*.  
\v 9  \w Gelobt|strong="H1288"\w* \w sei|strong="H1961"\w* der \w HERR|strong="H3068"\w*, dein \w Gott|strong="H0430"\w*, \w der|strong="H0834"\w* zu dir Lust \w hat|strong="H2654"\w*, daß er dich \w auf|strong="H5921"\w* den \w Stuhl|strong="H3678"\w* \w Israels|strong="H3478"\w* gesetzt \w hat|strong="H5414"\w*; darum daß der \w HERR|strong="H3068"\w* \w Israel|strong="H3478"\w* \w liebhat|strong="H0160"\w* \w ewiglich|strong="H5769"\w*, hat er dich zum \w König|strong="H4428"\w* \w gesetzt|strong="H7760"\w*, daß du \w Gericht|strong="H4941"\w* und \w Recht|strong="H6666"\w* \w haltest|strong="H6213"\w*.  
