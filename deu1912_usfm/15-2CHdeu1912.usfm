\v 11  \w Die|strong="H2009"\w* \w Geschichten|strong="H1697"\w* aber \w Asas|strong="H0609"\w*, beide, die \w ersten|strong="H7223"\w* und die \w letzten|strong="H0314"\w*, \w siehe|strong="H2009"\w*, die sind \w geschrieben|strong="H3789"\w* \w im|strong="H5921"\w* \w Buch|strong="H5612"\w* von den \w Königen|strong="H4428"\w* Juda'\w s|strong="H3063"\w* und \w Israels|strong="H3478"\w*.  
\v 12 Und \w Asa|strong="H0609"\w* ward \w krank|strong="H2456"\w* an seinen \w Füßen|strong="H7272"\w* im \w neununddreißigsten|strong="H8672"\w* \w Jahr|strong="H8141"\w* seines \w Königreichs|strong="H4438"\w*, \w und|strong="H5704"\w* seine \w Krankheit|strong="H2483"\w* nahm \w sehr|strong="H4605"\w* \w zu|strong="H2483"\w*; \w und|strong="H1571"\w* er \w suchte|strong="H1875"\w* auch in seiner \w Krankheit|strong="H2483"\w* den \w HERRN|strong="H3068"\w* \w nicht|strong="H3808"\w*, \w sondern|strong="H3588"\w* die \w Ärzte|strong="H7495"\w*.  
\v 13 Also \w entschlief|strong="H7901"\w* \w Asa|strong="H0609"\w* \w mit|strong="H5973"\w* seinen \w Vätern|strong="H0001"\w* und \w starb|strong="H4191"\w* im \w einundvierzigsten|strong="H0259"\w* \w Jahr|strong="H8141"\w* seines \w Königreichs|strong="H4427"\w*.  
\v 14 Und man \w begrub|strong="H6912"\w* ihn in seinem \w Grabe|strong="H6913"\w*, \w das|strong="H0834"\w* er hatte lassen \w graben|strong="H3738"\w* in der \w Stadt|strong="H5892"\w* \w Davids|strong="H1732"\w*. Und sie \w legten|strong="H7901"\w* ihn auf sein \w Lager|strong="H4904"\w*, \w welches|strong="H0834"\w* man gefüllt \w hatte|strong="H4390"\w* mit gutem Räuchwerk \w und|strong="H1314"\w* \w allerlei|strong="H2177"\w* \w Spezerei|strong="H1314"\w*, nach der Kunst des \w Salbenbereiters|strong="H4842"\w* \w gemacht|strong="H7543"\w*, und \w machten|strong="H8313"\w* ihm \w einen|strong="H5704"\w* \w großen|strong="H1419"\w* \w Brand|strong="H8316"\w*.   
\c 17  
\p
\v 1 Und sein \w Sohn|strong="H1121"\w* \w Josaphat|strong="H3092"\w* ward \w König|strong="H4427"\w* an seiner \w Statt|strong="H8478"\w* und ward \w mächtig|strong="H2388"\w* \w wider|strong="H5921"\w* \w Israel|strong="H3478"\w*.  
\v 2 Und er \w legte|strong="H5414"\w* \w Kriegsvolk|strong="H2428"\w* in \w alle|strong="H3605"\w* \w festen|strong="H1219"\w* \w Städte|strong="H5892"\w* Juda'\w s|strong="H3063"\w* und \w setzte|strong="H5414"\w* \w Amtleute|strong="H5333"\w* im \w Lande|strong="H0776"\w* \w Juda|strong="H3063"\w* und in den \w Städten|strong="H5892"\w* \w Ephraims|strong="H0669"\w*, \w die|strong="H0834"\w* sein \w Vater|strong="H0001"\w* \w Asa|strong="H0609"\w* gewonnen \w hatte|strong="H3920"\w*.  
\v 3 Und der \w HERR|strong="H3068"\w* \w war|strong="H1961"\w* \w mit|strong="H5973"\w* \w Josaphat|strong="H3092"\w*; \w denn|strong="H3588"\w* er \w wandelte|strong="H1980"\w* in den \w vorigen|strong="H7223"\w* \w Wegen|strong="H1870"\w* seines \w Vaters|strong="H0001"\w* \w David|strong="H1732"\w* und \w suchte|strong="H1875"\w* \w nicht|strong="H3808"\w* die \w Baalim|strong="H1168"\w*,  
\v 4  \w sondern|strong="H3588"\w* den \w Gott|strong="H0430"\w* seines \w Vaters|strong="H0001"\w*, und \w wandelte|strong="H1980"\w* in seinen \w Geboten|strong="H4687"\w* und \w nicht|strong="H3808"\w* nach den \w Werken|strong="H4639"\w* \w Israels|strong="H3478"\w*.  
\v 5  \w Darum|strong="H3068"\w* \w bestätigte|strong="H3559"\w* \w ihm|strong="H3027"\w* der \w HERR|strong="H3068"\w* das \w Königreich|strong="H4467"\w*; und \w ganz|strong="H3605"\w* \w Juda|strong="H3063"\w* \w gab|strong="H5414"\w* \w Josaphat|strong="H3092"\w* \w Geschenke|strong="H4503"\w*, und er \w hatte|strong="H1961"\w* \w Reichtum|strong="H6239"\w* und \w Ehre|strong="H3519"\w* die \w Menge|strong="H7230"\w*.  
\v 6 Und da sein \w Herz|strong="H3820"\w* mutig \w ward|strong="H1361"\w* in den \w Wegen|strong="H1870"\w* des \w HERRN|strong="H3068"\w*, tat \w er|strong="H5493"\w* \w fürder|strong="H5750"\w* \w ab|strong="H5493"\w* die \w Höhen|strong="H1116"\w* und \w Ascherabilder|strong="H0842"\w* \w aus|strong="H4480"\w* \w Juda|strong="H3063"\w*.  
\v 7 Im \w dritten|strong="H7969"\w* \w Jahr|strong="H8141"\w* seines \w Königreichs|strong="H4427"\w* sandte \w er|strong="H7971"\w* seine \w Fürsten|strong="H8269"\w* Ben-\w Hail|strong="H1134"\w*, \w Obadja|strong="H5662"\w*, \w Sacharja|strong="H2148"\w*, \w Nathanael|strong="H5417"\w* und \w Michaja|strong="H4322"\w*, daß sie lehren \w sollten|strong="H3925"\w* in den \w Städten|strong="H5892"\w* Juda'\w s|strong="H3063"\w*;  
\v 8 und \w mit|strong="H5973"\w* ihnen die \w Leviten|strong="H3881"\w* \w Semaja|strong="H8098"\w*, \w Nethanja|strong="H5418"\w*, \w Sebadja|strong="H2069"\w*, \w Asael|strong="H6214"\w*, \w Semiramoth|strong="H8070"\w*, \w Jonathan|strong="H3083"\w*, \w Adonia|strong="H0138"\w*, \w Tobia|strong="H2900"\w* und Tob-\w Adonia|strong="H2899"\w*; und \w mit|strong="H5973"\w* ihnen die \w Priester|strong="H3548"\w* \w Elisama|strong="H0476"\w* und \w Joram|strong="H3088"\w*.  
\v 9 Und sie \w lehrten|strong="H3925"\w* in \w Juda|strong="H3063"\w* und \w hatten|strong="H5973"\w* das \w Gesetzbuch|strong="H5612"\w* des \w HERRN|strong="H3068"\w* \w mit|strong="H5973"\w* sich und zogen \w umher|strong="H5437"\w* in \w allen|strong="H3605"\w* \w Städten|strong="H5892"\w* Juda'\w s|strong="H3063"\w* und \w lehrten|strong="H3925"\w* das \w Volk|strong="H5971"\w*.  
\v 10  \w Und|strong="H6343"\w* es \w kam|strong="H1961"\w* die \w Furcht|strong="H6343"\w* des \w HERRN|strong="H3068"\w* \w über|strong="H5921"\w* \w alle|strong="H3605"\w* \w Königreiche|strong="H4467"\w* in den \w Landen|strong="H0776"\w*, \w die|strong="H0834"\w* \w um|strong="H5439"\w* \w Juda|strong="H3063"\w* \w her|strong="H5439"\w* lagen, daß sie \w nicht|strong="H3808"\w* \w stritten|strong="H3898"\w* \w wider|strong="H5973"\w* \w Josaphat|strong="H3092"\w*.  
\v 11  \w Und|strong="H4480"\w* die \w Philister|strong="H6430"\w* \w brachten|strong="H0935"\w* \w Josaphat|strong="H3092"\w* \w Geschenke|strong="H4503"\w*, eine \w Last|strong="H4853"\w* \w Silber|strong="H3701"\w*; \w und|strong="H1571"\w* die \w Araber|strong="H6163"\w* \w brachten|strong="H0935"\w* \w ihm|strong="H6163"\w* \w siebentausend|strong="H7651"\w* und \w siebenhundert|strong="H7651"\w* \w Widder|strong="H0352"\w* und \w siebentausend|strong="H7651"\w* und \w siebenhundert|strong="H7651"\w* \w Böcke|strong="H8495"\w*.  
\v 12 Also \w nahm|strong="H1980"\w* \w Josaphat|strong="H3092"\w* \w zu|strong="H1961"\w* und \w ward|strong="H1432"\w* \w immer|strong="H4605"\w* \w größer|strong="H1432"\w*; und er \w baute|strong="H1129"\w* in \w Juda|strong="H3063"\w* \w Burgen|strong="H1003"\w* und \w Kornstädte|strong="H5892"\w*  
\v 13 und \w hatte|strong="H1961"\w* \w viel|strong="H7227"\w* \w Vorrat|strong="H4399"\w* in den \w Städten|strong="H5892"\w* Juda'\w s|strong="H3063"\w* und streitbare \w Männer|strong="H0582"\w* und \w gewaltige|strong="H2428"\w* \w Leute|strong="H1368"\w* zu \w Jerusalem|strong="H3389"\w*.  
\v 14 Und \w dies|strong="H0428"\w* war die \w Ordnung|strong="H6486"\w* nach ihren \w Vaterhäusern|strong="H1004"\w*: in \w Juda|strong="H3063"\w* waren \w Oberste|strong="H8269"\w* über \w tausend|strong="H0505"\w*: \w Adna|strong="H5734"\w*, ein \w Oberster|strong="H8269"\w* und \w mit|strong="H5973"\w* ihm waren \w dreihunderttausend|strong="H7969"\w* \w gewaltige|strong="H2428"\w* \w Männer|strong="H1368"\w*;  
\v 15  \w Neben|strong="H5921"\w* ihm \w war|strong="H8269"\w* \w Johanan|strong="H3076"\w*, der \w Oberste|strong="H8269"\w*, und \w mit|strong="H5973"\w* ihm waren \w zweihundertachtzigtausend|strong="H3967"\w*;  
\v 16  \w neben|strong="H5921"\w* ihm war \w Amasja|strong="H6007"\w*, der \w Sohn|strong="H1121"\w* \w Sichris|strong="H2147"\w*, der \w Freiwillige|strong="H5068"\w* des \w HERRN|strong="H3068"\w*, \w und|strong="H5973"\w* mit ihm waren \w zweihundertausend|strong="H3967"\w* \w gewaltige|strong="H2428"\w* \w Männer|strong="H1368"\w*;  
\v 17 und \w von|strong="H4480"\w* den Kindern \w Benjamin|strong="H1144"\w* war \w Eljada|strong="H0450"\w*, ein \w gewaltiger|strong="H2428"\w* \w Mann|strong="H1368"\w*, und \w mit|strong="H5973"\w* ihm waren \w zweihunderttausend|strong="H3967"\w*, die mit \w Bogen|strong="H7198"\w* und \w Schild|strong="H4043"\w* gerüstet \w waren|strong="H5401"\w*;  
\v 18  \w neben|strong="H5921"\w* ihm war \w Josabad|strong="H3075"\w*, und \w mit|strong="H5973"\w* ihm waren \w hundertachtzigtausend|strong="H3967"\w* \w Gerüstete|strong="H2502"\w* zum \w Heer|strong="H6635"\w*.  
\v 19  \w Diese|strong="H0428"\w* dienten \w alle|strong="H8334"\w* dem \w König|strong="H4428"\w*, \w außer|strong="H4480"\w* denen, \w die|strong="H0834"\w* der \w König|strong="H4428"\w* noch gelegt \w hatte|strong="H5414"\w* in die \w festen|strong="H4013"\w* \w Städte|strong="H5892"\w* im \w ganzen|strong="H3605"\w* \w Juda|strong="H3063"\w*.   
\c 18  
\p
\v 1 Und \w Josaphat|strong="H3092"\w* \w hatte|strong="H1961"\w* \w große|strong="H7230"\w* \w Reichtümer|strong="H6239"\w* und \w Ehre|strong="H3519"\w* und verschwägerte \w sich|strong="H2859"\w* mit \w Ahab|strong="H0256"\w*.  
\v 2  \w Und|strong="H7093"\w* nach etlichen \w Jahren|strong="H8141"\w* zog er \w hinab|strong="H3381"\w* \w zu|strong="H0413"\w* \w Ahab|strong="H0256"\w* gen \w Samaria|strong="H8111"\w*. Und \w Ahab|strong="H0256"\w* \w ließ|strong="H2076"\w* \w ihn|strong="H7230"\w* für das \w Volk|strong="H5971"\w*, \w das|strong="H0834"\w* bei ihm \w war|strong="H5496"\w*, viel \w Schafe|strong="H6629"\w* und \w Ochsen|strong="H1241"\w* \w schlachten|strong="H2076"\w*. Und er beredete \w ihn|strong="H5496"\w*, daß er \w hinauf|strong="H5927"\w* \w gen|strong="H0413"\w* \w Ramoth|strong="H7433"\w* in \w Gilead|strong="H1568"\w* \w zöge|strong="H5927"\w*.  
\v 3 Und \w Ahab|strong="H0256"\w*, der \w König|strong="H4428"\w* \w Israels|strong="H3478"\w*, \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Josaphat|strong="H3092"\w*, dem \w König|strong="H4428"\w* Juda'\w s|strong="H3063"\w*: \w Zieh|strong="H3212"\w* \w mit|strong="H5973"\w* \w mir|strong="H3212"\w* gen \w Ramoth|strong="H7433"\w* in \w Gilead|strong="H1568"\w*! Er \w sprach|strong="H0559"\w* zu \w ihm|strong="H3644"\w*: Ich bin \w wie|strong="H3644"\w* du, \w und|strong="H3644"\w* mein \w Volk|strong="H5971"\w* \w wie|strong="H3644"\w* dein \w Volk|strong="H5971"\w*; wir wollen mit dir in den \w Streit|strong="H4421"\w*.  
\v 4  \w Aber|strong="H0559"\w* \w Josaphat|strong="H3092"\w* \w sprach|strong="H0559"\w* \w zum|strong="H0413"\w* \w König|strong="H4428"\w* \w Israels|strong="H3478"\w*: \w Frage|strong="H1875"\w* \w doch|strong="H4994"\w* \w heute|strong="H3117"\w* des \w HERRN|strong="H3068"\w* \w Wort|strong="H1697"\w*!  
\v 5  \w Und|strong="H6908"\w* der \w König|strong="H4428"\w* \w Israels|strong="H3478"\w* \w versammelte|strong="H6908"\w* \w vierhundert|strong="H0702"\w* \w Mann|strong="H0376"\w* und \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihnen: Sollen wir \w gen|strong="H0413"\w* \w Ramoth|strong="H7433"\w* in \w Gilead|strong="H1568"\w* \w ziehen|strong="H3212"\w* in den \w Streit|strong="H4421"\w*, \w oder|strong="H0518"\w* soll ich's anstehen \w lassen|strong="H2308"\w*? Sie \w sprachen|strong="H0559"\w*: Zieh \w hinauf|strong="H5927"\w*! \w Gott|strong="H0430"\w* wird sie in deine \w Hand|strong="H3027"\w* \w geben|strong="H5414"\w*.  
\v 6 Josaphat \w aber|strong="H3092"\w* \w sprach|strong="H0559"\w*: Ist \w nicht|strong="H0369"\w* irgend \w noch|strong="H5750"\w* ein \w Prophet|strong="H5030"\w* des \w HERRN|strong="H3068"\w* \w hier|strong="H6311"\w*, daß wir \w durch|strong="H4480"\w* \w ihn|strong="H0854"\w* \w fragen|strong="H1875"\w*?  
\v 7 Der \w König|strong="H4428"\w* \w Israels|strong="H3478"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Josaphat|strong="H3092"\w*: Es ist \w noch|strong="H5750"\w* \w ein|strong="H0259"\w* \w Mann|strong="H0376"\w*, daß man den \w HERRN|strong="H3068"\w* \w durch|strong="H4480"\w* \w ihn|strong="H0854"\w* \w frage|strong="H1875"\w*, aber \w ich|strong="H0589"\w* \w bin|strong="H8130"\w* \w ihm|strong="H3588"\w* \w gram|strong="H8130"\w*; \w denn|strong="H3588"\w* er \w weissagt|strong="H5012"\w* \w über|strong="H5921"\w* mich \w kein|strong="H0369"\w* \w Gutes|strong="H2896"\w*, \w sondern|strong="H3588"\w* \w allewege|strong="H3605"\w* \w Böses|strong="H7451"\w*, \w nämlich|strong="H1931"\w* \w Micha|strong="H4321"\w*, der \w Sohn|strong="H1121"\w* \w Jemlas|strong="H3229"\w*. \w Josaphat|strong="H3092"\w* \w sprach|strong="H0559"\w*: der \w König|strong="H4428"\w* \w rede|strong="H0559"\w* \w nicht|strong="H0408"\w* \w also|strong="H3651"\w*.  
\v 8  \w Und|strong="H7121"\w* der \w König|strong="H4428"\w* \w Israels|strong="H3478"\w* \w rief|strong="H7121"\w* \w einen|strong="H0259"\w* seiner \w Kämmerer|strong="H5631"\w* und \w sprach|strong="H0559"\w*: Bringe eilend \w her|strong="H4116"\w* \w Micha|strong="H4319"\w*, den \w Sohn|strong="H1121"\w* \w Jemlas|strong="H3229"\w*!  
\v 9 Und der \w König|strong="H4428"\w* \w Israels|strong="H3478"\w* und \w Josaphat|strong="H3092"\w*, der \w König|strong="H4428"\w* Juda'\w s|strong="H3063"\w*, \w saßen|strong="H3427"\w* ein \w jeglicher|strong="H0376"\w* \w auf|strong="H5921"\w* seinem \w Stuhl|strong="H3678"\w*, mit ihren \w Kleider|strong="H0899"\w* \w angezogen|strong="H3847"\w*. Sie \w saßen|strong="H3427"\w* aber auf dem \w Platz|strong="H1637"\w* vor der \w Tür|strong="H6607"\w* am \w Tor|strong="H8179"\w* zu \w Samaria|strong="H8111"\w*; und \w alle|strong="H3605"\w* \w Propheten|strong="H5030"\w* \w weissagten|strong="H5012"\w* vor \w ihnen|strong="H6440"\w*.  
\v 10 Und \w Zedekia|strong="H6667"\w*, der \w Sohn|strong="H1121"\w* \w Knaenas|strong="H3668"\w*, \w machte|strong="H6213"\w* sich \w eiserne|strong="H1270"\w* \w Hörner|strong="H7161"\w* und \w sprach|strong="H0559"\w*: \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Hiermit|strong="H0428"\w* wirst du die \w Syrer|strong="H0758"\w* \w stoßen|strong="H5055"\w*, \w bis|strong="H5704"\w* du sie \w aufreibst|strong="H3615"\w*.  
\v 11 Und \w alle|strong="H3605"\w* \w Propheten|strong="H5030"\w* \w weissagten|strong="H5012"\w* auch \w also|strong="H3651"\w* und \w sprachen|strong="H0559"\w*: Zieh \w hinauf|strong="H5927"\w* gen \w Ramoth|strong="H7433"\w* in \w Gilead|strong="H1568"\w*! es wird dir \w gelingen|strong="H6743"\w*; der \w HERR|strong="H3068"\w* wird \w sie|strong="H3027"\w* \w geben|strong="H5414"\w* \w in|strong="H3027"\w* des \w Königs|strong="H4428"\w* \w Hand|strong="H3027"\w*.  
\v 12 Und der \w Bote|strong="H4397"\w*, \w der|strong="H0834"\w* hingegangen \w war|strong="H1980"\w*, \w Micha|strong="H4321"\w* zu \w rufen|strong="H7121"\w*, \w redete|strong="H1696"\w* \w mit|strong="H0413"\w* ihm und \w sprach|strong="H0559"\w*: \w Siehe|strong="H2009"\w*, der \w Propheten|strong="H5030"\w* \w Reden|strong="H1697"\w* sind \w einträchtig|strong="H0259"\w* \w gut|strong="H2896"\w* \w für|strong="H0413"\w* den \w König|strong="H4428"\w*; laß \w doch|strong="H4994"\w* dein \w Wort|strong="H1697"\w* auch \w sein|strong="H1961"\w* wie \w derselben|strong="H4480"\w* \w eines|strong="H0259"\w* und \w rede|strong="H1696"\w* \w Gutes|strong="H2896"\w*.  
\v 13  \w Micha|strong="H4321"\w* aber \w sprach|strong="H0559"\w*: So wahr der \w HERR|strong="H3068"\w* \w lebt|strong="H2416"\w*, \w was|strong="H0834"\w* mein \w Gott|strong="H0430"\w* sagen \w wird|strong="H0559"\w*, \w das|strong="H0853"\w* will ich \w reden|strong="H1696"\w*.  
\v 14 Und da er \w zum|strong="H0413"\w* \w König|strong="H4428"\w* \w kam|strong="H0935"\w*, \w sprach|strong="H0559"\w* der \w König|strong="H4428"\w* \w zu|strong="H0413"\w* ihm: \w Micha|strong="H4318"\w*, sollen wir \w gen|strong="H0413"\w* \w Ramoth|strong="H7433"\w* in \w Gilead|strong="H1568"\w* in den \w Streit|strong="H4421"\w* \w ziehen|strong="H3212"\w*, \w oder|strong="H0518"\w* soll ich's lassen \w anstehen|strong="H2308"\w*? Er \w sprach|strong="H0559"\w*: Ja, ziehet \w hinauf|strong="H5927"\w*! es wird euch \w gelingen|strong="H6743"\w*; es wird euch in eure \w Hände|strong="H3027"\w* gegeben \w werden|strong="H5414"\w*.  
\v 15 Aber der \w König|strong="H4428"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w ihm|strong="H4100"\w*: Ich \w beschwöre|strong="H7650"\w* dich noch einmal, \w daß|strong="H0834"\w* \w du|strong="H0413"\w* mir \w nichts|strong="H3808"\w* \w denn|strong="H7535"\w* die \w Wahrheit|strong="H0571"\w* \w sagst|strong="H1696"\w* im \w Namen|strong="H8034"\w* des \w HERRN|strong="H3068"\w*.  
\v 16 Da sprach \w er|strong="H0559"\w*: Ich \w sehe|strong="H7200"\w* das \w ganze|strong="H3605"\w* \w Israel|strong="H3478"\w* \w zerstreut|strong="H6327"\w* \w auf|strong="H5921"\w* den \w Bergen|strong="H2022"\w* wie \w Schafe|strong="H6629"\w*, \w die|strong="H0834"\w* \w keinen|strong="H0369"\w* \w Hirten|strong="H7462"\w* \w haben|strong="H0369"\w*. Und der \w HERR|strong="H3068"\w* \w sprach|strong="H0559"\w*: \w Diese|strong="H0428"\w* haben \w keinen|strong="H3808"\w* \w HERRN|strong="H0113"\w*; es \w kehre|strong="H7725"\w* ein \w jeglicher|strong="H0376"\w* \w wieder|strong="H7725"\w* \w heim|strong="H1004"\w* mit \w Frieden|strong="H7965"\w*.  
\v 17 Da \w sprach|strong="H0559"\w* der \w König|strong="H4428"\w* \w Israels|strong="H3478"\w* \w zu|strong="H0413"\w* \w Josaphat|strong="H3092"\w*: \w Sagte|strong="H0559"\w* \w ich|strong="H0413"\w* dir \w nicht|strong="H3808"\w*: \w Er|strong="H5921"\w* \w weissagt|strong="H5012"\w* \w über|strong="H5921"\w* mich \w kein|strong="H3808"\w* \w Gutes|strong="H2896"\w*, \w sondern|strong="H3588"\w* \w Böses|strong="H7451"\w*?  
