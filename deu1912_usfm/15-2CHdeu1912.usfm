\v 1 Aber im \w siebenten|strong="H7637"\w* \w Jahr|strong="H8141"\w* \w faßte|strong="H2388"\w* \w Jojada|strong="H3077"\w* einen \w Mut|strong="H2388"\w* und \w nahm|strong="H3947"\w* die \w Obersten|strong="H8269"\w* über \w hundert|strong="H3967"\w*, nämlich \w Asarja|strong="H5838"\w*, den \w Sohn|strong="H1121"\w* \w Jerohams|strong="H3395"\w*, \w Ismael|strong="H3458"\w*, den \w Sohn|strong="H1121"\w* \w Johanans|strong="H3076"\w*, \w Asarja|strong="H5838"\w*, den \w Sohn|strong="H1121"\w* \w Obeds|strong="H5744"\w*, \w Maaseja|strong="H4641"\w*, den \w Sohn|strong="H1121"\w* \w Adajas|strong="H5718"\w*, und \w Elisaphat|strong="H0478"\w*, den \w Sohn|strong="H1121"\w* \w Sichris|strong="H2147"\w*, \w mit|strong="H5973"\w* sich zum \w Bund|strong="H1285"\w*.  
\v 2 Die zogen \w umher|strong="H5437"\w* in \w Juda|strong="H3063"\w* und \w brachten|strong="H6908"\w* die \w Leviten|strong="H3881"\w* \w zuhauf|strong="H6908"\w* \w aus|strong="H4480"\w* \w allen|strong="H3605"\w* \w Städten|strong="H5892"\w* Juda'\w s|strong="H3063"\w* und die \w Obersten|strong="H7218"\w* der \w Vaterhäuser|strong="H0001"\w* in \w Israel|strong="H3478"\w*, daß sie \w kämen|strong="H0935"\w* \w gen|strong="H0413"\w* \w Jerusalem|strong="H3389"\w*.  
\v 3 Und die \w ganze|strong="H3605"\w* \w Gemeinde|strong="H6951"\w* \w machte|strong="H3772"\w* einen \w Bund|strong="H1285"\w* im \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w* \w mit|strong="H5973"\w* dem \w König|strong="H4428"\w*. Und er \w sprach|strong="H0559"\w* zu ihnen: \w Siehe|strong="H2009"\w* des \w Königs|strong="H4428"\w* \w Sohn|strong="H1121"\w* soll König \w sein|strong="H4427"\w*, \w wie|strong="H0834"\w* der \w HERR|strong="H3068"\w* geredet \w hat|strong="H1696"\w* \w über|strong="H5921"\w* die \w Kinder|strong="H1121"\w* \w Davids|strong="H1732"\w*.  
\v 4  \w So|strong="H0834"\w* sollt ihr also \w tun|strong="H6213"\w*: Der dritte \w Teil|strong="H7992"\w* \w von|strong="H4480"\w* euch, die des \w Sabbats|strong="H7676"\w* \w antreten|strong="H0935"\w* von den \w Priestern|strong="H3548"\w* und \w Leviten|strong="H3881"\w*, sollen die \w Torhüter|strong="H7778"\w* sein an der \w Schwelle|strong="H5592"\w*,  
\v 5 und der dritte \w Teil|strong="H7992"\w* im \w Hause|strong="H1004"\w* des \w Königs|strong="H4428"\w*, und der dritte \w Teil|strong="H7992"\w* am \w Grundtor|strong="H8179"\w*; aber \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* \w soll|strong="H2691"\w* \w sein|strong="H1004"\w* in den \w Höfen|strong="H2691"\w* am \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*.  
\v 6 Und daß \w niemand|strong="H0408"\w* in das \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w gehe|strong="H0935"\w*; \w nur|strong="H3588"\w* die \w Priester|strong="H3548"\w* und \w Leviten|strong="H3881"\w*, die da \w dienen|strong="H8334"\w*, \w die|strong="H1992"\w* sollen \w hineingehen|strong="H0935"\w*, \w denn|strong="H3588"\w* \w sie|strong="H1992"\w* sind \w heilig|strong="H6944"\w*, und \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* tue \w nach|strong="H8104"\w* dem \w Gebot|strong="H4931"\w* des \w HERRN|strong="H3068"\w*.  
\v 7 Und die \w Leviten|strong="H3881"\w* \w sollen|strong="H4428"\w* \w sich|strong="H5362"\w* rings \w um|strong="H5439"\w* den \w König|strong="H4428"\w* her \w machen|strong="H5362"\w*, ein \w jeglicher|strong="H0376"\w* mit seiner \w Wehr|strong="H3627"\w* in der \w Hand|strong="H3027"\w*, und wer \w ins|strong="H0413"\w* \w Haus|strong="H1004"\w* \w geht|strong="H0935"\w*, der sei des \w Todes|strong="H4191"\w*, und sie \w sollen|strong="H1961"\w* bei dem \w König|strong="H4428"\w* sein, wenn \w er|strong="H0935"\w* aus \w und|strong="H3318"\w* \w ein|strong="H0935"\w* \w geht|strong="H3318"\w*.  
\v 8 Und die \w Leviten|strong="H3881"\w* und \w ganz|strong="H3605"\w* \w Juda|strong="H3063"\w* \w taten|strong="H6213"\w*, \w wie|strong="H0834"\w* der \w Priester|strong="H3548"\w* \w Jojada|strong="H3077"\w* geboten \w hatte|strong="H6680"\w*, und \w nahm|strong="H3947"\w* ein \w jeglicher|strong="H0376"\w* seine \w Leute|strong="H0582"\w*, die des \w Sabbats|strong="H7676"\w* \w antraten|strong="H0935"\w*, \w mit|strong="H5973"\w* denen, die des \w Sabbats|strong="H7676"\w* \w abtraten|strong="H3318"\w*. \w Denn|strong="H3588"\w* \w Jojada|strong="H3077"\w*, der \w Priester|strong="H3548"\w*, ließ die \w Ordnungen|strong="H4256"\w* \w nicht|strong="H3808"\w* auseinander \w gehen|strong="H6358"\w*.  
\v 9  \w Und|strong="H5414"\w* \w Jojada|strong="H3077"\w*, der \w Priester|strong="H3548"\w*, \w gab|strong="H5414"\w* den \w Obersten|strong="H8269"\w* über \w hundert|strong="H3967"\w* die \w Spieße|strong="H2595"\w* und \w Schilde|strong="H7982"\w* und \w Waffen|strong="H4043"\w* des \w Königs|strong="H4428"\w* \w David|strong="H1732"\w*, \w die|strong="H0834"\w* im \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w* waren,  
\v 10 und \w stellte|strong="H5975"\w* \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w*, einen \w jeglichen|strong="H0376"\w* mit seiner \w Waffe|strong="H7973"\w* in der \w Hand|strong="H3027"\w*, \w von|strong="H4480"\w* dem rechten \w Winkel|strong="H3233"\w* des \w Hauses|strong="H1004"\w* \w bis|strong="H5704"\w* zum linken \w Winkel|strong="H8042"\w*, zum \w Altar|strong="H4196"\w* und zum \w Hause|strong="H1004"\w* \w hin|strong="H5921"\w* \w um|strong="H5439"\w* den \w König|strong="H4428"\w* \w her|strong="H5439"\w*.  
\v 11 Und sie \w brachten|strong="H3318"\w* des \w Königs|strong="H4428"\w* \w Sohn|strong="H1121"\w* \w hervor|strong="H3318"\w* und \w setzten|strong="H5414"\w* ihm die \w Krone|strong="H5145"\w* \w auf|strong="H5921"\w* und gaben ihm das \w Zeugnis|strong="H5715"\w* und \w machten|strong="H4427"\w* \w ihn|strong="H0853"\w* zum \w König|strong="H4427"\w*. Und \w Jojada|strong="H3077"\w* samt seinen \w Söhnen|strong="H1121"\w* \w salbten|strong="H4886"\w* ihn und \w sprachen|strong="H0559"\w*: Glück \w zu|strong="H2421"\w* dem \w König|strong="H4428"\w*!  
\v 12 Da aber \w Athalja|strong="H6271"\w* \w hörte|strong="H8085"\w* das \w Geschrei|strong="H6963"\w* des \w Volkes|strong="H5971"\w*, das \w zulief|strong="H7323"\w* und den \w König|strong="H4428"\w* \w lobte|strong="H1984"\w*, ging \w sie|strong="H0935"\w* \w zum|strong="H0413"\w* \w Volk|strong="H5971"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*.  
\v 13 Und sie \w sah|strong="H7200"\w*, und \w siehe|strong="H2009"\w*, der \w König|strong="H4428"\w* \w stand|strong="H5975"\w* \w an|strong="H5921"\w* seiner \w Stätte|strong="H5982"\w* am \w Eingang|strong="H3996"\w* und die \w Obersten|strong="H8269"\w* und die \w Drommeten|strong="H2689"\w* \w um|strong="H5921"\w* den \w König|strong="H4428"\w*; und \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* des \w Landes|strong="H0776"\w* war \w fröhlich|strong="H8056"\w*, und man \w blies|strong="H8628"\w* \w Drommeten|strong="H2689"\w*, und die \w Sänger|strong="H7891"\w* mit \w allerlei|strong="H7892"\w* \w Saitenspiel|strong="H3627"\w* sangen \w Lob|strong="H1984"\w*. Da \w zerriß|strong="H7167"\w* \w sie|strong="H6271"\w* ihre \w Kleider|strong="H0899"\w* und \w rief|strong="H0559"\w*: \w Aufruhr|strong="H7195"\w*, \w Aufruhr|strong="H7195"\w*!  
\v 14  \w Aber|strong="H3548"\w* \w Jojada|strong="H3077"\w*, der \w Priester|strong="H3548"\w*, machte sich \w heraus|strong="H3318"\w* mit den \w Obersten|strong="H8269"\w* über \w hundert|strong="H3967"\w*, die über das \w Heer|strong="H2428"\w* \w waren|strong="H6485"\w*, und \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihnen: Führt \w sie|strong="H3318"\w* \w zwischen|strong="H0413"\w* den \w Reihen|strong="H7713"\w* \w hinaus|strong="H4480"\w*; und wer ihr \w nachfolgt|strong="H0935"\w*, den soll man mit dem \w Schwert|strong="H2719"\w* \w töten|strong="H4191"\w*! \w Denn|strong="H3588"\w* der \w Priester|strong="H3548"\w* hatte \w befohlen|strong="H0559"\w*, man sollte \w sie|strong="H1004"\w* \w nicht|strong="H3808"\w* \w töten|strong="H4191"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*.  
\v 15 Und sie \w machten|strong="H7760"\w* \w Raum|strong="H3027"\w* zu beiden Seiten; und da sie \w kam|strong="H0935"\w* \w zum|strong="H0413"\w* \w Eingang|strong="H3996"\w* des \w Roßtors|strong="H5483"\w* am \w Hause|strong="H1004"\w* des \w Königs|strong="H4428"\w*, töteten \w sie|strong="H4191"\w* sie \w daselbst|strong="H8033"\w*.  
\v 16 Und \w Jojada|strong="H3077"\w* \w machte|strong="H3772"\w* einen \w Bund|strong="H1285"\w* \w zwischen|strong="H0996"\w* ihm \w und|strong="H0996"\w* \w allem|strong="H3605"\w* \w Volk|strong="H5971"\w* \w und|strong="H0996"\w* dem \w König|strong="H4428"\w*, daß sie des \w HERRN|strong="H3068"\w* \w Volk|strong="H5971"\w* sein \w sollten|strong="H1961"\w*.  
\v 17 Da \w ging|strong="H0935"\w* \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* ins \w Haus|strong="H1004"\w* \w Baals|strong="H1168"\w* und brachen es \w ab|strong="H5422"\w*, und seine \w Altäre|strong="H4196"\w* und \w Bilder|strong="H6754"\w* zerbrachen \w sie|strong="H7665"\w*, \w und|strong="H4977"\w* \w erwürgten|strong="H2026"\w* \w Matthan|strong="H4977"\w*, den \w Priester|strong="H3548"\w* \w Baals|strong="H1168"\w*, \w vor|strong="H6440"\w* den \w Altären|strong="H4196"\w*.  
\v 18 Und \w Jojada|strong="H3077"\w* \w bestellte|strong="H7760"\w* die \w Ämter|strong="H6486"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w unter|strong="H3027"\w* den \w Priestern|strong="H3548"\w* und den \w Leviten|strong="H3881"\w*, \w die|strong="H0834"\w* \w David|strong="H1732"\w* verordnet \w hatte|strong="H2505"\w* \w zum|strong="H5921"\w* \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*, \w Brandopfer|strong="H5930"\w* zu \w tun|strong="H5927"\w* dem \w HERRN|strong="H3068"\w*, wie \w es|strong="H8451"\w* geschrieben \w steht|strong="H3789"\w* im \w Gesetz|strong="H8451"\w* Mose'\w s|strong="H4872"\w*, mit \w Freuden|strong="H8057"\w* und mit \w Lieder|strong="H7892"\w*, \w die|strong="H5921"\w* \w David|strong="H1732"\w* \w gedichtet|strong="H3027"\w*,  
\v 19 und \w stellte|strong="H5975"\w* \w Torhüter|strong="H7778"\w* \w in|strong="H5921"\w* die \w Tore|strong="H8179"\w* am \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*, daß \w niemand|strong="H3808"\w* \w hineinkäme|strong="H0935"\w*, der sich \w verunreinigt|strong="H2931"\w* \w hätte|strong="H0935"\w* an irgend \w einem|strong="H3605"\w* \w Dinge|strong="H1697"\w*.  
\v 20 Und er \w nahm|strong="H3947"\w* die \w Obersten|strong="H8269"\w* über \w hundert|strong="H3967"\w* und die \w Mächtigen|strong="H0117"\w* und \w Herren|strong="H4910"\w* im \w Volk|strong="H5971"\w* und \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* des \w Landes|strong="H0776"\w* und \w führte|strong="H3381"\w* den \w König|strong="H4428"\w* \w hinab|strong="H3381"\w* \w vom|strong="H4480"\w* \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*, und sie \w brachten|strong="H0935"\w* ihn \w durch|strong="H8432"\w* das \w hohe|strong="H5945"\w* \w Tor|strong="H8179"\w* am \w Hause|strong="H1004"\w* des \w Königs|strong="H4428"\w* und \w ließen|strong="H3427"\w* den \w König|strong="H4428"\w* sich \w auf|strong="H5921"\w* den \w königlichen|strong="H4467"\w* \w Stuhl|strong="H3678"\w* \w setzen|strong="H3427"\w*.  
\v 21 Und \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* des \w Landes|strong="H0776"\w* war \w fröhlich|strong="H8055"\w*, und die \w Stadt|strong="H5892"\w* war \w still|strong="H8252"\w*; aber \w Athalja|strong="H6271"\w* \w ward|strong="H4191"\w* mit dem \w Schwert|strong="H2719"\w* \w erwürgt|strong="H4191"\w*.   
\c 24  
\p
\v 1  \w Joas|strong="H3101"\w* war \w sieben|strong="H7651"\w* \w Jahre|strong="H8141"\w* \w alt|strong="H1121"\w*, da er König \w ward|strong="H4427"\w*, und \w regierte|strong="H4427"\w* \w vierzig|strong="H0705"\w* \w Jahre|strong="H8141"\w* zu \w Jerusalem|strong="H3389"\w*. Seine \w Mutter|strong="H0517"\w* \w hieß|strong="H8034"\w* \w Zibja|strong="H6645"\w* \w von|strong="H4480"\w* Beer-\w Seba|strong="H0884"\w*.  
\v 2 Und \w Joas|strong="H3101"\w* \w tat|strong="H6213"\w*, \w was|strong="H5869"\w* dem \w HERRN|strong="H3068"\w* \w wohl|strong="H3477"\w* \w gefiel|strong="H5869"\w*, \w solange|strong="H3605"\w* der \w Priester|strong="H3548"\w* \w Jojada|strong="H3077"\w* \w lebte|strong="H3117"\w*.  
\v 3 Und \w Jojada|strong="H3077"\w* \w gab|strong="H5375"\w* ihm \w zwei|strong="H8147"\w* \w Weiber|strong="H0802"\w*, und er \w zeugte|strong="H3205"\w* \w Söhne|strong="H1121"\w* und \w Töchter|strong="H1323"\w*.  
\v 4  \w Darnach|strong="H0310"\w* nahm \w sich|strong="H1961"\w* \w Joas|strong="H3101"\w* \w vor|strong="H1961"\w* das \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w* zu \w erneuern|strong="H2318"\w*,  
\v 5 und \w versammelte|strong="H6908"\w* die \w Priester|strong="H3548"\w* und \w Leviten|strong="H3881"\w* und \w sprach|strong="H0559"\w* zu ihnen: Ziehet \w aus|strong="H3318"\w* zu allen \w Städten|strong="H5892"\w* Juda'\w s|strong="H3063"\w* und \w sammelt|strong="H6908"\w* \w Geld|strong="H3701"\w* \w aus|strong="H4480"\w* \w ganz|strong="H3605"\w* \w Israel|strong="H3478"\w*, das \w Haus|strong="H1004"\w* eures \w Gottes|strong="H0430"\w* zu \w bessern|strong="H2388"\w* \w jährlich|strong="H8141"\w*, und \w eilet|strong="H4116"\w*, solches zu \w tun|strong="H1697"\w*. Aber die \w Leviten|strong="H3881"\w* \w eilten|strong="H4116"\w* \w nicht|strong="H3808"\w*.  
\v 6  \w Da|strong="H4428"\w* \w rief|strong="H7121"\w* der \w König|strong="H4428"\w* \w Jojada|strong="H3077"\w*, den \w Vornehmsten|strong="H7218"\w*, und \w sprach|strong="H0559"\w* zu ihm: \w Warum|strong="H4069"\w* hast du \w nicht|strong="H3808"\w* \w acht|strong="H1875"\w* \w auf|strong="H5921"\w* die \w Leviten|strong="H3881"\w*, daß \w sie|strong="H4480"\w* \w einbringen|strong="H0935"\w* \w von|strong="H4480"\w* \w Juda|strong="H3063"\w* \w und|strong="H4480"\w* \w Jerusalem|strong="H3389"\w* die \w Steuer|strong="H4864"\w*, die \w Mose|strong="H4872"\w*, der \w Knecht|strong="H5650"\w* des \w HERRN|strong="H3068"\w*, gesetzt hat, die man \w sammelte|strong="H6951"\w* unter \w Israel|strong="H3478"\w* zu der \w Hütte|strong="H0168"\w* des \w Stifts|strong="H5715"\w*?  
\v 7  \w Denn|strong="H3588"\w* die \w gottlose|strong="H4849"\w* \w Athalja|strong="H6271"\w* und ihre Söhne \w haben|strong="H1121"\w* das \w Haus|strong="H1004"\w* \w Gottes|strong="H0430"\w* \w zerrissen|strong="H6555"\w*, \w und|strong="H1571"\w* \w alles|strong="H3605"\w*, was zum \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w geheiligt|strong="H6944"\w* war, haben \w sie|strong="H6213"\w* an die \w Baalim|strong="H1168"\w* \w gebracht|strong="H6213"\w*.  
\v 8  \w Da|strong="H4428"\w* \w befahl|strong="H0559"\w* der \w König|strong="H4428"\w*, daß \w man|strong="H6213"\w* \w eine|strong="H0259"\w* \w Lade|strong="H0727"\w* \w machte|strong="H6213"\w* und \w setzte|strong="H5414"\w* sie \w außen|strong="H2351"\w* ins \w Tor|strong="H8179"\w* am \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*,  
\v 9 und \w ließ|strong="H5414"\w* \w ausrufen|strong="H6963"\w* in \w Juda|strong="H3063"\w* und zu \w Jerusalem|strong="H3389"\w*, daß man dem \w HERRN|strong="H3068"\w* einbringen \w sollte|strong="H0935"\w* die \w Steuer|strong="H4864"\w*, die von \w Mose|strong="H4872"\w*, dem \w Knecht|strong="H5650"\w* \w Gottes|strong="H0430"\w*, \w auf|strong="H5921"\w* \w Israel|strong="H3478"\w* gelegt war in der \w Wüste|strong="H4057"\w*.  
\v 10 Da freuten \w sich|strong="H8055"\w* \w alle|strong="H3605"\w* \w Obersten|strong="H8269"\w* und \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* und brachten'\w s|strong="H0935"\w* und warfen'\w s|strong="H7993"\w* in die \w Lade|strong="H0727"\w*, \w bis|strong="H5704"\w* sie voll \w ward|strong="H3615"\w*.  
\v 11  \w Und|strong="H1961"\w* wenn's Zeit \w war|strong="H6256"\w*, daß man die \w Lade|strong="H0727"\w* herbringen \w sollte|strong="H0935"\w* \w durch|strong="H3027"\w* die \w Leviten|strong="H3881"\w* \w nach|strong="H0413"\w* des \w Königs|strong="H4428"\w* \w Befehl|strong="H6486"\w* (wenn sie \w sahen|strong="H7200"\w*, \w daß|strong="H3588"\w* \w viel|strong="H7227"\w* \w Geld|strong="H3701"\w* darin war), \w so|strong="H5608"\w* \w kam|strong="H0935"\w* der \w Schreiber|strong="H5608"\w* des \w Königs|strong="H4428"\w* und wer vom vornehmsten \w Priester|strong="H7218"\w* Befehl \w hatte|strong="H6496"\w*, und \w schüttete|strong="H6168"\w* die \w Lade|strong="H0727"\w* \w aus|strong="H6168"\w* und trugen \w sie|strong="H5375"\w* \w wieder|strong="H7725"\w* \w an|strong="H0413"\w* ihren \w Ort|strong="H4725"\w*. \w So|strong="H3541"\w* taten \w sie|strong="H6213"\w* \w alle|strong="H3117"\w* \w Tage|strong="H3117"\w*, daß sie \w Geld|strong="H3701"\w* die \w Menge|strong="H7230"\w* zuhauf \w brachten|strong="H0622"\w*.  
\v 12 Und der \w König|strong="H4428"\w* und \w Jojada|strong="H3077"\w* gaben'\w s|strong="H5414"\w* \w den|strong="H0413"\w* Werkmeistern, die \w da|strong="H4399"\w* \w schaffen|strong="H6213"\w* am \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*; dieselben \w dingten|strong="H1961"\w* \w Steinmetzen|strong="H2672"\w* und \w Zimmerleute|strong="H2796"\w*, zu \w erneuern|strong="H2318"\w* das \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w*; \w auch|strong="H1571"\w* \w Meister|strong="H2796"\w* in \w Eisen|strong="H1270"\w* und \w Erz|strong="H5178"\w*, zu \w bessern|strong="H2388"\w* das \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w*.  
