\v 6 daß er \w umkehrte|strong="H7725"\w*, sich heilen zu \w lassen|strong="H7495"\w* zu \w Jesreel|strong="H3157"\w*; \w denn|strong="H3588"\w* er hatte \w Wunden|strong="H4347"\w*, \w die|strong="H0834"\w* \w ihm|strong="H7414"\w* geschlagen \w waren|strong="H5221"\w* zu \w Rama|strong="H7414"\w*, da er \w stritt|strong="H3898"\w* mit \w Hasael|strong="H2371"\w*, dem \w König|strong="H4428"\w* von \w Syrien|strong="H0758"\w*. Und \w Ahasja|strong="H5838"\w*, der \w Sohn|strong="H1121"\w* \w Jorams|strong="H3088"\w*, der \w König|strong="H4428"\w* Juda'\w s|strong="H3063"\w*, zog \w hinab|strong="H3381"\w*, zu \w besuchen|strong="H7200"\w* \w Joram|strong="H3088"\w*, den \w Sohn|strong="H1121"\w* \w Ahabs|strong="H0256"\w*, zu \w Jesreel|strong="H3157"\w*, \w der|strong="H1931"\w* krank \w lag|strong="H2470"\w*.  
\v 7 Denn es \w war|strong="H1961"\w* \w von|strong="H4480"\w* \w Gott|strong="H0430"\w* \w Ahasja|strong="H0274"\w* der Unfall \w zugefügt|strong="H8395"\w*, daß er \w zu|strong="H0413"\w* \w Joram|strong="H3141"\w* \w käme|strong="H0935"\w* und \w also|strong="H0935"\w* \w mit|strong="H5973"\w* \w Joram|strong="H3088"\w* \w auszöge|strong="H3318"\w* \w wider|strong="H0413"\w* \w Jehu|strong="H3058"\w*, den \w Sohn|strong="H1121"\w* \w Nimsis|strong="H5250"\w*, \w welchen|strong="H0834"\w* der \w HERR|strong="H3068"\w* gesalbt \w hatte|strong="H4886"\w*, \w auszurotten|strong="H3772"\w* das \w Haus|strong="H1004"\w* \w Ahab|strong="H0256"\w*.  
\v 8  Da nun \w Jehu|strong="H3058"\w* Strafe \w übte|strong="H8199"\w* \w am|strong="H5973"\w* \w Hause|strong="H1004"\w* \w Ahab|strong="H0256"\w*, \w fand|strong="H4672"\w* er etliche \w Oberste|strong="H8269"\w* aus \w Juda|strong="H3063"\w* und die \w Kinder|strong="H1121"\w* der \w Brüder|strong="H0251"\w* \w Ahasjas|strong="H0274"\w*, die \w Ahasja|strong="H0274"\w* \w dienten|strong="H8334"\w*, und erwürgte \w sie|strong="H2026"\w*.  
\v 9 Und er \w suchte|strong="H1245"\w* \w Ahasja|strong="H0274"\w*, und sie fingen \w ihn|strong="H3920"\w*, da \w er|strong="H1931"\w* sich versteckt \w hatte|strong="H2244"\w* zu \w Samaria|strong="H8111"\w*. Und er \w ward|strong="H0935"\w* \w zu|strong="H0413"\w* \w Jehu|strong="H3058"\w* \w gebracht|strong="H0935"\w*; der \w tötete|strong="H4191"\w* ihn, und man \w begrub|strong="H6912"\w* ihn. \w Denn|strong="H3588"\w* sie \w sprachen|strong="H0559"\w*: \w Er|strong="H1931"\w* \w ist|strong="H1121"\w* \w Josaphats|strong="H3092"\w* \w Sohn|strong="H1121"\w*, \w der|strong="H0834"\w* \w nach|strong="H1875"\w* dem \w HERRN|strong="H3068"\w* \w trachtete|strong="H1875"\w* von \w ganzem|strong="H3605"\w* \w Herzen|strong="H3824"\w*. Und es niemand \w mehr|strong="H0369"\w* aus dem \w Hause|strong="H1004"\w* \w Ahasja|strong="H0274"\w*, der \w tüchtig|strong="H3581"\w* \w war|strong="H6113"\w* zum \w Königreich|strong="H4467"\w*.  
\v 10 Da aber \w Athalja|strong="H6271"\w*, die \w Mutter|strong="H0517"\w* \w Ahasjas|strong="H0274"\w*, \w sah|strong="H7200"\w*, \w daß|strong="H3588"\w* ihr \w Sohn|strong="H1121"\w* tot \w war|strong="H4191"\w*, machte sie sich \w auf|strong="H6965"\w* und brachte \w um|strong="H1696"\w* \w alle|strong="H3605"\w* vom \w königlichen|strong="H4467"\w* \w Geschlecht|strong="H2233"\w* im \w Hause|strong="H1004"\w* \w Juda|strong="H3063"\w*.  
\v 11 Aber \w Josabeath|strong="H3090"\w*, die \w Königstochter|strong="H1323"\w*, \w nahm|strong="H3947"\w* \w Joas|strong="H3101"\w*, den \w Sohn|strong="H1121"\w* \w Ahasjas|strong="H0274"\w*, und \w stahl|strong="H1589"\w* \w ihn|strong="H0853"\w* \w unter|strong="H8432"\w* den \w Kindern|strong="H1121"\w* des \w Königs|strong="H4428"\w*, die getötet \w wurden|strong="H4191"\w*, und \w tat|strong="H5414"\w* \w ihn|strong="H0853"\w* mit seiner \w Amme|strong="H3243"\w* in die \w Bettkammer|strong="H2315"\w*. Also \w verbarg|strong="H5641"\w* ihn \w Josabeath|strong="H3090"\w*, die \w Tochter|strong="H1323"\w* des \w Königs|strong="H4428"\w* \w Joram|strong="H3088"\w*, des \w Priesters|strong="H3548"\w* \w Jojada|strong="H3077"\w* \w Weib|strong="H0802"\w* (\w denn|strong="H3588"\w* \w sie|strong="H1931"\w* \w war|strong="H1961"\w* \w Ahasjas|strong="H0274"\w* \w Schwester|strong="H0269"\w*), \w vor|strong="H4480"\w* \w Athalja|strong="H6271"\w*, daß er \w nicht|strong="H3808"\w* getötet \w ward|strong="H4191"\w*.  
\v 12 Und er \w war|strong="H1961"\w* \w bei|strong="H0854"\w* \w ihnen|strong="H2244"\w* im \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w* \w versteckt|strong="H2244"\w* \w sechs|strong="H8337"\w* \w Jahre|strong="H8141"\w*, solange \w Athalja|strong="H6271"\w* Königin \w war|strong="H4427"\w* \w im|strong="H5921"\w* \w Lande|strong="H0776"\w*.   
