\v 13  \w antwortete|strong="H6030"\w* ihnen der \w König|strong="H4428"\w* \w hart|strong="H7186"\w*. Und der \w König|strong="H4428"\w* \w Rehabeam|strong="H7346"\w* \w ließ|strong="H5800"\w* außer \w acht|strong="H5800"\w* den \w Rat|strong="H6098"\w* der \w Ältesten|strong="H2205"\w*  
\v 14 und \w redete|strong="H1696"\w* \w mit|strong="H0413"\w* ihnen nach dem \w Rat|strong="H6098"\w* der \w Jungen|strong="H3206"\w* und \w sprach|strong="H0559"\w*: Hat mein \w Vater|strong="H0001"\w* euer \w Joch|strong="H5923"\w* schwer \w gemacht|strong="H3513"\w*, so will \w ich|strong="H0589"\w* noch \w mehr|strong="H5921"\w* dazu \w machen|strong="H3254"\w*: mein \w Vater|strong="H0001"\w* hat \w euch|strong="H0853"\w* mit \w Peitschen|strong="H7752"\w* \w gezüchtigt|strong="H3256"\w*, ich \w aber|strong="H0589"\w* mit \w Skorpionen|strong="H6137"\w*.  
\v 15 Also \w gehorchte|strong="H8085"\w* der \w König|strong="H4428"\w* \w dem|strong="H0413"\w* \w Volk|strong="H5971"\w* \w nicht|strong="H3808"\w*; \w denn|strong="H3588"\w* es \w war|strong="H1961"\w* also \w von|strong="H5973"\w* \w Gott|strong="H0430"\w* \w gewandt|strong="H5252"\w*, auf \w daß|strong="H4616"\w* der \w HERR|strong="H3068"\w* sein \w Wort|strong="H1697"\w* \w bestätigte|strong="H6965"\w*, \w das|strong="H0834"\w* er geredet \w hatte|strong="H1696"\w* \w durch|strong="H3027"\w* \w Ahia|strong="H0281"\w* von \w Silo|strong="H7888"\w* \w zu|strong="H0413"\w* \w Jerobeam|strong="H3379"\w*, dem \w Sohn|strong="H1121"\w* \w Nebats|strong="H5028"\w*.  
\v 16 Da aber das \w ganze|strong="H3605"\w* \w Israel|strong="H3478"\w* \w sah|strong="H7200"\w*, \w daß|strong="H3588"\w* ihnen der \w König|strong="H4428"\w* \w nicht|strong="H3808"\w* \w gehorchte|strong="H8085"\w*, \w antwortete|strong="H7725"\w* das \w Volk|strong="H5971"\w* dem \w König|strong="H4428"\w* und \w sprach|strong="H0559"\w*: \w Was|strong="H4100"\w* haben wir für \w Teil|strong="H2506"\w* an \w David|strong="H1732"\w* oder \w Erbe|strong="H5159"\w* am \w Sohn|strong="H1121"\w* \w Isais|strong="H3448"\w*? \w Jedermann|strong="H0376"\w* von \w Israel|strong="H3478"\w* zu seiner \w Hütte|strong="H0168"\w*! So \w siehe|strong="H7200"\w* \w nun|strong="H6258"\w* du zu deinem \w Hause|strong="H1004"\w*, \w David|strong="H1732"\w*! Und das \w ganze|strong="H3605"\w* \w Israel|strong="H3478"\w* \w ging|strong="H3212"\w* in seine \w Hütten|strong="H0168"\w*,  
\v 17 also daß \w Rehabeam|strong="H7346"\w* nur \w über|strong="H5921"\w* die \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w* \w regierte|strong="H4427"\w*, die in den \w Städten|strong="H5892"\w* Juda'\w s|strong="H3063"\w* \w wohnten|strong="H3427"\w*.  
\v 18 Aber der \w König|strong="H4428"\w* \w Rehabeam|strong="H7346"\w* \w sandte|strong="H7971"\w* \w Hadoram|strong="H1913"\w*, \w den|strong="H0834"\w* \w Rentmeister|strong="H4522"\w*; aber die \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w* \w steinigten|strong="H7275"\w* ihn zu \w Tode|strong="H4191"\w*. Und der \w König|strong="H4428"\w* \w Rehabeam|strong="H7346"\w* \w stieg|strong="H5927"\w* stracks \w auf|strong="H5927"\w* seinen \w Wagen|strong="H4818"\w*, daß er \w flöhe|strong="H5127"\w* gen \w Jerusalem|strong="H3389"\w*.  
\v 19 Also \w fiel|strong="H6586"\w* \w Israel|strong="H3478"\w* \w ab|strong="H6586"\w* vom \w Hause|strong="H1004"\w* \w Davids|strong="H1732"\w* bis \w auf|strong="H5704"\w* \w diesen|strong="H2088"\w* \w Tag|strong="H3117"\w*.   
\c 11  
\p
\v 1 Und da \w Rehabeam|strong="H7346"\w* gen \w Jerusalem|strong="H3389"\w* \w kam|strong="H0935"\w*, \w versammelte|strong="H6950"\w* er das ganze \w Haus|strong="H1004"\w* \w Juda|strong="H3063"\w* und \w Benjamin|strong="H1144"\w*, \w hunderundachtzigtausend|strong="H0505"\w* junger Mannschaft, die streitbar \w waren|strong="H6213"\w*, \w wider|strong="H5973"\w* \w Israel|strong="H3478"\w* zu \w streiten|strong="H3898"\w*, daß sie das \w Königreich|strong="H4467"\w* \w wieder|strong="H7725"\w* an \w Rehabeam|strong="H7346"\w* \w brächten|strong="H7725"\w*.  
\v 2 Aber das \w Wort|strong="H1697"\w* des \w HERRN|strong="H3068"\w* \w kam|strong="H1961"\w* \w zu|strong="H0413"\w* \w Semaja|strong="H8098"\w*, dem \w Mann|strong="H0376"\w* \w Gottes|strong="H0430"\w*, und \w sprach|strong="H0559"\w*:  
\v 3  \w Sage|strong="H0559"\w* \w Rehabeam|strong="H7346"\w*, dem \w Sohn|strong="H1121"\w* \w Salomos|strong="H8010"\w*, dem \w König|strong="H4428"\w* Juda'\w s|strong="H3063"\w*, und \w dem|strong="H0413"\w* \w ganzen|strong="H3605"\w* \w Israel|strong="H3478"\w*, das in \w Juda|strong="H3063"\w* und \w Benjamin|strong="H1144"\w* ist, und \w sprich|strong="H0559"\w*:  
\v 4  \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: Ihr sollt \w nicht|strong="H3808"\w* \w hinaufziehen|strong="H5927"\w* \w noch|strong="H3808"\w* \w wider|strong="H5973"\w* eure \w Brüder|strong="H0251"\w* \w streiten|strong="H3898"\w*; ein \w jeglicher|strong="H0376"\w* gehe \w wieder|strong="H7725"\w* \w heim|strong="H1004"\w*; \w denn|strong="H3588"\w* \w das|strong="H2088"\w* ist \w von|strong="H4480"\w* \w mir|strong="H0854"\w* \w geschehen|strong="H1961"\w*. Sie \w gehorchten|strong="H8085"\w* dem \w HERRN|strong="H3068"\w* und ließen \w ab|strong="H3212"\w* \w von|strong="H4480"\w* dem Zug \w wider|strong="H0413"\w* \w Jerobeam|strong="H3379"\w*.  
\v 5  \w Rehabeam|strong="H7346"\w* aber \w wohnte|strong="H3427"\w* zu \w Jerusalem|strong="H3389"\w* und \w baute|strong="H1129"\w* \w Städte|strong="H5892"\w* zu \w Festungen|strong="H4692"\w* in \w Juda|strong="H3063"\w*,  
\v 6  \w nämlich|strong="H1129"\w*: \w Bethlehem|strong="H1035"\w*, \w Etam|strong="H5862"\w*, \w Thekoa|strong="H8620"\w*,  
\v 7 Beth-\w Zur|strong="H1049"\w*, \w Socho|strong="H7755"\w*, \w Adullam|strong="H5725"\w*,  
\v 8  \w Gath|strong="H1661"\w*, \w Maresa|strong="H4762"\w*, \w Siph|strong="H2128"\w*,  
\v 9  \w Adoraim|strong="H0115"\w*, \w Lachis|strong="H3923"\w*, \w Aseka|strong="H5825"\w*,  
\v 10  \w Zora|strong="H6881"\w*, \w Ajalon|strong="H0357"\w* und \w Hebron|strong="H2275"\w*, \w welche|strong="H0834"\w* waren die \w festen|strong="H4694"\w* \w Städte|strong="H5892"\w* in \w Juda|strong="H3063"\w* und \w Benjamin|strong="H1144"\w*;  
\v 11 und machte \w sie|strong="H4694"\w* \w stark|strong="H2388"\w* und \w setzte|strong="H5414"\w* \w Fürsten|strong="H5057"\w* darein und \w Vorrat|strong="H0214"\w* von \w Speise|strong="H3978"\w*, \w Öl|strong="H8081"\w* und \w Wein|strong="H3196"\w*.  
\v 12 Und in \w allen|strong="H3605"\w* \w Städten|strong="H5892"\w* schaffte er \w Schilde|strong="H6793"\w* und \w Spieße|strong="H7420"\w* und machte sie \w sehr|strong="H3966"\w* \w stark|strong="H7235"\w*. \w Juda|strong="H3063"\w* und \w Benjamin|strong="H1144"\w* \w waren|strong="H1961"\w* unter ihm.  
\v 13 Auch \w machten|strong="H3320"\w* \w sich|strong="H5921"\w* zu \w ihm|strong="H4480"\w* die \w Priester|strong="H3548"\w* und \w Leviten|strong="H3881"\w* aus \w ganz|strong="H3605"\w* \w Israel|strong="H3478"\w* und \w allem|strong="H3605"\w* \w Gebiet|strong="H1366"\w*;  
\v 14  \w denn|strong="H3588"\w* die \w Leviten|strong="H3881"\w* \w verließen|strong="H5800"\w* ihre \w Vorstädte|strong="H4054"\w* und \w Habe|strong="H0272"\w* und \w kamen|strong="H3212"\w* zu \w Juda|strong="H3063"\w* gen \w Jerusalem|strong="H3389"\w*. \w Denn|strong="H3588"\w* \w Jerobeam|strong="H3379"\w* und seine \w Söhne|strong="H1121"\w* \w verstießen|strong="H2186"\w* sie, daß sie vor dem \w HERRN|strong="H3068"\w* nicht \w des|strong="H4480"\w* Priesteramtes pflegen \w konnten|strong="H3547"\w*.  
\v 15 Er \w stiftete|strong="H5975"\w* sich aber \w Priester|strong="H3548"\w* zu den \w Höhen|strong="H1116"\w* und zu den \w Feldteufeln|strong="H8163"\w* und \w Kälbern|strong="H5695"\w*, \w die|strong="H0834"\w* er machen \w ließ|strong="H6213"\w*.  
\v 16 Und \w nach|strong="H0310"\w* ihnen \w kamen|strong="H0935"\w* \w aus|strong="H4480"\w* \w allen|strong="H3605"\w* \w Stämmen|strong="H7626"\w* \w Israels|strong="H3478"\w*, die ihr \w Herz|strong="H3824"\w* \w gaben|strong="H5414"\w*, daß sie nach dem \w HERRN|strong="H3068"\w*, dem \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*, \w fragten|strong="H1245"\w*, gen \w Jerusalem|strong="H3389"\w*, daß sie \w opferten|strong="H2076"\w* dem \w HERRN|strong="H3068"\w*, dem \w Gott|strong="H0430"\w* ihrer \w Väter|strong="H0001"\w*.  
\v 17 Und \w stärkten|strong="H2388"\w* also das \w Königreich|strong="H4438"\w* \w Juda|strong="H3063"\w* und \w befestigten|strong="H0553"\w* \w Rehabeam|strong="H7346"\w*, den \w Sohn|strong="H1121"\w* \w Salomos|strong="H8010"\w*, \w drei|strong="H7969"\w* \w Jahre|strong="H8141"\w* lang; \w denn|strong="H3588"\w* sie \w wandelten|strong="H1980"\w* in den \w Wegen|strong="H1870"\w* \w Davids|strong="H1732"\w* und \w Salomos|strong="H8010"\w* \w drei|strong="H7969"\w* \w Jahre|strong="H8141"\w*.  
\v 18 Und \w Rehabeam|strong="H7346"\w* \w nahm|strong="H3947"\w* \w Mahalath|strong="H4258"\w*, die \w Tochter|strong="H1121"\w* \w Jerimoths|strong="H3406"\w*, des \w Sohnes|strong="H1121"\w* \w Davids|strong="H1732"\w*, zum \w Weibe|strong="H0802"\w* und \w Abihail|strong="H0032"\w*, die \w Tochter|strong="H1323"\w* \w Eliabs|strong="H0446"\w*, des \w Sohnes|strong="H1121"\w* \w Isais|strong="H3448"\w*.  
\v 19 Die \w gebar|strong="H3205"\w* ihm diese \w Söhne|strong="H1121"\w*: \w Jeus|strong="H3266"\w*, \w Semarja|strong="H8114"\w* und \w Saham|strong="H2093"\w*.  
\v 20  \w Nach|strong="H0310"\w* der \w nahm|strong="H3947"\w* er \w Maacha|strong="H4601"\w*, die \w Tochter|strong="H1323"\w* \w Absaloms|strong="H0053"\w*; die \w gebar|strong="H3205"\w* ihm \w Abia|strong="H0029"\w*, \w Atthai|strong="H6262"\w*, \w Sisa|strong="H2124"\w* und \w Selomith|strong="H8019"\w*.  
\v 21 Aber \w Rehabeam|strong="H7346"\w* hatte \w Maacha|strong="H4601"\w*, die \w Tochter|strong="H1323"\w* \w Absaloms|strong="H0053"\w*, \w lieber|strong="H0157"\w* \w denn|strong="H4480"\w* \w alle|strong="H3605"\w* seine \w Weiber|strong="H0802"\w* und \w Kebsweiber|strong="H6370"\w*; \w denn|strong="H3588"\w* er \w hatte|strong="H5375"\w* \w achtzehn|strong="H6240"\w* \w Weiber|strong="H0802"\w* und \w sechzig|strong="H8346"\w* \w Kebsweiber|strong="H6370"\w* und \w zeugte|strong="H3205"\w* \w achtundzwanzig|strong="H6242"\w* \w Söhne|strong="H1121"\w* und \w sechzig|strong="H8346"\w* \w Töchter|strong="H1323"\w*.  
\v 22 Und \w Rehabeam|strong="H7346"\w* \w setzte|strong="H5975"\w* \w Abia|strong="H0029"\w*, den \w Sohn|strong="H1121"\w* \w Maachas|strong="H4601"\w*, zum \w Haupt|strong="H7218"\w* und \w Fürsten|strong="H5057"\w* unter seinen \w Brüdern|strong="H0251"\w*; \w denn|strong="H3588"\w* er gedachte ihn zum König zu \w machen|strong="H4427"\w*.  
\v 23 Und er handelte \w klüglich|strong="H0995"\w* und \w verteilte|strong="H6555"\w* \w alle|strong="H3605"\w* seine \w Söhne|strong="H1121"\w* in \w die|strong="H3605"\w* \w Lande|strong="H0776"\w* \w Juda|strong="H3063"\w* und \w Benjamin|strong="H1144"\w* in \w alle|strong="H3605"\w* \w festen|strong="H4694"\w* \w Städte|strong="H5892"\w*, und er \w gab|strong="H5414"\w* ihnen \w Nahrung|strong="H4202"\w* die \w Menge|strong="H7230"\w* und \w nahm|strong="H7592"\w* ihnen \w viele|strong="H1995"\w* \w Weiber|strong="H0802"\w*.   
\c 12  
\p
\v 1  \w Da|strong="H1961"\w* aber das \w Königreich|strong="H4438"\w* \w Rehabeams|strong="H7346"\w* \w befestigt|strong="H3559"\w* und bekräftigt \w ward|strong="H2393"\w*, \w verließ|strong="H5800"\w* er das \w Gesetz|strong="H8451"\w* des \w HERRN|strong="H3068"\w* und \w ganz|strong="H3605"\w* \w Israel|strong="H3478"\w* \w mit|strong="H5973"\w* ihm.  
\v 2  \w Aber|strong="H1961"\w* im \w fünften|strong="H2549"\w* \w Jahr|strong="H8141"\w* des \w Königs|strong="H4428"\w* \w Rehabeam|strong="H7346"\w* zog \w herauf|strong="H5927"\w* \w Sisak|strong="H7895"\w*, der \w König|strong="H4428"\w* in \w Ägypten|strong="H4714"\w*, \w wider|strong="H5921"\w* \w Jerusalem|strong="H3389"\w* (\w denn|strong="H3588"\w* sie hatten sich \w versündigt|strong="H4603"\w* am \w HERRN|strong="H3068"\w*)  
\v 3 mit \w tausendzweihundert|strong="H3967"\w* \w Wagen|strong="H7393"\w* und mit \w sechzigtausend|strong="H0505"\w* \w Reiter|strong="H6571"\w*, und das \w Volk|strong="H5971"\w* war \w nicht|strong="H0369"\w* zu \w zählen|strong="H4557"\w*, \w das|strong="H0834"\w* \w mit|strong="H5973"\w* ihm \w kam|strong="H0935"\w* \w aus|strong="H4480"\w* \w Ägypten|strong="H4714"\w*: \w Libyer|strong="H3864"\w*, \w Suchiter|strong="H5525"\w* und \w Mohren|strong="H3569"\w*.  
\v 4 Und er \w gewann|strong="H3920"\w* die \w festen|strong="H4694"\w* \w Städte|strong="H5892"\w*, die \w in|strong="H0834"\w* \w Juda|strong="H3063"\w* waren, und \w kam|strong="H0935"\w* \w bis|strong="H5704"\w* gen \w Jerusalem|strong="H3389"\w*.  
\v 5 Da \w kam|strong="H0935"\w* \w Semaja|strong="H8098"\w*, der \w Prophet|strong="H5030"\w*, \w zu|strong="H0413"\w* \w Rehabeam|strong="H7346"\w* und zu den \w Obersten|strong="H8269"\w* Juda'\w s|strong="H3063"\w*, \w die|strong="H0834"\w* sich \w gen|strong="H0413"\w* \w Jerusalem|strong="H3389"\w* versammelt \w hatten|strong="H0622"\w* \w vor|strong="H4480"\w* \w Sisak|strong="H7895"\w*, und \w sprach|strong="H0559"\w* zu ihnen: \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Ihr|strong="H0859"\w* habt \w mich|strong="H0853"\w* \w verlassen|strong="H5800"\w*; \w darum|strong="H0859"\w* habe ich \w euch|strong="H0853"\w* \w auch|strong="H0637"\w* \w verlassen|strong="H5800"\w* in \w Sisaks|strong="H7895"\w* \w Hand|strong="H3027"\w*.  
\v 6 Da \w demütigten|strong="H3665"\w* sich die \w Obersten|strong="H8269"\w* in \w Israel|strong="H3478"\w* mit dem \w König|strong="H4428"\w* und \w sprachen|strong="H0559"\w*: Der \w HERR|strong="H3068"\w* ist \w gerecht|strong="H6662"\w*.  
\v 7 Als aber der \w HERR|strong="H3068"\w* \w sah|strong="H7200"\w*, \w daß|strong="H3588"\w* sie sich \w demütigten|strong="H3665"\w*, \w kam|strong="H1961"\w* das \w Wort|strong="H1697"\w* des \w HERRN|strong="H3068"\w* \w zu|strong="H0413"\w* \w Semaja|strong="H8098"\w* und \w sprach|strong="H0559"\w*: Sie haben sich \w gedemütigt|strong="H3665"\w*; darum will ich sie \w nicht|strong="H3808"\w* \w verderben|strong="H7843"\w*, sondern ich will ihnen ein \w wenig|strong="H4592"\w* \w Errettung|strong="H6413"\w* \w geben|strong="H5414"\w*, daß mein \w Grimm|strong="H2534"\w* \w nicht|strong="H3808"\w* triefe \w auf|strong="H5413"\w* \w Jerusalem|strong="H3389"\w* \w durch|strong="H3027"\w* \w Sisak|strong="H7895"\w*.  
\v 8  \w Doch|strong="H3588"\w* sollen sie ihm \w untertan|strong="H5650"\w* \w sein|strong="H1961"\w*, daß sie \w innewerden|strong="H3045"\w*, was es sei, mir \w dienen|strong="H5656"\w* und den \w Königreichen|strong="H4467"\w* in den \w Landen|strong="H0776"\w* \w dienen|strong="H5656"\w*.  
\v 9 Also \w zog|strong="H5927"\w* \w Sisak|strong="H7895"\w*, der \w König|strong="H4428"\w* in \w Ägypten|strong="H4714"\w*, \w herauf|strong="H5927"\w* \w gen|strong="H5921"\w* \w Jerusalem|strong="H3389"\w* und nahm die \w Schätze|strong="H0214"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* und die \w Schätze|strong="H0214"\w* im \w Hause|strong="H1004"\w* des \w Königs|strong="H4428"\w* und \w nahm|strong="H3947"\w* \w alles|strong="H3605"\w* \w weg|strong="H3947"\w* und nahm auch die \w goldenen|strong="H2091"\w* \w Schilde|strong="H4043"\w*, \w die|strong="H0834"\w* \w Salomo|strong="H8010"\w* \w machen|strong="H6213"\w* ließ.  
\v 10 An deren \w Statt|strong="H8478"\w* \w ließ|strong="H6213"\w* der \w König|strong="H4428"\w* \w Rehabeam|strong="H7346"\w* \w eherne|strong="H5178"\w* \w Schilde|strong="H4043"\w* \w machen|strong="H6213"\w* und \w befahl|strong="H6485"\w* sie den \w Obersten|strong="H8269"\w* der \w Trabanten|strong="H7323"\w*, die an der \w Tür|strong="H6607"\w* des \w Königshauses|strong="H4428"\w* \w hüteten|strong="H8104"\w*.  
\v 11 Und \w so|strong="H1961"\w* \w oft|strong="H1767"\w* der \w König|strong="H4428"\w* in des \w HERRN|strong="H3068"\w* \w Haus|strong="H1004"\w* \w ging|strong="H0935"\w*, \w kamen|strong="H0935"\w* die \w Trabanten|strong="H7323"\w* und \w trugen|strong="H5375"\w* sie und \w brachten|strong="H7725"\w* sie \w wieder|strong="H7725"\w* \w in|strong="H0413"\w* der \w Trabanten|strong="H7323"\w* \w Kammer|strong="H8372"\w*.  
\v 12 Und weil er sich \w demütigte|strong="H3665"\w*, \w wandte|strong="H7725"\w* sich des \w HERRN|strong="H3068"\w* \w Zorn|strong="H0639"\w* \w von|strong="H4480"\w* ihm, daß \w nicht|strong="H3808"\w* \w alles|strong="H3617"\w* verderbt \w ward|strong="H7843"\w*. \w Denn|strong="H1571"\w* es \w war|strong="H1961"\w* in \w Juda|strong="H3063"\w* noch \w etwas|strong="H1697"\w* \w Gutes|strong="H2896"\w*.  
\v 13 Also ward \w Rehabeam|strong="H7346"\w*, der \w König|strong="H4428"\w*, \w bekräftigt|strong="H2388"\w* in \w Jerusalem|strong="H3389"\w* und \w regierte|strong="H4427"\w*. \w Einundvierzig|strong="H0705"\w* \w Jahre|strong="H8141"\w* \w alt|strong="H1121"\w* war \w Rehabeam|strong="H7346"\w* da er König \w ward|strong="H4427"\w*, und \w regierte|strong="H4427"\w* \w siebzehn|strong="H6240"\w* \w Jahre|strong="H8141"\w* zu \w Jerusalem|strong="H3389"\w* in der \w Stadt|strong="H5892"\w*, \w die|strong="H0834"\w* der \w HERR|strong="H3068"\w* erwählt \w hatte|strong="H0977"\w* \w aus|strong="H4480"\w* \w allen|strong="H3605"\w* \w Stämmen|strong="H7626"\w* \w Israels|strong="H3478"\w*, daß er seinen \w Namen|strong="H8034"\w* \w dahin|strong="H8033"\w* \w stellte|strong="H7760"\w*. Seine \w Mutter|strong="H0517"\w* \w hieß|strong="H5279"\w* \w Naema|strong="H8034"\w*, eine \w Ammonitin|strong="H5985"\w*.  
\v 14 Und er \w handelte|strong="H6213"\w* \w übel|strong="H7451"\w* und \w schickte|strong="H3559"\w* sein \w Herz|strong="H3820"\w* \w nicht|strong="H3808"\w*, daß er den \w HERRN|strong="H3068"\w* \w suchte|strong="H1875"\w*.  
\v 15 Die \w Geschichten|strong="H1697"\w* aber \w Rehabeams|strong="H7346"\w*, beide, die \w ersten|strong="H7223"\w* und die \w letzten|strong="H0314"\w*, \w sind|strong="H1992"\w* \w geschrieben|strong="H3789"\w* in den \w Geschichten|strong="H1697"\w* \w Semajas|strong="H8098"\w*, des \w Propheten|strong="H5030"\w*, und \w Iddos|strong="H5714"\w*, des \w Sehers|strong="H2374"\w*, und \w aufgezeichnet|strong="H3187"\w*, dazu die \w Kriege|strong="H4421"\w* \w Rehabeam|strong="H7346"\w* und \w Jerobeam|strong="H3379"\w* \w ihr|strong="H3605"\w* Leben \w lang|strong="H3117"\w*.  
\v 16 Und \w Rehabeam|strong="H7346"\w* \w entschlief|strong="H7901"\w* \w mit|strong="H5973"\w* seinen \w Vätern|strong="H0001"\w* und ward \w begraben|strong="H6912"\w* in der \w Stadt|strong="H5892"\w* \w Davids|strong="H1732"\w*. Und sein \w Sohn|strong="H1121"\w* \w Abia|strong="H0029"\w* ward \w König|strong="H4427"\w* an seiner \w Statt|strong="H8478"\w*.   
\c 13  
\p
\v 1 Im \w achtzehnten|strong="H6240"\w* \w Jahr|strong="H8141"\w* des \w Königs|strong="H4428"\w* \w Jerobeam|strong="H3379"\w* \w ward|strong="H4427"\w* \w Abia|strong="H0029"\w* \w König|strong="H4427"\w* \w in|strong="H5921"\w* \w Juda|strong="H3063"\w*,  
\v 2 und \w regierte|strong="H4427"\w* \w drei|strong="H7969"\w* \w Jahre|strong="H8141"\w* zu \w Jerusalem|strong="H3389"\w*. Seine \w Mutter|strong="H0517"\w* \w hieß|strong="H8034"\w* \w Michaja|strong="H4322"\w*, eine \w Tochter|strong="H1323"\w* \w Uriels|strong="H0222"\w* \w von|strong="H4480"\w* \w Gibea|strong="H1390"\w*. Und es erhob \w sich|strong="H1961"\w* ein \w Streit|strong="H4421"\w* \w zwischen|strong="H0996"\w* \w Abia|strong="H0029"\w* und \w Jerobeam|strong="H3379"\w*.  
\v 3 Und \w Abia|strong="H0029"\w* \w rüstete|strong="H0631"\w* sich zum \w Streit|strong="H4421"\w* \w mit|strong="H2428"\w* \w vierhunderttausend|strong="H0505"\w* \w junger|strong="H0977"\w* \w Mannschaft|strong="H0376"\w*, \w starke|strong="H4421"\w* \w Leute|strong="H1368"\w* zum Kriege. \w Jerobeam|strong="H3379"\w* aber rüstete \w sich|strong="H6186"\w*, mit ihm \w zu|strong="H5973"\w* \w streiten|strong="H4421"\w* mit \w achthunderttausend|strong="H0505"\w* \w junger|strong="H0977"\w* \w Mannschaft|strong="H0376"\w*, \w starke|strong="H2428"\w* \w Leute|strong="H1368"\w*.  
\v 4 Und \w Abia|strong="H0029"\w* machte sich \w auf|strong="H6965"\w* oben \w auf|strong="H5921"\w* den \w Berg|strong="H2022"\w* \w Zemaraim|strong="H6787"\w*, \w welcher|strong="H0834"\w* liegt auf dem \w Gebirge|strong="H2022"\w* \w Ephraim|strong="H0669"\w* und \w sprach|strong="H0559"\w*: \w Hört|strong="H8085"\w* mir zu, \w Jerobeam|strong="H3379"\w* und \w ganz|strong="H3605"\w* \w Israel|strong="H3478"\w*!  
\v 5  \w Wisset|strong="H3045"\w* ihr \w nicht|strong="H3808"\w*, \w daß|strong="H3588"\w* der \w HERR|strong="H3068"\w*, der \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*, hat das \w Königreich|strong="H4467"\w* \w zu|strong="H5921"\w* \w Israel|strong="H3478"\w* \w David|strong="H1732"\w* \w gegeben|strong="H5414"\w* \w ewiglich|strong="H5769"\w*, ihm und seinen \w Söhnen|strong="H1121"\w* durch einen \w Salzbund|strong="H4417"\w*?  
\v 6 Aber \w Jerobeam|strong="H3379"\w*, der \w Sohn|strong="H1121"\w* \w Nebats|strong="H5028"\w*, der \w Knecht|strong="H5650"\w* \w Salomos|strong="H8010"\w*, \w Davids|strong="H1732"\w* \w Sohnes|strong="H1121"\w*, \w warf|strong="H6965"\w* sich \w auf|strong="H6965"\w* und \w ward|strong="H5921"\w* seinem \w Herrn|strong="H0113"\w* \w abtrünnig|strong="H4775"\w*.  
\v 7 Und haben sich \w zu|strong="H5921"\w* ihm \w geschlagen|strong="H6908"\w* \w lose|strong="H7386"\w* \w Leute|strong="H0582"\w* und \w böse|strong="H1100"\w* \w Buben|strong="H1121"\w* und haben sich \w gestärkt|strong="H0553"\w* \w wider|strong="H5921"\w* \w Rehabeam|strong="H7346"\w*, den \w Sohn|strong="H1121"\w* \w Salomos|strong="H8010"\w*; denn \w Rehabeam|strong="H7346"\w* war \w jung|strong="H5288"\w* und \w eines|strong="H1961"\w* \w blöden|strong="H7390"\w* \w Herzens|strong="H3824"\w*, daß \w er|strong="H6440"\w* sich \w vor|strong="H2388"\w* ihnen \w nicht|strong="H3808"\w* \w wehrte|strong="H2388"\w*.  
\v 8  \w Nun|strong="H6258"\w* \w denkt|strong="H0559"\w* \w ihr|strong="H0859"\w* euch zu \w setzen|strong="H2388"\w* \w wider|strong="H6440"\w* das \w Reich|strong="H4467"\w* des \w HERRN|strong="H3068"\w* \w unter|strong="H3027"\w* den \w Söhnen|strong="H1121"\w* \w Davids|strong="H1732"\w*, weil \w euer|strong="H0859"\w* ein \w großer|strong="H7227"\w* \w Haufe|strong="H1995"\w* ist und habt \w goldene|strong="H2091"\w* \w Kälber|strong="H5695"\w*, die \w euch|strong="H0834"\w* \w Jerobeam|strong="H3379"\w* zu \w Göttern|strong="H0430"\w* gemacht \w hat|strong="H6213"\w*.  
\v 9 Habt ihr \w nicht|strong="H3808"\w* die \w Priester|strong="H3548"\w* des \w HERRN|strong="H3068"\w*, die \w Kinder|strong="H1121"\w* \w Aaron|strong="H0175"\w*, und die \w Leviten|strong="H3881"\w* \w ausgestoßen|strong="H5080"\w* und habt euch eigene \w Priester|strong="H3548"\w* \w gemacht|strong="H6213"\w* wie die \w Völker|strong="H5971"\w* in den \w Landen|strong="H0776"\w*? \w Wer|strong="H3605"\w* da \w kommt|strong="H0935"\w*, seine \w Hand|strong="H3027"\w* zu \w füllen|strong="H4390"\w* mit einem \w jungen|strong="H1241"\w* \w Farren|strong="H6499"\w* und \w sieben|strong="H7651"\w* \w Widdern|strong="H0352"\w*, der \w wird|strong="H1961"\w* \w Priester|strong="H3548"\w* derer, die \w nicht|strong="H3808"\w* \w Götter|strong="H0430"\w* sind.  
\v 10 Mit \w uns|strong="H0587"\w* \w aber|strong="H3068"\w* ist der \w HERR|strong="H0430"\w*, unser \w Gott|strong="H3808"\w*, den wir nicht \w verlassen|strong="H5800"\w*, und die \w Priester|strong="H3548"\w*, die dem \w HERRN|strong="H3068"\w* \w dienen|strong="H8334"\w*, die \w Kinder|strong="H1121"\w* \w Aaron|strong="H0175"\w*, und die \w Leviten|strong="H3881"\w* mit ihrem \w Geschäft|strong="H4399"\w*,  
\v 11 die \w anzünden|strong="H6999"\w* dem \w HERRN|strong="H3068"\w* \w alle|strong="H1242"\w* \w Morgen|strong="H1242"\w* \w Brandopfer|strong="H5930"\w* und \w alle|strong="H6153"\w* \w Abende|strong="H6153"\w*, dazu das gute \w Räuchwerk|strong="H7004"\w*, und \w bereitete|strong="H4635"\w* \w Brote|strong="H3899"\w* \w auf|strong="H5921"\w* den \w reinen|strong="H2889"\w* \w Tisch|strong="H7979"\w*, und der \w goldene|strong="H2091"\w* \w Leuchter|strong="H4501"\w* mit seinen \w Lampen|strong="H5216"\w*, die da \w alle|strong="H6153"\w* \w Abende|strong="H6153"\w* angezündet \w werden|strong="H1197"\w*. \w Denn|strong="H3588"\w* \w wir|strong="H0587"\w* \w halten|strong="H8104"\w* die \w Gebote|strong="H4931"\w* des \w HERRN|strong="H3068"\w*, unsers \w Gottes|strong="H0430"\w*; \w ihr|strong="H0859"\w* aber habt \w ihn|strong="H0853"\w* \w verlassen|strong="H5800"\w*.  
\v 12  \w Siehe|strong="H2009"\w*, \w mit|strong="H5973"\w* uns ist an der \w Spitze|strong="H7218"\w* \w Gott|strong="H0430"\w* und seine \w Priester|strong="H3548"\w* und die \w Halldrommeten|strong="H8643"\w*, daß man wider euch \w drommete|strong="H7321"\w*. Ihr \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w*, \w streitet|strong="H3898"\w* \w nicht|strong="H0408"\w* \w wider|strong="H5973"\w* den \w HERRN|strong="H3068"\w*, eurer \w Väter|strong="H0001"\w* \w Gott|strong="H0430"\w*; \w denn|strong="H3588"\w* es wird euch \w nicht|strong="H3808"\w* \w gelingen|strong="H6743"\w*.  
\v 13 Aber \w Jerobeam|strong="H3379"\w* machte einen \w Hinterhalt|strong="H3993"\w* \w umher|strong="H5437"\w*, daß er \w von|strong="H4480"\w* \w hinten|strong="H0310"\w* an sie \w käme|strong="H0935"\w*, daß sie \w vor|strong="H6440"\w* \w Juda|strong="H3063"\w* \w waren|strong="H1961"\w* und der \w Hinterhalt|strong="H3993"\w* \w hinter|strong="H0310"\w* Juda.  
\v 14 Da sich nun \w Juda|strong="H3063"\w* \w umwandte|strong="H6437"\w*, \w siehe|strong="H2009"\w*, da war \w vorn|strong="H6440"\w* und \w hinten|strong="H0268"\w* \w Streit|strong="H4421"\w*. Da \w schrieen|strong="H6817"\w* sie zum \w HERRN|strong="H3068"\w*, und die \w Priester|strong="H3548"\w* \w drommeteten|strong="H2690"\w* mit den \w Drommeten|strong="H2689"\w*,  
\v 15 und \w jedermann|strong="H0376"\w* in \w Juda|strong="H3063"\w* \w erhob|strong="H7321"\w* \w Geschrei|strong="H1961"\w*. Und da \w jedermann|strong="H0376"\w* in \w Juda|strong="H3063"\w* \w schrie|strong="H7321"\w*, \w schlug|strong="H5062"\w* \w Gott|strong="H0430"\w* \w Jerobeam|strong="H3379"\w* und das \w ganze|strong="H3605"\w* \w Israel|strong="H3478"\w* \w vor|strong="H6440"\w* \w Abia|strong="H0029"\w* und \w Juda|strong="H3063"\w*.  
\v 16 Und die \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w* \w flohen|strong="H5127"\w* \w vor|strong="H6440"\w* \w Juda|strong="H3063"\w*, und \w Gott|strong="H0430"\w* \w gab|strong="H5414"\w* sie in ihre \w Hände|strong="H3027"\w*,  
\v 17 daß \w Abia|strong="H0029"\w* mit seinem \w Volk|strong="H5971"\w* eine \w große|strong="H7227"\w* \w Schlacht|strong="H4347"\w* an ihnen \w tat|strong="H5221"\w* \w und|strong="H4480"\w* \w fielen|strong="H5307"\w* aus \w Israel|strong="H3478"\w* \w Erschlagene|strong="H2491"\w* \w fünfhunderttausend|strong="H0505"\w* \w junger|strong="H0977"\w* \w Mannschaft|strong="H0376"\w*.  
\v 18 Also wurden die \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w* \w gedemütigt|strong="H3665"\w* zu \w der|strong="H1931"\w* \w Zeit|strong="H6256"\w*; aber die \w Kinder|strong="H1121"\w* \w Juda|strong="H3063"\w* wurden \w getrost|strong="H0553"\w*, \w denn|strong="H3588"\w* \w sie|strong="H5921"\w* \w verließen|strong="H8172"\w* sich \w auf|strong="H8172"\w* den \w HERRN|strong="H3068"\w*, ihrer \w Väter|strong="H0001"\w* \w Gott|strong="H0430"\w*.  
\v 19 Und \w Abia|strong="H0029"\w* \w jagte|strong="H7291"\w* \w Jerobeam|strong="H3379"\w* \w nach|strong="H0310"\w* und \w gewann|strong="H4480"\w* \w ihm|strong="H4480"\w* \w Städte|strong="H5892"\w* \w ab|strong="H3920"\w*: Beth-\w El|strong="H1008"\w* mit seinen \w Ortschaften|strong="H1323"\w*, \w Jesana|strong="H3466"\w* mit seinen \w Ortschaften|strong="H1323"\w* und \w Ephron|strong="H6085"\w* mit seinen \w Ortschaften|strong="H1323"\w*,  
\v 20 daß \w Jerobeam|strong="H3379"\w* \w fürder|strong="H6113"\w* \w nicht|strong="H3808"\w* zu \w Kräften|strong="H3581"\w* \w kam|strong="H5750"\w*, \w solange|strong="H3117"\w* \w Abia|strong="H0029"\w* lebte. Und der \w HERR|strong="H3068"\w* \w plagte|strong="H5062"\w* ihn, daß er \w starb|strong="H4191"\w*.  
\v 21  \w Abia|strong="H0029"\w* aber ward \w mächtig|strong="H2388"\w*, und er \w nahm|strong="H5375"\w* \w vierzig|strong="H6240"\w* \w Weiber|strong="H0802"\w* und \w zeugte|strong="H3205"\w* \w zweiundzwanzig|strong="H6242"\w* \w Söhne|strong="H1121"\w* und \w sechzehn|strong="H6240"\w* \w Töchter|strong="H1323"\w*.  
\v 22 Was aber \w mehr|strong="H3499"\w* von \w Abia|strong="H0029"\w* zu sagen \w ist|strong="H1697"\w* und seine \w Wege|strong="H1870"\w* und sein \w Tun|strong="H1697"\w*, das ist \w geschrieben|strong="H3789"\w* in der \w Historie|strong="H4097"\w* des \w Propheten|strong="H5030"\w* \w Iddo|strong="H5714"\w*.   
\c 14  
\p
\v 1 [13:23] Und \w Abia|strong="H0029"\w* \w entschlief|strong="H7901"\w* \w mit|strong="H5973"\w* seinen \w Vätern|strong="H0001"\w*, und sie \w begruben|strong="H6912"\w* \w ihn|strong="H0853"\w* in der \w Stadt|strong="H5892"\w* \w Davids|strong="H1732"\w*. Und \w Asa|strong="H0609"\w*, sein \w Sohn|strong="H1121"\w*, war \w König|strong="H4427"\w* an seiner \w Statt|strong="H8478"\w*. Zu dessen \w Zeiten|strong="H3117"\w* \w war|strong="H8252"\w* das \w Land|strong="H0776"\w* \w still|strong="H8252"\w* \w zehn|strong="H6235"\w* \w Jahre|strong="H8141"\w*.  
\v 2 Und \w Asa|strong="H0609"\w* \w tat|strong="H6213"\w*, was \w recht|strong="H2896"\w* war und dem \w HERRN|strong="H3068"\w*, seinem \w Gott|strong="H0430"\w*, wohl \w gefiel|strong="H5869"\w*,  
\v 3 und tat \w weg|strong="H5493"\w* die \w fremden|strong="H5236"\w* \w Altäre|strong="H4196"\w* und die \w Höhen|strong="H1116"\w* und \w zerbrach|strong="H7665"\w* die \w Säulen|strong="H0842"\w* und \w hieb|strong="H1438"\w* die \w Ascherahbilder|strong="H4676"\w* \w ab|strong="H1438"\w*  
\v 4 und ließ \w Juda|strong="H3063"\w* \w sagen|strong="H0559"\w*, daß sie den \w HERRN|strong="H3068"\w*, den \w Gott|strong="H0430"\w* ihrer \w Väter|strong="H0001"\w*, \w suchten|strong="H1875"\w* und \w täten|strong="H6213"\w* nach dem \w Gesetz|strong="H8451"\w* und \w Gebot|strong="H4687"\w*.  
\v 5 Und er tat \w weg|strong="H5493"\w* \w aus|strong="H4480"\w* \w allen|strong="H3605"\w* \w Städten|strong="H5892"\w* Juda'\w s|strong="H3063"\w* die \w Höhen|strong="H1116"\w* und die \w Sonnensäulen|strong="H2553"\w*; denn das \w Königreich|strong="H4467"\w* war \w still|strong="H8252"\w* \w vor|strong="H6440"\w* ihm.  
\v 6 Und er \w baute|strong="H1129"\w* \w feste|strong="H4694"\w* \w Städte|strong="H5892"\w* in \w Juda|strong="H3063"\w*, \w weil|strong="H3588"\w* das \w Land|strong="H0776"\w* \w still|strong="H8252"\w* und \w kein|strong="H0369"\w* \w Streit|strong="H4421"\w* \w wider|strong="H5973"\w* ihn \w war|strong="H8252"\w* in \w denselben|strong="H0428"\w* \w Jahren|strong="H8141"\w*; \w denn|strong="H3588"\w* der \w HERR|strong="H3068"\w* \w gab|strong="H5117"\w* ihm \w Ruhe|strong="H5117"\w*.  
\v 7 Und er \w sprach|strong="H0559"\w* zu \w Juda|strong="H3063"\w*: Laßt uns \w diese|strong="H0428"\w* \w Städte|strong="H5892"\w* \w bauen|strong="H1129"\w* und \w Mauern|strong="H2346"\w* darumher \w führen|strong="H5437"\w* und \w Türme|strong="H4026"\w*, \w Türen|strong="H1817"\w* und \w Riegel|strong="H1280"\w*, weil das \w Land|strong="H0776"\w* noch offen vor \w uns|strong="H6440"\w* ist; \w denn|strong="H3588"\w* wir haben den \w HERRN|strong="H3068"\w*, unsern \w Gott|strong="H0430"\w*, \w gesucht|strong="H1875"\w*, und er hat \w uns|strong="H4480"\w* Ruhe \w gegeben|strong="H5117"\w* \w umher|strong="H5439"\w*. Also bauten \w sie|strong="H1129"\w*, und es ging glücklich \w vonstatten|strong="H6743"\w*.  
\v 8 Und \w Asa|strong="H0609"\w* \w hatte|strong="H1961"\w* eine \w Heereskraft|strong="H2428"\w*, die \w Schild|strong="H6793"\w* und \w Spieß|strong="H7420"\w* \w trugen|strong="H5375"\w*, \w aus|strong="H4480"\w* \w Juda|strong="H3063"\w* \w dreihunderttausend|strong="H0505"\w* und \w aus|strong="H4480"\w* \w Benjamin|strong="H1144"\w*, die \w Schilde|strong="H4043"\w* \w trugen|strong="H5375"\w* und mit dem \w Bogen|strong="H7198"\w* schießen \w konnten|strong="H1869"\w* \w zweihundertachtzigtausend|strong="H0505"\w*; \w und|strong="H3605"\w* \w diese|strong="H0428"\w* waren \w starke|strong="H2428"\w* \w Helden|strong="H1368"\w*.  
\v 9 Es \w zog|strong="H0413"\w* aber \w wider|strong="H0413"\w* sie \w aus|strong="H3318"\w* \w Serah|strong="H2226"\w*, der \w Mohr|strong="H3569"\w*, mit einer \w Heereskraft|strong="H2428"\w* \w tausendmaltausend|strong="H0505"\w*, dazu \w dreihundert|strong="H3967"\w* \w Wagen|strong="H4818"\w*, und sie \w kamen|strong="H0935"\w* \w bis|strong="H5704"\w* gen \w Maresa|strong="H4762"\w*.  
\v 10 Und \w Asa|strong="H0609"\w* zog \w aus|strong="H3318"\w* ihnen \w entgegen|strong="H6440"\w*; und sie \w rüsteten|strong="H6186"\w* sich zum \w Streit|strong="H4421"\w* im \w Tal|strong="H1516"\w* \w Zephatha|strong="H6859"\w* bei \w Maresa|strong="H4762"\w*.  
\v 11 Und \w Asa|strong="H0609"\w* \w rief|strong="H7121"\w* \w an|strong="H0413"\w* den \w HERRN|strong="H3068"\w*, seinen \w Gott|strong="H0430"\w*, und \w sprach|strong="H0559"\w*: \w HERR|strong="H3068"\w*, es ist \w bei|strong="H5973"\w* dir \w kein|strong="H0369"\w* Unterschied, zu \w helfen|strong="H5826"\w* \w unter|strong="H0996"\w* \w vielen|strong="H7227"\w* oder da keine \w Kraft|strong="H3581"\w* ist. \w Hilf|strong="H5826"\w* uns, \w HERR|strong="H3068"\w*, unser \w Gott|strong="H0430"\w*; \w denn|strong="H3588"\w* wir \w verlassen|strong="H8172"\w* uns \w auf|strong="H5921"\w* dich, und in deinem \w Namen|strong="H8034"\w* sind wir \w gekommen|strong="H0935"\w* \w wider|strong="H5921"\w* \w diese|strong="H2088"\w* \w Menge|strong="H1995"\w*. \w HERR|strong="H3068"\w*, unser \w Gott|strong="H0430"\w*, \w wider|strong="H5973"\w* dich \w vermag|strong="H6113"\w* \w kein|strong="H0408"\w* \w Mensch|strong="H0582"\w* etwas.  
