\v 21 Also \w war|strong="H1961"\w* \w Usia|strong="H5818"\w*, der \w König|strong="H4428"\w*, \w aussätzig|strong="H6879"\w* bis \w an|strong="H5704"\w* seinen \w Tod|strong="H4194"\w* \w und|strong="H6879"\w* \w wohnte|strong="H3427"\w* in einem \w besonderen|strong="H2669"\w* \w Hause|strong="H1004"\w* \w aussätzig|strong="H6879"\w*; \w denn|strong="H3588"\w* er \w ward|strong="H4480"\w* \w verstoßen|strong="H1504"\w* vom \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*. \w Jotham|strong="H3147"\w* aber, sein \w Sohn|strong="H1121"\w*, \w stand|strong="H5921"\w* des \w Königs|strong="H4428"\w* \w Hause|strong="H1004"\w* \w vor|strong="H5921"\w* und \w richtete|strong="H8199"\w* das \w Volk|strong="H5971"\w* im \w Lande|strong="H0776"\w*.  
\v 22 Was aber \w mehr|strong="H3499"\w* von \w Usia|strong="H5818"\w* zu sagen \w ist|strong="H1697"\w*, beides, das \w erste|strong="H7223"\w* und das \w letzte|strong="H0314"\w*, \w hat|strong="H5030"\w* \w beschrieben|strong="H3789"\w* der \w Prophet|strong="H5030"\w* \w Jesaja|strong="H3470"\w*, der \w Sohn|strong="H1121"\w* des \w Amoz|strong="H0531"\w*.  
\v 23 Und \w Usia|strong="H5818"\w* \w entschlief|strong="H7901"\w* \w mit|strong="H5973"\w* seinen \w Vätern|strong="H0001"\w*, und sie \w begruben|strong="H6912"\w* \w ihn|strong="H0853"\w* \w bei|strong="H5973"\w* seinen \w Vätern|strong="H0001"\w* im \w Acker|strong="H7704"\w* bei dem \w Begräbnis|strong="H6900"\w* \w der|strong="H0834"\w* \w Könige|strong="H4428"\w*; \w denn|strong="H3588"\w* sie \w sprachen|strong="H0559"\w*: \w Er|strong="H1931"\w* ist \w aussätzig|strong="H6879"\w*. \w Und|strong="H1121"\w* \w Jotham|strong="H3147"\w*, sein \w Sohn|strong="H1121"\w*, ward \w König|strong="H4427"\w* an seiner \w Statt|strong="H8478"\w*.   
\c 27  
\p
\v 1  \w Jotham|strong="H3147"\w* war \w fünfundzwanzig|strong="H2568"\w* \w Jahre|strong="H8141"\w* \w alt|strong="H1121"\w*, da er König \w ward|strong="H4427"\w*, und \w regierte|strong="H4427"\w* \w sechzehn|strong="H8337"\w* \w Jahre|strong="H8141"\w* zu \w Jerusalem|strong="H3389"\w*. Seine \w Mutter|strong="H0517"\w* \w hieß|strong="H8034"\w* \w Jerusa|strong="H3388"\w*, eine \w Tochter|strong="H1323"\w* \w Zadoks|strong="H6659"\w*.  
\v 2 Und er \w tat|strong="H6213"\w*, \w was|strong="H5869"\w* dem \w HERRN|strong="H3068"\w* \w wohl|strong="H3477"\w* \w gefiel|strong="H5869"\w*, \w ganz|strong="H3605"\w* \w wie|strong="H0834"\w* sein \w Vater|strong="H0001"\w* \w Usia|strong="H5818"\w* getan \w hatte|strong="H6213"\w*, \w nur|strong="H7535"\w* \w ging|strong="H0935"\w* \w er|strong="H0413"\w* \w nicht|strong="H3808"\w* \w in|strong="H0413"\w* den \w Tempel|strong="H1964"\w* des \w HERRN|strong="H3068"\w*; das Volk \w aber|strong="H5971"\w* verderbte \w sich|strong="H7843"\w* noch \w immer|strong="H5750"\w*.  
\v 3  \w Er|strong="H1931"\w* \w baute|strong="H1129"\w* das \w obere|strong="H5945"\w* \w Tor|strong="H8179"\w* am \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*, \w und|strong="H1129"\w* an der \w Mauer|strong="H2346"\w* des \w Ophel|strong="H6077"\w* baute \w er|strong="H1129"\w* \w viel|strong="H7230"\w*,  
\v 4 und \w baute|strong="H1129"\w* die \w Städte|strong="H5892"\w* auf dem \w Gebirge|strong="H2022"\w* \w Juda|strong="H3063"\w*, und in den \w Wäldern|strong="H2793"\w* baute \w er|strong="H1129"\w* \w Burgen|strong="H1003"\w* und \w Türme|strong="H4026"\w*.  
\v 5 Und \w er|strong="H1931"\w* \w stritt|strong="H3898"\w* \w mit|strong="H5973"\w* dem \w König|strong="H4428"\w* der Kinder \w Ammon|strong="H5984"\w*, und \w ward|strong="H2388"\w* \w ihrer|strong="H1121"\w* \w mächtig|strong="H2388"\w*, daß ihm die \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w* \w dasselbe|strong="H1931"\w* \w Jahr|strong="H8141"\w* \w gaben|strong="H5414"\w* \w hundert|strong="H3967"\w* \w Zentner|strong="H3603"\w* \w Silber|strong="H3701"\w*, \w zehntausend|strong="H6235"\w* \w Kor|strong="H3734"\w* \w Weizen|strong="H2406"\w* und \w zehntausend|strong="H6235"\w* Kor \w Gerste|strong="H8184"\w*. So \w viel|strong="H2063"\w* \w gaben|strong="H7725"\w* ihm die \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w* auch im \w zweiten|strong="H8145"\w* und im \w dritten|strong="H7992"\w* \w Jahr|strong="H8141"\w*.  
\v 6 Also \w ward|strong="H2388"\w* \w Jotham|strong="H3147"\w* \w mächtig|strong="H2388"\w*; \w denn|strong="H3588"\w* er \w richtete|strong="H3559"\w* seine \w Wege|strong="H1870"\w* \w vor|strong="H6440"\w* dem \w HERRN|strong="H3068"\w*, seinem \w Gott|strong="H0430"\w*.  
\v 7 Was aber \w mehr|strong="H3499"\w* von \w Jotham|strong="H3147"\w* zu sagen \w ist|strong="H1697"\w* und \w alle|strong="H3605"\w* seine \w Streite|strong="H4421"\w* und seine \w Wege|strong="H1870"\w*, \w siehe|strong="H2009"\w*, das ist \w geschrieben|strong="H3789"\w* \w im|strong="H5921"\w* \w Buch|strong="H5612"\w* der \w Könige|strong="H4428"\w* \w Israels|strong="H3478"\w* und Juda'\w s|strong="H3063"\w*.  
\v 8  \w Fünfundzwanzig|strong="H2568"\w* \w Jahre|strong="H8141"\w* \w alt|strong="H1121"\w* war \w er|strong="H1961"\w*, da er König \w ward|strong="H4427"\w*, und \w regierte|strong="H4427"\w* \w sechzehn|strong="H8337"\w* \w Jahre|strong="H8141"\w* zu \w Jerusalem|strong="H3389"\w*.  
\v 9 Und \w Jotham|strong="H3147"\w* \w entschlief|strong="H7901"\w* \w mit|strong="H5973"\w* seinen \w Vätern|strong="H0001"\w*, und sie \w begruben|strong="H6912"\w* \w ihn|strong="H0853"\w* in der \w Stadt|strong="H5892"\w* \w Davids|strong="H1732"\w*. Und sein \w Sohn|strong="H1121"\w* \w Ahas|strong="H0271"\w* ward \w König|strong="H4427"\w* an seiner \w Statt|strong="H8478"\w*.   
\c 28  
\p
\v 1  \w Ahas|strong="H0271"\w* war \w zwanzig|strong="H6242"\w* \w Jahre|strong="H8141"\w* \w alt|strong="H1121"\w*, da er König \w ward|strong="H4427"\w*, und \w regierte|strong="H4427"\w* \w sechzehn|strong="H8337"\w* \w Jahre|strong="H8141"\w* zu \w Jerusalem|strong="H3389"\w* und \w tat|strong="H6213"\w* \w nicht|strong="H3808"\w*, \w was|strong="H5869"\w* dem \w HERRN|strong="H3068"\w* \w wohl|strong="H3477"\w* \w gefiel|strong="H5869"\w*, wie sein \w Vater|strong="H0001"\w* \w David|strong="H1732"\w*,  
\v 2 sondern \w wandelte|strong="H3212"\w* in den \w Wegen|strong="H1870"\w* der \w Könige|strong="H4428"\w* \w Israels|strong="H3478"\w*. Dazu machte \w er|strong="H6213"\w* gegossene \w Bilder|strong="H4541"\w* den \w Baalim|strong="H1168"\w*  
\v 3  \w und|strong="H1931"\w* \w räucherte|strong="H6999"\w* im \w Tal|strong="H1516"\w* der \w Kinder|strong="H1121"\w* \w Hinnom|strong="H2011"\w* und \w verbrannte|strong="H1197"\w* seine \w Söhne|strong="H1121"\w* mit \w Feuer|strong="H0784"\w* nach den \w Greuel|strong="H8441"\w* der \w Heiden|strong="H1471"\w*, \w die|strong="H0834"\w* der \w HERR|strong="H3068"\w* \w vor|strong="H4480"\w* den \w Kindern|strong="H1121"\w* \w Israel|strong="H3478"\w* vertrieben \w hatte|strong="H3423"\w*,  
\v 4 und \w opferte|strong="H2076"\w* und \w räucherte|strong="H6999"\w* \w auf|strong="H5921"\w* den \w Höhen|strong="H1116"\w* und \w auf|strong="H5921"\w* den \w Hügeln|strong="H1389"\w* und \w unter|strong="H8478"\w* \w allen|strong="H3605"\w* \w grünen|strong="H7488"\w* \w Bäumen|strong="H6086"\w*.  
\v 5 Darum \w gab|strong="H5414"\w* ihn der \w HERR|strong="H3068"\w*, sein \w Gott|strong="H0430"\w*, in die \w Hand|strong="H3027"\w* des \w Königs|strong="H4428"\w* von \w Syrien|strong="H0758"\w*, daß sie ihn \w schlugen|strong="H5221"\w* \w und|strong="H4480"\w* einen großen \w Haufen|strong="H1419"\w* von den Seinen \w gefangen|strong="H7633"\w* \w wegführten|strong="H7617"\w* und gen \w Damaskus|strong="H1834"\w* \w brachten|strong="H0935"\w*. Auch ward \w er|strong="H1571"\w* \w gegeben|strong="H5414"\w* unter die \w Hand|strong="H3027"\w* des \w Königs|strong="H4428"\w* \w Israels|strong="H3478"\w*, daß \w er|strong="H5221"\w* einen \w großen|strong="H1419"\w* \w Schlag|strong="H4347"\w* an ihm \w tat|strong="H5221"\w*.  
\v 6 Denn \w Pekah|strong="H6492"\w*, der \w Sohn|strong="H1121"\w* \w Remaljas|strong="H7425"\w*, \w schlug|strong="H2026"\w* in \w Juda|strong="H3063"\w* \w hundertzwanzigtausend|strong="H3967"\w* auf \w einen|strong="H0259"\w* \w Tag|strong="H3117"\w*, die \w alle|strong="H3605"\w* \w streitbare|strong="H2428"\w* \w Leute|strong="H1121"\w* waren, darum daß sie den \w HERRN|strong="H3068"\w*, ihrer \w Väter|strong="H0001"\w* \w Gott|strong="H0430"\w*, \w verließen|strong="H5800"\w*.  
\v 7 Und \w Sichri|strong="H2147"\w*, ein \w Gewaltiger|strong="H1368"\w* in \w Ephraim|strong="H0669"\w*, \w erwürgte|strong="H2026"\w* \w Maaseja|strong="H4641"\w*, \w einen|strong="H1121"\w* \w Königssohn|strong="H4428"\w*, und \w Asrikam|strong="H5840"\w*, den \w Hausfürsten|strong="H5057"\w*, und \w Elkana|strong="H0511"\w*, den \w nächsten|strong="H4932"\w* nach dem \w König|strong="H4428"\w*.  
\v 8 Und die \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w* führten gefangen \w weg|strong="H7617"\w* \w zweihunderttausend|strong="H3967"\w* \w Weiber|strong="H0802"\w*, \w Söhne|strong="H1121"\w* und \w Töchter|strong="H1323"\w* und \w nahmen|strong="H0962"\w* \w dazu|strong="H1571"\w* \w großen|strong="H7227"\w* \w Raub|strong="H7998"\w* \w von|strong="H4480"\w* ihnen und \w brachten|strong="H0935"\w* den \w Raub|strong="H7998"\w* gen \w Samaria|strong="H8111"\w*.  
\v 9 Es \w war|strong="H1961"\w* daselbst \w aber|strong="H8033"\w* ein \w Prophet|strong="H5030"\w* des \w HERRN|strong="H3068"\w*, der \w hieß|strong="H8034"\w* \w Obed|strong="H5752"\w*; der ging \w heraus|strong="H3318"\w*, dem \w Heer|strong="H6635"\w* \w entgegen|strong="H6440"\w*, das gen \w Samaria|strong="H8111"\w* \w kam|strong="H0935"\w*, und \w sprach|strong="H0559"\w* zu ihnen: \w Siehe|strong="H2009"\w*, \w weil|strong="H2534"\w* der \w HERR|strong="H3068"\w*, eurer \w Väter|strong="H0001"\w* \w Gott|strong="H0430"\w*, \w über|strong="H5921"\w* \w Juda|strong="H3063"\w* zornig \w ist|strong="H2534"\w*, hat er sie in eure \w Hände|strong="H3027"\w* \w gegeben|strong="H5414"\w*; ihr aber habt sie \w erwürgt|strong="H2026"\w* so \w greulich|strong="H2197"\w*, daß es \w in|strong="H5704"\w* den \w Himmel|strong="H8064"\w* \w reicht|strong="H5060"\w*.  
\v 10  \w Nun|strong="H6258"\w* \w gedenkt|strong="H0559"\w* \w ihr|strong="H0859"\w*, die \w Kinder|strong="H1121"\w* Juda'\w s|strong="H3063"\w* und \w Jerusalems|strong="H3389"\w* \w euch|strong="H5650"\w* zu \w unterwerfen|strong="H3533"\w* zu \w Knechten|strong="H5650"\w* und \w Mägden|strong="H8198"\w*. \w Ist|strong="H0859"\w* das denn \w nicht|strong="H3808"\w* \w Schuld|strong="H0819"\w* \w bei|strong="H5973"\w* \w euch|strong="H0819"\w* wider den \w HERRN|strong="H3068"\w*, euren \w Gott|strong="H0430"\w*?  
\v 11  \w So|strong="H6258"\w* \w gehorcht|strong="H8085"\w* \w mir|strong="H7725"\w* \w nun|strong="H6258"\w* und \w bringt|strong="H7725"\w* die \w Gefangenen|strong="H7633"\w* wieder \w hin|strong="H7725"\w*, \w die|strong="H0834"\w* \w ihr|strong="H4480"\w* habt weggeführt \w aus|strong="H7617"\w* euren \w Brüdern|strong="H0251"\w*; \w denn|strong="H3588"\w* des \w HERRN|strong="H3068"\w* \w Zorn|strong="H0639"\w* ist über euch \w ergrimmt|strong="H5921"\w*.  
\v 12 Da machten sich \w auf|strong="H6965"\w* \w etliche|strong="H0582"\w* \w unter|strong="H4480"\w* den \w Vornehmsten|strong="H7218"\w* der \w Kinder|strong="H1121"\w* \w Ephraim|strong="H0669"\w*: \w Asarja|strong="H5838"\w*, der \w Sohn|strong="H1121"\w* \w Johanans|strong="H3076"\w*, \w Berechja|strong="H1296"\w*, der \w Sohn|strong="H1121"\w* \w Mesillemoths|strong="H4919"\w*, \w Jehiskia|strong="H3169"\w*, der \w Sohn|strong="H1121"\w* \w Sallums|strong="H7967"\w*, und \w Amasa|strong="H6021"\w*, der \w Sohn|strong="H1121"\w* \w Hadlais|strong="H2311"\w*, \w wider|strong="H5921"\w* die, so \w aus|strong="H4480"\w* dem \w Heer|strong="H6635"\w* \w kamen|strong="H0935"\w*,  
\v 13 und \w sprachen|strong="H0559"\w* zu ihnen: Ihr sollt die \w Gefangenen|strong="H7633"\w* \w nicht|strong="H3808"\w* \w hereinbringen|strong="H0935"\w*; denn \w ihr|strong="H0859"\w* gedenkt \w nur|strong="H0559"\w*, \w Schuld|strong="H0819"\w* vor dem \w HERRN|strong="H3068"\w* \w über|strong="H5921"\w* \w uns|strong="H3068"\w* zu \w bringen|strong="H3254"\w*, auf \w daß|strong="H5921"\w* ihr unsrer \w Sünden|strong="H2403"\w* \w und|strong="H5921"\w* \w Schuld|strong="H0819"\w* desto mehr macht; \w denn|strong="H3588"\w* es \w ist|strong="H7227"\w* schon der \w Schuld|strong="H0819"\w* zu \w viel|strong="H7227"\w* und der \w Zorn|strong="H0639"\w* \w über|strong="H5921"\w* \w Israel|strong="H3478"\w* ergrimmt.  
\v 14 Da \w ließen|strong="H5800"\w* die \w Geharnischten|strong="H2502"\w* die \w Gefangenen|strong="H7633"\w* und den \w Raub|strong="H0961"\w* \w vor|strong="H6440"\w* den \w Obersten|strong="H8269"\w* und vor der \w ganzen|strong="H3695"\w* \w Gemeinde|strong="H6951"\w*.  
\v 15 Da standen \w auf|strong="H6965"\w* die \w Männer|strong="H0582"\w*, die \w jetzt|strong="H0834"\w* mit \w Namen|strong="H8034"\w* genannt \w sind|strong="H5344"\w*, und \w nahmen|strong="H2388"\w* die \w Gefangenen|strong="H7633"\w*; und \w alle|strong="H3605"\w*, die bloß unter ihnen \w waren|strong="H4636"\w*, zogen sie \w an|strong="H3847"\w* \w von|strong="H4480"\w* dem \w Geraubten|strong="H7998"\w* und \w kleideten|strong="H3847"\w* sie und zogen ihnen \w Schuhe|strong="H5274"\w* an und gaben ihnen zu \w essen|strong="H0398"\w* und zu \w trinken|strong="H8248"\w* und \w salbten|strong="H5480"\w* sie und \w führten|strong="H5095"\w* sie auf \w Eseln|strong="H2543"\w* \w alle|strong="H3605"\w*, die schwach \w waren|strong="H3782"\w*, und \w brachten|strong="H0935"\w* sie gen \w Jericho|strong="H3405"\w*, zur \w Palmenstadt|strong="H5892"\w*, \w zu|strong="H0681"\w* ihren \w Brüdern|strong="H0251"\w* und kamen \w wieder|strong="H7725"\w* gen \w Samaria|strong="H8111"\w*.  
\v 16 Zu \w derselben|strong="H1931"\w* \w Zeit|strong="H6256"\w* \w sandte|strong="H7971"\w* der \w König|strong="H4428"\w* \w Ahas|strong="H0271"\w* \w zu|strong="H5921"\w* den \w Königen|strong="H4428"\w* von \w Assyrien|strong="H0804"\w*, daß sie ihm \w hülfen|strong="H5826"\w*.  
\v 17 Und \w es|strong="H5750"\w* \w kamen|strong="H0935"\w* abermals die \w Edomiter|strong="H0130"\w* \w und|strong="H3063"\w* \w schlugen|strong="H5221"\w* \w Juda|strong="H3063"\w* und führten etliche \w weg|strong="H7617"\w*.  
\v 18  \w Auch|strong="H6430"\w* \w fielen|strong="H6584"\w* die \w Philister|strong="H6430"\w* \w ein|strong="H6584"\w* in die \w Städte|strong="H5892"\w* in der \w Aue|strong="H8219"\w* und dem \w Mittagslande|strong="H5045"\w* Juda'\w s|strong="H3063"\w* und \w gewannen|strong="H3920"\w* Beth-\w Semes|strong="H1053"\w*, \w Ajalon|strong="H0357"\w*, \w Gederoth|strong="H1450"\w* und \w Socho|strong="H7755"\w* mit ihren \w Ortschaften|strong="H1323"\w* und \w wohnten|strong="H3427"\w* \w darin|strong="H8033"\w*.  
\v 19  \w Denn|strong="H3588"\w* der \w HERR|strong="H3068"\w* \w demütigte|strong="H3665"\w* \w Juda|strong="H3063"\w* \w um|strong="H5668"\w* \w Ahas|strong="H0271"\w* \w willen|strong="H5668"\w*, des \w Königs|strong="H4428"\w* Juda'\w s|strong="H3478"\w*, \w darum|strong="H3588"\w* daß er die \w Zucht|strong="H3063"\w* \w auflöste|strong="H6544"\w* in \w Juda|strong="H3063"\w* \w und|strong="H4604"\w* \w vergriff|strong="H4603"\w* sich am \w HERRN|strong="H3068"\w*.  
\v 20  \w Und|strong="H8407"\w* es \w kam|strong="H0935"\w* \w wider|strong="H5921"\w* \w ihn|strong="H6696"\w* Thilgath-\w Pilneser|strong="H8407"\w*, der \w König|strong="H4428"\w* von \w Assyrien|strong="H0804"\w*; der \w bedrängte|strong="H6696"\w* ihn, und \w stärkte|strong="H2388"\w* ihn \w nicht|strong="H3808"\w*.  
\v 21  \w Denn|strong="H3588"\w* \w Ahas|strong="H0271"\w* \w plünderte|strong="H2505"\w* das \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w* und das \w Haus|strong="H1004"\w* des \w Königs|strong="H4428"\w* und der \w Obersten|strong="H8269"\w* \w und|strong="H4428"\w* \w gab|strong="H5414"\w* es dem \w König|strong="H4428"\w* von \w Assyrien|strong="H0804"\w*; aber es \w half|strong="H5833"\w* ihm \w nichts|strong="H3808"\w*.  
\v 22  \w Dazu|strong="H6256"\w* in seiner \w Not|strong="H6887"\w* \w machte|strong="H4603"\w* der \w König|strong="H4428"\w* \w Ahas|strong="H0271"\w* das \w Vergreifen|strong="H4603"\w* am \w HERRN|strong="H3068"\w* noch \w mehr|strong="H3254"\w*  
