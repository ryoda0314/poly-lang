\p
\v 1  \w Und|strong="H7971"\w* \w Hiskia|strong="H3169"\w* sandte \w hin|strong="H7971"\w* \w zum|strong="H5921"\w* \w ganzen|strong="H3605"\w* \w Israel|strong="H3478"\w* und \w Juda|strong="H3063"\w* und \w schrieb|strong="H3789"\w* \w Briefe|strong="H0107"\w* \w an|strong="H5921"\w* \w Ephraim|strong="H0669"\w* und \w Manasse|strong="H4519"\w*, daß sie \w kämen|strong="H0935"\w* zum \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* gen \w Jerusalem|strong="H3389"\w*, \w Passah|strong="H6453"\w* zu \w halten|strong="H6213"\w* dem \w HERRN|strong="H3068"\w*, dem \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*.  
\v 2 Und der \w König|strong="H4428"\w* hielt einen \w Rat|strong="H3289"\w* mit seinen \w Obersten|strong="H8269"\w* und der \w ganzen|strong="H3605"\w* \w Gemeinde|strong="H6951"\w* zu \w Jerusalem|strong="H3389"\w*, das \w Passah|strong="H6453"\w* zu \w halten|strong="H6213"\w* im \w zweiten|strong="H8145"\w* \w Monat|strong="H2320"\w*.  
\v 3  \w Denn|strong="H3588"\w* \w sie|strong="H3808"\w* konnten'\w s|strong="H3201"\w* \w nicht|strong="H3808"\w* \w halten|strong="H6213"\w* zur \w selben|strong="H1931"\w* \w Zeit|strong="H6256"\w*, darum \w daß|strong="H3588"\w* der \w Priester|strong="H3548"\w* \w nicht|strong="H3808"\w* \w genug|strong="H4078"\w* geheiligt \w waren|strong="H6942"\w* und das \w Volk|strong="H5971"\w* noch \w nicht|strong="H3808"\w* zuhauf gekommen \w war|strong="H0622"\w* gen \w Jerusalem|strong="H3389"\w*.  
\v 4  \w Und|strong="H1697"\w* es \w gefiel|strong="H5869"\w* dem \w König|strong="H4428"\w* \w wohl|strong="H3474"\w* und der \w ganzen|strong="H3605"\w* \w Gemeinde|strong="H6951"\w*,  
\v 5 und sie \w bestellten|strong="H5975"\w*, daß \w solches|strong="H1697"\w* \w ausgerufen|strong="H6963"\w* \w würde|strong="H5674"\w* durch \w ganz|strong="H3605"\w* \w Israel|strong="H3478"\w* \w von|strong="H4480"\w* Beer-\w Seba|strong="H0884"\w* an \w bis|strong="H5704"\w* gen \w Dan|strong="H1835"\w*, daß sie \w kämen|strong="H0935"\w*, \w Passah|strong="H6453"\w* zu \w halten|strong="H6213"\w* dem \w HERRN|strong="H3068"\w*, dem \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*, zu \w Jerusalem|strong="H3389"\w*; \w denn|strong="H3588"\w* es war \w lange|strong="H7230"\w* \w nicht|strong="H3808"\w* \w gehalten|strong="H6213"\w*, wie es geschrieben \w steht|strong="H3789"\w*.  
\v 6 Und die \w Läufer|strong="H7323"\w* gingen \w hin|strong="H3212"\w* mit den \w Briefen|strong="H0107"\w* \w von|strong="H4480"\w* der \w Hand|strong="H3027"\w* des \w Königs|strong="H4428"\w* und seiner \w Obersten|strong="H8269"\w* durch \w ganz|strong="H3605"\w* \w Israel|strong="H3478"\w* und \w Juda|strong="H3063"\w* nach dem \w Befehl|strong="H4687"\w* des \w Königs|strong="H4428"\w* und \w sprachen|strong="H0559"\w*: Ihr \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w*, bekehrt \w euch|strong="H7725"\w* zu dem \w HERRN|strong="H3068"\w*, dem \w Gott|strong="H0430"\w* \w Abrahams|strong="H0085"\w*, \w Isaaks|strong="H3327"\w* und \w Israels|strong="H3478"\w*, so wird er sich \w kehren|strong="H7725"\w* \w zu|strong="H0413"\w* den \w Entronnenen|strong="H6413"\w*, die noch übrig unter euch \w sind|strong="H7604"\w* \w aus|strong="H4480"\w* der \w Hand|strong="H3709"\w* der \w Könige|strong="H4428"\w* von \w Assyrien|strong="H0804"\w*.  
\v 7 Und \w seid|strong="H1961"\w* \w nicht|strong="H0408"\w* wie eure \w Väter|strong="H0001"\w* und \w Brüder|strong="H0251"\w*, \w die|strong="H0834"\w* sich am \w HERRN|strong="H3068"\w*, ihrer \w Väter|strong="H0001"\w* \w Gott|strong="H0430"\w*, \w vergriffen|strong="H4603"\w*, daß er \w sie|strong="H8047"\w* \w dahingab|strong="H5414"\w* in die \w Verwüstung|strong="H8047"\w*, \w wie|strong="H0834"\w* ihr \w selber|strong="H0859"\w* \w seht|strong="H7200"\w*.  
\v 8 So \w seid|strong="H7185"\w* \w nun|strong="H6258"\w* \w nicht|strong="H0408"\w* \w halsstarrig|strong="H6203"\w* wie eure \w Väter|strong="H0001"\w*; sondern \w gebt|strong="H5414"\w* eure \w Hand|strong="H3027"\w* dem \w HERRN|strong="H3068"\w* und \w kommt|strong="H0935"\w* zu seinem \w Heiligtum|strong="H4720"\w*, \w das|strong="H0834"\w* er geheiligt \w hat|strong="H6942"\w* \w ewiglich|strong="H5769"\w*, und \w dient|strong="H5647"\w* dem \w HERRN|strong="H3068"\w*, eurem \w Gott|strong="H0430"\w*, so wird sich der \w Grimm|strong="H2740"\w* seines \w Zorns|strong="H0639"\w* \w von|strong="H4480"\w* euch \w wenden|strong="H7725"\w*.  
\v 9  \w Denn|strong="H3588"\w* so ihr euch \w bekehrt|strong="H7725"\w* \w zu|strong="H5921"\w* dem \w HERRN|strong="H3068"\w*, so werden eure \w Brüder|strong="H0251"\w* und \w Kinder|strong="H1121"\w* \w Barmherzigkeit|strong="H7356"\w* haben \w vor|strong="H6440"\w* denen, die sie gefangen \w halten|strong="H7617"\w*, daß \w sie|strong="H2063"\w* \w wieder|strong="H7725"\w* in \w dies|strong="H2063"\w* \w Land|strong="H0776"\w* \w kommen|strong="H7725"\w*. \w Denn|strong="H3588"\w* der \w HERR|strong="H3068"\w*, euer \w Gott|strong="H0430"\w*, ist \w gnädig|strong="H2587"\w* und \w barmherzig|strong="H7349"\w* und wird sein \w Angesicht|strong="H6440"\w* \w nicht|strong="H3808"\w* \w von|strong="H4480"\w* \w euch|strong="H3808"\w* \w wenden|strong="H5493"\w*, \w so|strong="H0518"\w* ihr euch \w zu|strong="H0413"\w* ihm \w bekehrt|strong="H7725"\w*.  
\v 10 Und die \w Läufer|strong="H7323"\w* \w gingen|strong="H1961"\w* \w von|strong="H4480"\w* einer \w Stadt|strong="H5892"\w* zur \w andern|strong="H5892"\w* im \w Lande|strong="H0776"\w* \w Ephraim|strong="H0669"\w* und \w Manasse|strong="H4519"\w* und \w bis|strong="H5704"\w* gen \w Sebulon|strong="H2074"\w*; aber sie \w verlachten|strong="H1961"\w* \w sie|strong="H5921"\w* und \w spotteten|strong="H3932"\w* ihrer.  
\v 11  \w Doch|strong="H0582"\w* \w etliche|strong="H0582"\w* \w von|strong="H4480"\w* \w Asser|strong="H0836"\w* und \w Manasse|strong="H4519"\w* \w und|strong="H4480"\w* \w Sebulon|strong="H2074"\w* demütigten \w sich|strong="H3665"\w* und \w kamen|strong="H0935"\w* gen \w Jerusalem|strong="H3389"\w*.  
\v 12  \w Auch|strong="H1571"\w* \w kam|strong="H1961"\w* \w Gottes|strong="H0430"\w* \w Hand|strong="H3027"\w* über \w Juda|strong="H3063"\w*, daß er \w ihnen|strong="H0259"\w* \w gab|strong="H5414"\w* \w einerlei|strong="H0259"\w* \w Herz|strong="H3820"\w*, zu tun \w nach|strong="H6213"\w* des \w Königs|strong="H4428"\w* und der \w Obersten|strong="H8269"\w* \w Gebot|strong="H4687"\w* aus dem \w Wort|strong="H1697"\w* des \w HERRN|strong="H3068"\w*.  
\v 13  \w Und|strong="H3389"\w* es kam \w zuhauf|strong="H0622"\w* gen \w Jerusalem|strong="H3389"\w* ein \w großes|strong="H7227"\w* \w Volk|strong="H5971"\w*, zu \w halten|strong="H6213"\w* das \w Fest|strong="H2282"\w* der \w ungesäuerten|strong="H4682"\w* \w Brote|strong="H6213"\w* im \w zweiten|strong="H8145"\w* \w Monat|strong="H2320"\w*, eine \w sehr|strong="H3966"\w* \w große|strong="H7230"\w* \w Gemeinde|strong="H6951"\w*.  
\v 14 Und sie machten sich \w auf|strong="H6965"\w* und taten \w ab|strong="H5493"\w* die \w Altäre|strong="H4196"\w*, \w die|strong="H0834"\w* zu \w Jerusalem|strong="H3389"\w* waren, \w und|strong="H5493"\w* \w alle|strong="H3605"\w* \w Räuchwerke|strong="H6999"\w* taten sie \w weg|strong="H5493"\w* \w und|strong="H5158"\w* \w warfen|strong="H7993"\w* sie in den \w Bach|strong="H5158"\w* \w Kidron|strong="H6939"\w*;  
\v 15 und sie \w schlachteten|strong="H7819"\w* das \w Passah|strong="H6453"\w* am vierzehnten \w Tage|strong="H0702"\w* des \w zweiten|strong="H8145"\w* \w Monats|strong="H2320"\w*. Und die \w Priester|strong="H3548"\w* und \w Leviten|strong="H3881"\w* bekannten ihre \w Schande|strong="H3637"\w* und heiligten \w sich|strong="H6942"\w* \w und|strong="H5930"\w* \w brachten|strong="H0935"\w* die \w Brandopfer|strong="H5930"\w* zum \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*  
\v 16 und \w standen|strong="H5975"\w* \w in|strong="H5921"\w* ihrer \w Ordnung|strong="H5977"\w*, wie sich's \w gebührt|strong="H4941"\w*, nach dem \w Gesetz|strong="H8451"\w* Mose'\w s|strong="H4872"\w*, des \w Mannes|strong="H0376"\w* \w Gottes|strong="H0430"\w*. Und die \w Priester|strong="H3548"\w* \w sprengten|strong="H2236"\w* das \w Blut|strong="H1818"\w* \w von|strong="H4480"\w* der \w Hand|strong="H3027"\w* der \w Leviten|strong="H3881"\w*.  
\v 17  \w Denn|strong="H3588"\w* ihrer \w waren|strong="H6951"\w* \w viele|strong="H7227"\w* in der \w Gemeinde|strong="H6951"\w*, \w die|strong="H0834"\w* sich \w nicht|strong="H3808"\w* geheiligt \w hatten|strong="H6942"\w*; \w darum|strong="H3881"\w* \w schlachteten|strong="H7821"\w* die \w Leviten|strong="H3881"\w* das \w Passah|strong="H6453"\w* für \w alle|strong="H3605"\w*, die \w nicht|strong="H3808"\w* \w rein|strong="H2889"\w* waren, daß sie dem \w HERRN|strong="H3068"\w* geheiligt \w würden|strong="H6942"\w*.  
\v 18 Auch \w war|strong="H3588"\w* des \w Volks|strong="H5971"\w* \w viel|strong="H7227"\w* \w von|strong="H4480"\w* \w Ephraim|strong="H0669"\w*, \w Manasse|strong="H4519"\w*, \w Isaschar|strong="H3485"\w* und \w Sebulon|strong="H2074"\w*, die \w nicht|strong="H3808"\w* rein \w waren|strong="H2891"\w*, \w sondern|strong="H3588"\w* \w aßen|strong="H0398"\w* das \w Osterlamm|strong="H6453"\w*, aber \w nicht|strong="H3808"\w*, wie geschrieben \w steht|strong="H3789"\w*. \w Denn|strong="H3588"\w* \w Hiskia|strong="H3169"\w* \w bat|strong="H6419"\w* \w für|strong="H5921"\w* sie und \w sprach|strong="H0559"\w*: Der \w HERR|strong="H3068"\w*, der \w gütig|strong="H2896"\w* ist, wolle gnädig \w sein|strong="H3722"\w*  
\v 19 allen, die \w ihr|strong="H3605"\w* \w Herz|strong="H3824"\w* \w schicken|strong="H3559"\w*, \w Gott|strong="H0430"\w* zu \w suchen|strong="H1875"\w*, den \w HERRN|strong="H3068"\w*, den \w Gott|strong="H0430"\w* ihrer \w Väter|strong="H0001"\w*, wiewohl \w nicht|strong="H3808"\w* \w in|strong="H2893"\w* \w heiliger|strong="H6944"\w* \w Reinigkeit|strong="H2893"\w*.  
\v 20 Und der \w HERR|strong="H3068"\w* \w erhörte|strong="H8085"\w* \w Hiskia|strong="H3169"\w* und \w heilte|strong="H7495"\w* das \w Volk|strong="H5971"\w*.  
\v 21 Also \w hielten|strong="H6213"\w* die \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w*, die zu \w Jerusalem|strong="H3389"\w* gefunden \w wurden|strong="H4672"\w*, das \w Fest|strong="H2282"\w* der \w ungesäuerten|strong="H4682"\w* Brote \w sieben|strong="H7651"\w* \w Tage|strong="H3117"\w* mit \w großer|strong="H1419"\w* \w Freude|strong="H8057"\w*. Und die \w Leviten|strong="H3881"\w* und \w Priester|strong="H3548"\w* \w lobten|strong="H1984"\w* den \w HERRN|strong="H3068"\w* \w alle|strong="H3117"\w* \w Tage|strong="H3117"\w* mit \w starken|strong="H5797"\w* \w Saitenspielen|strong="H3627"\w* des \w HERRN|strong="H3068"\w*.  
\v 22 Und \w Hiskia|strong="H3169"\w* \w redete|strong="H1696"\w* \w herzlich|strong="H3820"\w* mit \w allen|strong="H3605"\w* \w Leviten|strong="H3881"\w*, die verständig \w waren|strong="H7919"\w* \w im|strong="H2896"\w* \w Dienste|strong="H7922"\w* des \w HERRN|strong="H3068"\w*. Und sie \w aßen|strong="H0398"\w* das Fest \w über|strong="H4150"\w*, \w sieben|strong="H7651"\w* \w Tage|strong="H3117"\w*, und \w opferten|strong="H2076"\w* \w Dankopfer|strong="H8002"\w* und \w dankten|strong="H3034"\w* dem \w HERRN|strong="H3068"\w*, ihrer \w Väter|strong="H0001"\w* \w Gott|strong="H0430"\w*.  
\v 23 Und die \w ganze|strong="H3605"\w* \w Gemeinde|strong="H6951"\w* ward \w Rats|strong="H3289"\w*, noch \w andere|strong="H0312"\w* \w sieben|strong="H7651"\w* \w Tage|strong="H3117"\w* zu \w halten|strong="H6213"\w*, und \w hielten|strong="H6213"\w* auch die \w sieben|strong="H7651"\w* \w Tage|strong="H3117"\w* mit \w Freuden|strong="H8057"\w*.  
\v 24  \w Denn|strong="H3588"\w* \w Hiskia|strong="H2396"\w*, der \w König|strong="H4428"\w* Juda'\w s|strong="H3063"\w*, \w gab|strong="H7311"\w* eine Hebe für die \w Gemeinde|strong="H6951"\w*: \w tausend|strong="H0505"\w* \w Farren|strong="H6499"\w* und \w siebentausend|strong="H7651"\w* \w Schafe|strong="H6629"\w*; die \w Obersten|strong="H8269"\w* aber \w gaben|strong="H7311"\w* eine Hebe für die \w Gemeinde|strong="H6951"\w*: \w tausend|strong="H0505"\w* \w Farren|strong="H6499"\w* und \w zehntausend|strong="H6235"\w* \w Schafe|strong="H6629"\w*. Auch hatten \w sich|strong="H7230"\w* der \w Priester|strong="H3548"\w* \w viele|strong="H7230"\w* \w geheiligt|strong="H6942"\w*.  
\v 25 Und \w es|strong="H3605"\w* freuten \w sich|strong="H8055"\w* die \w ganze|strong="H3605"\w* \w Gemeinde|strong="H6951"\w* Juda'\w s|strong="H3063"\w*, die \w Priester|strong="H3548"\w* und \w Leviten|strong="H3881"\w* und die \w ganze|strong="H3605"\w* \w Gemeinde|strong="H6951"\w*, die \w aus|strong="H4480"\w* \w Israel|strong="H3478"\w* gekommen \w waren|strong="H0935"\w*, und die \w Fremdlinge|strong="H1616"\w*, die \w aus|strong="H4480"\w* dem \w Lande|strong="H0776"\w* \w Israel|strong="H3478"\w* gekommen \w waren|strong="H0935"\w* und in \w Juda|strong="H3063"\w* \w wohnten|strong="H3427"\w*,  
\v 26 und \w war|strong="H1961"\w* eine \w große|strong="H1419"\w* \w Freude|strong="H8057"\w* zu \w Jerusalem|strong="H3389"\w*; \w denn|strong="H3588"\w* \w seit|strong="H4480"\w* der \w Zeit|strong="H3117"\w* \w Salomos|strong="H8010"\w*, des \w Sohnes|strong="H1121"\w* \w Davids|strong="H1732"\w*, des \w Königs|strong="H4428"\w* \w Israels|strong="H3478"\w*, war \w solches|strong="H2063"\w* zu \w Jerusalem|strong="H3389"\w* \w nicht|strong="H3808"\w* gewesen.  
\v 27 Und die \w Priester|strong="H3548"\w* und die \w Leviten|strong="H3881"\w* standen \w auf|strong="H6965"\w* und \w segneten|strong="H1288"\w* das \w Volk|strong="H5971"\w*, und ihre \w Stimme|strong="H6963"\w* ward \w erhört|strong="H8085"\w*, und ihr \w Gebet|strong="H8605"\w* kam \w hinein|strong="H0935"\w* vor seine \w heilige|strong="H6944"\w* \w Wohnung|strong="H4583"\w* im \w Himmel|strong="H8064"\w*.   
