\c 1  
\p
\v 1 Und \w Salomo|strong="H8010"\w*, der \w Sohn|strong="H1121"\w* \w Davids|strong="H1732"\w*, ward \w in|strong="H5921"\w* seinem \w Reich|strong="H4438"\w* \w bekräftigt|strong="H2388"\w*; und der \w HERR|strong="H3068"\w*, sein \w Gott|strong="H0430"\w*, war \w mit|strong="H5973"\w* ihm und machte ihn \w immer|strong="H4605"\w* \w größer|strong="H1431"\w*.  
\v 2 Und \w Salomo|strong="H8010"\w* \w redete|strong="H0559"\w* mit dem \w ganzen|strong="H3605"\w* \w Israel|strong="H3478"\w*, mit den \w Obersten|strong="H8269"\w* über \w tausend|strong="H0505"\w* und \w hundert|strong="H3967"\w*, mit den \w Richtern|strong="H8199"\w* und mit \w allen|strong="H3605"\w* \w Fürsten|strong="H5387"\w* \w in|strong="H3605"\w* \w Israel|strong="H3478"\w*, mit den \w Obersten|strong="H7218"\w* der \w Vaterhäuser|strong="H0001"\w*,  
\v 3 daß sie \w hingingen|strong="H3212"\w*, \w Salomo|strong="H8010"\w* und die \w ganze|strong="H3605"\w* \w Gemeinde|strong="H6951"\w* \w mit|strong="H5973"\w* ihm, zu der \w Höhe|strong="H1116"\w*, \w die|strong="H0834"\w* zu \w Gibeon|strong="H1391"\w* war; \w denn|strong="H3588"\w* \w daselbst|strong="H8033"\w* \w war|strong="H1961"\w* die \w Hütte|strong="H0168"\w* des \w Stifts|strong="H4150"\w* \w Gottes|strong="H0430"\w*, \w die|strong="H0834"\w* \w Mose|strong="H4872"\w*, der \w Knecht|strong="H5650"\w* des \w HERRN|strong="H3068"\w*, gemacht \w hatte|strong="H6213"\w* in der \w Wüste|strong="H4057"\w*.  
\v 4 (\w Aber|strong="H0061"\w* die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* hatte \w David|strong="H1732"\w* \w heraufgebracht|strong="H5927"\w* \w von|strong="H4480"\w* Kirjath-\w Jearim|strong="H7157"\w* an den \w Ort|strong="H1732"\w*, den er bereitet \w hatte|strong="H3559"\w*; \w denn|strong="H3588"\w* er hatte ihr eine \w Hütte|strong="H0168"\w* \w aufgeschlagen|strong="H5186"\w* zu \w Jerusalem|strong="H3389"\w*.)  
\v 5 Aber der \w eherne|strong="H5178"\w* \w Altar|strong="H4196"\w*, \w den|strong="H0834"\w* \w Bezaleel|strong="H1212"\w*, der \w Sohn|strong="H1121"\w* \w Uris|strong="H0221"\w*, des \w Sohnes|strong="H1121"\w* \w Hurs|strong="H2354"\w*, gemacht \w hatte|strong="H6213"\w*, war \w daselbst|strong="H7760"\w* \w vor|strong="H6440"\w* der \w Wohnung|strong="H4908"\w* des \w HERRN|strong="H3068"\w*; und \w Salomo|strong="H8010"\w* und die \w Gemeinde|strong="H6951"\w* \w pflegten|strong="H1875"\w* ihn zu suchen.  
\v 6 Und \w Salomo|strong="H8010"\w* \w opferte|strong="H5927"\w* \w auf|strong="H5921"\w* dem \w ehernen|strong="H5178"\w* \w Altar|strong="H4196"\w* vor dem \w HERRN|strong="H3068"\w*, \w der|strong="H0834"\w* vor der \w Hütte|strong="H0168"\w* des \w Stifts|strong="H4150"\w* \w stand|strong="H5927"\w*, \w tausend|strong="H0505"\w* \w Brandopfer|strong="H5930"\w*.  
\v 7 In \w derselben|strong="H1931"\w* \w Nacht|strong="H3915"\w* aber \w erschien|strong="H7200"\w* \w Gott|strong="H0430"\w* \w Salomo|strong="H8010"\w* und \w sprach|strong="H0559"\w* zu ihm: \w Bitte|strong="H7592"\w*, \w was|strong="H4100"\w* soll ich dir \w geben|strong="H5414"\w*?  
\v 8 Und \w Salomo|strong="H8010"\w* \w sprach|strong="H0559"\w* zu \w Gott|strong="H0430"\w*: \w Du|strong="H0859"\w* hast \w große|strong="H1419"\w* \w Barmherzigkeit|strong="H2617"\w* \w an|strong="H5973"\w* meinem \w Vater|strong="H0001"\w* \w David|strong="H1732"\w* \w getan|strong="H6213"\w* und hast mich an seiner \w Statt|strong="H8478"\w* zum König \w gemacht|strong="H4427"\w*;  
\v 9 so laß \w nun|strong="H6258"\w*, \w HERR|strong="H3068"\w*, \w Gott|strong="H0430"\w*, deine \w Worte|strong="H1697"\w* wahr \w werden|strong="H0539"\w* \w an|strong="H5973"\w* meinem \w Vater|strong="H0001"\w* \w David|strong="H1732"\w*; \w denn|strong="H3588"\w* \w du|strong="H0859"\w* hast mich zum König \w gemacht|strong="H4427"\w* \w über|strong="H5921"\w* ein \w Volk|strong="H5971"\w*, des so \w viel|strong="H7227"\w* ist als \w Staub|strong="H6083"\w* auf \w Erden|strong="H0776"\w*.  
\v 10 So \w gib|strong="H5414"\w* mir \w nun|strong="H6258"\w* \w Weisheit|strong="H2451"\w* und \w Erkenntnis|strong="H4093"\w*, daß ich vor \w diesem|strong="H2088"\w* \w Volk|strong="H5971"\w* \w aus|strong="H3318"\w* und \w ein|strong="H0935"\w* \w gehe|strong="H0935"\w*; \w denn|strong="H3588"\w* \w wer|strong="H4310"\w* \w kann|strong="H8199"\w* \w dies|strong="H2088"\w* dein \w großes|strong="H1419"\w* \w Volk|strong="H5971"\w* \w richten|strong="H8199"\w*?  
\v 11 Da \w sprach|strong="H0559"\w* \w Gott|strong="H0430"\w* zu \w Salomo|strong="H8010"\w*: \w Weil|strong="H3282"\w* \w du|strong="H0834"\w* \w das|strong="H2063"\w* \w im|strong="H5973"\w* \w Sinn|strong="H3824"\w* \w hast|strong="H1961"\w* und \w hast|strong="H7592"\w* \w nicht|strong="H3808"\w* um \w Reichtum|strong="H6239"\w* noch um \w Gut|strong="H5233"\w* noch um \w Ehre|strong="H3519"\w* noch um deiner \w Feinde|strong="H8130"\w* \w Seele|strong="H5315"\w* \w noch|strong="H3808"\w* \w um|strong="H1571"\w* \w langes|strong="H7227"\w* \w Leben|strong="H3117"\w* \w gebeten|strong="H7592"\w*, sondern \w hast|strong="H7592"\w* um \w Weisheit|strong="H2451"\w* und \w Erkenntnis|strong="H4093"\w* \w gebeten|strong="H7592"\w*, \w daß|strong="H0834"\w* du mein \w Volk|strong="H5971"\w* richten \w mögst|strong="H8199"\w*, \w darüber|strong="H5921"\w* ich dich zum König gemacht \w habe|strong="H4427"\w*,  
\v 12 so sei dir \w Weisheit|strong="H2451"\w* und \w Erkenntnis|strong="H4093"\w* \w gegeben|strong="H5414"\w*; dazu will ich dir \w Reichtum|strong="H6239"\w* und \w Gut|strong="H5233"\w* und \w Ehre|strong="H3519"\w* \w geben|strong="H0834"\w*, daß \w deinesgleichen|strong="H3651"\w* \w unter|strong="H3808"\w* den \w Königen|strong="H4428"\w* \w vor|strong="H6440"\w* \w dir|strong="H0834"\w* nicht \w gewesen|strong="H1961"\w* ist noch werden \w soll|strong="H1961"\w* \w nach|strong="H0310"\w* dir.  
\v 13 Also \w kam|strong="H0935"\w* \w Salomo|strong="H8010"\w* von der \w Höhe|strong="H1116"\w*, \w die|strong="H0834"\w* zu \w Gibeon|strong="H1391"\w* war, \w von|strong="H4480"\w* \w der|strong="H6440"\w* \w Hütte|strong="H0168"\w* des \w Stifts|strong="H4150"\w*, gen \w Jerusalem|strong="H3389"\w* und \w regierte|strong="H4427"\w* \w über|strong="H5921"\w* \w Israel|strong="H3478"\w*.  
\v 14 Und \w Salomo|strong="H8010"\w* \w sammelte|strong="H0622"\w* sich \w Wagen|strong="H7393"\w* und \w Reiter|strong="H6571"\w*, daß er zuwege \w brachte|strong="H1961"\w* \w tausendundvierhundert|strong="H3967"\w* \w Wagen|strong="H7393"\w* und \w zwölftausend|strong="H0505"\w* \w Reiter|strong="H6571"\w*, und \w legte|strong="H3240"\w* sie in die \w Wagenstädte|strong="H5892"\w* und \w zu|strong="H5973"\w* dem \w König|strong="H4428"\w* nach \w Jerusalem|strong="H3389"\w*.  
\v 15 Und der \w König|strong="H4428"\w* \w machte|strong="H5414"\w*, daß des \w Silbers|strong="H3701"\w* und \w Goldes|strong="H2091"\w* so viel war zu \w Jerusalem|strong="H3389"\w* wie die \w Steine|strong="H0068"\w* und der \w Zedern|strong="H0730"\w* wie die \w Maulbeerbäume|strong="H8256"\w* \w in|strong="H0834"\w* den \w Gründen|strong="H8219"\w*.  
\v 16 Und man \w brachte|strong="H4161"\w* Salomo \w Rosse|strong="H5483"\w* \w aus|strong="H4480"\w* \w Ägypten|strong="H4714"\w* und allerlei \w Ware|strong="H4723"\w*; und die \w Kaufleute|strong="H5503"\w* des \w Königs|strong="H4428"\w* \w kauften|strong="H3947"\w* die \w Ware|strong="H4723"\w*  
\v 17 und brachten'\w s|strong="H3318"\w* \w aus|strong="H4480"\w* \w Ägypten|strong="H4714"\w* \w heraus|strong="H3318"\w*, je einen \w Wagen|strong="H4818"\w* um \w sechshundert|strong="H3967"\w* \w Silberlinge|strong="H3701"\w*, ein \w Roß|strong="H5483"\w* um \w hundertfünfzig|strong="H2572"\w*. \w Also|strong="H3651"\w* \w brachten|strong="H3318"\w* sie \w auch|strong="H3318"\w* \w allen|strong="H3605"\w* \w Königen|strong="H4428"\w* der \w Hethiter|strong="H2850"\w* und den \w Königen|strong="H4428"\w* von \w Syrien|strong="H0758"\w*.   
\c 2  
\p
\v 1 [1:18] Und \w Salomo|strong="H8010"\w* \w gedachte|strong="H0559"\w* zu \w bauen|strong="H1129"\w* ein \w Haus|strong="H1004"\w* dem \w Namen|strong="H8034"\w* des \w HERRN|strong="H3068"\w* und ein \w Haus|strong="H1004"\w* seines \w Königreichs|strong="H4438"\w*.  
\v 2 Und \w Salomo|strong="H8010"\w* \w zählte|strong="H5608"\w* ab \w siebzigtausend|strong="H0505"\w*, \w die|strong="H0376"\w* da Last \w trugen|strong="H5449"\w*, und \w achtzigtausend|strong="H0505"\w*, die da Steine \w hieben|strong="H2672"\w* auf dem \w Berge|strong="H2022"\w*, und \w dreitausend|strong="H0505"\w* und \w sechshundert|strong="H3967"\w* \w Aufseher|strong="H5329"\w* \w über|strong="H5921"\w* sie.  
\v 3 Und \w Salomo|strong="H8010"\w* \w sandte|strong="H7971"\w* \w zu|strong="H0413"\w* \w Huram|strong="H2361"\w*, dem \w König|strong="H4428"\w* zu \w Tyrus|strong="H6865"\w*, und ließ ihm \w sagen|strong="H0559"\w*: \w Wie|strong="H0834"\w* du \w mit|strong="H0001"\w* meinem \w Vater|strong="H1732"\w* David \w tatest|strong="H6213"\w* und ihm \w sandtest|strong="H7971"\w* \w Zedern|strong="H0730"\w*, daß er sich ein \w Haus|strong="H1004"\w* \w baute|strong="H1129"\w*, darin er \w wohnte|strong="H3427"\w*.  
\v 4 \w Siehe|strong="H2009"\w*, \w ich|strong="H0589"\w* will dem \w Namen|strong="H8034"\w* des \w HERRN|strong="H3068"\w*, meines \w Gottes|strong="H0430"\w*, ein \w Haus|strong="H1004"\w* \w bauen|strong="H1129"\w*, das ihm geheiligt \w werde|strong="H6942"\w*, gutes \w Räuchwerk|strong="H7004"\w* vor ihm zu räuchern und \w Schaubrote|strong="H5561"\w* \w allewege|strong="H6440"\w* \w zuzurichten|strong="H4635"\w* und \w Brandopfer|strong="H5930"\w* des \w Morgens|strong="H1242"\w* und des \w Abends|strong="H6153"\w* auf die \w Sabbate|strong="H7676"\w* und \w Neumonde|strong="H2320"\w* und auf die \w Feste|strong="H4150"\w* des \w HERRN|strong="H3068"\w*, unsers \w Gottes|strong="H0430"\w*, \w ewiglich|strong="H5769"\w* für \w Israel|strong="H3478"\w*.  
\v 5 Und das \w Haus|strong="H1004"\w*, \w das|strong="H0834"\w* \w ich|strong="H0589"\w* bauen \w will|strong="H1129"\w* soll \w groß|strong="H1419"\w* sein; \w denn|strong="H3588"\w* unser \w Gott|strong="H0430"\w* ist \w größer|strong="H1419"\w* \w als|strong="H4480"\w* \w alle|strong="H3605"\w* \w Götter|strong="H0430"\w*.  
\v 6 Aber \w wer|strong="H4310"\w* vermag'\w s|strong="H6113"\w*, daß er ihm ein \w Haus|strong="H1004"\w* \w baue|strong="H1129"\w*? \w denn|strong="H3588"\w* der \w Himmel|strong="H8064"\w* und aller \w Himmel|strong="H8064"\w* \w Himmel|strong="H8064"\w* \w können|strong="H3557"\w* \w ihn|strong="H3808"\w* nicht \w fassen|strong="H3557"\w*. \w Wer|strong="H4310"\w* sollte \w ich|strong="H0589"\w* denn sein, \w daß|strong="H0834"\w* ich ihm ein \w Haus|strong="H1004"\w* \w baute|strong="H1129"\w*? es \w sei|strong="H0518"\w* denn um vor \w ihm|strong="H6440"\w* zu \w räuchern|strong="H6999"\w*.  
\v 7 So \w sende|strong="H7971"\w* mir \w nun|strong="H6258"\w* einen \w weisen|strong="H2450"\w* \w Mann|strong="H0376"\w*, zu \w arbeiten|strong="H6213"\w* mit \w Gold|strong="H2091"\w*, \w Silber|strong="H3701"\w*, \w Erz|strong="H5178"\w*, \w Eisen|strong="H1270"\w*, rotem \w Purpur|strong="H0710"\w*, \w Scharlach|strong="H3758"\w* und \w blauem|strong="H8504"\w* Purpur und der da \w wisse|strong="H3045"\w* \w einzugraben|strong="H6605"\w* \w mit|strong="H5973"\w* den \w Weisen|strong="H2450"\w*, \w die|strong="H0834"\w* \w bei|strong="H5972"\w* mir sind in \w Juda|strong="H3063"\w* und \w Jerusalem|strong="H3389"\w*, \w welche|strong="H0834"\w* mein \w Vater|strong="H0001"\w* \w David|strong="H1732"\w* bestellt \w hat|strong="H3559"\w*.  
\v 8 Und \w sende|strong="H7971"\w* mir Zedern -, Tannen-\w und|strong="H1265"\w* \w Sandelholz|strong="H0418"\w* vom \w Libanon|strong="H3844"\w*; \w denn|strong="H3588"\w* \w ich|strong="H0589"\w* \w weiß|strong="H3045"\w*, \w daß|strong="H0834"\w* deine \w Knechte|strong="H5650"\w* das \w Holz|strong="H6086"\w* zu \w hauen|strong="H3772"\w* \w wissen|strong="H3045"\w* auf dem \w Libanon|strong="H3844"\w*. Und \w siehe|strong="H2009"\w*, meine \w Knechte|strong="H5650"\w* sollen \w mit|strong="H5973"\w* deinen \w Knechten|strong="H5650"\w* sein,  
\v 9 daß \w man|strong="H7230"\w* mir viel \w Holz|strong="H6086"\w* \w zubereite|strong="H3559"\w*; \w denn|strong="H3588"\w* das \w Haus|strong="H1004"\w*, \w das|strong="H0834"\w* \w ich|strong="H0589"\w* bauen \w will|strong="H1129"\w*, soll \w groß|strong="H1419"\w* und \w sonderlich|strong="H6381"\w* sein.  
\v 10 Und \w siehe|strong="H2009"\w*, ich will den \w Zimmerleuten|strong="H2404"\w*, deinen \w Knechten|strong="H5650"\w*, die das \w Holz|strong="H6086"\w* \w hauen|strong="H3772"\w*, \w zwanzigtausend|strong="H0505"\w* \w Kor|strong="H3734"\w* \w Gerste|strong="H2406"\w* und \w zwanzigtausend|strong="H0505"\w* \w Kor|strong="H3734"\w* \w Weizen|strong="H8184"\w* und \w zwanzigtausend|strong="H0505"\w* \w Bath|strong="H1324"\w* \w Wein|strong="H3196"\w* und \w zwanzigtausend|strong="H0505"\w* \w Bath|strong="H1324"\w* \w Öl|strong="H8081"\w* \w geben|strong="H5414"\w*.  
\v 11 Da \w sprach|strong="H0559"\w* \w Huram|strong="H2361"\w*, der \w König|strong="H4428"\w* zu \w Tyrus|strong="H6865"\w*, durch \w Schrift|strong="H3791"\w* und \w sandte|strong="H7971"\w* \w zu|strong="H0413"\w* \w Salomo|strong="H8010"\w*: \w Darum|strong="H3068"\w* daß der HERR sein \w Volk|strong="H5971"\w* \w liebt|strong="H0160"\w*, hat er dich \w über|strong="H5921"\w* sie zum \w König|strong="H4428"\w* \w gemacht|strong="H5414"\w*.  
\v 12 Und \w Huram|strong="H2361"\w* \w sprach|strong="H0559"\w* weiter: \w Gelobt|strong="H1288"\w* sei der \w HERR|strong="H3068"\w*, der \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*, \w der|strong="H0834"\w* da \w Himmel|strong="H8064"\w* und \w Erde|strong="H0776"\w* gemacht \w hat|strong="H6213"\w*, \w daß|strong="H0834"\w* er dem \w König|strong="H4428"\w* \w David|strong="H1732"\w* \w hat|strong="H5414"\w* einen \w weisen|strong="H2450"\w*, \w klugen|strong="H7922"\w* und \w verständigen|strong="H0998"\w* \w Sohn|strong="H1121"\w* \w gegeben|strong="H5414"\w*, \w der|strong="H0834"\w* dem \w HERRN|strong="H3068"\w* ein \w Haus|strong="H1004"\w* \w baue|strong="H1129"\w* und ein \w Haus|strong="H1004"\w* seines \w Königreichs|strong="H4438"\w*.  
\v 13 So sende \w ich|strong="H7971"\w* \w nun|strong="H6258"\w* einen \w weisen|strong="H2450"\w* \w Mann|strong="H0376"\w*, der \w Verstand|strong="H0998"\w* hat, \w Huram|strong="H2361"\w*, meinen \w Meister|strong="H0001"\w*  
\v 14 (der ein \w Sohn|strong="H1121"\w* ist eines \w Weibes|strong="H0802"\w* \w aus|strong="H4480"\w* den \w Töchtern|strong="H1323"\w* \w Dans|strong="H1835"\w*, und dessen \w Vater|strong="H0001"\w* ein \w Tyrer|strong="H0376"\w* gewesen \w ist|strong="H6876"\w*); der \w weiß|strong="H3045"\w* zu \w arbeiten|strong="H6213"\w* an \w Gold|strong="H2091"\w*, \w Silber|strong="H3701"\w*, \w Erz|strong="H5178"\w*, \w Eisen|strong="H1270"\w*, \w Steinen|strong="H0068"\w*, \w Holz|strong="H6086"\w*, rotem und \w blauem|strong="H8504"\w* \w Purpur|strong="H0713"\w*, köstlicher weißer \w Leinwand|strong="H0948"\w* und \w Scharlach|strong="H3758"\w* und \w einzugraben|strong="H6605"\w* allerlei und \w allerlei|strong="H3605"\w* \w kunstreich|strong="H6603"\w* zu \w machen|strong="H2803"\w*, \w was|strong="H0834"\w* man ihm \w aufgibt|strong="H5414"\w*, \w mit|strong="H5973"\w* deinen \w Weisen|strong="H2450"\w* und mit den \w Weisen|strong="H2450"\w* meines \w Herrn|strong="H0113"\w*, des Königs \w Davids|strong="H1732"\w*, deines \w Vaters|strong="H0001"\w*.  
\v 15 So \w sende|strong="H7971"\w* \w nun|strong="H6258"\w* mein \w Herr|strong="H0113"\w* \w Weizen|strong="H2406"\w*, \w Gerste|strong="H8184"\w*, \w Öl|strong="H8081"\w* und \w Wein|strong="H3196"\w* seinen \w Knechten|strong="H5650"\w*, \w wie|strong="H0834"\w* er geredet \w hat|strong="H0559"\w*;  
\v 16 so wollen \w wir|strong="H0587"\w* das \w Holz|strong="H6086"\w* \w hauen|strong="H3772"\w* \w auf|strong="H4480"\w* dem \w Libanon|strong="H3844"\w*, \w wieviel|strong="H3605"\w* es not \w ist|strong="H6878"\w*, und wollen's auf \w Flößen|strong="H7513"\w* \w bringen|strong="H0935"\w* \w im|strong="H5921"\w* \w Meer|strong="H3220"\w* gen \w Japho|strong="H3305"\w*; von da \w magst|strong="H0853"\w* \w du|strong="H0859"\w* es \w hinauf|strong="H5927"\w* gen \w Jerusalem|strong="H3389"\w* \w bringen|strong="H5927"\w*.  
\v 17 Und \w Salomo|strong="H8010"\w* \w zählte|strong="H5608"\w* \w alle|strong="H3605"\w* \w Fremdlinge|strong="H0582"\w* \w im|strong="H0834"\w* \w Lande|strong="H0776"\w* \w Israel|strong="H3478"\w* nach \w dem|strong="H0310"\w*, daß \w David|strong="H1732"\w*, sein \w Vater|strong="H0001"\w*, sie gezählt \w hatte|strong="H5608"\w*; und wurden \w gefunden|strong="H4672"\w* \w hundert|strong="H3967"\w* und \w fünfzigtausend|strong="H0505"\w* \w dreitausend|strong="H0505"\w* und \w sechshundert|strong="H3967"\w*.  
\v 18 Und er \w machte|strong="H6213"\w* \w aus|strong="H4480"\w* denselben \w siebzigtausend|strong="H0505"\w* \w Träger|strong="H5449"\w* und \w achtzigtausend|strong="H0505"\w* \w Hauer|strong="H2672"\w* auf dem \w Berge|strong="H2022"\w* und \w dreitausend|strong="H0505"\w* \w sechshundert|strong="H3967"\w* \w Aufseher|strong="H5329"\w*, die das \w Volk|strong="H5971"\w* zum Dienst \w anhielten|strong="H5647"\w*.   
\c 3  
\p
\v 1 Und \w Salomo|strong="H8010"\w* fing \w an|strong="H2490"\w* zu \w bauen|strong="H1129"\w* das \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w* zu \w Jerusalem|strong="H3389"\w* auf dem \w Berge|strong="H2022"\w* \w Morija|strong="H4179"\w*, \w der|strong="H0834"\w* \w David|strong="H1732"\w*, seinem \w Vater|strong="H0001"\w*, gezeigt \w war|strong="H7200"\w*, \w welchen|strong="H0834"\w* \w David|strong="H1732"\w* zubereitet \w hatte|strong="H3559"\w* zum \w Raum|strong="H4725"\w* auf der \w Tenne|strong="H1637"\w* \w Ornans|strong="H0771"\w*, des \w Jebusiters|strong="H2983"\w*.  
\v 2 Er \w fing|strong="H2490"\w* aber \w an|strong="H2490"\w* zu \w bauen|strong="H1129"\w* im \w zweiten|strong="H8145"\w* \w Monat|strong="H2320"\w* am \w zweiten|strong="H8145"\w* Tage im \w vierten|strong="H0702"\w* \w Jahr|strong="H8141"\w* seines \w Königreiches|strong="H4438"\w*.  
\v 3 Und \w also|strong="H0428"\w* \w legte|strong="H3245"\w* \w Salomo|strong="H8010"\w* den \w Grund|strong="H3245"\w*, zu \w bauen|strong="H1129"\w* das \w Haus|strong="H1004"\w* \w Gottes|strong="H0430"\w*: die \w Länge|strong="H0753"\w* \w sechzig|strong="H8346"\w* \w Ellen|strong="H0520"\w* nach altem \w Maß|strong="H4060"\w*, die \w Weite|strong="H7341"\w* \w zwanzig|strong="H6242"\w* \w Ellen|strong="H0520"\w*.  
\v 4 Und die \w Halle|strong="H0197"\w* \w vor|strong="H6440"\w* der \w Weite|strong="H7341"\w* des \w Hauses|strong="H1004"\w* her war \w zwanzig|strong="H6242"\w* \w Ellen|strong="H0520"\w* \w lang|strong="H0753"\w*, die \w Höhe|strong="H1363"\w* aber war \w hundertzwanzig|strong="H6242"\w* Ellen; und er \w überzog|strong="H6823"\w* \w sie|strong="H4480"\w* \w inwendig|strong="H6441"\w* mit \w lauterem|strong="H2889"\w* \w Golde|strong="H2091"\w*.  
\v 5 Das \w große|strong="H1419"\w* \w Haus|strong="H1004"\w* aber \w täfelte|strong="H2645"\w* er mit \w Tannenholz|strong="H6086"\w* und überzog'\w s|strong="H2645"\w* mit dem \w besten|strong="H2896"\w* \w Golde|strong="H2091"\w* und \w machte|strong="H5927"\w* \w darauf|strong="H5921"\w* \w Palmen|strong="H8561"\w* und \w Kettenwerk|strong="H8333"\w*  
\v 6 und \w überzog|strong="H6823"\w* das \w Haus|strong="H1004"\w* mit \w edlen|strong="H3368"\w* \w Steinen|strong="H0068"\w* zum \w Schmuck|strong="H8597"\w*; das \w Gold|strong="H2091"\w* aber war Parwaim-\w Gold|strong="H6516"\w*.  
\v 7 Und \w überzog|strong="H2645"\w* das \w Haus|strong="H1004"\w*, die \w Balken|strong="H6982"\w* und die \w Schwellen|strong="H5592"\w* samt seinen \w Wänden|strong="H7023"\w* und \w Türen|strong="H1817"\w* mit \w Gold|strong="H2091"\w* und \w ließ|strong="H6605"\w* \w Cherubim|strong="H3742"\w* \w schnitzen|strong="H6605"\w* \w an|strong="H5921"\w* die \w Wände|strong="H7023"\w*.  
\v 8 Er machte \w auch|strong="H6213"\w* das \w Haus|strong="H1004"\w* des \w Allerheiligsten|strong="H6944"\w*, des \w Länge|strong="H0753"\w* war \w zwanzig|strong="H6242"\w* \w Ellen|strong="H0520"\w* \w nach|strong="H6440"\w* der \w Weite|strong="H7341"\w* des \w Hauses|strong="H1004"\w*, und seine \w Weite|strong="H7341"\w* war auch \w zwanzig|strong="H6242"\w* \w Ellen|strong="H0520"\w*, und überzog'\w s|strong="H2645"\w* mit dem \w besten|strong="H2896"\w* \w Golde|strong="H2091"\w* bei \w sechshundert|strong="H3967"\w* \w Zentner|strong="H3603"\w*.  
\v 9 Und gab \w auch|strong="H2572"\w* zu \w Nägeln|strong="H4548"\w* fünfzig \w Lot|strong="H8255"\w* \w Gold|strong="H2091"\w* am \w Gewicht|strong="H4948"\w* und \w überzog|strong="H2645"\w* die \w Söller|strong="H5944"\w* mit \w Gold|strong="H2091"\w*.  
\v 10 Er machte \w auch|strong="H6213"\w* im \w Hause|strong="H1004"\w* des \w Allerheiligsten|strong="H6944"\w* \w zwei|strong="H8147"\w* \w Cherubim|strong="H3742"\w* nach der \w Bildner|strong="H6816"\w* \w Kunst|strong="H4639"\w* und \w überzog|strong="H6823"\w* sie mit \w Gold|strong="H2091"\w*.  
\v 11 Und die \w Länge|strong="H0753"\w* der \w Flügel|strong="H3671"\w* an den \w Cherubim|strong="H3742"\w* war \w zwanzig|strong="H6242"\w* \w Ellen|strong="H0520"\w*, daß \w ein|strong="H0259"\w* \w Flügel|strong="H3671"\w* \w fünf|strong="H2568"\w* \w Ellen|strong="H0520"\w* hatte und \w rührte|strong="H5060"\w* an die \w Wand|strong="H7023"\w* des \w Hauses|strong="H1004"\w* und der \w andere|strong="H0312"\w* \w Flügel|strong="H3671"\w* auch \w fünf|strong="H2568"\w* \w Ellen|strong="H0520"\w* hatte und \w rührte|strong="H5060"\w* an den \w Flügel|strong="H3671"\w* des \w andern|strong="H0312"\w* \w Cherubs|strong="H3742"\w*.  
\v 12 Also hatte auch der eine \w Flügel|strong="H3671"\w* des \w andern|strong="H0259"\w* \w Cherubs|strong="H3742"\w* \w fünf|strong="H2568"\w* \w Ellen|strong="H0520"\w* und \w rührte|strong="H5060"\w* an die \w Wand|strong="H7023"\w* des \w Hauses|strong="H1004"\w* und sein \w anderer|strong="H0312"\w* \w Flügel|strong="H3671"\w* auch \w fünf|strong="H2568"\w* \w Ellen|strong="H0520"\w* und \w rührte|strong="H1695"\w* an den \w Flügel|strong="H3671"\w* des \w andern|strong="H0312"\w* \w Cherubs|strong="H3742"\w*,  
\v 13 daß diese \w Flügel|strong="H3671"\w* \w der|strong="H0428"\w* \w Cherubim|strong="H3742"\w* waren \w ausgebreitet|strong="H6566"\w* \w zwanzig|strong="H6242"\w* \w Ellen|strong="H0520"\w* weit; und \w sie|strong="H1992"\w* \w standen|strong="H5975"\w* \w auf|strong="H5921"\w* ihren \w Füßen|strong="H7272"\w*, und ihr \w Antlitz|strong="H6440"\w* war gewandt zum \w Hause|strong="H1004"\w* hin.  
\v 14 Er \w machte|strong="H6213"\w* auch einen \w Vorhang|strong="H6532"\w* von \w blauem|strong="H8504"\w* und rotem \w Purpur|strong="H0713"\w*, von \w Scharlach|strong="H3758"\w* und köstlichem weißen \w Leinwerk|strong="H0948"\w* und \w machte|strong="H5927"\w* \w Cherubim|strong="H3742"\w* \w darauf|strong="H5921"\w*.  
\v 15 Und er \w machte|strong="H6213"\w* \w vor|strong="H6440"\w* dem \w Hause|strong="H1004"\w* \w zwei|strong="H8147"\w* \w Säulen|strong="H5982"\w*, \w fünfunddreißig|strong="H7970"\w* \w Ellen|strong="H0520"\w* \w lang|strong="H0753"\w* und der \w Knauf|strong="H6858"\w* \w obendrauf|strong="H7218"\w* \w fünf|strong="H2568"\w* \w Ellen|strong="H0520"\w*,  
\v 16 und \w machte|strong="H6213"\w* \w Ketten|strong="H8333"\w* zum \w Gitterwerk|strong="H1687"\w* und \w tat|strong="H5414"\w* \w sie|strong="H5921"\w* \w oben|strong="H7218"\w* an die \w Säulen|strong="H5982"\w* und \w machte|strong="H6213"\w* \w hundert|strong="H3967"\w* \w Granatäpfel|strong="H7416"\w* und \w tat|strong="H5414"\w* sie an die \w Ketten|strong="H8333"\w*  
\v 17 und \w richtete|strong="H6965"\w* die \w Säulen|strong="H5982"\w* \w auf|strong="H6965"\w* \w vor|strong="H6440"\w* dem \w Tempel|strong="H1964"\w*, \w eine|strong="H0259"\w* \w zur|strong="H4480"\w* \w Rechten|strong="H3225"\w* und die \w andere|strong="H0259"\w* \w zur|strong="H4480"\w* \w Linken|strong="H8040"\w*, und \w hieß|strong="H7121"\w* die zur \w Rechten|strong="H3227"\w* \w Jachin|strong="H3199"\w* und die zur \w Linken|strong="H8042"\w* \w Boas|strong="H1162"\w*.   
\c 4  
\p
\v 1 Er \w machte|strong="H6213"\w* auch einen \w ehernen|strong="H5178"\w* \w Altar|strong="H4196"\w*, \w zwanzig|strong="H6242"\w* \w Ellen|strong="H0520"\w* \w lang|strong="H0753"\w* \w und|strong="H6242"\w* \w breit|strong="H7341"\w* und \w zehn|strong="H6235"\w* \w Ellen|strong="H0520"\w* \w hoch|strong="H6967"\w*.  
\v 2 Und er \w machte|strong="H6213"\w* ein \w gegossenes|strong="H3332"\w* \w Meer|strong="H3220"\w*, \w von|strong="H4480"\w* einem \w Rand|strong="H8193"\w* \w bis|strong="H0413"\w* zum \w andern|strong="H8193"\w* \w zehn|strong="H6235"\w* \w Ellen|strong="H0520"\w* weit, \w rundumher|strong="H5696"\w*, und \w fünf|strong="H2568"\w* \w Ellen|strong="H0520"\w* \w hoch|strong="H6967"\w*; und ein \w Maß|strong="H6957"\w* von \w dreißig|strong="H7970"\w* \w Ellen|strong="H0520"\w* \w mochte|strong="H5437"\w* \w es|strong="H0853"\w* \w umher|strong="H5439"\w* \w begreifen|strong="H5437"\w*.  
\v 3 Und \w Knoten|strong="H1241"\w* waren \w unter|strong="H8478"\w* ihm \w umher|strong="H5439"\w*, je \w zehn|strong="H6235"\w* auf eine \w Elle|strong="H0520"\w*; und es waren \w zwei|strong="H8147"\w* \w Reihen|strong="H2905"\w* \w Knoten|strong="H1241"\w* \w um|strong="H5362"\w* das \w Meer|strong="H3220"\w* \w her|strong="H5362"\w*, die mit gegossen \w waren|strong="H3332"\w*.  
\v 4 Es \w stand|strong="H5975"\w* aber \w auf|strong="H5921"\w* \w zwölf|strong="H6240"\w* \w Ochsen|strong="H1241"\w*, also daß \w drei|strong="H7969"\w* \w gewandt|strong="H6437"\w* waren gegen \w Mitternacht|strong="H6828"\w*, \w drei|strong="H7969"\w* gegen \w Abend|strong="H3220"\w*, \w drei|strong="H7969"\w* gegen \w Mittag|strong="H5045"\w* und \w drei|strong="H7969"\w* gegen \w Morgen|strong="H4217"\w*, und das \w Meer|strong="H3220"\w* \w oben|strong="H4605"\w* \w auf|strong="H5921"\w* \w ihnen|strong="H3605"\w*, und alle ihre \w Hinterteile|strong="H0268"\w* waren \w inwendig|strong="H1004"\w*.  
\v 5 Seine \w Dicke|strong="H5672"\w* war eine Hand \w breit|strong="H2947"\w*, und sein \w Rand|strong="H8193"\w* war wie eines \w Bechers|strong="H3563"\w* \w Rand|strong="H8193"\w* und eine aufgegangene \w Lilie|strong="H7799"\w*, und es \w faßte|strong="H2388"\w* \w dreitausend|strong="H0505"\w* \w Bath|strong="H1324"\w*.  
\v 6 Und er \w machte|strong="H6213"\w* \w zehn|strong="H6235"\w* \w Kessel|strong="H3595"\w*; deren \w setzte|strong="H5414"\w* er \w fünf|strong="H2568"\w* \w zur|strong="H4480"\w* \w Rechten|strong="H3225"\w* und \w fünf|strong="H2568"\w* \w zur|strong="H4480"\w* \w Linken|strong="H8040"\w*, darin zu \w waschen|strong="H7364"\w*, daß sie darin abspülten, was zum \w Brandopfer|strong="H5930"\w* \w gehört|strong="H4639"\w*; das \w Meer|strong="H3220"\w* aber, daß sich die \w Priester|strong="H3548"\w* darin \w wüschen|strong="H7364"\w*.  
\v 7 Er \w machte|strong="H6213"\w* auch \w zehn|strong="H6235"\w* \w goldene|strong="H2091"\w* \w Leuchter|strong="H4501"\w*, wie sie \w sein|strong="H4941"\w* sollten, und \w setzte|strong="H5414"\w* sie in den \w Tempel|strong="H1964"\w*, \w fünf|strong="H2568"\w* \w zur|strong="H4480"\w* \w Rechten|strong="H3225"\w* und \w fünf|strong="H2568"\w* \w zur|strong="H4480"\w* \w Linken|strong="H8040"\w*,  
\v 8 und \w machte|strong="H6213"\w* \w zehn|strong="H6235"\w* \w Tische|strong="H7979"\w* und \w tat|strong="H3240"\w* sie in den \w Tempel|strong="H1964"\w*, \w fünf|strong="H2568"\w* \w zur|strong="H4480"\w* \w Rechten|strong="H3225"\w* und \w fünf|strong="H2568"\w* \w zur|strong="H4480"\w* \w Linken|strong="H8040"\w*, und \w machte|strong="H6213"\w* \w hundert|strong="H3967"\w* \w goldene|strong="H2091"\w* \w Becken|strong="H4219"\w*.  
\v 9 Er machte \w auch|strong="H6213"\w* einen \w Hof|strong="H2691"\w* für die \w Priester|strong="H3548"\w* und einen \w großen|strong="H1419"\w* \w Vorhof|strong="H5835"\w* und \w Türen|strong="H1817"\w* in den \w Vorhof|strong="H5835"\w* und \w überzog|strong="H6823"\w* die \w Türen|strong="H1817"\w* mit \w Erz|strong="H5178"\w*  
\v 10 und \w setzte|strong="H5414"\w* das \w Meer|strong="H3220"\w* \w an|strong="H4480"\w* die \w rechte|strong="H3233"\w* \w Ecke|strong="H3802"\w* gegen \w Morgen|strong="H6924"\w* \w mittagswärts|strong="H5045"\w*.  
\v 11 Und \w Huram|strong="H2361"\w* \w machte|strong="H6213"\w* \w Töpfe|strong="H5518"\w*, \w Schaufeln|strong="H3257"\w* und \w Becken|strong="H4219"\w*. Also \w vollendete|strong="H3615"\w* \w Huram|strong="H2438"\w* die \w Arbeit|strong="H4399"\w*, \w die|strong="H0834"\w* er dem \w König|strong="H4428"\w* \w Salomo|strong="H8010"\w* \w tat|strong="H6213"\w* am \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w*,  
\v 12 nämlich die \w zwei|strong="H8147"\w* \w Säulen|strong="H5982"\w* mit den \w Kugeln|strong="H1543"\w* und \w Knäufen|strong="H3805"\w* oben \w auf|strong="H7218"\w* beiden \w Säulen|strong="H5982"\w*; und \w beide|strong="H8147"\w* \w Gitterwerke|strong="H7639"\w*, zu \w bedecken|strong="H3680"\w* \w beide|strong="H8147"\w* \w Kugeln|strong="H1543"\w* der \w Knäufe|strong="H3805"\w* oben \w auf|strong="H7218"\w* den \w Säulen|strong="H5982"\w*;  
\v 13 und die \w vierhundert|strong="H3967"\w* \w Granatäpfel|strong="H7416"\w* an den \w Gitterwerken|strong="H7639"\w*, \w zwei|strong="H8147"\w* \w Reihen|strong="H2905"\w* \w Granatäpfel|strong="H7416"\w* an \w jeglichem|strong="H0259"\w* \w Gitterwerk|strong="H7639"\w*, zu bedecken \w beide|strong="H8147"\w* \w Kugeln|strong="H1543"\w* der \w Knäufe|strong="H3805"\w*, die oben \w auf|strong="H6440"\w* den \w Säulen|strong="H5982"\w* waren.  
\v 14 Auch machte \w er|strong="H6213"\w* die \w Gestühle|strong="H4350"\w* und die \w Kessel|strong="H3595"\w* \w auf|strong="H5921"\w* den \w Gestühlen|strong="H4350"\w*  
\v 15 und \w das|strong="H0259"\w* \w Meer|strong="H3220"\w* und \w zwölf|strong="H6240"\w* \w Ochsen|strong="H1241"\w* \w darunter|strong="H8478"\w*;  
\v 16 dazu \w Töpfe|strong="H5518"\w*, \w Schaufeln|strong="H3257"\w*, \w gabeln|strong="H4207"\w* und \w alle|strong="H3605"\w* ihre \w Gefäße|strong="H3627"\w* \w machte|strong="H6213"\w* \w Huram|strong="H2361"\w*, der \w Meister|strong="H0001"\w*, dem \w König|strong="H4428"\w* \w Salomo|strong="H8010"\w* zum \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* von \w geglättetem|strong="H4838"\w* \w Erz|strong="H5178"\w*.  
\v 17 In der \w Gegend|strong="H3603"\w* des \w Jordans|strong="H3383"\w* \w ließ|strong="H3332"\w* sie der \w König|strong="H4428"\w* \w gießen|strong="H3332"\w* in \w dicker|strong="H5645"\w* \w Erde|strong="H0127"\w*, \w zwischen|strong="H0996"\w* \w Sukkoth|strong="H5523"\w* \w und|strong="H0996"\w* \w Zaredatha|strong="H6868"\w*.  
\v 18 Und \w Salomo|strong="H8010"\w* \w machte|strong="H6213"\w* \w aller|strong="H3605"\w* \w dieser|strong="H0428"\w* \w Gefäße|strong="H3627"\w* sehr \w viel|strong="H7230"\w*, \w daß|strong="H3588"\w* des \w Erzes|strong="H5178"\w* \w Gewicht|strong="H4948"\w* \w nicht|strong="H3808"\w* zu \w erforschen|strong="H2713"\w* war.  
\v 19 Und \w Salomo|strong="H8010"\w* \w machte|strong="H6213"\w* \w alles|strong="H3605"\w* \w Gerät|strong="H3627"\w* \w zum|strong="H0834"\w* \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w*, nämlich den \w goldenen|strong="H2091"\w* \w Altar|strong="H4196"\w* und die \w Tische|strong="H7979"\w* mit den \w Schaubroten|strong="H6440"\w* \w darauf|strong="H5921"\w*;  
\v 20 die \w Leuchter|strong="H4501"\w* mit ihren \w Lampen|strong="H5216"\w* von \w lauterem|strong="H5462"\w* \w Gold|strong="H2091"\w*, daß sie \w brennten|strong="H1197"\w* \w vor|strong="H6440"\w* dem \w Chor|strong="H1687"\w*, wie sich's \w gebührt|strong="H4941"\w*;  
\v 21 und die \w Blumen|strong="H6525"\w* und die \w Lampen|strong="H5216"\w* und die \w Schneuzen|strong="H4457"\w* waren \w golden|strong="H2091"\w*, \w das|strong="H1931"\w* war alles \w völliges|strong="H4357"\w* \w Gold|strong="H2091"\w*;  
\v 22 dazu die \w Messer|strong="H4212"\w*, \w Becken|strong="H4219"\w*, \w Löffel|strong="H3709"\w* und \w Näpfe|strong="H4289"\w* waren \w lauter|strong="H5462"\w* \w Gold|strong="H2091"\w*. Und der \w Eingang|strong="H6607"\w*, nämlich seine \w Tür|strong="H1817"\w* \w inwendig|strong="H6442"\w* zu dem \w Allerheiligsten|strong="H6944"\w* und die \w Türen|strong="H1817"\w* am \w Hause|strong="H1004"\w* des \w Tempels|strong="H1964"\w*, waren \w golden|strong="H2091"\w*.   
\c 5  
\p
\v 1 Also ward \w alle|strong="H3605"\w* \w Arbeit|strong="H4399"\w* \w vollbracht|strong="H7999"\w*, \w die|strong="H0834"\w* \w Salomo|strong="H8010"\w* \w tat|strong="H6213"\w* am \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*. Und \w Salomo|strong="H8010"\w* \w brachte|strong="H0935"\w* hinein \w alles|strong="H6944"\w*, was sein \w Vater|strong="H0001"\w* \w David|strong="H1732"\w* \w geheiligt|strong="H6944"\w* hatte, nämlich \w Silber|strong="H3701"\w* und \w Gold|strong="H2091"\w* und \w allerlei|strong="H3605"\w* \w Geräte|strong="H3627"\w*, und \w legte|strong="H5414"\w* es in den \w Schatz|strong="H0214"\w* im \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w*.  
\v 2  \w Da|strong="H0227"\w* \w versammelte|strong="H6950"\w* \w Salomo|strong="H8010"\w* alle \w Ältesten|strong="H2205"\w* in \w Israel|strong="H3478"\w*, \w alle|strong="H3605"\w* \w Hauptleute|strong="H7218"\w* der \w Stämme|strong="H4294"\w*, \w Fürsten|strong="H5387"\w* der \w Vaterhäuser|strong="H0001"\w* unter den \w Kindern|strong="H1121"\w* \w Israel|strong="H3478"\w* \w gen|strong="H0413"\w* \w Jerusalem|strong="H3389"\w*, daß sie die \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* des \w HERRN|strong="H3068"\w* \w hinaufbrächten|strong="H5927"\w* \w aus|strong="H4480"\w* der \w Stadt|strong="H5892"\w* \w Davids|strong="H1732"\w*, \w das|strong="H1931"\w* ist \w Zion|strong="H6726"\w*.  
\v 3 Und es \w versammelten|strong="H6950"\w* sich \w zum|strong="H0413"\w* \w König|strong="H4428"\w* \w alle|strong="H3605"\w* \w Männer|strong="H0376"\w* \w Israels|strong="H3478"\w* am \w Fest|strong="H2282"\w*, \w das|strong="H1931"\w* ist im \w siebenten|strong="H7637"\w* \w Monat|strong="H2320"\w*,  
\v 4 und \w kamen|strong="H0935"\w* \w alle|strong="H3605"\w* \w Ältesten|strong="H2205"\w* \w Israels|strong="H3478"\w*. Und die \w Leviten|strong="H3881"\w* \w hoben|strong="H5375"\w* die \w Lade|strong="H0727"\w* \w auf|strong="H5375"\w*  
\v 5 und \w brachten|strong="H5927"\w* \w sie|strong="H0727"\w* \w hinauf|strong="H5927"\w* samt der \w Hütte|strong="H0168"\w* des \w Stifts|strong="H4150"\w* und allem \w heiligen|strong="H6944"\w* \w Gerät|strong="H3627"\w*, \w das|strong="H0834"\w* in der \w Hütte|strong="H0168"\w* war; \w es|strong="H0853"\w* \w brachten|strong="H5927"\w* sie \w hinauf|strong="H5927"\w* die \w Priester|strong="H3548"\w*, die \w Leviten|strong="H3881"\w*.  
\v 6 Aber der \w König|strong="H4428"\w* \w Salomo|strong="H8010"\w* und die \w ganze|strong="H3605"\w* \w Gemeinde|strong="H5712"\w* \w Israel|strong="H3478"\w*, zu \w ihm|strong="H5921"\w* \w versammelt|strong="H3259"\w* \w vor|strong="H6440"\w* der \w Lade|strong="H0727"\w*, \w opferten|strong="H2076"\w* \w Schafe|strong="H6629"\w* und \w Ochsen|strong="H1241"\w*, \w so|strong="H4480"\w* \w viel|strong="H7230"\w*, daß es \w niemand|strong="H3808"\w* \w zählen|strong="H5608"\w* \w noch|strong="H3808"\w* \w rechnen|strong="H4487"\w* \w konnte|strong="H5608"\w*.  
\v 7 Also \w brachten|strong="H0935"\w* die \w Priester|strong="H3548"\w* die \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* des \w HERRN|strong="H3068"\w* \w an|strong="H0413"\w* ihre \w Stätte|strong="H4725"\w*, \w in|strong="H0413"\w* den \w Chor|strong="H1687"\w* des \w Hauses|strong="H1004"\w*, \w in|strong="H0413"\w* das \w Allerheiligste|strong="H6944"\w*, \w unter|strong="H8478"\w* die \w Flügel|strong="H3671"\w* der \w Cherubim|strong="H3742"\w*,  
\v 8 daß die \w Cherubim|strong="H3742"\w* ihre \w Flügel|strong="H3671"\w* \w ausbreiteten|strong="H6566"\w* \w über|strong="H5921"\w* die \w Stätte|strong="H4725"\w* der \w Lade|strong="H0727"\w*; und die \w Cherubim|strong="H3742"\w* \w bedeckten|strong="H5921"\w* die \w Lade|strong="H0727"\w* und \w ihre|strong="H5921"\w* \w Stangen|strong="H0905"\w* \w von|strong="H4480"\w* \w obenher|strong="H4605"\w*.  
\v 9 Die \w Stangen|strong="H0905"\w* aber waren so lang, daß man ihre \w Knäufe|strong="H7218"\w* \w sah|strong="H7200"\w* \w von|strong="H4480"\w* der \w Lade|strong="H0727"\w* her \w vor|strong="H6440"\w* dem \w Chor|strong="H1687"\w*; aber \w außen|strong="H2351"\w* \w sah|strong="H7200"\w* man sie \w nicht|strong="H3808"\w*. Und sie \w war|strong="H1961"\w* \w daselbst|strong="H8033"\w* bis \w auf|strong="H5704"\w* \w diesen|strong="H2088"\w* \w Tag|strong="H3117"\w*.  
\v 10 Und war \w nichts|strong="H0369"\w* in der \w Lade|strong="H0727"\w* \w außer|strong="H7535"\w* den \w zwei|strong="H8147"\w* \w Tafeln|strong="H3871"\w*, \w die|strong="H0834"\w* \w Mose|strong="H4872"\w* am \w Horeb|strong="H2722"\w* hineingetan \w hatte|strong="H5414"\w*, \w da|strong="H0834"\w* der \w HERR|strong="H3068"\w* einen Bund \w machte|strong="H3772"\w* \w mit|strong="H5973"\w* den \w Kindern|strong="H1121"\w* \w Israel|strong="H3478"\w*, da sie \w aus|strong="H3318"\w* \w Ägypten|strong="H4714"\w* \w zogen|strong="H3318"\w*.  
\v 11  Und die \w Priester|strong="H3548"\w* gingen \w heraus|strong="H3318"\w* aus dem \w Heiligen|strong="H6944"\w*, \w denn|strong="H3588"\w* \w alle|strong="H3605"\w* \w Priester|strong="H3548"\w*, die vorhanden \w waren|strong="H4672"\w*, hatten sich \w geheiligt|strong="H6942"\w*, \w also|strong="H0369"\w* daß auch die \w Ordnungen|strong="H4256"\w* nicht gehalten \w wurden|strong="H8104"\w*;  
\v 12 und die \w Leviten|strong="H3881"\w* und die \w Sänger|strong="H7891"\w* \w alle|strong="H3605"\w*, \w Asaph|strong="H0623"\w*, \w Heman|strong="H1968"\w* und \w Jedithun|strong="H3038"\w* und ihre \w Kinder|strong="H1121"\w* und \w Brüder|strong="H0251"\w*, \w angezogen|strong="H3847"\w* mit feiner \w Leinwand|strong="H0948"\w*, \w standen|strong="H5975"\w* gegen \w Morgen|strong="H4217"\w* des \w Altars|strong="H4196"\w* mit \w Zimbeln|strong="H4700"\w*, Psaltern und \w Harfen|strong="H3658"\w*, und \w bei|strong="H5973"\w* ihnen \w hundertzwanzig|strong="H6242"\w* \w Priester|strong="H3548"\w*, die mit \w Drommeten|strong="H2689"\w* \w bliesen|strong="H2690"\w*;  
\v 13 und es \w war|strong="H1961"\w*, als wäre es \w einer|strong="H0259"\w*, der \w drommetete|strong="H2690"\w* und \w sänge|strong="H7891"\w*, als \w hörte|strong="H8085"\w* \w man|strong="H0259"\w* eine \w Stimme|strong="H6963"\w* \w loben|strong="H1984"\w* und \w danken|strong="H3034"\w* dem \w HERRN|strong="H3068"\w*. Und da die \w Stimme|strong="H6963"\w* sich \w erhob|strong="H7311"\w* von den \w Drommeten|strong="H2689"\w*, \w Zimbeln|strong="H4700"\w* und \w Saitenspielen|strong="H3627"\w* und von dem \w Loben|strong="H1984"\w* des \w HERRN|strong="H3068"\w*, \w daß|strong="H3588"\w* er \w gütig|strong="H2896"\w* ist \w und|strong="H3588"\w* seine \w Barmherzigkeit|strong="H2617"\w* ewig \w währet|strong="H5769"\w*, da ward das \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w erfüllt|strong="H4390"\w* mit einer \w Wolke|strong="H6051"\w*,  
\v 14 daß die \w Priester|strong="H3548"\w* \w nicht|strong="H3808"\w* \w stehen|strong="H5975"\w* \w konnten|strong="H3201"\w*, zu \w dienen|strong="H8334"\w* \w vor|strong="H6440"\w* der \w Wolke|strong="H6051"\w*; \w denn|strong="H3588"\w* die \w Herrlichkeit|strong="H3519"\w* des \w HERRN|strong="H3068"\w* \w erfüllte|strong="H4390"\w* das \w Haus|strong="H1004"\w* \w Gottes|strong="H0430"\w*.   
\c 6  
\p
\v 1  \w Da|strong="H0227"\w* \w sprach|strong="H0559"\w* \w Salomo|strong="H8010"\w*: Der \w HERR|strong="H3068"\w* hat \w geredet|strong="H0559"\w*, er wolle \w wohnen|strong="H7931"\w* im \w Dunkel|strong="H6205"\w*.  
\v 2 So \w habe|strong="H1129"\w* \w ich|strong="H0589"\w* nun ein \w Haus|strong="H1004"\w* \w gebaut|strong="H1129"\w* dir zur \w Wohnung|strong="H4349"\w*, und einen Sitz, da du \w ewiglich|strong="H5769"\w* \w wohnst|strong="H3427"\w*.  
\v 3 Und der \w König|strong="H4428"\w* \w wandte|strong="H5437"\w* sein \w Antlitz|strong="H6440"\w* und \w segnete|strong="H1288"\w* die \w ganze|strong="H3605"\w* \w Gemeinde|strong="H6951"\w* \w Israel|strong="H3478"\w*; denn die \w ganze|strong="H3605"\w* \w Gemeinde|strong="H6951"\w* \w Israel|strong="H3478"\w* \w stand|strong="H5975"\w*.  
\v 4 Und er \w sprach|strong="H0559"\w*: \w Gelobt|strong="H1288"\w* sei der \w HERR|strong="H3068"\w*, der \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*, \w der|strong="H0834"\w* durch seinen \w Mund|strong="H6310"\w* meinem \w Vater|strong="H0001"\w* \w David|strong="H1732"\w* \w geredet|strong="H1696"\w* und es mit seiner \w Hand|strong="H3027"\w* \w erfüllt|strong="H4390"\w* \w hat|strong="H1696"\w*, der da \w sagte|strong="H0559"\w*:  
\v 5  \w Seit|strong="H4480"\w* der \w Zeit|strong="H3117"\w*, \w da|strong="H0834"\w* ich mein \w Volk|strong="H5971"\w* \w aus|strong="H4480"\w* \w Ägyptenland|strong="H4714"\w* geführt \w habe|strong="H3318"\w*, habe ich \w keine|strong="H3808"\w* \w Stadt|strong="H5892"\w* \w erwählt|strong="H0977"\w* \w in|strong="H4480"\w* \w allen|strong="H3605"\w* \w Stämmen|strong="H7626"\w* \w Israels|strong="H3478"\w*, ein \w Haus|strong="H1004"\w* zu \w bauen|strong="H1129"\w*, daß mein \w Name|strong="H8034"\w* \w daselbst|strong="H8033"\w* \w wäre|strong="H1961"\w*, und habe auch \w keinen|strong="H3808"\w* \w Mann|strong="H0376"\w* \w erwählt|strong="H0977"\w*, daß er \w Fürst|strong="H5057"\w* \w wäre|strong="H1961"\w* \w über|strong="H5921"\w* mein \w Volk|strong="H5971"\w* \w Israel|strong="H3478"\w*;  
\v 6 aber \w Jerusalem|strong="H3389"\w* habe ich \w erwählt|strong="H0977"\w*, daß mein \w Name|strong="H8034"\w* \w daselbst|strong="H8033"\w* \w sei|strong="H1961"\w*, und \w David|strong="H1732"\w* habe ich \w erwählt|strong="H0977"\w*, daß er \w über|strong="H5921"\w* mein \w Volk|strong="H5971"\w* \w Israel|strong="H3478"\w* \w sei|strong="H1961"\w*.  
\v 7 Und da \w es|strong="H5973"\w* mein \w Vater|strong="H0001"\w* im \w Sinn|strong="H3824"\w* \w hatte|strong="H1961"\w*, ein \w Haus|strong="H1004"\w* zu \w bauen|strong="H1129"\w* dem \w Namen|strong="H8034"\w* des \w HERRN|strong="H3068"\w*, des \w Gottes|strong="H0430"\w* \w Israels|strong="H3478"\w*,  
\v 8  \w sprach|strong="H0559"\w* der \w HERR|strong="H3068"\w* \w zu|strong="H0413"\w* meinem \w Vater|strong="H0001"\w* \w David|strong="H1732"\w*: Du hast wohl \w getan|strong="H2895"\w*, \w daß|strong="H0834"\w* du \w im|strong="H5973"\w* \w Sinn|strong="H3824"\w* \w hast|strong="H1961"\w*, meinem \w Namen|strong="H8034"\w* ein \w Haus|strong="H1004"\w* zu \w bauen|strong="H1129"\w*.  
\v 9  \w Doch|strong="H7535"\w* \w du|strong="H0859"\w* sollst das \w Haus|strong="H1004"\w* \w nicht|strong="H3808"\w* \w bauen|strong="H1129"\w*, \w sondern|strong="H3588"\w* dein \w Sohn|strong="H1121"\w*, der \w aus|strong="H3318"\w* deinen \w Lenden|strong="H2504"\w* \w kommen|strong="H3318"\w* wird, soll meinem \w Namen|strong="H8034"\w* das \w Haus|strong="H1004"\w* \w bauen|strong="H1129"\w*.  
\v 10 So hat nun der \w HERR|strong="H3068"\w* sein \w Wort|strong="H1697"\w* \w bestätigt|strong="H6965"\w*, \w das|strong="H0834"\w* er geredet \w hat|strong="H1696"\w*; denn ich bin \w aufgekommen|strong="H6965"\w* an meines \w Vaters|strong="H0001"\w* \w David|strong="H1732"\w* \w Statt|strong="H8478"\w* und \w sitze|strong="H3427"\w* \w auf|strong="H5921"\w* dem \w Stuhl|strong="H3678"\w* \w Israels|strong="H3478"\w*, \w wie|strong="H0834"\w* der \w HERR|strong="H3068"\w* geredet \w hat|strong="H1696"\w*, und habe ein \w Haus|strong="H1004"\w* \w gebaut|strong="H1129"\w* dem \w Namen|strong="H8034"\w* des \w HERRN|strong="H3068"\w*, des \w Gottes|strong="H0430"\w* \w Israels|strong="H3478"\w*,  
\v 11 und habe \w hineingetan|strong="H7760"\w* die \w Lade|strong="H0727"\w*, \w darin|strong="H8033"\w* der \w Bund|strong="H1285"\w* des \w HERRN|strong="H3068"\w* ist, \w den|strong="H0834"\w* er \w mit|strong="H5973"\w* den \w Kindern|strong="H1121"\w* \w Israel|strong="H3478"\w* gemacht \w hat|strong="H3772"\w*.  
\v 12 Und er \w trat|strong="H5975"\w* \w vor|strong="H6440"\w* den \w Altar|strong="H4196"\w* des \w HERRN|strong="H3068"\w* \w vor|strong="H5048"\w* der \w ganzen|strong="H3605"\w* \w Gemeinde|strong="H6951"\w* \w Israel|strong="H3478"\w* und \w breitete|strong="H6566"\w* seine \w Hände|strong="H3709"\w* \w aus|strong="H6566"\w*  
\v 13 (\w denn|strong="H3588"\w* \w Salomo|strong="H8010"\w* hatte eine \w eherne|strong="H5178"\w* \w Kanzel|strong="H3595"\w* \w gemacht|strong="H6213"\w* und \w gesetzt|strong="H5414"\w* \w mitten|strong="H8432"\w* in den \w Vorhof|strong="H5835"\w*, \w fünf|strong="H2568"\w* \w Ellen|strong="H0520"\w* \w lang|strong="H0753"\w* und \w breit|strong="H7341"\w* und \w drei|strong="H7969"\w* \w Ellen|strong="H0520"\w* \w hoch|strong="H6967"\w*; \w auf|strong="H5921"\w* dieselbe \w trat|strong="H5975"\w* er und fiel \w nieder|strong="H1288"\w* \w auf|strong="H5921"\w* seine \w Kniee|strong="H1290"\w* \w vor|strong="H5048"\w* der \w ganzen|strong="H3605"\w* \w Gemeinde|strong="H6951"\w* \w Israel|strong="H3478"\w* und \w breitete|strong="H6566"\w* seine \w Hände|strong="H3709"\w* \w aus|strong="H6566"\w* gen \w Himmel|strong="H8064"\w*)  
\v 14 und \w sprach|strong="H0559"\w*: \w HERR|strong="H3068"\w*, \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*, es ist \w kein|strong="H0369"\w* \w Gott|strong="H0430"\w* dir \w gleich|strong="H3644"\w*, weder im \w Himmel|strong="H8064"\w* noch auf \w Erden|strong="H0776"\w*, der du \w hältst|strong="H8104"\w* den \w Bund|strong="H1285"\w* und die \w Barmherzigkeit|strong="H2617"\w* deinen \w Knechten|strong="H5650"\w* die vor \w dir|strong="H6440"\w* \w wandeln|strong="H1980"\w* aus \w ganzem|strong="H3605"\w* \w Herzen|strong="H3820"\w*.  
\v 15  \w Du|strong="H0834"\w* hast \w gehalten|strong="H8104"\w* deinem \w Knechte|strong="H5650"\w* \w David|strong="H1732"\w*, meinem \w Vater|strong="H0001"\w*, \w was|strong="H0834"\w* du ihm geredet \w hast|strong="H1696"\w*; mit deinem \w Munde|strong="H6310"\w* hast du es \w geredet|strong="H1696"\w*, und mit deiner \w Hand|strong="H3027"\w* hast du es \w erfüllt|strong="H4390"\w*, \w wie|strong="H2088"\w* es \w heutigestages|strong="H3117"\w* steht.  
\v 16  \w Nun|strong="H6258"\w*, \w HERR|strong="H3068"\w*, \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*, \w halte|strong="H8104"\w* deinem \w Knechte|strong="H5650"\w* \w David|strong="H1732"\w*, meinem \w Vater|strong="H0001"\w*, \w was|strong="H0834"\w* du ihm verheißen \w hast|strong="H1696"\w* und \w gesagt|strong="H0559"\w*: Es soll \w dir|strong="H4480"\w* \w nicht|strong="H3808"\w* \w gebrechen|strong="H3772"\w* an einem \w Manne|strong="H0376"\w* vor \w mir|strong="H6440"\w*, der \w auf|strong="H5921"\w* dem \w Stuhl|strong="H3678"\w* \w Israels|strong="H3478"\w* \w sitze|strong="H3427"\w*, \w doch|strong="H7535"\w* \w sofern|strong="H0518"\w* deine \w Kinder|strong="H1121"\w* ihren \w Weg|strong="H1870"\w* \w bewahren|strong="H8104"\w*, daß sie \w wandeln|strong="H3212"\w* in meinem \w Gesetz|strong="H8451"\w*, \w wie|strong="H0834"\w* du vor \w mir|strong="H6440"\w* gewandelt \w hast|strong="H1980"\w*.  
\v 17  \w Nun|strong="H6258"\w*, \w HERR|strong="H3068"\w*, \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*, laß deine \w Worte|strong="H1697"\w* wahr \w werden|strong="H0539"\w*, \w das|strong="H0834"\w* du deinem \w Knechte|strong="H5650"\w* \w David|strong="H1732"\w* geredet \w hast|strong="H1696"\w*.  
\v 18  \w Denn|strong="H3588"\w* sollte in \w Wahrheit|strong="H0552"\w* \w Gott|strong="H0430"\w* bei den \w Menschen|strong="H0120"\w* \w wohnen|strong="H3427"\w*? \w Siehe|strong="H2009"\w*, der \w Himmel|strong="H8064"\w* und aller \w Himmel|strong="H8064"\w* \w Himmel|strong="H8064"\w* \w können|strong="H3557"\w* dich \w nicht|strong="H3808"\w* \w fassen|strong="H3557"\w*; \w wie|strong="H3588"\w* sollte es denn \w das|strong="H2088"\w* \w Haus|strong="H1004"\w* tun, \w das|strong="H0834"\w* ich gebaut \w habe|strong="H1129"\w*?  
\v 19 Wende \w dich|strong="H6437"\w* aber, \w HERR|strong="H3068"\w*, mein \w Gott|strong="H0430"\w*, \w zu|strong="H0413"\w* dem \w Gebet|strong="H8605"\w* deines \w Knechtes|strong="H5650"\w* und \w zu|strong="H0413"\w* seinem \w Flehen|strong="H8467"\w*, daß du \w erhörest|strong="H8085"\w* \w das|strong="H0413"\w* \w Bitten|strong="H7440"\w* \w und|strong="H0413"\w* \w Beten|strong="H8605"\w*, \w das|strong="H0834"\w* dein \w Knecht|strong="H5650"\w* vor \w dir|strong="H6440"\w* \w tut|strong="H6419"\w*;  
\v 20 daß deine \w Augen|strong="H5869"\w* \w offen|strong="H6605"\w* \w seien|strong="H1961"\w* \w über|strong="H0413"\w* \w dies|strong="H2088"\w* \w Haus|strong="H1004"\w* \w Tag|strong="H3119"\w* und \w Nacht|strong="H3915"\w*, \w über|strong="H0413"\w* die \w Stätte|strong="H4725"\w*, \w dahin|strong="H0834"\w* du deinen \w Namen|strong="H8034"\w* \w zu|strong="H8033"\w* \w stellen|strong="H7760"\w* verheißen \w hast|strong="H0559"\w*; daß du \w hörest|strong="H8085"\w* \w das|strong="H0413"\w* \w Gebet|strong="H8605"\w*, \w das|strong="H0834"\w* dein \w Knecht|strong="H5650"\w* \w an|strong="H0413"\w* \w dieser|strong="H2088"\w* \w Stelle|strong="H4725"\w* tun \w wird|strong="H6419"\w*.  
\v 21 So \w höre|strong="H8085"\w* \w nun|strong="H0413"\w* das \w Flehen|strong="H8469"\w* deines \w Knechtes|strong="H5650"\w* und deines \w Volkes|strong="H5971"\w* \w Israel|strong="H3478"\w*, \w das|strong="H0834"\w* sie bitten \w werden|strong="H6419"\w* \w an|strong="H0413"\w* \w dieser|strong="H2088"\w* \w Stätte|strong="H4725"\w*; höre \w es|strong="H8085"\w* aber \w von|strong="H4480"\w* der \w Stätte|strong="H4725"\w* deiner \w Wohnung|strong="H3427"\w*, \w vom|strong="H4480"\w* \w Himmel|strong="H8064"\w*. Und wenn du es \w hörst|strong="H8085"\w*, wollest du \w gnädig|strong="H5545"\w* sein.  
\v 22  \w Wenn|strong="H0518"\w* \w jemand|strong="H0376"\w* wider seinen \w Nächsten|strong="H7453"\w* sündigen \w wird|strong="H2398"\w* und es wird ihm ein Eid \w aufgelegt|strong="H5375"\w*, den er schwören \w soll|strong="H0422"\w*, und der \w Eid|strong="H0423"\w* \w kommt|strong="H0935"\w* \w vor|strong="H6440"\w* deinen \w Altar|strong="H4196"\w* in \w diesem|strong="H2088"\w* \w Hause|strong="H1004"\w*:  
\v 23 so wollest \w du|strong="H0859"\w* \w hören|strong="H8085"\w* \w vom|strong="H4480"\w* \w Himmel|strong="H8064"\w* und deinem \w Knechte|strong="H5650"\w* \w Recht|strong="H8199"\w* \w verschaffen|strong="H6213"\w*, daß du dem \w Gottlosen|strong="H7563"\w* \w vergeltest|strong="H7725"\w* und \w gibst|strong="H5414"\w* seinen \w Wandel|strong="H1870"\w* auf seinen \w Kopf|strong="H7218"\w* und \w rechtfertigst|strong="H6663"\w* den \w Gerechten|strong="H6662"\w* und \w gebest|strong="H5414"\w* ihm nach seiner \w Gerechtigkeit|strong="H6666"\w*.  
\v 24  \w Wenn|strong="H0518"\w* dein \w Volk|strong="H5971"\w* \w Israel|strong="H3478"\w* vor seinen \w Feinden|strong="H0341"\w* geschlagen \w wird|strong="H5062"\w*, \w weil|strong="H3588"\w* an dir gesündigt \w haben|strong="H2398"\w*, und sie \w bekehren|strong="H7725"\w* sich und \w bekennen|strong="H3034"\w* deinen \w Namen|strong="H8034"\w*, \w bitten|strong="H6419"\w* und \w flehen|strong="H2603"\w* vor \w dir|strong="H6440"\w* \w in|strong="H2088"\w* diesem \w Hause|strong="H1004"\w*:  
