\v 26 und \w sagt|strong="H0559"\w*: \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w König|strong="H4428"\w*: \w Legt|strong="H7760"\w* \w diesen|strong="H2088"\w* ins \w Gefängnis|strong="H1004"\w* und \w speist|strong="H0398"\w* ihn mit \w Brot|strong="H3899"\w* und \w Wasser|strong="H4325"\w* der \w Trübsal|strong="H3906"\w*, \w bis|strong="H5704"\w* \w ich|strong="H7965"\w* \w wiederkomme|strong="H7725"\w* mit \w Frieden|strong="H7965"\w*.  
\v 27  \w Micha|strong="H4321"\w* \w sprach|strong="H0559"\w*: \w Kommst|strong="H7725"\w* \w du|strong="H7725"\w* mit \w Frieden|strong="H7965"\w* \w wieder|strong="H7725"\w*, so hat der \w HERR|strong="H3068"\w* nicht durch \w mich|strong="H3808"\w* \w geredet|strong="H1696"\w*. Und er \w sprach|strong="H0559"\w*: \w Höret|strong="H8085"\w*, ihr \w Völker|strong="H5971"\w* \w alle|strong="H3605"\w*!  
\v 28 Also zog \w hinauf|strong="H5927"\w* der \w König|strong="H4428"\w* \w Israels|strong="H3478"\w* und \w Josaphat|strong="H3092"\w*, der \w König|strong="H4428"\w* Juda'\w s|strong="H3063"\w*, \w gen|strong="H0413"\w* \w Ramoth|strong="H7433"\w* in \w Gilead|strong="H1568"\w*.  
\v 29 Und der \w König|strong="H4428"\w* \w Israels|strong="H3478"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Josaphat|strong="H3092"\w*: Ich will mich \w verkleiden|strong="H2664"\w* und in den \w Streit|strong="H4421"\w* \w kommen|strong="H0935"\w*; du \w aber|strong="H0859"\w* \w habe|strong="H3847"\w* deine \w Kleider|strong="H0899"\w* \w an|strong="H3847"\w*. Und der \w König|strong="H4428"\w* \w Israels|strong="H3478"\w* verkleidete \w sich|strong="H2664"\w*, und sie \w kamen|strong="H0935"\w* in den \w Streit|strong="H4421"\w*.  
\v 30 Aber der \w König|strong="H4428"\w* von \w Syrien|strong="H0758"\w* \w hatte|strong="H6680"\w* den \w Obersten|strong="H8269"\w* über seine \w Wagen|strong="H7393"\w* \w geboten|strong="H6680"\w*: Ihr sollt \w nicht|strong="H3808"\w* \w streiten|strong="H3898"\w*, weder gegen \w klein|strong="H6996"\w* noch gegen \w groß|strong="H1419"\w*, \w sondern|strong="H3588"\w* gegen den \w König|strong="H4428"\w* \w Israels|strong="H3478"\w* \w allein|strong="H0909"\w*.  
\v 31  \w Da|strong="H1961"\w* nun die \w Obersten|strong="H8269"\w* der \w Wagen|strong="H7393"\w* \w Josaphat|strong="H3092"\w* \w sahen|strong="H7200"\w*, \w dachten|strong="H0559"\w* \w sie|strong="H1992"\w*: \w Es|strong="H1931"\w* ist der \w König|strong="H4428"\w* \w Israels|strong="H3478"\w*! und \w umringten|strong="H5437"\w* ihn, wider ihn zu \w streiten|strong="H3898"\w*. Aber \w Josaphat|strong="H3092"\w* \w schrie|strong="H2199"\w*; und der \w HERR|strong="H3068"\w* \w half|strong="H5826"\w* ihm, und \w Gott|strong="H0430"\w* \w wandte|strong="H5496"\w* sie \w von|strong="H4480"\w* ihm.  
\v 32  Denn da die \w Obersten|strong="H8269"\w* der \w Wagen|strong="H7393"\w* \w sahen|strong="H7200"\w*, \w daß|strong="H3588"\w* \w er|strong="H4428"\w* \w nicht|strong="H3808"\w* der \w König|strong="H4428"\w* \w Israels|strong="H3478"\w* \w war|strong="H1961"\w*, \w wandten|strong="H7725"\w* sie sich \w von|strong="H4480"\w* ihm \w ab|strong="H7725"\w*.  
\v 33 Es spannte \w aber|strong="H4900"\w* ein Mann seinen \w Bogen|strong="H7198"\w* von \w ungefähr|strong="H8537"\w* und \w schoß|strong="H5221"\w* den \w König|strong="H4428"\w* \w Israels|strong="H3478"\w* \w zwischen|strong="H0996"\w* \w Panzer|strong="H1694"\w* \w und|strong="H0996"\w* \w Wehrgehänge|strong="H8302"\w*. Da sprach \w er|strong="H0559"\w* zu seinem \w Fuhrmann|strong="H7395"\w*: \w Wende|strong="H2015"\w* deine \w Hand|strong="H3027"\w* und \w führe|strong="H3318"\w* mich \w aus|strong="H4480"\w* dem \w Heer|strong="H4264"\w*, \w denn|strong="H3588"\w* ich bin \w wund|strong="H2470"\w*!  
\v 34 Und der \w Streit|strong="H4421"\w* nahm \w zu|strong="H5927"\w* \w des|strong="H1931"\w* \w Tages|strong="H3117"\w*. Und der \w König|strong="H4428"\w* \w Israels|strong="H3478"\w* stand \w auf|strong="H1961"\w* seinem \w Wagen|strong="H4818"\w* \w gegen|strong="H5227"\w* die \w Syrer|strong="H0758"\w* \w bis|strong="H5704"\w* an den \w Abend|strong="H6153"\w* und \w starb|strong="H4191"\w*, \w da|strong="H6256"\w* die \w Sonne|strong="H8121"\w* \w unterging|strong="H0935"\w*.   
\c 19  
\p
\v 1  \w Josaphat|strong="H3092"\w* aber, der \w König|strong="H4428"\w* Juda'\w s|strong="H3063"\w*, kam \w wieder|strong="H7725"\w* \w heim|strong="H1004"\w* mit \w Frieden|strong="H7965"\w* gen \w Jerusalem|strong="H3389"\w*.  
\v 2  \w Und|strong="H3058"\w* es \w gingen|strong="H3318"\w* ihm \w entgegen|strong="H0413"\w* \w hinaus|strong="H3318"\w* \w Jehu|strong="H3058"\w*, der \w Sohn|strong="H1121"\w* \w Hananis|strong="H2607"\w*, der \w Seher|strong="H2374"\w*, und \w sprach|strong="H0559"\w* \w zum|strong="H0413"\w* \w König|strong="H4428"\w* \w Josaphat|strong="H3092"\w*: Sollst du so dem \w Gottlosen|strong="H7563"\w* \w helfen|strong="H5826"\w*, \w und|strong="H3068"\w* \w lieben|strong="H0157"\w*, die den \w HERRN|strong="H3068"\w* \w hassen|strong="H8130"\w*? Und um deswillen \w ist|strong="H2063"\w* \w über|strong="H5921"\w* \w dir|strong="H4480"\w* der \w Zorn|strong="H7110"\w* \w vom|strong="H6440"\w* \w HERRN|strong="H3068"\w*.  
\v 3 Aber \w doch|strong="H0061"\w* \w ist|strong="H5973"\w* etwas \w Gutes|strong="H2896"\w* \w an|strong="H5973"\w* dir \w gefunden|strong="H4672"\w*, \w daß|strong="H3588"\w* du die \w Ascherabilder|strong="H0842"\w* hast \w ausgefegt|strong="H1197"\w* \w aus|strong="H4480"\w* dem \w Lande|strong="H0776"\w* und hast dein \w Herz|strong="H3824"\w* \w gerichtet|strong="H3559"\w*, \w Gott|strong="H0430"\w* zu \w suchen|strong="H1875"\w*.  
\v 4 Also \w blieb|strong="H3427"\w* \w Josaphat|strong="H3092"\w* zu \w Jerusalem|strong="H3389"\w*. Und er \w zog|strong="H3318"\w* \w wiederum|strong="H7725"\w* \w aus|strong="H3318"\w* unter das \w Volk|strong="H5971"\w* \w von|strong="H4480"\w* Beer-\w Seba|strong="H0884"\w* an \w bis|strong="H5704"\w* auf das \w Gebirge|strong="H2022"\w* \w Ephraim|strong="H0669"\w* und brachte sie \w wieder|strong="H7725"\w* \w zu|strong="H0413"\w* dem \w HERRN|strong="H3068"\w*, ihrer \w Väter|strong="H0001"\w* \w Gott|strong="H0430"\w*.  
\v 5 Und er \w bestellte|strong="H5975"\w* \w Richter|strong="H8199"\w* im \w Lande|strong="H0776"\w* in \w allen|strong="H3605"\w* \w festen|strong="H1219"\w* \w Städten|strong="H5892"\w* Juda'\w s|strong="H3063"\w*, in einer jeglichen \w Stadt|strong="H5892"\w* \w etliche|strong="H5892"\w*,  
\v 6 Und \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* den \w Richtern|strong="H8199"\w*: Sehet \w zu|strong="H7200"\w*, \w was|strong="H4100"\w* \w ihr|strong="H0859"\w* \w tut|strong="H6213"\w*! \w denn|strong="H3588"\w* ihr haltet das \w Gericht|strong="H8199"\w* \w nicht|strong="H3808"\w* den \w Menschen|strong="H0120"\w*, \w sondern|strong="H3588"\w* dem \w HERRN|strong="H3068"\w*; und er ist \w mit|strong="H5973"\w* euch \w im|strong="H1697"\w* \w Gericht|strong="H4941"\w*.  
\v 7  \w Darum|strong="H6258"\w* \w laßt|strong="H1961"\w* die \w Furcht|strong="H6343"\w* des \w HERRN|strong="H3068"\w* \w bei|strong="H5921"\w* euch sein und hütet \w euch|strong="H8104"\w* und tut'\w s|strong="H6213"\w*; \w denn|strong="H3588"\w* \w bei|strong="H5973"\w* dem \w HERRN|strong="H3068"\w*, unserm \w Gott|strong="H0430"\w*, ist \w kein|strong="H0369"\w* \w Unrecht|strong="H5766"\w* noch \w Ansehen|strong="H4856"\w* der \w Person|strong="H6440"\w* noch \w Annehmen|strong="H4727"\w* des \w Geschenks|strong="H7810"\w*.  
\v 8  \w Auch|strong="H1571"\w* \w bestellte|strong="H5975"\w* \w Josaphat|strong="H3092"\w* zu \w Jerusalem|strong="H3389"\w* etliche \w aus|strong="H4480"\w* den \w Leviten|strong="H3881"\w* und \w Priestern|strong="H3548"\w* und \w aus|strong="H4480"\w* den \w Obersten|strong="H7218"\w* der \w Vaterhäuser|strong="H0001"\w* in \w Israel|strong="H3478"\w* über das \w Gericht|strong="H4941"\w* des \w HERRN|strong="H3068"\w* und über die \w Streitsachen|strong="H7379"\w* und ließ \w sie|strong="H7725"\w* zu \w Jerusalem|strong="H3389"\w* \w wohnen|strong="H7725"\w*,  
\v 9 und er \w gebot|strong="H6680"\w* ihnen und \w sprach|strong="H0559"\w*: \w Tut|strong="H6213"\w* \w also|strong="H3541"\w* in der \w Furcht|strong="H3374"\w* des \w HERRN|strong="H3068"\w*, \w treulich|strong="H0530"\w* und mit \w rechtem|strong="H8003"\w* \w Herzen|strong="H3824"\w*.  
\v 10 In \w allen|strong="H3605"\w* \w Sachen|strong="H7379"\w*, \w die|strong="H0834"\w* \w zu|strong="H5921"\w* euch \w kommen|strong="H0935"\w* \w von|strong="H4480"\w* euren \w Brüdern|strong="H0251"\w*, die in ihren \w Städten|strong="H5892"\w* \w wohnen|strong="H3427"\w*, \w zwischen|strong="H0996"\w* \w Blut|strong="H1818"\w* und \w Blut|strong="H1818"\w*, \w zwischen|strong="H0996"\w* \w Gesetz|strong="H8451"\w* und \w Gebot|strong="H4687"\w*, zwischen \w Sitten|strong="H2706"\w* und \w Rechten|strong="H4941"\w*, sollt \w ihr|strong="H2094"\w* \w sie|strong="H0853"\w* \w unterrichten|strong="H2094"\w*, daß sie sich \w nicht|strong="H3808"\w* \w verschulden|strong="H0816"\w* am \w HERRN|strong="H3068"\w* und ein \w Zorn|strong="H7110"\w* \w über|strong="H5921"\w* euch \w und|strong="H5921"\w* eure \w Brüder|strong="H0251"\w* \w komme|strong="H1961"\w*. \w Tut|strong="H6213"\w* \w also|strong="H3541"\w*, so werdet ihr euch \w nicht|strong="H3808"\w* \w verschulden|strong="H0816"\w*.  
\v 11  \w Siehe|strong="H2009"\w*, \w Amarja|strong="H0568"\w*, der oberste \w Priester|strong="H7218"\w*, ist \w über|strong="H5921"\w* euch in \w allen|strong="H3605"\w* \w Sachen|strong="H1697"\w* des \w HERRN|strong="H3068"\w*, und \w Sebadja|strong="H2069"\w*, der \w Sohn|strong="H1121"\w* \w Ismaels|strong="H3458"\w*, der \w Fürst|strong="H5057"\w* im \w Hause|strong="H1004"\w* Juda'\w s|strong="H3063"\w*, in \w allen|strong="H3605"\w* \w Sachen|strong="H1697"\w* des \w Königs|strong="H4428"\w*, und als Amtleute \w habt|strong="H7860"\w* ihr die \w Leviten|strong="H3881"\w* vor \w euch|strong="H6440"\w*. Seid \w getrost|strong="H2388"\w* und tut'\w s|strong="H6213"\w*, und der \w HERR|strong="H3068"\w* wird \w mit|strong="H5973"\w* dem \w Guten|strong="H2896"\w* \w sein|strong="H1961"\w*.   
\c 20  
\p
\v 1  \w Nach|strong="H0310"\w* \w diesem|strong="H3651"\w* \w kamen|strong="H0935"\w* die \w Kinder|strong="H1121"\w* \w Moab|strong="H4124"\w*, die \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w* und \w mit|strong="H5973"\w* ihnen \w auch|strong="H4480"\w* \w Meuniter|strong="H5984"\w*, \w wider|strong="H5921"\w* \w Josaphat|strong="H3092"\w* zu \w streiten|strong="H4421"\w*.  
\v 2 Und man \w kam|strong="H0935"\w* und \w sagte|strong="H5046"\w* es \w Josaphat|strong="H3092"\w* \w an|strong="H5046"\w* und \w sprach|strong="H0559"\w*: Es \w kommt|strong="H0935"\w* \w wider|strong="H5921"\w* \w dich|strong="H4480"\w* eine \w große|strong="H7227"\w* \w Menge|strong="H1995"\w* von \w jenseits|strong="H5676"\w* des \w Meeres|strong="H3220"\w*, \w von|strong="H4480"\w* \w Syrien|strong="H0758"\w*; und \w siehe|strong="H2009"\w*, sie sind zu Hazezon-\w Thamar|strong="H2688"\w*, \w das|strong="H1931"\w* ist \w Engedi|strong="H5872"\w*.  
\v 3  \w Josaphat|strong="H3092"\w* aber fürchtete \w sich|strong="H3372"\w* und \w stellte|strong="H5414"\w* sein \w Angesicht|strong="H6440"\w*, zu \w suchen|strong="H1875"\w* den \w HERRN|strong="H3068"\w*, und \w ließ|strong="H7121"\w* ein \w Fasten|strong="H6685"\w* \w ausrufen|strong="H7121"\w* \w unter|strong="H5921"\w* \w ganz|strong="H3605"\w* \w Juda|strong="H3063"\w*.  
\v 4 Und \w Juda|strong="H3063"\w* kam \w zusammen|strong="H6908"\w*, \w den|strong="H4480"\w* \w HERRN|strong="H3068"\w* zu \w suchen|strong="H1245"\w*; \w auch|strong="H1571"\w* kamen \w sie|strong="H0935"\w* \w aus|strong="H4480"\w* \w allen|strong="H3605"\w* \w Städten|strong="H5892"\w* Juda'\w s|strong="H3063"\w*, den \w HERRN|strong="H3068"\w* zu \w suchen|strong="H1245"\w*.  
