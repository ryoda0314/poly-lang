\v 1 [3:33] \w Da|strong="H1961"\w* \w aber|strong="H0834"\w* \w Saneballat|strong="H5571"\w* \w hörte|strong="H8085"\w*, \w daß|strong="H3588"\w* \w wir|strong="H0587"\w* die \w Mauer|strong="H2346"\w* \w bauten|strong="H1129"\w*, \w ward|strong="H7235"\w* \w er|strong="H2734"\w* \w zornig|strong="H3707"\w* und sehr \w entrüstet|strong="H2734"\w* und \w spottete|strong="H3932"\w* der \w Juden|strong="H3064"\w*  
\v 2 [3:34] und \w sprach|strong="H0559"\w* \w vor|strong="H6440"\w* seinen \w Brüdern|strong="H0251"\w* und den \w Mächtigen|strong="H2428"\w* zu \w Samaria|strong="H8111"\w*: \w Was|strong="H4100"\w* \w machen|strong="H6213"\w* die \w ohnmächtigen|strong="H0537"\w* \w Juden|strong="H3064"\w*? Wird man sie so \w lassen|strong="H5800"\w*? Werden sie \w opfern|strong="H2076"\w*? Werden sie es diesen \w Tag|strong="H3117"\w* \w vollenden|strong="H3615"\w*? Werden sie die \w Steine|strong="H0068"\w* lebendig \w machen|strong="H2421"\w*, die \w Schutthaufen|strong="H6194"\w* \w und|strong="H1992"\w* verbrannt \w sind|strong="H8313"\w*?  
\v 3 [3:35] Aber \w Tobia|strong="H2900"\w*, der \w Ammoniter|strong="H5984"\w*, \w neben|strong="H0681"\w* ihm \w sprach|strong="H0559"\w*: \w Laß|strong="H1129"\w* \w sie|strong="H1992"\w* \w nur|strong="H0834"\w* \w bauen|strong="H1129"\w*; \w wenn|strong="H0518"\w* \w Füchse|strong="H7776"\w* \w hinaufzögen|strong="H5927"\w*, \w die|strong="H0068"\w* zerrissen \w wohl|strong="H6555"\w* ihre \w steinerne|strong="H0068"\w* \w Mauer|strong="H2346"\w*.  
\v 4 [3:36] \w Höre|strong="H8085"\w*, unser \w Gott|strong="H0430"\w*, \w wie|strong="H3588"\w* \w verachtet|strong="H0939"\w* \w sind|strong="H1961"\w* \w wir|strong="H0939"\w*! \w Kehre|strong="H7725"\w* ihren \w Hohn|strong="H2781"\w* \w auf|strong="H0413"\w* ihren \w Kopf|strong="H7218"\w*, daß du sie \w gibst|strong="H5414"\w* in \w Verachtung|strong="H0961"\w* im \w Lande|strong="H0776"\w* ihrer \w Gefangenschaft|strong="H7633"\w*.  
\v 5 [3:37] \w Decke|strong="H3680"\w* ihre \w Missetat|strong="H5771"\w* \w nicht|strong="H0408"\w* \w zu|strong="H3680"\w*, und ihre \w Sünde|strong="H2403"\w* \w vertilge|strong="H4229"\w* \w nicht|strong="H0408"\w* \w vor|strong="H4480"\w* \w dir|strong="H6440"\w*; \w denn|strong="H3588"\w* sie \w haben|strong="H3707"\w* \w vor|strong="H5048"\w* den \w Bauleuten|strong="H1129"\w* dich \w erzürnt|strong="H3707"\w*.  
\v 6 [3:38] Aber wir \w bauten|strong="H1129"\w* die \w Mauer|strong="H2346"\w* \w und|strong="H3605"\w* fügten \w sie|strong="H7194"\w* \w ganz|strong="H3605"\w* \w aneinander|strong="H7194"\w* bis \w an|strong="H5704"\w* die \w halbe|strong="H2677"\w* Höhe. \w Und|strong="H3820"\w* das \w Volk|strong="H5971"\w* \w gewann|strong="H1961"\w* ein \w Herz|strong="H3820"\w* zu \w arbeiten|strong="H6213"\w*.  
