\v 1 Da nun \w herzukam|strong="H5060"\w* der \w siebente|strong="H7637"\w* \w Monat|strong="H2320"\w* und die \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w* in ihren \w Städten|strong="H5892"\w* waren, versammelte \w sich|strong="H0622"\w* das \w ganze|strong="H3605"\w* \w Volk|strong="H5971"\w* wie \w ein|strong="H0259"\w* \w Mann|strong="H0376"\w* \w auf|strong="H0413"\w* die breite \w Gasse|strong="H7339"\w* \w vor|strong="H6440"\w* dem \w Wassertor|strong="H4325"\w* und \w sprachen|strong="H0559"\w* zu \w Esra|strong="H5830"\w*, dem \w Schriftgelehrten|strong="H5608"\w*, daß er das \w Buch|strong="H5612"\w* des \w Gesetzes|strong="H8451"\w* Mose'\w s|strong="H4872"\w* \w holte|strong="H0935"\w*, \w das|strong="H0834"\w* der \w HERR|strong="H3068"\w* \w Israel|strong="H3478"\w* geboten \w hat|strong="H6680"\w*.  
\v 2 Und \w Esra|strong="H5830"\w*, der \w Priester|strong="H3548"\w*, \w brachte|strong="H0935"\w* das \w Gesetz|strong="H8451"\w* \w vor|strong="H6440"\w* die \w Gemeinde|strong="H6951"\w*, \w Männer|strong="H0376"\w* \w und|strong="H5704"\w* \w Weiber|strong="H0802"\w* und \w alle|strong="H3605"\w*, die es \w vernehmen|strong="H0995"\w* \w konnten|strong="H8085"\w*, am \w ersten|strong="H0259"\w* \w Tage|strong="H3117"\w* des \w siebenten|strong="H7637"\w* \w Monats|strong="H2320"\w*  
\v 3 und \w las|strong="H7121"\w* daraus \w auf|strong="H6440"\w* der breiten \w Gasse|strong="H7339"\w*, \w die|strong="H0834"\w* \w vor|strong="H6440"\w* dem \w Wassertor|strong="H4325"\w* ist, \w vom|strong="H4480"\w* lichten \w Morgen|strong="H0216"\w* an bis \w auf|strong="H5704"\w* den \w Mittag|strong="H4276"\w*, \w vor|strong="H5048"\w* \w Mann|strong="H0582"\w* und \w Weib|strong="H0802"\w* und wer's vernehmen \w konnte|strong="H0995"\w*. \w Und|strong="H0241"\w* des \w ganzen|strong="H3605"\w* \w Volkes|strong="H5971"\w* \w Ohren|strong="H0241"\w* \w waren|strong="H0413"\w* \w zu|strong="H0413"\w* dem \w Gesetz|strong="H5612"\w* \w gekehrt|strong="H0413"\w*.  
\v 4 Und \w Esra|strong="H5830"\w*, der \w Schriftgelehrte|strong="H5608"\w*, \w stand|strong="H5975"\w* \w auf|strong="H5921"\w* einem hölzernen, \w hohen|strong="H6086"\w* \w Stuhl|strong="H4026"\w*, \w den|strong="H0834"\w* \w sie|strong="H1697"\w* gemacht \w hatten|strong="H6213"\w*, zu \w predigen|strong="H1697"\w*, \w und|strong="H0681"\w* \w standen|strong="H5975"\w* \w neben|strong="H0681"\w* \w ihm|strong="H5975"\w* \w Matthithja|strong="H4993"\w*, \w Sema|strong="H8087"\w*, \w Anaja|strong="H6043"\w*, \w Uria|strong="H0223"\w*, \w Hilkia|strong="H2518"\w* und \w Maaseja|strong="H4641"\w*, \w zu|strong="H5921"\w* seiner \w Rechten|strong="H3225"\w*, aber \w zu|strong="H4480"\w* seiner \w Linken|strong="H8040"\w* \w Pedaja|strong="H6305"\w*, \w Misael|strong="H4332"\w*, \w Malchia|strong="H4441"\w*, \w Hasum|strong="H2828"\w*, \w Hasbaddana|strong="H2806"\w*, \w Sacharja|strong="H2148"\w* und \w Mesullam|strong="H4918"\w*.  
\v 5 Und \w Esra|strong="H5830"\w* \w tat|strong="H6605"\w* das \w Buch|strong="H5612"\w* \w auf|strong="H6605"\w* \w vor|strong="H5869"\w* dem \w ganzen|strong="H3605"\w* \w Volk|strong="H5971"\w*, \w denn|strong="H3588"\w* er \w ragte|strong="H1961"\w* \w über|strong="H4480"\w* \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w*; und da er's \w auftat|strong="H6605"\w*, \w stand|strong="H5975"\w* \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w*.  
\v 6 Und \w Esra|strong="H5830"\w* \w lobte|strong="H1288"\w* den \w HERRN|strong="H3068"\w*, den \w großen|strong="H1419"\w* \w Gott|strong="H0430"\w*. Und \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* \w antwortete|strong="H6030"\w*: \w Amen|strong="H0543"\w*, \w Amen|strong="H0543"\w*! \w mit|strong="H4607"\w* ihren \w Händen|strong="H3027"\w* \w empor|strong="H4607"\w* und neigten \w sich|strong="H6915"\w* und \w beteten|strong="H7812"\w* den \w HERRN|strong="H3068"\w* \w an|strong="H7812"\w* mit dem \w Antlitz|strong="H0639"\w* zur \w Erde|strong="H0776"\w*.  
