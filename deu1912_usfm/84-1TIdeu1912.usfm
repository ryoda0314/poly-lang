\v 16  \w Aber|strong="G0235"\w* \w darum|strong="G5124"\w* ist mir Barmherzigkeit \w widerfahren|strong="G1653"\w*, auf \w daß|strong="G2443"\w* \w an|strong="G1722"\w* \w mir|strong="G1698"\w* \w vornehmlich|strong="G4413"\w* \w Jesus|strong="G2424"\w* \w Christus|strong="G5547"\w* \w erzeigte|strong="G1731"\w* \w alle|strong="G3956"\w* \w Geduld|strong="G3115"\w*, \w zum|strong="G4314"\w* \w Vorbild|strong="G5296"\w* denen, die \w an|strong="G1909"\w* \w ihn|strong="G0846"\w* \w glauben|strong="G4100"\w* \w sollten|strong="G3195"\w* \w zum|strong="G1519"\w* \w ewigen|strong="G0166"\w* \w Leben|strong="G2222"\w*.  
\v 17  \w Aber|strong="G1161"\w* \w Gott|strong="G2316"\w*, dem \w ewigen|strong="G0165"\w* \w König|strong="G0935"\w*, dem \w Unvergänglichen|strong="G0862"\w* und \w Unsichtbaren|strong="G0517"\w* und \w allein|strong="G3441"\w* \w Weisen|strong="G4680"\w*, sei \w Ehre|strong="G5092"\w* \w und|strong="G2532"\w* \w Preis|strong="G1391"\w* \w in|strong="G1519"\w* \w Ewigkeit|strong="G0165"\w*! \w Amen|strong="G0281"\w*.  
\v 18  \w Dies|strong="G5026"\w* \w Gebot|strong="G3852"\w* befehle \w ich|strong="G3908"\w* \w dir|strong="G4671"\w*, mein \w Sohn|strong="G5043"\w* \w Timotheus|strong="G5095"\w*, \w nach|strong="G2596"\w* den \w vorherigen|strong="G4254"\w* \w Weissagungen|strong="G4394"\w* \w über|strong="G1909"\w* \w dich|strong="G4571"\w*, daß du \w in|strong="G1722"\w* \w ihnen|strong="G0846"\w* eine \w gute|strong="G2570"\w* \w Ritterschaft|strong="G4752"\w* \w übest|strong="G4754"\w*  
