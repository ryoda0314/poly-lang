\v 1 Es \w war|strong="H1961"\w* ein \w Mann|strong="H0376"\w* im \w Lande|strong="H0776"\w* \w Uz|strong="H5780"\w*, der \w hieß|strong="H8034"\w* \w Hiob|strong="H0347"\w*. \w Derselbe|strong="H1931"\w* \w war|strong="H1961"\w* \w schlecht|strong="H3477"\w* und \w recht|strong="H8535"\w*, \w gottesfürchtig|strong="H3373"\w* und \w mied|strong="H5493"\w* \w das|strong="H4480"\w* \w Böse|strong="H7451"\w*.  
\v 2 Und \w zeugte|strong="H3205"\w* \w sieben|strong="H7651"\w* \w Söhne|strong="H1121"\w* und \w drei|strong="H7969"\w* \w Töchter|strong="H1323"\w*;  
\v 3 und seines \w Viehs|strong="H4735"\w* \w waren|strong="H1961"\w* \w siebentausend|strong="H7651"\w* \w Schafe|strong="H6629"\w*, \w dreitausend|strong="H7969"\w* \w Kamele|strong="H1581"\w*, \w fünfhundert|strong="H2568"\w* \w Joch|strong="H6776"\w* \w Rinder|strong="H1241"\w* und \w fünfhundert|strong="H2568"\w* \w Eselinnen|strong="H0860"\w*, und er hatte \w viel|strong="H3966"\w* \w Gesinde|strong="H5657"\w*; und \w er|strong="H1931"\w* \w war|strong="H1961"\w* \w herrlicher|strong="H1419"\w* \w denn|strong="H4480"\w* alle, \w die|strong="H1121"\w* gegen \w Morgen|strong="H6924"\w* wohnten.  
\v 4 Und seine \w Söhne|strong="H1121"\w* \w gingen|strong="H1980"\w* und \w machten|strong="H6213"\w* ein \w Mahl|strong="H4960"\w*, ein \w jeglicher|strong="H0376"\w* in seinem \w Hause|strong="H1004"\w* auf seinen \w Tag|strong="H3117"\w*, und sandten \w hin|strong="H7971"\w* und \w luden|strong="H7121"\w* ihre \w drei|strong="H7969"\w* \w Schwestern|strong="H0269"\w*, \w mit|strong="H5973"\w* ihnen zu \w essen|strong="H0398"\w* und zu \w trinken|strong="H8354"\w*.  
\v 5  \w Und|strong="H1961"\w* \w wenn|strong="H3588"\w* die \w Tage|strong="H3117"\w* des \w Mahls|strong="H4960"\w* um \w waren|strong="H5362"\w*, \w sandte|strong="H7971"\w* \w Hiob|strong="H0347"\w* \w hin|strong="H7971"\w* und \w heiligte|strong="H6942"\w* sie und machte \w sich|strong="H7925"\w* des \w Morgens|strong="H1242"\w* früh \w auf|strong="H7925"\w* und \w opferte|strong="H5927"\w* \w Brandopfer|strong="H5930"\w* nach ihrer \w aller|strong="H3605"\w* \w Zahl|strong="H4557"\w*; \w denn|strong="H3588"\w* \w Hiob|strong="H0347"\w* \w gedachte|strong="H0559"\w*: Meine \w Söhne|strong="H1121"\w* \w möchten|strong="H0194"\w* \w gesündigt|strong="H2398"\w* und \w Gott|strong="H0430"\w* abgesagt \w haben|strong="H1288"\w* in ihrem \w Herzen|strong="H3824"\w*. \w Also|strong="H3602"\w* \w tat|strong="H6213"\w* \w Hiob|strong="H0347"\w* \w allezeit|strong="H3605"\w*.  
\v 6 Es begab sich \w aber|strong="H1961"\w* auf einen \w Tag|strong="H3117"\w*, da die \w Kinder|strong="H1121"\w* \w Gottes|strong="H0430"\w* \w kamen|strong="H0935"\w* und \w vor|strong="H5921"\w* den \w HERRN|strong="H3068"\w* \w traten|strong="H3320"\w*, \w kam|strong="H0935"\w* der \w Satan|strong="H7854"\w* \w auch|strong="H1571"\w* \w unter|strong="H8432"\w* ihnen.  
\v 7 Der \w HERR|strong="H3068"\w* aber \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* dem \w Satan|strong="H7854"\w*: \w Wo|strong="H0370"\w* kommst \w du|strong="H0935"\w* \w her|strong="H4480"\w*? \w Satan|strong="H7854"\w* \w antwortete|strong="H6030"\w* dem \w HERRN|strong="H3068"\w* und \w sprach|strong="H0559"\w*: Ich habe das \w Land|strong="H0776"\w* umher \w durchzogen|strong="H7751"\w*.  
\v 8 Der \w HERR|strong="H3068"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Satan|strong="H7854"\w*: Hast du nicht \w achtgehabt|strong="H3820"\w* \w auf|strong="H5921"\w* meinen \w Knecht|strong="H5650"\w* \w Hiob|strong="H0347"\w*? \w Denn|strong="H3588"\w* es \w ist|strong="H0369"\w* \w seinesgleichen|strong="H3644"\w* \w nicht|strong="H0369"\w* im \w Lande|strong="H0776"\w*, \w schlecht|strong="H3477"\w* und \w recht|strong="H8535"\w*, \w gottesfürchtig|strong="H3373"\w* und \w meidet|strong="H5493"\w* \w das|strong="H4480"\w* \w Böse|strong="H7451"\w*.  
\v 9 Der \w Satan|strong="H7854"\w* \w antwortete|strong="H6030"\w* dem \w HERRN|strong="H3068"\w* und \w sprach|strong="H0559"\w*: Meinst du, daß \w Hiob|strong="H0347"\w* \w umsonst|strong="H2600"\w* \w Gott|strong="H0430"\w* \w fürchtet|strong="H3372"\w*?  
\v 10 Hast du \w doch|strong="H3808"\w* \w ihn|strong="H1157"\w*, sein \w Haus|strong="H1004"\w* \w und|strong="H1157"\w* \w alles|strong="H3605"\w*, \w was|strong="H0834"\w* er hat, \w ringsumher|strong="H4480"\w* \w verwahrt|strong="H7753"\w*. Du hast das \w Werk|strong="H4639"\w* seiner \w Hände|strong="H3027"\w* \w gesegnet|strong="H1288"\w*, und sein \w Gut|strong="H4735"\w* hat sich \w ausgebreitet|strong="H6555"\w* im \w Lande|strong="H0776"\w*.  
\v 11  \w Aber|strong="H0199"\w* \w recke|strong="H7971"\w* deine \w Hand|strong="H3027"\w* \w aus|strong="H7971"\w* und taste \w an|strong="H5060"\w* \w alles|strong="H3605"\w*, \w was|strong="H0834"\w* er hat: was gilt'\w s|strong="H0518"\w*, er wird dir \w ins|strong="H5921"\w* \w Angesicht|strong="H6440"\w* \w absagen|strong="H1288"\w*?  
\v 12 Der \w HERR|strong="H3068"\w* \w sprach|strong="H0559"\w* \w zum|strong="H0413"\w* \w Satan|strong="H7854"\w*: \w Siehe|strong="H2009"\w*, \w alles|strong="H3605"\w*, \w was|strong="H0834"\w* er hat, sei in deiner \w Hand|strong="H3027"\w*; \w nur|strong="H7535"\w* \w an|strong="H0413"\w* ihn selbst \w lege|strong="H7971"\w* deine \w Hand|strong="H3027"\w* \w nicht|strong="H0408"\w*. Da \w ging|strong="H3318"\w* der \w Satan|strong="H7854"\w* \w aus|strong="H3318"\w* \w von|strong="H4480"\w* dem \w HERRN|strong="H3068"\w*.  
\v 13 Des \w Tages|strong="H3117"\w* \w aber|strong="H1961"\w*, da seine \w Söhne|strong="H1121"\w* und \w Töchter|strong="H1323"\w* \w aßen|strong="H0398"\w* und \w Wein|strong="H3196"\w* \w tranken|strong="H8354"\w* in ihres \w Bruders|strong="H0251"\w* \w Hause|strong="H1004"\w*, des \w Erstgeborenen|strong="H1060"\w*,  
\v 14  \w kam|strong="H0935"\w* ein \w Bote|strong="H4397"\w* \w zu|strong="H0413"\w* \w Hiob|strong="H0347"\w* und \w sprach|strong="H0559"\w*: Die \w Rinder|strong="H1241"\w* \w pflügten|strong="H1961"\w*, und die \w Eselinnen|strong="H0860"\w* gingen \w neben|strong="H5921"\w* \w ihnen|strong="H3027"\w* auf der \w Weide|strong="H7462"\w*,  
\v 15 da \w fielen|strong="H5307"\w* die aus \w Saba|strong="H7614"\w* \w herein|strong="H5307"\w* und \w nahmen|strong="H3947"\w* sie und \w schlugen|strong="H5221"\w* die \w Knechte|strong="H5288"\w* mit der \w Schärfe|strong="H6310"\w* des \w Schwerts|strong="H2719"\w*; und \w ich|strong="H0589"\w* \w bin|strong="H7535"\w* \w allein|strong="H0909"\w* \w entronnen|strong="H4422"\w*, daß ich dir's \w ansagte|strong="H5046"\w*.  
\v 16 Da \w er|strong="H2088"\w* \w noch|strong="H5750"\w* \w redete|strong="H1696"\w*, \w kam|strong="H0935"\w* ein \w anderer|strong="H2088"\w* und \w sprach|strong="H0559"\w*: Das \w Feuer|strong="H0784"\w* \w Gottes|strong="H0430"\w* \w fiel|strong="H5307"\w* \w vom|strong="H4480"\w* \w Himmel|strong="H8064"\w* und \w verbrannte|strong="H1197"\w* \w Schafe|strong="H6629"\w* und \w Knechte|strong="H5288"\w* und \w verzehrte|strong="H0398"\w* sie; und \w ich|strong="H0589"\w* \w bin|strong="H7535"\w* \w allein|strong="H0909"\w* \w entronnen|strong="H4422"\w*, daß ich dir's \w ansagte|strong="H5046"\w*.  
\v 17 Da \w der|strong="H2088"\w* \w noch|strong="H5750"\w* \w redete|strong="H1696"\w*, \w kam|strong="H0935"\w* \w einer|strong="H2088"\w* und \w sprach|strong="H0559"\w*: Die \w Chaldäer|strong="H3778"\w* \w machte|strong="H7760"\w* \w drei|strong="H7969"\w* \w Rotten|strong="H7218"\w* und \w überfielen|strong="H6584"\w* die \w Kamele|strong="H1581"\w* und \w nahmen|strong="H3947"\w* sie und \w schlugen|strong="H5221"\w* die \w Knechte|strong="H5288"\w* mit der \w Schärfe|strong="H6310"\w* des \w Schwerts|strong="H2719"\w*; und \w ich|strong="H0589"\w* \w bin|strong="H7535"\w* \w allein|strong="H0909"\w* \w entronnen|strong="H4422"\w*, daß ich dir's \w ansagte|strong="H5046"\w*.  
\v 18 Da \w der|strong="H2088"\w* \w noch|strong="H5704"\w* \w redete|strong="H1696"\w*, \w kam|strong="H0935"\w* \w einer|strong="H2088"\w* und \w sprach|strong="H0559"\w*: Deine \w Söhne|strong="H1121"\w* und \w Töchter|strong="H1323"\w* \w aßen|strong="H0398"\w* und \w tranken|strong="H8354"\w* im \w Hause|strong="H1004"\w* ihres \w Bruders|strong="H0251"\w*, des \w Erstgeborenen|strong="H1060"\w*,  
\v 19 Und \w siehe|strong="H2009"\w*, da \w kam|strong="H0935"\w* ein \w großer|strong="H1419"\w* \w Wind|strong="H7307"\w* \w von|strong="H4480"\w* der \w Wüste|strong="H4057"\w* \w her|strong="H5676"\w* und \w stieß|strong="H5060"\w* auf die \w vier|strong="H0702"\w* \w Ecken|strong="H6438"\w* des \w Hauses|strong="H1004"\w* und warf'\w s|strong="H5307"\w* \w auf|strong="H5921"\w* die jungen \w Leute|strong="H5288"\w*, daß sie \w starben|strong="H4191"\w*; und \w ich|strong="H0589"\w* \w bin|strong="H7535"\w* \w allein|strong="H0909"\w* \w entronnen|strong="H4422"\w*, daß ich dir's \w ansagte|strong="H5046"\w*.  
\v 20 Da \w stand|strong="H6965"\w* \w Hiob|strong="H0347"\w* \w auf|strong="H6965"\w* und \w zerriß|strong="H7167"\w* seine \w Kleider|strong="H4598"\w* und \w raufte|strong="H1494"\w* sein \w Haupt|strong="H7218"\w* und \w fiel|strong="H5307"\w* auf die \w Erde|strong="H0776"\w* und betete \w an|strong="H7812"\w*  
\v 21 und \w sprach|strong="H0559"\w*: Ich bin \w nackt|strong="H6174"\w* \w von|strong="H4480"\w* meiner \w Mutter|strong="H0517"\w* \w Leibe|strong="H0990"\w* \w gekommen|strong="H3318"\w*, \w nackt|strong="H6174"\w* werde ich \w wieder|strong="H7725"\w* \w dahinfahren|strong="H8033"\w*. Der \w HERR|strong="H3068"\w* hat's \w gegeben|strong="H5414"\w*, der \w HERR|strong="H3068"\w* hat's \w genommen|strong="H3947"\w*; der \w Name|strong="H8034"\w* des \w HERRN|strong="H3068"\w* \w sei|strong="H1961"\w* \w gelobt|strong="H1288"\w*.  
\v 22 In \w diesem|strong="H2063"\w* \w allem|strong="H3605"\w* \w sündigte|strong="H2398"\w* \w Hiob|strong="H0347"\w* nicht und \w tat|strong="H5414"\w* \w nichts|strong="H3808"\w* \w Törichtes|strong="H8604"\w* \w wider|strong="H5414"\w* \w Gott|strong="H0430"\w*.   
\c 2  
\p
\v 1 Es begab \w sich|strong="H1961"\w* aber des \w Tages|strong="H3117"\w*, da die \w Kinder|strong="H1121"\w* \w Gottes|strong="H0430"\w* \w kamen|strong="H0935"\w* und \w traten|strong="H3320"\w* \w vor|strong="H5921"\w* den \w HERRN|strong="H3068"\w*, daß der \w Satan|strong="H7854"\w* \w auch|strong="H1571"\w* \w unter|strong="H8432"\w* ihnen \w kam|strong="H0935"\w* und \w vor|strong="H5921"\w* den \w HERRN|strong="H3068"\w* \w trat|strong="H3320"\w*.  
\v 2 Da \w sprach|strong="H0559"\w* der \w HERR|strong="H3068"\w* \w zu|strong="H0413"\w* dem \w Satan|strong="H7854"\w*: \w Wo|strong="H0335"\w* \w kommst|strong="H0935"\w* du \w her|strong="H4480"\w*? Der \w Satan|strong="H7854"\w* \w antwortete|strong="H6030"\w* dem \w HERRN|strong="H3068"\w* und \w sprach|strong="H0559"\w*: Ich \w habe|strong="H1980"\w* das \w Land|strong="H0776"\w* \w umher|strong="H4480"\w* \w durchzogen|strong="H7751"\w*.  
\v 3 Der \w HERR|strong="H3068"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* dem \w Satan|strong="H7854"\w*: Hast du nicht \w acht|strong="H3820"\w* \w auf|strong="H0413"\w* meinen \w Knecht|strong="H5650"\w* \w Hiob|strong="H0347"\w* \w gehabt|strong="H7760"\w*? \w Denn|strong="H3588"\w* es \w ist|strong="H0369"\w* \w seinesgleichen|strong="H3644"\w* im \w Lande|strong="H0776"\w* \w nicht|strong="H0369"\w*, \w schlecht|strong="H3477"\w* und \w recht|strong="H8535"\w*, \w gottesfürchtig|strong="H3373"\w* und \w meidet|strong="H5493"\w* \w das|strong="H4480"\w* \w Böse|strong="H7451"\w* und \w hält|strong="H2388"\w* \w noch|strong="H5750"\w* \w fest|strong="H2388"\w* an seiner \w Frömmigkeit|strong="H8538"\w*; du aber hast mich \w bewogen|strong="H5496"\w*, daß ich ihn ohne \w Ursache|strong="H2600"\w* verderbt \w habe|strong="H1104"\w*.  
\v 4 Der \w Satan|strong="H7854"\w* \w antwortete|strong="H6030"\w* dem \w HERRN|strong="H3068"\w* und \w sprach|strong="H0559"\w*: \w Haut|strong="H5785"\w* \w für|strong="H1157"\w* \w Haut|strong="H5785"\w*; und \w alles|strong="H3605"\w* \w was|strong="H0834"\w* ein \w Mann|strong="H0376"\w* hat, \w läßt|strong="H5414"\w* er \w für|strong="H1157"\w* sein \w Leben|strong="H5315"\w*.  
\v 5  \w Aber|strong="H0199"\w* \w recke|strong="H7971"\w* deine \w Hand|strong="H3027"\w* \w aus|strong="H7971"\w* und \w taste|strong="H5060"\w* \w sein|strong="H0413"\w* \w Gebein|strong="H6106"\w* \w und|strong="H0413"\w* \w Fleisch|strong="H1320"\w* \w an|strong="H0413"\w*: was gilt'\w s|strong="H0518"\w*, er \w wird|strong="H1288"\w* dir \w ins|strong="H0413"\w* \w Angesicht|strong="H6440"\w* \w absagen|strong="H1288"\w*?  
\v 6 Der \w HERR|strong="H3068"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* dem \w Satan|strong="H7854"\w*: \w Siehe|strong="H2009"\w* da, er ist in deiner \w Hand|strong="H3027"\w*; \w doch|strong="H0389"\w* \w schone|strong="H8104"\w* seines \w Lebens|strong="H5315"\w*!  
\v 7 Da \w fuhr|strong="H3318"\w* der \w Satan|strong="H7854"\w* \w aus|strong="H3318"\w* \w vom|strong="H4480"\w* \w Angesicht|strong="H6440"\w* des \w HERRN|strong="H3068"\w* und \w schlug|strong="H5221"\w* \w Hiob|strong="H0347"\w* mit \w bösen|strong="H7451"\w* \w Schwären|strong="H7822"\w* \w von|strong="H4480"\w* der \w Fußsohle|strong="H3709"\w* an bis \w auf|strong="H5704"\w* seinen \w Scheitel|strong="H6936"\w*.  
\v 8 Und er \w nahm|strong="H3947"\w* eine \w Scherbe|strong="H2789"\w* und schabte \w sich|strong="H1623"\w* \w und|strong="H1931"\w* \w saß|strong="H3427"\w* \w in|strong="H8432"\w* der \w Asche|strong="H0665"\w*.  
\v 9 Und sein \w Weib|strong="H0802"\w* \w sprach|strong="H0559"\w* zu ihm: \w Hältst|strong="H2388"\w* du \w noch|strong="H5750"\w* \w fest|strong="H2388"\w* an deiner \w Frömmigkeit|strong="H8538"\w*? Ja, \w sage|strong="H1288"\w* \w Gott|strong="H0430"\w* \w ab|strong="H1288"\w* und \w stirb|strong="H4191"\w*!  
\v 10 Er aber \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihr: Du \w redest|strong="H1696"\w*, wie \w die|strong="H0259"\w* närrischen \w Weiber|strong="H5036"\w* \w reden|strong="H1696"\w*. Haben wir \w Gutes|strong="H2896"\w* \w empfangen|strong="H6901"\w* \w von|strong="H4480"\w* \w Gott|strong="H0430"\w* und \w sollten|strong="H6901"\w* das \w Böse|strong="H7451"\w* \w nicht|strong="H3808"\w* auch \w annehmen|strong="H6901"\w*? In \w diesem|strong="H2063"\w* \w allem|strong="H3605"\w* \w versündigte|strong="H2398"\w* sich \w Hiob|strong="H0347"\w* \w nicht|strong="H3808"\w* mit seinen \w Lippen|strong="H8193"\w*.  
\v 11 Da aber die \w drei|strong="H7969"\w* \w Freunde|strong="H7453"\w* \w Hiobs|strong="H0347"\w* \w hörten|strong="H8085"\w* \w all|strong="H3605"\w* \w das|strong="H2063"\w* \w Unglück|strong="H7451"\w*, das \w über|strong="H5921"\w* ihn gekommen \w war|strong="H0935"\w*, kamen \w sie|strong="H0935"\w*, ein \w jeglicher|strong="H0376"\w* \w aus|strong="H4480"\w* seinem \w Ort|strong="H4725"\w*: \w Eliphas|strong="H0464"\w* von \w Theman|strong="H8489"\w*, \w Bildad|strong="H1085"\w* von \w Suah|strong="H7747"\w* und \w Zophar|strong="H6691"\w* von \w Naema|strong="H5284"\w*. Denn sie \w wurden|strong="H3259"\w* \w eins|strong="H3162"\w*, daß sie \w kämen|strong="H0935"\w*, ihn zu \w beklagen|strong="H5110"\w* und zu \w trösten|strong="H5162"\w*.  
\v 12 Und da sie ihre \w Augen|strong="H5869"\w* \w aufhoben|strong="H5375"\w* \w von|strong="H4480"\w* \w ferne|strong="H7350"\w*, kannten \w sie|strong="H5234"\w* ihn \w nicht|strong="H3808"\w* und hoben \w auf|strong="H5375"\w* ihre \w Stimme|strong="H6963"\w* und \w weinten|strong="H1058"\w*, und ein \w jeglicher|strong="H0376"\w* \w zerriß|strong="H7167"\w* sein \w Kleid|strong="H4598"\w*, und sie \w sprengten|strong="H2236"\w* \w Erde|strong="H6083"\w* \w auf|strong="H5921"\w* ihr \w Haupt|strong="H7218"\w* gen \w Himmel|strong="H8064"\w*  
\v 13 und \w saßen|strong="H3427"\w* \w mit|strong="H0854"\w* ihm auf der \w Erde|strong="H0776"\w* \w sieben|strong="H7651"\w* \w Tage|strong="H3117"\w* und \w sieben|strong="H7651"\w* \w Nächte|strong="H3915"\w* und \w redeten|strong="H1696"\w* \w nichts|strong="H0369"\w* \w mit|strong="H0413"\w* ihm; \w denn|strong="H3588"\w* sie \w sahen|strong="H7200"\w*, daß der \w Schmerz|strong="H3511"\w* \w sehr|strong="H3966"\w* groß \w war|strong="H1431"\w*.   
\c 3  
\p
\v 1  \w Darnach|strong="H0310"\w* \w tat|strong="H6605"\w* \w Hiob|strong="H0347"\w* seinen \w Mund|strong="H6310"\w* \w auf|strong="H6605"\w* und \w verfluchte|strong="H7043"\w* seinen \w Tag|strong="H3117"\w*.  
\v 2 Und \w Hiob|strong="H0347"\w* \w sprach|strong="H6030"\w*:  
\v 3 Der \w Tag|strong="H3117"\w* müsse verloren \w sein|strong="H0006"\w*, darin ich geboren \w bin|strong="H3205"\w*, und die \w Nacht|strong="H3915"\w*, welche \w sprach|strong="H0559"\w*: Es ist ein \w Männlein|strong="H1397"\w* \w empfangen|strong="H2029"\w*!  
\v 4  \w Derselbe|strong="H1931"\w* \w Tag|strong="H3117"\w* \w müsse|strong="H1961"\w* \w finster|strong="H2822"\w* \w sein|strong="H1961"\w*, und \w Gott|strong="H0433"\w* \w von|strong="H4480"\w* \w obenherab|strong="H4605"\w* müsse \w nicht|strong="H0408"\w* nach ihm \w fragen|strong="H1875"\w*; \w kein|strong="H0408"\w* \w Glanz|strong="H5105"\w* müsse über ihn \w scheinen|strong="H3313"\w*!  
\v 5  \w Finsternis|strong="H2822"\w* und \w Dunkel|strong="H6757"\w* müssen ihn \w überwältigen|strong="H1350"\w*, und dicke \w Wolken|strong="H6053"\w* müssen \w über|strong="H5921"\w* ihm \w bleiben|strong="H7931"\w*, und der \w Dampf|strong="H3650"\w* am \w Tage|strong="H3117"\w* mache ihn \w gräßlich|strong="H1204"\w*!  
