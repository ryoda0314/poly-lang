\c 22  
\p
\v 1  \w Josia|strong="H2977"\w* war \w acht|strong="H8083"\w* \w Jahre|strong="H8141"\w* \w alt|strong="H1121"\w*, da er König \w ward|strong="H4427"\w*, und \w regierte|strong="H4427"\w* \w einunddreißig|strong="H0259"\w* \w Jahre|strong="H8141"\w* zu \w Jerusalem|strong="H3389"\w*. Seine \w Mutter|strong="H0517"\w* \w hieß|strong="H8034"\w* \w Jedida|strong="H3040"\w*, eine \w Tochter|strong="H1323"\w* \w Adajas|strong="H5718"\w*, \w von|strong="H4480"\w* \w Bozkath|strong="H1218"\w*.  
\v 2 Und er \w tat|strong="H6213"\w* was dem \w HERRN|strong="H3068"\w* \w wohl|strong="H3477"\w* \w gefiel|strong="H5869"\w*, und \w wandelte|strong="H3212"\w* in \w allem|strong="H3605"\w* \w Wege|strong="H1870"\w* seines \w Vaters|strong="H0001"\w* \w David|strong="H1732"\w* und \w wich|strong="H5493"\w* \w nicht|strong="H3808"\w*, weder zur \w Rechten|strong="H3225"\w* noch zur \w Linken|strong="H8040"\w*.  
\v 3  \w Und|strong="H1961"\w* im \w achtzehnten|strong="H8083"\w* \w Jahr|strong="H8141"\w* des \w Königs|strong="H4428"\w* \w Josia|strong="H2977"\w* \w sandte|strong="H7971"\w* der \w König|strong="H4428"\w* hin \w Saphan|strong="H8227"\w*, den \w Sohn|strong="H1121"\w* \w Azaljas|strong="H0683"\w*, des \w Sohnes|strong="H1121"\w* \w Mesullams|strong="H4918"\w*, den \w Schreiber|strong="H5608"\w*, in das \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w* und \w sprach|strong="H0559"\w*:  
\v 4 Gehe \w hinauf|strong="H5927"\w* \w zu|strong="H0413"\w* dem \w Hohenpriester|strong="H1419"\w* \w Hilkia|strong="H2518"\w*, daß er \w abgebe|strong="H8552"\w* alles \w Geld|strong="H3701"\w*, das zum \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* gebracht \w ist|strong="H0935"\w*, \w das|strong="H0834"\w* die \w Türhüter|strong="H5592"\w* gesammelt \w haben|strong="H0622"\w* \w vom|strong="H4480"\w* \w Volk|strong="H5971"\w*,  
\v 5 daß man es \w gebe|strong="H5414"\w* \w den|strong="H5921"\w* \w Werkmeistern|strong="H4399"\w*, die bestellt \w sind|strong="H6485"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*, und sie \w es|strong="H0853"\w* \w geben|strong="H5414"\w* \w den|strong="H0834"\w* \w Arbeitern|strong="H4399"\w* am \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*, daß sie \w bessern|strong="H2388"\w*, was \w baufällig|strong="H0919"\w* ist am \w Hause|strong="H1004"\w*,  
\v 6 nämlich den \w Zimmerleuten|strong="H2796"\w* und \w Bauleuten|strong="H1129"\w* und \w Maurern|strong="H1443"\w* und denen, die da \w Holz|strong="H6086"\w* und \w gehauene|strong="H4274"\w* \w Steine|strong="H0068"\w* \w kaufen|strong="H7069"\w* sollen, das \w Haus|strong="H1004"\w* zu \w bessern|strong="H2388"\w*;  
\v 7  \w doch|strong="H0389"\w* daß man keine \w Rechnung|strong="H2803"\w* \w von|strong="H0854"\w* ihnen \w nehme|strong="H2803"\w* von dem \w Geld|strong="H3701"\w*, das \w unter|strong="H5921"\w* ihre \w Hand|strong="H3027"\w* getan \w wird|strong="H5414"\w*, \w sondern|strong="H3588"\w* daß \w sie|strong="H1992"\w* auf \w Glauben|strong="H0530"\w* \w handeln|strong="H6213"\w*.  
\v 8 Und der \w Hohepriester|strong="H1419"\w* \w Hilkia|strong="H2518"\w* \w sprach|strong="H0559"\w* \w zu|strong="H5921"\w* dem \w Schreiber|strong="H5608"\w* \w Saphan|strong="H8227"\w*: Ich habe das \w Gesetzbuch|strong="H5612"\w* \w gefunden|strong="H4672"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*. Und \w Hilkia|strong="H2518"\w* \w gab|strong="H5414"\w* das \w Buch|strong="H5612"\w* \w Saphan|strong="H8227"\w*, daß er's \w läse|strong="H7121"\w*.  
\v 9 Und \w Saphan|strong="H8227"\w*, der \w Schreiber|strong="H5608"\w* \w kam|strong="H0935"\w* \w zum|strong="H0413"\w* \w König|strong="H4428"\w* und \w gab|strong="H7725"\w* \w ihm|strong="H4428"\w* \w Bericht|strong="H1697"\w* und \w sprach|strong="H0559"\w*: Deine \w Knechte|strong="H5650"\w* haben das \w Geld|strong="H3701"\w* \w ausgeschüttet|strong="H5413"\w*, das im \w Hause|strong="H1004"\w* gefunden \w ist|strong="H4672"\w* und haben's \w den|strong="H5921"\w* \w Werkmeistern|strong="H4399"\w* \w gegeben|strong="H5414"\w*, die bestellt \w sind|strong="H6485"\w* am \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*.  
\v 10 Auch \w sagte|strong="H5046"\w* \w Saphan|strong="H8227"\w*, der \w Schreiber|strong="H5608"\w*, dem \w König|strong="H4428"\w* und \w sprach|strong="H0559"\w*: \w Hilkia|strong="H2518"\w*, der \w Priester|strong="H3548"\w*, \w gab|strong="H5414"\w* mir ein \w Buch|strong="H5612"\w*. Und \w Saphan|strong="H8227"\w* \w las|strong="H7121"\w* es \w vor|strong="H6440"\w* dem \w König|strong="H4428"\w*.  
\v 11  \w Da|strong="H1961"\w* aber der \w König|strong="H4428"\w* \w hörte|strong="H8085"\w* die \w Worte|strong="H1697"\w* im \w Gesetzbuch|strong="H5612"\w*, \w zerriß|strong="H7167"\w* er seine \w Kleider|strong="H0899"\w*.  
\v 12 Und der \w König|strong="H4428"\w* \w gebot|strong="H6680"\w* \w Hilkia|strong="H2518"\w*, dem \w Priester|strong="H3548"\w*, und \w Ahikam|strong="H0296"\w*, dem \w Sohn|strong="H1121"\w* \w Saphans|strong="H8227"\w*, und \w Achbor|strong="H5907"\w*, dem \w Sohn|strong="H1121"\w* \w Michajas|strong="H4320"\w*, und \w Saphan|strong="H8227"\w*, dem \w Schreiber|strong="H5608"\w*, und \w Asaja|strong="H6222"\w* dem \w Knecht|strong="H5650"\w* des \w Königs|strong="H4428"\w*, und \w sprach|strong="H0559"\w*:  
\v 13 Gehet \w hin|strong="H3212"\w* und \w fraget|strong="H1875"\w* den \w HERRN|strong="H3068"\w* \w für|strong="H1157"\w* mich, \w für|strong="H1157"\w* dies \w Volk|strong="H5971"\w* und \w für|strong="H1157"\w* \w ganz|strong="H3605"\w* \w Juda|strong="H3063"\w* \w um|strong="H5921"\w* die \w Worte|strong="H1697"\w* \w dieses|strong="H2088"\w* \w Buches|strong="H5612"\w*, das gefunden \w ist|strong="H4672"\w*; \w denn|strong="H3588"\w* es ist ein \w großer|strong="H1419"\w* \w Grimm|strong="H2534"\w* des \w HERRN|strong="H3068"\w*, \w der|strong="H0834"\w* über uns entbrannt \w ist|strong="H3341"\w*, darum \w daß|strong="H5921"\w* unsre \w Väter|strong="H0001"\w* nicht gehorcht \w haben|strong="H8085"\w* \w den|strong="H5921"\w* \w Worten|strong="H1697"\w* \w dieses|strong="H2088"\w* \w Buches|strong="H5612"\w*, daß sie \w täten|strong="H6213"\w* \w alles|strong="H3605"\w*, \w was|strong="H0834"\w* \w darin|strong="H5921"\w* geschrieben \w ist|strong="H3789"\w*.  
\v 14 Da \w gingen|strong="H3212"\w* hin \w Hilkia|strong="H2518"\w*, der \w Priester|strong="H3548"\w*, \w Ahikam|strong="H0296"\w*, \w Achbor|strong="H5907"\w*, \w Saphan|strong="H8227"\w* und \w Asaja|strong="H6222"\w* \w zu|strong="H0413"\w* der \w Prophetin|strong="H5031"\w* \w Hulda|strong="H2468"\w*, dem \w Weibe|strong="H0802"\w* \w Sallums|strong="H7967"\w*, des \w Sohnes|strong="H1121"\w* \w Thikwas|strong="H8616"\w*, des \w Sohnes|strong="H1121"\w* \w Harhas|strong="H2745"\w*, des \w Hüters|strong="H8104"\w* der \w Kleider|strong="H0899"\w*, und sie \w wohnte|strong="H3427"\w* zu \w Jerusalem|strong="H3389"\w* im andern \w Teil|strong="H4932"\w*; und \w sie|strong="H1931"\w* \w redeten|strong="H1696"\w* \w mit|strong="H0413"\w* ihr.  
\v 15 Sie aber \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihnen: \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*, der \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*: \w Saget|strong="H0559"\w* dem \w Mann|strong="H0376"\w*, \w der|strong="H0834"\w* euch \w zu|strong="H0413"\w* mir gesandt \w hat|strong="H7971"\w*:  
\v 16  \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Siehe|strong="H2009"\w*, ich will \w Unglück|strong="H7451"\w* \w über|strong="H0413"\w* \w diese|strong="H2088"\w* \w Stätte|strong="H4725"\w* und ihre \w Einwohner|strong="H3427"\w* \w bringen|strong="H0935"\w*, \w alle|strong="H3605"\w* \w Worte|strong="H1697"\w* des \w Gesetzes|strong="H5612"\w*, \w die|strong="H0834"\w* der \w König|strong="H4428"\w* Juda'\w s|strong="H3063"\w* hat lassen \w lesen|strong="H7121"\w*.  
\v 17  \w Darum|strong="H8478"\w*, \w daß|strong="H0834"\w* sie mich \w verlassen|strong="H5800"\w* und \w andern|strong="H0312"\w* \w Göttern|strong="H0430"\w* geräuchert \w haben|strong="H6999"\w*, mich \w zu|strong="H4616"\w* \w erzürnen|strong="H3707"\w* mit \w allen|strong="H3605"\w* \w Werken|strong="H4639"\w* ihrer \w Hände|strong="H3027"\w*, darum \w wird|strong="H3341"\w* mein \w Grimm|strong="H2534"\w* sich wider \w diese|strong="H2088"\w* \w Stätte|strong="H4725"\w* \w entzünden|strong="H3341"\w* und \w nicht|strong="H3808"\w* ausgelöscht \w werden|strong="H3518"\w*.  
\v 18 Aber \w dem|strong="H0413"\w* \w König|strong="H4428"\w* Juda'\w s|strong="H3063"\w*, der \w euch|strong="H0853"\w* gesandt \w hat|strong="H7971"\w*, den \w HERRN|strong="H3068"\w* zu \w fragen|strong="H1875"\w*, sollt \w ihr|strong="H0413"\w* \w sagen|strong="H0559"\w*: So \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*, der \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*:  
\v 19 Darum \w daß|strong="H3282"\w* dein \w Herz|strong="H3824"\w* erweicht \w ist|strong="H7401"\w* über den \w Worten|strong="H1697"\w*, \w die|strong="H0834"\w* du gehört \w hast|strong="H8085"\w*, und hast dich \w gedemütigt|strong="H3665"\w* \w vor|strong="H4480"\w* dem \w HERRN|strong="H3068"\w*, da du \w hörtest|strong="H8085"\w*, \w was|strong="H0834"\w* ich geredet \w habe|strong="H1696"\w* \w wider|strong="H5921"\w* \w diese|strong="H2088"\w* \w Stätte|strong="H4725"\w* und \w ihre|strong="H5921"\w* \w Einwohner|strong="H3427"\w*, daß sie sollen eine \w Verwüstung|strong="H8047"\w* und ein \w Fluch|strong="H7045"\w* \w sein|strong="H1961"\w*, und hast deine \w Kleider|strong="H0899"\w* \w zerrissen|strong="H7167"\w* und hast \w geweint|strong="H1058"\w* \w vor|strong="H6440"\w* mir, so habe ich'\w s|strong="H0595"\w* \w auch|strong="H1571"\w* \w erhört|strong="H8085"\w*, \w spricht|strong="H5002"\w* der \w HERR|strong="H3068"\w*.  
\v 20  \w Darum|strong="H3651"\w* will ich dich \w zu|strong="H5921"\w* deinen \w Vätern|strong="H0001"\w* \w sammeln|strong="H0622"\w*, daß du mit \w Frieden|strong="H7965"\w* \w in|strong="H0413"\w* dein \w Grab|strong="H6913"\w* versammelt \w werdest|strong="H0622"\w* und deine \w Augen|strong="H5869"\w* \w nicht|strong="H3808"\w* \w sehen|strong="H7200"\w* \w all|strong="H3605"\w* das \w Unglück|strong="H7451"\w*, \w das|strong="H0834"\w* \w ich|strong="H0589"\w* \w über|strong="H5921"\w* \w diese|strong="H2088"\w* \w Stätte|strong="H4725"\w* bringen \w will|strong="H0935"\w*. Und sie \w sagten|strong="H7725"\w* \w es|strong="H1697"\w* dem \w König|strong="H4428"\w* \w wieder|strong="H7725"\w*.   
\c 23  
\p
\v 1 Und der \w König|strong="H4428"\w* \w sandte|strong="H7971"\w* hin, und es \w versammelten|strong="H0622"\w* sich \w zu|strong="H0413"\w* ihm \w alle|strong="H3605"\w* \w Ältesten|strong="H2205"\w* in \w Juda|strong="H3063"\w* und \w Jerusalem|strong="H3389"\w*.  
\v 2 Und der \w König|strong="H4428"\w* ging \w hinauf|strong="H5927"\w* ins \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w* und \w alle|strong="H3605"\w* \w Männer|strong="H0376"\w* von \w Juda|strong="H3063"\w* und \w alle|strong="H3605"\w* \w Einwohner|strong="H3427"\w* von \w Jerusalem|strong="H3389"\w* \w mit|strong="H0854"\w* ihm, \w Priester|strong="H3548"\w* und \w Propheten|strong="H5030"\w*, und \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w*, \w klein|strong="H6996"\w* \w und|strong="H5704"\w* \w groß|strong="H1419"\w*; und man \w las|strong="H7121"\w* vor ihren \w Ohren|strong="H0241"\w* \w alle|strong="H3605"\w* \w Worte|strong="H1697"\w* aus dem \w Buch|strong="H5612"\w* des \w Bundes|strong="H1285"\w*, das im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* gefunden \w war|strong="H4672"\w*.  
\v 3 Und der \w König|strong="H4428"\w* \w trat|strong="H5975"\w* \w an|strong="H5921"\w* die \w Säule|strong="H5982"\w* und \w machte|strong="H3772"\w* einen \w Bund|strong="H1285"\w* \w vor|strong="H6440"\w* dem \w HERRN|strong="H3068"\w*, daß sie sollten \w wandeln|strong="H3212"\w* dem \w HERRN|strong="H3068"\w* \w nach|strong="H0310"\w* und \w halten|strong="H8104"\w* seine \w Gebote|strong="H4687"\w*, \w Zeugnisse|strong="H5715"\w* und \w Rechte|strong="H2708"\w* von \w ganzem|strong="H3605"\w* \w Herzen|strong="H3820"\w* und von \w ganzer|strong="H3605"\w* \w Seele|strong="H5315"\w*, daß sie \w aufrichteten|strong="H6965"\w* die \w Worte|strong="H1697"\w* \w dieses|strong="H2063"\w* \w Bundes|strong="H1285"\w*, die geschrieben \w standen|strong="H3789"\w* \w in|strong="H5921"\w* \w diesem|strong="H2088"\w* \w Buch|strong="H5612"\w*. Und \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* \w trat|strong="H5975"\w* in den \w Bund|strong="H1285"\w*.  
\v 4 Und der \w König|strong="H4428"\w* \w gebot|strong="H6680"\w* dem \w Hohenpriester|strong="H1419"\w* \w Hilkia|strong="H2518"\w* und den \w nächsten|strong="H4932"\w* \w Priestern|strong="H3548"\w* nach ihm und den \w Hütern|strong="H8104"\w* an der \w Schwelle|strong="H5592"\w*, daß sie sollten \w aus|strong="H4480"\w* dem \w Tempel|strong="H1964"\w* des \w HERRN|strong="H3068"\w* \w tun|strong="H3318"\w* \w alle|strong="H3605"\w* \w Geräte|strong="H3627"\w*, die dem \w Baal|strong="H1168"\w* und der \w Aschera|strong="H0842"\w* und \w allem|strong="H3605"\w* \w Heer|strong="H6635"\w* des \w Himmels|strong="H8064"\w* gemacht \w waren|strong="H6213"\w*. Und sie \w verbrannten|strong="H8313"\w* sie \w außen|strong="H4480"\w* vor \w Jerusalem|strong="H3389"\w* im \w Tal|strong="H7709"\w* \w Kidron|strong="H6939"\w*, und ihr \w Staub|strong="H6083"\w* ward \w getragen|strong="H5375"\w* gen Beth-\w El|strong="H1008"\w*.  
\v 5 Und er tat \w ab|strong="H7673"\w* die \w Götzenpfaffen|strong="H3649"\w*, \w welche|strong="H0834"\w* die \w Könige|strong="H4428"\w* Juda'\w s|strong="H3063"\w* hatten \w eingesetzt|strong="H5414"\w*, zu \w räuchern|strong="H6999"\w* auf den \w Höhen|strong="H1116"\w* in den \w Städten|strong="H5892"\w* Juda'\w s|strong="H3063"\w* und \w um|strong="H4524"\w* \w Jerusalem|strong="H3389"\w* her, auch die \w Räucherer|strong="H6999"\w* des \w Baal|strong="H1168"\w* und der \w Sonne|strong="H8121"\w* und des \w Mondes|strong="H3394"\w* und der \w Planeten|strong="H4208"\w* und \w alles|strong="H3605"\w* \w Heeres|strong="H6635"\w* am \w Himmel|strong="H8064"\w*.  
\v 6 Und ließ das \w Ascherabild|strong="H0842"\w* \w aus|strong="H4480"\w* dem \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w führen|strong="H3318"\w* \w hinaus|strong="H4480"\w* vor \w Jerusalem|strong="H3389"\w* \w an|strong="H0413"\w* den \w Bach|strong="H5158"\w* \w Kidron|strong="H6939"\w* und \w verbrannte|strong="H8313"\w* \w es|strong="H0853"\w* am \w Bach|strong="H5158"\w* \w Kidron|strong="H6939"\w* und \w machte|strong="H1854"\w* es zu \w Staub|strong="H6083"\w* und man \w warf|strong="H7993"\w* den \w Staub|strong="H6083"\w* \w auf|strong="H5921"\w* die \w Gräber|strong="H6913"\w* der \w gemeinen|strong="H1121"\w* \w Leute|strong="H5971"\w*.  
\v 7 Und er brach \w ab|strong="H5422"\w* die \w Häuser|strong="H1004"\w* der \w Hurer|strong="H6945"\w*, \w die|strong="H0834"\w* an dem \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* waren, \w darin|strong="H0834"\w* die \w Weiber|strong="H0802"\w* \w wirkten|strong="H0707"\w* \w Häuser|strong="H1004"\w* für die \w Aschera|strong="H0842"\w*.  
\v 8 Und ließ \w kommen|strong="H0935"\w* \w alle|strong="H3605"\w* \w Priester|strong="H3548"\w* \w aus|strong="H4480"\w* den \w Städten|strong="H5892"\w* Juda'\w s|strong="H3063"\w* und \w verunreinigte|strong="H2930"\w* die \w Höhen|strong="H1116"\w*, \w da|strong="H0834"\w* die \w Priester|strong="H3548"\w* \w räucherten|strong="H6999"\w*, \w von|strong="H4480"\w* \w Geba|strong="H1387"\w* an bis \w gen|strong="H5704"\w* Beer-\w Seba|strong="H0884"\w*, und \w brach|strong="H5422"\w* ab die \w Höhen|strong="H1116"\w* an den \w Toren|strong="H8179"\w*, \w die|strong="H0834"\w* an der \w Tür|strong="H6607"\w* des \w Tors|strong="H8179"\w* \w Josuas|strong="H3091"\w*, des \w Stadtvogts|strong="H5892"\w*, waren \w und|strong="H0834"\w* \w zur|strong="H5921"\w* \w Linken|strong="H8040"\w*, wenn \w man|strong="H0376"\w* zum \w Tor|strong="H8179"\w* der \w Stadt|strong="H5892"\w* geht.  
\v 9 \w Doch|strong="H0389"\w* durften die \w Priester|strong="H3548"\w* der \w Höhen|strong="H1116"\w* \w nicht|strong="H3808"\w* \w opfern|strong="H5927"\w* \w auf|strong="H0413"\w* dem \w Altar|strong="H4196"\w* des \w HERRN|strong="H3068"\w* zu \w Jerusalem|strong="H3389"\w*, \w sondern|strong="H3588"\w* \w aßen|strong="H0398"\w* \w ungesäuertes|strong="H4682"\w* Brot \w unter|strong="H8432"\w* ihren \w Brüdern|strong="H0251"\w*.  
