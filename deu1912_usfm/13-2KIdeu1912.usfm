\v 1 Im \w dreiundzwanzigsten|strong="H7969"\w* \w Jahr|strong="H8141"\w* des \w Joas|strong="H3101"\w*, des \w Sohnes|strong="H1121"\w* \w Ahasjas|strong="H0274"\w*, des \w Königs|strong="H4428"\w* Juda'\w s|strong="H3063"\w*, ward \w Joahas|strong="H3059"\w*, der \w Sohn|strong="H1121"\w* \w Jehus|strong="H3058"\w*, \w König|strong="H4427"\w* \w über|strong="H5921"\w* \w Israel|strong="H3478"\w* zu \w Samaria|strong="H8111"\w* \w siebzehn|strong="H7651"\w* \w Jahre|strong="H8141"\w*;  
\v 2 und er \w tat|strong="H6213"\w*, was dem \w HERRN|strong="H3068"\w* \w übel|strong="H7451"\w* \w gefiel|strong="H5869"\w*, und \w wandelte|strong="H3212"\w* \w nach|strong="H0310"\w* den \w Sünden|strong="H2403"\w* \w Jerobeams|strong="H3379"\w*, des \w Sohnes|strong="H1121"\w* \w Nebats|strong="H5028"\w*, \w der|strong="H0834"\w* \w Israel|strong="H3478"\w* sündigen \w machte|strong="H2398"\w*, und \w ließ|strong="H5493"\w* \w nicht|strong="H3808"\w* \w davon|strong="H4480"\w*.  
\v 3 Und des \w HERRN|strong="H3068"\w* \w Zorn|strong="H0639"\w* \w ergrimmte|strong="H2734"\w* über \w Israel|strong="H3478"\w*, und er \w gab|strong="H5414"\w* sie in die \w Hand|strong="H3027"\w* \w Hasaels|strong="H2371"\w*, des \w Königs|strong="H4428"\w* von \w Syrien|strong="H0758"\w*, und \w Benhadads|strong="H1130"\w*, des \w Sohnes|strong="H1121"\w* \w Hasaels|strong="H2371"\w*, die \w ganze|strong="H3605"\w* \w Zeit|strong="H3117"\w*.  
\v 4 Aber \w Joahas|strong="H3059"\w* \w bat|strong="H2470"\w* des \w HERRN|strong="H3068"\w* \w Angesucht|strong="H6440"\w*. Und der \w HERR|strong="H3068"\w* \w erhörte|strong="H8085"\w* \w ihn|strong="H0413"\w*; \w denn|strong="H3588"\w* er \w sah|strong="H7200"\w* den \w Jammer|strong="H3906"\w* \w Israels|strong="H3478"\w* an, \w wie|strong="H3588"\w* \w sie|strong="H0853"\w* der \w König|strong="H4428"\w* von \w Syrien|strong="H0758"\w* \w drängte|strong="H3905"\w*.  
\v 5 Und der \w HERR|strong="H3068"\w* \w gab|strong="H5414"\w* \w Israel|strong="H3478"\w* einen \w Heiland|strong="H3467"\w*, der sie \w aus|strong="H4480"\w* der \w Gewalt|strong="H3027"\w* der \w Syrer|strong="H0758"\w* \w führte|strong="H3318"\w*, daß die \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w* in ihren \w Hütten|strong="H0168"\w* \w wohnten|strong="H3427"\w* wie \w zuvor|strong="H8032"\w*.  
\v 6  \w Doch|strong="H0389"\w* sie \w ließen|strong="H5493"\w* \w nicht|strong="H3808"\w* \w von|strong="H4480"\w* der \w Sünde|strong="H2403"\w* des \w Hauses|strong="H1004"\w* \w Jerobeams|strong="H3379"\w*, \w der|strong="H0834"\w* \w Israel|strong="H3478"\w* sündigen \w machte|strong="H2398"\w*, sondern \w wandelten|strong="H1980"\w* darin. \w Auch|strong="H1571"\w* \w blieb|strong="H5975"\w* stehen das \w Ascherabild|strong="H0842"\w* zu \w Samaria|strong="H8111"\w*.  
\v 7  \w Denn|strong="H3588"\w* es war des \w Volks|strong="H5971"\w* des \w Joahas|strong="H3059"\w* \w nicht|strong="H3808"\w* mehr \w übriggeblieben|strong="H7604"\w* \w als|strong="H3588"\w* \w fünfzig|strong="H2572"\w* \w Reiter|strong="H6571"\w*, \w zehn|strong="H6235"\w* \w Wagen|strong="H7393"\w* und \w zehntausend|strong="H6235"\w* Mann \w Fußvolk|strong="H7273"\w*. \w Denn|strong="H3588"\w* der \w König|strong="H4428"\w* von \w Syrien|strong="H0758"\w* hatte sie \w umgebracht|strong="H0006"\w* und hatte sie \w gemacht|strong="H7760"\w* wie \w Staub|strong="H6083"\w* beim \w Dreschen|strong="H1758"\w*.  
\v 8 Was aber \w mehr|strong="H3499"\w* von \w Joahas|strong="H3059"\w* zu sagen \w ist|strong="H1697"\w* und \w alles|strong="H3605"\w*, \w was|strong="H0834"\w* er getan \w hat|strong="H6213"\w*, und seine \w Macht|strong="H1369"\w*, siehe, \w das|strong="H1992"\w* ist \w geschrieben|strong="H3789"\w* \w in|strong="H5921"\w* der \w Chronik|strong="H5612"\w* der \w Könige|strong="H4428"\w* \w Israels|strong="H3478"\w*.  
\v 9 Und \w Joahas|strong="H3059"\w* \w entschlief|strong="H7901"\w* \w mit|strong="H5973"\w* seinen \w Vätern|strong="H0001"\w*, und man \w begrub|strong="H6912"\w* ihn zu \w Samaria|strong="H8111"\w*. Und sein \w Sohn|strong="H1121"\w* \w Joas|strong="H3101"\w* ward \w König|strong="H4427"\w* an seiner \w Statt|strong="H8478"\w*.  
\v 10 Im \w siebenunddreißigsten|strong="H7651"\w* \w Jahr|strong="H8141"\w* des \w Joas|strong="H3101"\w*, des \w Königs|strong="H4428"\w* in \w Juda|strong="H3063"\w*, \w ward|strong="H4427"\w* \w Joas|strong="H3060"\w*, der \w Sohn|strong="H1121"\w* \w Joahas|strong="H3059"\w*, \w König|strong="H4427"\w* \w über|strong="H5921"\w* \w Israel|strong="H3478"\w* zu \w Samaria|strong="H8111"\w* \w sechzehn|strong="H8337"\w* \w Jahre|strong="H8141"\w*;  
\v 11 und er \w tat|strong="H6213"\w*, was dem \w HERRN|strong="H3068"\w* \w übel|strong="H7451"\w* \w gefiel|strong="H5869"\w*, und \w ließ|strong="H5493"\w* \w nicht|strong="H3808"\w* \w von|strong="H4480"\w* \w allen|strong="H3605"\w* \w Sünden|strong="H2403"\w* \w Jerobeams|strong="H3379"\w*, des \w Sohnes|strong="H1121"\w* \w Nebats|strong="H5028"\w*, \w der|strong="H0834"\w* \w Israel|strong="H3478"\w* sündigen \w machte|strong="H2398"\w*, sondern \w wandelte|strong="H1980"\w* darin.  
\v 12 Was aber \w mehr|strong="H3499"\w* von \w Joas|strong="H3101"\w* zu sagen \w ist|strong="H1697"\w* \w und|strong="H3605"\w* \w was|strong="H0834"\w* er getan \w hat|strong="H6213"\w* und seine \w Macht|strong="H1369"\w*, \w wie|strong="H0834"\w* er \w mit|strong="H5973"\w* \w Amazja|strong="H0558"\w*, dem \w König|strong="H4428"\w* Juda'\w s|strong="H3063"\w*, gestritten \w hat|strong="H3898"\w*, siehe, \w das|strong="H1992"\w* ist \w geschrieben|strong="H3789"\w* \w in|strong="H5921"\w* der \w Chronik|strong="H5612"\w* der \w Könige|strong="H4428"\w* \w Israels|strong="H3478"\w*.  
\v 13 Und \w Joas|strong="H3101"\w* \w entschlief|strong="H7901"\w* \w mit|strong="H5973"\w* seinen \w Vätern|strong="H0001"\w*, und \w Jerobeam|strong="H3379"\w* \w saß|strong="H3427"\w* \w auf|strong="H5921"\w* seinem \w Stuhl|strong="H3678"\w*. \w Joas|strong="H3101"\w* aber ward \w begraben|strong="H6912"\w* zu \w Samaria|strong="H8111"\w* \w bei|strong="H5973"\w* den \w Königen|strong="H4428"\w* \w Israels|strong="H3478"\w*.  
\v 14  \w Elisa|strong="H0477"\w* aber war \w krank|strong="H2470"\w*, \w daran|strong="H0834"\w* er auch \w starb|strong="H4191"\w*. Und \w Joas|strong="H3101"\w*, der \w König|strong="H4428"\w* \w Israels|strong="H3478"\w*, \w kam|strong="H3381"\w* \w zu|strong="H0413"\w* ihm \w hinab|strong="H3381"\w* und \w weinte|strong="H1058"\w* \w vor|strong="H5921"\w* \w ihm|strong="H6440"\w* und \w sprach|strong="H0559"\w*: Mein \w Vater|strong="H0001"\w*, mein \w Vater|strong="H0001"\w*! \w Wagen|strong="H7393"\w* \w Israels|strong="H3478"\w* und seine \w Reiter|strong="H6571"\w*!  
\v 15  \w Elisa|strong="H0477"\w* aber \w sprach|strong="H0559"\w* zu ihm: \w Nimm|strong="H3947"\w* \w Bogen|strong="H7198"\w* und \w Pfeile|strong="H2671"\w*! Und da er den \w Bogen|strong="H7198"\w* und die \w Pfeile|strong="H2671"\w* \w nahm|strong="H3947"\w*,  
\v 16  \w sprach|strong="H0559"\w* er zum \w König|strong="H4428"\w* \w Israels|strong="H3478"\w*: \w Spanne|strong="H7392"\w* \w mit|strong="H5921"\w* deiner \w Hand|strong="H3027"\w* den \w Bogen|strong="H7198"\w*! Und er \w spannte|strong="H7392"\w* mit seiner \w Hand|strong="H3027"\w*. Und \w Elisa|strong="H0477"\w* \w legte|strong="H7760"\w* seine \w Hand|strong="H3027"\w* \w auf|strong="H5921"\w* des \w Königs|strong="H4428"\w* \w Hand|strong="H3027"\w*  
\v 17 und \w sprach|strong="H0559"\w*: \w Tu|strong="H6605"\w* das \w Fenster|strong="H2474"\w* \w auf|strong="H6605"\w* gegen \w Morgen|strong="H6924"\w*! Und er tat's \w auf|strong="H6605"\w*. Und \w Elisa|strong="H0477"\w* \w sprach|strong="H0559"\w*: \w Schieß|strong="H3384"\w*! Und er \w schoß|strong="H3384"\w*. Er aber \w sprach|strong="H0559"\w*: Ein \w Pfeil|strong="H2671"\w* des \w Heils|strong="H8668"\w* vom \w HERRN|strong="H3068"\w*, ein \w Pfeil|strong="H2671"\w* des \w Heils|strong="H8668"\w* wider die \w Syrer|strong="H0758"\w*; und du wirst die \w Syrer|strong="H0758"\w* \w schlagen|strong="H5221"\w* zu \w Aphek|strong="H0663"\w*, \w bis|strong="H5704"\w* sie aufgerieben \w sind|strong="H3615"\w*.  
\v 18 Und er \w sprach|strong="H0559"\w*: \w Nimm|strong="H3947"\w* die \w Pfeile|strong="H2671"\w*! Und da er sie \w nahm|strong="H3947"\w*, sprach \w er|strong="H0559"\w* zum \w König|strong="H4428"\w* \w Israels|strong="H3478"\w*: \w Schlage|strong="H5221"\w* die \w Erde|strong="H0776"\w*! Und er \w schlug|strong="H5221"\w* \w dreimal|strong="H7969"\w* und stand \w still|strong="H5975"\w*.  
\v 19 Da ward der \w Mann|strong="H0376"\w* \w Gottes|strong="H0430"\w* \w zornig|strong="H7107"\w* \w auf|strong="H5921"\w* ihn und \w sprach|strong="H0559"\w*: \w Hättest|strong="H5221"\w* du fünf-\w oder|strong="H2568"\w* \w sechsmal|strong="H8337"\w* \w geschlagen|strong="H5221"\w*, \w so|strong="H0227"\w* würdest du die \w Syrer|strong="H0758"\w* geschlagen \w haben|strong="H5221"\w*, \w bis|strong="H5704"\w* sie aufgerieben \w wären|strong="H3615"\w*; nun \w aber|strong="H6258"\w* wirst du \w sie|strong="H0758"\w* \w dreimal|strong="H7969"\w* \w schlagen|strong="H5221"\w*.  
\v 20 Da aber \w Elisa|strong="H0477"\w* gestorben \w war|strong="H4191"\w* und man ihn begraben \w hatte|strong="H6912"\w*, \w fielen|strong="H0935"\w* die \w Kriegsleute|strong="H1416"\w* der \w Moabiter|strong="H4124"\w* ins \w Land|strong="H0776"\w* \w desselben|strong="H0935"\w* \w Jahres|strong="H8141"\w*.  
\v 21 Und es begab \w sich|strong="H1961"\w*, daß \w man|strong="H1992"\w* einen \w Mann|strong="H0376"\w* \w begrub|strong="H6912"\w*; da sie \w aber|strong="H2009"\w* die \w Kriegsleute|strong="H1416"\w* \w sahen|strong="H7200"\w*, \w warfen|strong="H7993"\w* sie den \w Mann|strong="H0376"\w* in \w Elisas|strong="H0477"\w* \w Grab|strong="H6913"\w*. Und da \w er|strong="H0376"\w* \w hinabkam|strong="H3212"\w* und die \w Gebeine|strong="H6106"\w* \w Elisas|strong="H0477"\w* \w berührte|strong="H5060"\w*, ward er \w lebendig|strong="H2421"\w* und \w trat|strong="H6965"\w* \w auf|strong="H5921"\w* seine \w Füße|strong="H7272"\w*.  
\v 22 Also \w zwang|strong="H3905"\w* nun \w Hasael|strong="H2371"\w*, der \w König|strong="H4428"\w* von \w Syrien|strong="H0758"\w*, \w Israel|strong="H3478"\w*, \w solange|strong="H3605"\w* \w Joahas|strong="H3059"\w* \w lebte|strong="H3117"\w*.  
\v 23 Aber der \w HERR|strong="H3068"\w* tat \w ihnen|strong="H0854"\w* \w Gnade|strong="H2603"\w* und erbarmte \w sich|strong="H7355"\w* ihrer und wandte \w sich|strong="H6437"\w* \w zu|strong="H0413"\w* ihnen \w um|strong="H4616"\w* seines \w Bundes|strong="H1285"\w* willen mit \w Abraham|strong="H0085"\w*, \w Isaak|strong="H3327"\w* und \w Jakob|strong="H3290"\w* und \w wollte|strong="H0014"\w* sie \w nicht|strong="H3808"\w* \w verderben|strong="H7843"\w*, \w verwarf|strong="H7993"\w* sie auch \w nicht|strong="H3808"\w* \w von|strong="H4480"\w* seinem \w Angesicht|strong="H6440"\w* \w bis|strong="H5704"\w* auf diese \w Stunde|strong="H6258"\w*.  
\v 24 Und \w Hasael|strong="H2371"\w*, der \w König|strong="H4428"\w* von \w Syrien|strong="H0758"\w*, \w starb|strong="H4191"\w*, und sein \w Sohn|strong="H1121"\w* \w Benhadad|strong="H1130"\w* ward \w König|strong="H4427"\w* an seiner \w Statt|strong="H8478"\w*.  
\v 25  \w Joas|strong="H3060"\w* aber \w nahm|strong="H3947"\w* \w wieder|strong="H7725"\w* die \w Städte|strong="H5892"\w* \w aus|strong="H4480"\w* der \w Hand|strong="H3027"\w* \w Benhadads|strong="H1130"\w*, des \w Sohnes|strong="H1121"\w* \w Hasaels|strong="H2371"\w*, \w die|strong="H0834"\w* er \w aus|strong="H4480"\w* der \w Hand|strong="H3027"\w* seines \w Vaters|strong="H0001"\w* \w Joahas|strong="H3059"\w* genommen \w hatte|strong="H3947"\w* im \w Streit|strong="H4421"\w*. \w Dreimal|strong="H7969"\w* \w schlug|strong="H5221"\w* ihn \w Joas|strong="H3101"\w* und \w brachte|strong="H7725"\w* die \w Städte|strong="H5892"\w* \w Israels|strong="H3478"\w* \w wieder|strong="H7725"\w*.   
