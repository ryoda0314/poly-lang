\v 23  \w Wohlan|strong="H6258"\w*, nimm eine \w Wette|strong="H6148"\w* an mit meinem \w Herrn|strong="H0113"\w*, dem \w König|strong="H4428"\w* von \w Assyrien|strong="H0804"\w*: ich will dir \w zweitausend|strong="H0505"\w* \w Rosse|strong="H5483"\w* \w geben|strong="H5414"\w*, \w ob|strong="H0518"\w* du \w könntest|strong="H3201"\w* \w Reiter|strong="H7392"\w* \w dazu|strong="H5921"\w* \w geben|strong="H5414"\w*.  
\v 24  \w Wie|strong="H0349"\w* willst du denn \w bleiben|strong="H7725"\w* \w vor|strong="H6440"\w* der \w geringsten|strong="H6996"\w* \w Hauptleute|strong="H6346"\w* \w einem|strong="H0259"\w* von meines \w Herrn|strong="H0113"\w* \w Untertanen|strong="H5650"\w*? Und du verläßt \w dich|strong="H0982"\w* \w auf|strong="H5921"\w* \w Ägypten|strong="H4714"\w* um der \w Wagen|strong="H7393"\w* und \w Reiter|strong="H6571"\w* willen.  
\v 25 Meinst du \w aber|strong="H6258"\w*, ich sei \w ohne|strong="H1107"\w* den \w HERRN|strong="H3068"\w* \w heraufgezogen|strong="H5927"\w*, \w daß|strong="H5921"\w* ich \w diese|strong="H2088"\w* \w Stätte|strong="H4725"\w* \w verderbe|strong="H7843"\w*? Der \w HERR|strong="H3068"\w* hat mich'\w s|strong="H0413"\w* \w geheißen|strong="H0559"\w*: Ziehe \w hinauf|strong="H5927"\w* \w in|strong="H5921"\w* \w dies|strong="H2063"\w* \w Land|strong="H0776"\w* und \w verderbe|strong="H7843"\w* es!  
\v 26 Da \w sprach|strong="H0559"\w* \w Eljakim|strong="H0471"\w*, der \w Sohn|strong="H1121"\w* \w Hilkias|strong="H2518"\w* und \w Sebna|strong="H7644"\w* und \w Joah|strong="H3098"\w* \w zum|strong="H0413"\w* \w Erzschenken|strong="H7262"\w*: \w Rede|strong="H1696"\w* \w mit|strong="H0413"\w* deinen \w Knechten|strong="H5650"\w* auf \w syrisch|strong="H0762"\w*, \w denn|strong="H3588"\w* deine \w Knechte|strong="H0587"\w* \w verstehen|strong="H8085"\w* es; und \w rede|strong="H1696"\w* \w nicht|strong="H0408"\w* \w mit|strong="H5973"\w* uns auf \w jüdisch|strong="H3066"\w* vor den \w Ohren|strong="H0241"\w* des \w Volks|strong="H5971"\w*, \w das|strong="H0834"\w* \w auf|strong="H5921"\w* der \w Mauer|strong="H2346"\w* ist.  
\v 27 Aber der \w Erzschenke|strong="H7262"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihnen: Hat mich denn mein \w Herr|strong="H0113"\w* \w zu|strong="H5921"\w* deinem \w Herrn|strong="H0113"\w* oder \w zu|strong="H0413"\w* dir \w gesandt|strong="H7971"\w*, daß ich \w solche|strong="H0428"\w* \w Worte|strong="H1697"\w* \w rede|strong="H1696"\w*? und \w nicht|strong="H3808"\w* vielmehr \w zu|strong="H5921"\w* den \w Männern|strong="H0582"\w*, die \w auf|strong="H5921"\w* der \w Mauer|strong="H2346"\w* \w sitzen|strong="H3427"\w*, daß sie \w mit|strong="H5973"\w* euch ihren eigenen \w Mist|strong="H6675"\w* \w fressen|strong="H0398"\w* und ihren \w Harn|strong="H4325"\w* \w saufen|strong="H8354"\w*?  
\v 28 Also \w stand|strong="H5975"\w* der \w Erzschenke|strong="H7262"\w* auf und \w redete|strong="H7121"\w* mit \w lauter|strong="H1419"\w* \w Stimme|strong="H6963"\w* auf \w jüdisch|strong="H3066"\w* und \w sprach|strong="H1696"\w*: \w Hört|strong="H8085"\w* das \w Wort|strong="H1697"\w* des \w großen|strong="H1419"\w* \w Königs|strong="H4428"\w*, des \w Königs|strong="H4428"\w* von \w Assyrien|strong="H0804"\w*!  
\v 29  \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w König|strong="H4428"\w*: Laßt euch \w Hiskia|strong="H2396"\w* \w nicht|strong="H0408"\w* \w betrügen|strong="H5377"\w*; \w denn|strong="H3588"\w* er \w vermag|strong="H3201"\w* \w euch|strong="H0853"\w* \w nicht|strong="H3808"\w* zu \w erretten|strong="H5337"\w* \w von|strong="H4480"\w* meiner \w Hand|strong="H3027"\w*.  
\v 30 Und laßt \w euch|strong="H0853"\w* \w Hiskia|strong="H2396"\w* \w nicht|strong="H0408"\w* \w vertrösten|strong="H0982"\w* \w auf|strong="H0413"\w* den \w HERRN|strong="H3068"\w*, daß er \w sagt|strong="H0559"\w*: Der \w HERR|strong="H3068"\w* wird \w uns|strong="H5337"\w* \w erretten|strong="H5337"\w*, und \w diese|strong="H2063"\w* \w Stadt|strong="H5892"\w* wird \w nicht|strong="H3808"\w* in die \w Hände|strong="H3027"\w* des \w Königs|strong="H4428"\w* von \w Assyrien|strong="H0804"\w* gegeben \w werden|strong="H5414"\w*.  
\v 31  \w Gehorchet|strong="H8085"\w* \w Hiskia|strong="H2396"\w* \w nicht|strong="H0408"\w*! \w Denn|strong="H3588"\w* \w so|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w König|strong="H4428"\w* von \w Assyrien|strong="H0804"\w*: \w Nehmet|strong="H6213"\w* \w an|strong="H0854"\w* meine \w Gnade|strong="H1293"\w* und kommt \w zu|strong="H0413"\w* mir \w heraus|strong="H3318"\w*, so soll \w jedermann|strong="H0376"\w* von seinem \w Weinstock|strong="H1612"\w* und seinem \w Feigenbaum|strong="H8384"\w* \w essen|strong="H0398"\w* und von seinem \w Brunnen|strong="H4325"\w* \w trinken|strong="H8354"\w*,  
\v 32  \w bis|strong="H5704"\w* ich \w komme|strong="H0935"\w* und \w hole|strong="H3947"\w* \w euch|strong="H0853"\w* \w in|strong="H0413"\w* ein \w Land|strong="H0776"\w*, das eurem \w Lande|strong="H0776"\w* gleich ist, \w darin|strong="H0776"\w* \w Korn|strong="H1715"\w*, \w Most|strong="H8492"\w*, \w Brot|strong="H3899"\w*, \w Weinberge|strong="H3754"\w*, \w Ölbäume|strong="H3323"\w* und \w Honig|strong="H1706"\w* sind; so werdet ihr \w leben|strong="H2421"\w* bleiben und \w nicht|strong="H3808"\w* \w sterben|strong="H4191"\w*. \w Gehorchet|strong="H8085"\w* \w Hiskia|strong="H2396"\w* \w nicht|strong="H0408"\w*; \w denn|strong="H3588"\w* er verführt \w euch|strong="H0853"\w*, daß er \w spricht|strong="H0559"\w*: Der \w HERR|strong="H3068"\w* wird uns \w erretten|strong="H5337"\w*.  
\v 33 Haben \w auch|strong="H5337"\w* die \w Götter|strong="H0430"\w* der \w Heiden|strong="H1471"\w* ein \w jeglicher|strong="H0376"\w* sein \w Land|strong="H0776"\w* \w errettet|strong="H5337"\w* \w von|strong="H4480"\w* der \w Hand|strong="H3027"\w* des \w Königs|strong="H4428"\w* von \w Assyrien|strong="H0804"\w*?  
\v 34  \w Wo|strong="H0346"\w* sind die \w Götter|strong="H0430"\w* zu \w Hamath|strong="H2574"\w* und \w Arpad|strong="H0774"\w*? \w Wo|strong="H0346"\w* sind die \w Götter|strong="H0430"\w* zu \w Sepharvaim|strong="H5617"\w*, \w Hena|strong="H2012"\w* und \w Iwwa|strong="H5755"\w*? Haben sie auch \w Samaria|strong="H8111"\w* \w errettet|strong="H5337"\w* \w von|strong="H4480"\w* meiner \w Hand|strong="H3027"\w*?  
\v 35  \w Wo|strong="H4310"\w* ist ein Gott unter \w aller|strong="H3605"\w* \w Lande|strong="H0776"\w* \w Göttern|strong="H0430"\w*, \w die|strong="H0834"\w* ihr \w Land|strong="H0776"\w* \w haben|strong="H5337"\w* \w von|strong="H4480"\w* meiner \w Hand|strong="H3027"\w* \w errettet|strong="H5337"\w*, \w daß|strong="H3588"\w* der \w HERR|strong="H3068"\w* sollte \w Jerusalem|strong="H3389"\w* \w von|strong="H4480"\w* meiner \w Hand|strong="H3027"\w* \w erretten|strong="H5337"\w*?  
\v 36 Das \w Volk|strong="H5971"\w* aber schwieg \w still|strong="H2790"\w* und \w antwortete|strong="H6030"\w* \w ihm|strong="H0853"\w* \w nichts|strong="H3808"\w*; \w denn|strong="H3588"\w* der \w König|strong="H4428"\w* \w hatte|strong="H1931"\w* \w geboten|strong="H4687"\w* und \w gesagt|strong="H0559"\w*: \w Antwortet|strong="H6030"\w* ihm \w nichts|strong="H3808"\w*.  
\v 37 Da \w kamen|strong="H0935"\w* \w Eljakim|strong="H0471"\w*, der \w Sohn|strong="H1121"\w* \w Hilkias|strong="H2518"\w*, und \w Sebna|strong="H7644"\w*, der \w Schreiber|strong="H5608"\w*, und \w Joah|strong="H3098"\w*, der \w Sohn|strong="H1121"\w* \w Asaphs|strong="H0623"\w*, der \w Kanzler|strong="H2142"\w*, \w zu|strong="H0413"\w* \w Hiskia|strong="H2396"\w* mit \w zerrissenen|strong="H7167"\w* \w Kleidern|strong="H0899"\w* und \w sagten|strong="H5046"\w* ihm \w an|strong="H5046"\w* die \w Worte|strong="H1697"\w* des \w Erzschenken|strong="H7262"\w*.   
