\v 1  \w Athalja|strong="H6271"\w* aber, \w Ahasjas|strong="H0274"\w* \w Mutter|strong="H0517"\w*, da sie \w sah|strong="H7200"\w*, \w daß|strong="H3588"\w* ihr \w Sohn|strong="H1121"\w* tot \w war|strong="H4191"\w*, machte sie sich \w auf|strong="H6965"\w* und brachte \w um|strong="H0006"\w* \w alle|strong="H3605"\w* aus dem \w königlichen|strong="H4467"\w* \w Geschlecht|strong="H2233"\w*.  
\v 2 Aber \w Joseba|strong="H3089"\w*, die \w Tochter|strong="H1323"\w* des \w Königs|strong="H4428"\w* \w Joram|strong="H3141"\w*, \w Ahasjas|strong="H0274"\w* \w Schwester|strong="H0269"\w*, \w nahm|strong="H3947"\w* \w Joas|strong="H3101"\w*, den \w Sohn|strong="H1121"\w* \w Ahasjas|strong="H0274"\w*, und \w stahl|strong="H1589"\w* \w ihn|strong="H0853"\w* \w aus|strong="H4480"\w* des \w Königs|strong="H4428"\w* \w Kinder|strong="H1121"\w*, die getötet \w wurden|strong="H4191"\w*, und tat \w ihn|strong="H0853"\w* mit seiner \w Amme|strong="H3243"\w* in die \w Bettkammer|strong="H2315"\w*; und sie \w verbargen|strong="H5641"\w* \w ihn|strong="H0853"\w* \w vor|strong="H4480"\w* \w Athalja|strong="H6271"\w*, daß er \w nicht|strong="H3808"\w* getötet \w ward|strong="H4191"\w*.  
\v 3 Und er \w war|strong="H1961"\w* \w mit|strong="H0854"\w* ihr \w versteckt|strong="H2244"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w sechs|strong="H8337"\w* \w Jahre|strong="H8141"\w*. \w Athalja|strong="H6271"\w* aber war \w Königin|strong="H4427"\w* \w im|strong="H5921"\w* \w Lande|strong="H0776"\w*.  
\v 4 Im \w siebenten|strong="H7637"\w* \w Jahr|strong="H8141"\w* aber \w sandte|strong="H7971"\w* hin \w Jojada|strong="H3077"\w* und \w nahm|strong="H3947"\w* die \w Obersten|strong="H8269"\w* über \w hundert|strong="H3967"\w* von den \w Leibwächtern|strong="H3746"\w* und den \w Trabanten|strong="H7323"\w* und \w ließ|strong="H0935"\w* \w sie|strong="H0853"\w* \w zu|strong="H0413"\w* sich ins \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w* kommen und \w machte|strong="H3772"\w* einen \w Bund|strong="H1285"\w* mit ihnen und nahm einen \w Eid|strong="H7650"\w* von \w ihnen|strong="H0853"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* und \w zeigte|strong="H7200"\w* \w ihnen|strong="H0853"\w* des \w Königs|strong="H4428"\w* \w Sohn|strong="H1121"\w*  
\v 5 und \w gebot|strong="H6680"\w* ihnen und \w sprach|strong="H0559"\w*: \w Das|strong="H2088"\w* ist'\w s|strong="H1697"\w*, \w was|strong="H0834"\w* ihr tun \w sollt|strong="H6213"\w*: Ein dritter \w Teil|strong="H7992"\w* \w von|strong="H4480"\w* euch, die ihr des \w Sabbats|strong="H7676"\w* \w antretet|strong="H0935"\w*, soll der \w Hut|strong="H4931"\w* \w warten|strong="H8104"\w* im \w Hause|strong="H1004"\w* des \w Königs|strong="H4428"\w*,  
\v 6 und ein dritter \w Teil|strong="H7992"\w* soll sein am \w Tor|strong="H8179"\w* \w Sur|strong="H5495"\w*, und ein dritter \w Teil|strong="H7992"\w* am \w Tor|strong="H8179"\w* das \w hinter|strong="H0310"\w* den \w Trabanten|strong="H7323"\w* ist, und soll der \w Hut|strong="H4931"\w* \w warten|strong="H8104"\w* am \w Hause|strong="H1004"\w* \w Massah|strong="H4535"\w*.  
\v 7 Aber die \w zwei|strong="H8147"\w* \w Teile|strong="H3027"\w* euer \w aller|strong="H3605"\w*, die des \w Sabbats|strong="H7676"\w* \w abtreten|strong="H3318"\w*, sollen der \w Hut|strong="H4931"\w* \w warten|strong="H8104"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w um|strong="H0413"\w* den \w König|strong="H4428"\w*,  
\v 8 und \w sollt|strong="H5362"\w* rings \w um|strong="H5439"\w* \w den|strong="H5921"\w* \w König|strong="H4428"\w* euch \w machen|strong="H5362"\w*, ein \w jeglicher|strong="H0376"\w* mit seiner \w Wehre|strong="H3627"\w* in der \w Hand|strong="H3027"\w*, und wer \w herein|strong="H0935"\w* \w zwischen|strong="H0413"\w* die \w Reihen|strong="H7713"\w* \w kommt|strong="H0935"\w*, der \w sterbe|strong="H4191"\w*, und sollt bei dem \w König|strong="H4428"\w* \w sein|strong="H1961"\w*, wenn er \w aus|strong="H3318"\w* und \w ein|strong="H0935"\w* \w geht|strong="H3318"\w*.  
\v 9 Und die \w Obersten|strong="H8269"\w* \w taten|strong="H6213"\w* \w alles|strong="H3605"\w*, \w was|strong="H0834"\w* ihnen \w Jojada|strong="H3077"\w*, der \w Priester|strong="H3548"\w*, gesagt \w hatte|strong="H6680"\w*, und \w nahmen|strong="H3947"\w* zu \w sich|strong="H0376"\w* ihre \w Männer|strong="H0582"\w*, die des \w Sabbats|strong="H7676"\w* \w abtraten|strong="H0935"\w*, und \w kamen|strong="H0935"\w* \w zu|strong="H0413"\w* dem \w Priester|strong="H3548"\w* \w Jojada|strong="H3077"\w*.  
\v 10 Und der \w Priester|strong="H3548"\w* \w gab|strong="H5414"\w* den \w Hauptleuten|strong="H8269"\w* \w Spieße|strong="H2595"\w* und \w Schilde|strong="H7982"\w*, \w die|strong="H0834"\w* dem \w König|strong="H4428"\w* \w David|strong="H1732"\w* gehört hatten \w und|strong="H0834"\w* in dem \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* waren.  
\v 11 Und die \w Trabanten|strong="H7323"\w* \w standen|strong="H5975"\w* \w um|strong="H5439"\w* den \w König|strong="H4428"\w* \w her|strong="H5439"\w*, ein \w jeglicher|strong="H0376"\w* mit seiner \w Wehre|strong="H3627"\w* in der \w Hand|strong="H3027"\w*, \w von|strong="H4480"\w* dem \w Winkel|strong="H3233"\w* des \w Hauses|strong="H1004"\w* zur \w Rechten|strong="H3233"\w* \w bis|strong="H5704"\w* zum \w Winkel|strong="H8042"\w* zur \w Linken|strong="H8042"\w*, zum \w Altar|strong="H4196"\w* \w zu|strong="H5921"\w* und zum \w Hause|strong="H1004"\w*.  
\v 12 Und er \w ließ|strong="H3318"\w* des \w Königs|strong="H4428"\w* \w Sohn|strong="H1121"\w* \w hervorkommen|strong="H3318"\w* und \w setzte|strong="H5414"\w* ihm eine \w Krone|strong="H5145"\w* \w auf|strong="H5921"\w* und gab ihm das \w Zeugnis|strong="H5715"\w*, und sie \w machten|strong="H4427"\w* \w ihn|strong="H0853"\w* zum \w König|strong="H4427"\w* und \w salbten|strong="H4886"\w* ihn und \w schlugen|strong="H5221"\w* die \w Hände|strong="H3709"\w* zusammen und \w sprachen|strong="H0559"\w*: \w Glück|strong="H2421"\w* zu dem \w König|strong="H4428"\w*!  
\v 13 Und da \w Athalja|strong="H6271"\w* \w hörte|strong="H8085"\w* das \w Geschrei|strong="H6963"\w* des \w Volkes|strong="H5971"\w*, das zulief, kam \w sie|strong="H0935"\w* \w zum|strong="H0413"\w* \w Volk|strong="H5971"\w* in das \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w*  
\v 14 und \w sah|strong="H7200"\w*. \w Siehe|strong="H2009"\w*, da \w stand|strong="H5975"\w* der \w König|strong="H4428"\w* \w an|strong="H5921"\w* der \w Säule|strong="H5982"\w*, wie es Gewohnheit \w war|strong="H4941"\w*, und die \w Obersten|strong="H8269"\w* und die \w Drommeter|strong="H2689"\w* \w bei|strong="H0413"\w* dem \w König|strong="H4428"\w*; und \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* des \w Landes|strong="H0776"\w* war \w fröhlich|strong="H8056"\w*, und man \w blies|strong="H8628"\w* mit \w Drommeten|strong="H2689"\w*. \w Athalja|strong="H6271"\w* aber \w zerriß|strong="H7167"\w* ihre \w Kleider|strong="H0899"\w* und \w rief|strong="H7121"\w*: \w Aufruhr|strong="H7195"\w*, \w Aufruhr|strong="H7195"\w*!  
\v 15 Aber der \w Priester|strong="H3548"\w* \w Jojada|strong="H3077"\w* \w gebot|strong="H6680"\w* den \w Obersten|strong="H8269"\w* über \w hundert|strong="H3967"\w*, die über das \w Heer|strong="H2428"\w* gesetzt \w waren|strong="H6485"\w*, und \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihnen: \w Führet|strong="H3318"\w* \w sie|strong="H0853"\w* \w zwischen|strong="H0413"\w* den \w Reihen|strong="H7713"\w* \w hinaus|strong="H3318"\w*; und wer ihr \w folgt|strong="H0935"\w*, der \w sterbe|strong="H4191"\w* des \w Schwerts|strong="H2719"\w*! \w Denn|strong="H3588"\w* der \w Priester|strong="H3548"\w* hatte \w gesagt|strong="H0559"\w*, sie sollte \w nicht|strong="H0408"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w sterben|strong="H4191"\w*.  
\v 16 Und sie \w machten|strong="H7760"\w* ihr Raum zu beiden \w Seiten|strong="H3027"\w*; und sie \w ging|strong="H0935"\w* \w hinein|strong="H3996"\w* des \w Weges|strong="H1870"\w*, da die \w Rosse|strong="H5483"\w* zum \w Hause|strong="H1004"\w* des \w Königs|strong="H4428"\w* gehen, und ward \w daselbst|strong="H8033"\w* \w getötet|strong="H4191"\w*.  
\v 17 Da \w machte|strong="H3772"\w* \w Jojada|strong="H3077"\w* einen \w Bund|strong="H1285"\w* \w zwischen|strong="H0996"\w* dem \w HERRN|strong="H3068"\w* \w und|strong="H0996"\w* dem \w König|strong="H4428"\w* \w und|strong="H0996"\w* dem \w Volk|strong="H5971"\w*, daß sie des \w HERRN|strong="H3068"\w* \w Volk|strong="H5971"\w* sein \w sollten|strong="H1961"\w*; also auch \w zwischen|strong="H0996"\w* dem \w König|strong="H4428"\w* \w und|strong="H0996"\w* dem \w Volk|strong="H5971"\w*.  
\v 18 Da \w ging|strong="H0935"\w* \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* des \w Landes|strong="H0776"\w* in das \w Haus|strong="H1004"\w* \w Baals|strong="H1168"\w* und \w brachen|strong="H5422"\w* ihre \w Altäre|strong="H4196"\w* \w ab|strong="H5422"\w* und \w zerbrachen|strong="H7665"\w* seine \w Bildnisse|strong="H6754"\w* \w gründlich|strong="H3190"\w*, und \w Matthan|strong="H4977"\w*, den \w Priester|strong="H3548"\w* \w Baals|strong="H1168"\w*, erwürgten \w sie|strong="H2026"\w* \w vor|strong="H6440"\w* den \w Altären|strong="H4196"\w*. Der \w Priester|strong="H3548"\w* aber \w bestellte|strong="H7760"\w* die \w Ämter|strong="H6485"\w* \w im|strong="H5921"\w* \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*  
\v 19 und \w nahm|strong="H3947"\w* die \w Obersten|strong="H8269"\w* über \w hundert|strong="H3967"\w* und die \w Leibwächter|strong="H3746"\w* und die \w Trabanten|strong="H7323"\w* und \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* des \w Landes|strong="H0776"\w*, und sie \w führten|strong="H3381"\w* den \w König|strong="H4428"\w* \w hinab|strong="H3381"\w* \w vom|strong="H4480"\w* \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* und \w kamen|strong="H0935"\w* \w durchs|strong="H1870"\w* \w Tor|strong="H8179"\w* der \w Trabanten|strong="H7323"\w* zum \w Königshause|strong="H4428"\w*; und er setzte \w sich|strong="H3427"\w* \w auf|strong="H5921"\w* der \w Könige|strong="H4428"\w* \w Stuhl|strong="H3678"\w*.  
\v 20 Und \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* im \w Lande|strong="H0776"\w* war \w fröhlich|strong="H8055"\w*, und die \w Stadt|strong="H5892"\w* war \w still|strong="H8252"\w*. \w Athalja|strong="H6271"\w* aber \w töteten|strong="H4191"\w* sie mit dem \w Schwert|strong="H2719"\w* in des \w Königs|strong="H4428"\w* \w Hause|strong="H1004"\w*.  
\v 21 [12:1] Und \w Joas|strong="H3060"\w* war \w sieben|strong="H7651"\w* \w Jahre|strong="H8141"\w* \w alt|strong="H1121"\w*, da er König \w ward|strong="H4427"\w*.   
\c 12  
\p
\v 1 Im \w siebenten|strong="H7651"\w* \w Jahr|strong="H8141"\w* \w Jehus|strong="H3058"\w* \w ward|strong="H4427"\w* \w Joas|strong="H3060"\w* \w König|strong="H4427"\w*, und \w regierte|strong="H4427"\w* \w vierzig|strong="H0705"\w* \w Jahre|strong="H8141"\w* zu \w Jerusalem|strong="H3389"\w*. Seine \w Mutter|strong="H0517"\w* \w hieß|strong="H8034"\w* \w Zibja|strong="H6645"\w* \w von|strong="H4480"\w* Beer-\w Seba|strong="H0884"\w*.  
\v 2 Und \w Joas|strong="H3060"\w* \w tat|strong="H6213"\w*, was \w recht|strong="H3477"\w* war und dem \w HERRN|strong="H3068"\w* wohl \w gefiel|strong="H5869"\w*, \w solange|strong="H3605"\w* ihn der \w Priester|strong="H3548"\w* \w Jojada|strong="H3077"\w* \w lehrte|strong="H3384"\w*,  
\v 3  \w nur|strong="H7535"\w*, daß sie die \w Höhen|strong="H1116"\w* \w nicht|strong="H3808"\w* \w abtaten|strong="H5493"\w*; denn das \w Volk|strong="H5971"\w* \w opferte|strong="H2076"\w* und \w räucherte|strong="H6999"\w* \w noch|strong="H5750"\w* auf den \w Höhen|strong="H1116"\w*.  
\v 4 Und \w Joas|strong="H3060"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* den \w Priestern|strong="H3548"\w*: \w Alles|strong="H3605"\w* \w Geld|strong="H3701"\w*, das geheiligt \w wird|strong="H6944"\w*, \w daß|strong="H0834"\w* es in das \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w* gebracht \w werde|strong="H0935"\w*, das \w gang|strong="H5674"\w* und \w gäbe|strong="H3701"\w* ist, das \w Geld|strong="H3701"\w*, das \w jedermann|strong="H0376"\w* gibt in der \w Schätzung|strong="H6187"\w* seiner \w Seele|strong="H5315"\w*, und \w alles|strong="H3605"\w* \w Geld|strong="H3701"\w*, \w das|strong="H0834"\w* \w jedermann|strong="H0376"\w* \w von|strong="H5921"\w* freiem \w Herzen|strong="H3820"\w* \w opfert|strong="H5927"\w*, daß es in des \w HERRN|strong="H3068"\w* \w Haus|strong="H1004"\w* gebracht \w werde|strong="H0935"\w*,  
\v 5 das laßt die \w Priester|strong="H3548"\w* zu sich \w nehmen|strong="H3947"\w*, einen \w jeglichen|strong="H0376"\w* \w von|strong="H4480"\w* seinen \w Bekannten|strong="H4378"\w*. Davon sollen \w sie|strong="H1992"\w* \w bessern|strong="H2388"\w*, was \w baufällig|strong="H0919"\w* ist am \w Hause|strong="H1004"\w*, wo sie \w finden|strong="H3605"\w*, \w daß|strong="H0834"\w* \w es|strong="H8033"\w* \w baufällig|strong="H0919"\w* \w ist|strong="H4672"\w*.  
\v 6  \w Da|strong="H1961"\w* aber die \w Priester|strong="H3548"\w* bis ins \w dreiundzwanzigste|strong="H7969"\w* \w Jahr|strong="H8141"\w* des \w Königs|strong="H4428"\w* \w Joas|strong="H3060"\w* \w nicht|strong="H3808"\w* \w besserten|strong="H2388"\w*, was \w baufällig|strong="H0919"\w* war am \w Hause|strong="H1004"\w*,  
\v 7  \w rief|strong="H7121"\w* der \w König|strong="H4428"\w* \w Joas|strong="H3060"\w* den \w Priester|strong="H3548"\w* \w Jojada|strong="H3077"\w* samt den \w Priestern|strong="H3548"\w* und \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihnen: \w Warum|strong="H4069"\w* bessert \w ihr|strong="H2388"\w* \w nicht|strong="H0369"\w*, was \w baufällig|strong="H0919"\w* ist am \w Hause|strong="H1004"\w*? So \w sollt|strong="H3947"\w* ihr \w nun|strong="H6258"\w* \w nicht|strong="H0408"\w* zu euch \w nehmen|strong="H3947"\w* das \w Geld|strong="H3701"\w*, ein jeglicher \w von|strong="H4480"\w* seinen \w Bekannten|strong="H4378"\w*, \w sondern|strong="H3588"\w* sollt's \w geben|strong="H5414"\w* zu dem, das \w baufällig|strong="H0919"\w* ist am \w Hause|strong="H1004"\w*.  
\v 8 Und die \w Priester|strong="H3548"\w* \w willigten|strong="H0225"\w* darein, daß sie \w nicht|strong="H1115"\w* \w vom|strong="H4480"\w* \w Volk|strong="H5971"\w* \w Geld|strong="H3701"\w* \w nähmen|strong="H3947"\w* \w und|strong="H1115"\w* das \w Baufällige|strong="H0919"\w* am \w Hause|strong="H1004"\w* \w besserten|strong="H2388"\w*.  
\v 9 Da \w nahm|strong="H3947"\w* der \w Priester|strong="H3548"\w* \w Jojada|strong="H3077"\w* \w eine|strong="H0259"\w* \w Lade|strong="H0727"\w* und \w bohrte|strong="H5344"\w* oben ein \w Loch|strong="H2356"\w* \w darein|strong="H1817"\w* und \w setzte|strong="H5414"\w* \w sie|strong="H0853"\w* \w zur|strong="H0681"\w* rechten \w Hand|strong="H3225"\w* neben den \w Altar|strong="H4196"\w*, da \w man|strong="H0376"\w* \w in|strong="H0935"\w* das \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w geht|strong="H0935"\w*. Und die \w Priester|strong="H3548"\w*, die an der \w Schwelle|strong="H5592"\w* \w hüteten|strong="H8104"\w*, \w taten|strong="H5414"\w* \w darein|strong="H8033"\w* \w alles|strong="H3605"\w* \w Geld|strong="H3701"\w*, das zu des \w HERRN|strong="H3068"\w* \w Haus|strong="H1004"\w* gebracht \w ward|strong="H0935"\w*.  
\v 10  \w Wenn|strong="H1961"\w* sie dann \w sahen|strong="H7200"\w*, \w daß|strong="H3588"\w* \w viel|strong="H7227"\w* \w Geld|strong="H3701"\w* in der \w Lade|strong="H0727"\w* war, so \w kam|strong="H5927"\w* des \w Königs|strong="H4428"\w* \w Schreiber|strong="H5608"\w* \w herauf|strong="H5927"\w* mit dem \w Hohenpriester|strong="H1419"\w*, und \w banden|strong="H6696"\w* das \w Geld|strong="H3701"\w* \w zusammen|strong="H6696"\w* und \w zählten|strong="H4487"\w* es, was für des \w HERRN|strong="H3068"\w* \w Haus|strong="H1004"\w* gefunden \w ward|strong="H4672"\w*.  
\v 11 Und man \w übergab|strong="H5414"\w* das \w Geld|strong="H3701"\w* \w bar|strong="H5921"\w* den \w Werkmeistern|strong="H6213"\w*, die da bestellt \w waren|strong="H6485"\w* zu dem \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*; und sie gaben's \w heraus|strong="H3318"\w* den \w Zimmerleuten|strong="H2796"\w* und \w Bauleuten|strong="H1129"\w*, die da \w arbeiteten|strong="H6213"\w* am \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*,  
\v 12 nämlich den \w Maurern|strong="H1443"\w* und \w Steinmetzen|strong="H2672"\w* und denen, die da \w Holz|strong="H6086"\w* und \w gehauene|strong="H4274"\w* \w Stein|strong="H0068"\w* \w kaufen|strong="H7069"\w* sollten, daß das \w Baufällige|strong="H0919"\w* am \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* gebessert \w würde|strong="H2388"\w*, und für \w alles|strong="H3605"\w*, \w was|strong="H0834"\w* not \w war|strong="H3318"\w*, um \w am|strong="H5921"\w* \w Hause|strong="H1004"\w* zu \w bessern|strong="H2394"\w*.  
\v 13  \w Doch|strong="H0389"\w* ließ man \w nicht|strong="H3808"\w* \w machen|strong="H6213"\w* \w silberne|strong="H3701"\w* \w Schalen|strong="H5592"\w*, \w Messer|strong="H4212"\w*, \w Becken|strong="H4219"\w*, \w Drommeten|strong="H2689"\w* noch irgend \w ein|strong="H3605"\w* \w goldenes|strong="H2091"\w* oder \w silbernes|strong="H3701"\w* \w Gerät|strong="H3627"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w von|strong="H4480"\w* solchem \w Geld|strong="H3701"\w*, das zu des \w HERRN|strong="H3068"\w* \w Hause|strong="H1004"\w* gebracht \w ward|strong="H0935"\w*;  
\v 14  \w sondern|strong="H3588"\w* man gab'\w s|strong="H5414"\w* den \w Arbeitern|strong="H4399"\w*, daß sie damit das Baufällige am \w Hause|strong="H1004"\w* des \w Herrn|strong="H3068"\w* \w besserten|strong="H2388"\w*.  
\v 15 Auch brauchten die \w Männer|strong="H0582"\w* \w nicht|strong="H3808"\w* \w Rechnung|strong="H2803"\w* zu tun, \w denen|strong="H0834"\w* man das \w Geld|strong="H3701"\w* \w übergab|strong="H5921"\w*, daß sie es den \w Arbeitern|strong="H4399"\w* \w gäben|strong="H5414"\w*; \w sondern|strong="H3588"\w* \w sie|strong="H1992"\w* \w handelten|strong="H6213"\w* auf \w Glauben|strong="H0530"\w*.  
\v 16 Aber das \w Geld|strong="H3701"\w* von \w Schuldopfern|strong="H0817"\w* und \w Sündopfern|strong="H2403"\w* ward \w nicht|strong="H3808"\w* zum \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w gebracht|strong="H0935"\w*; denn es \w gehörte|strong="H1961"\w* den \w Priestern|strong="H3548"\w*.  
\v 17 Zu der \w Zeit|strong="H0227"\w* \w zog|strong="H5927"\w* \w Hasael|strong="H2371"\w*, der \w König|strong="H4428"\w* von \w Syrien|strong="H0758"\w*, \w herauf|strong="H5927"\w* und \w stritt|strong="H3898"\w* \w wider|strong="H5921"\w* \w Gath|strong="H1661"\w* und gewann \w es|strong="H3920"\w*. Und da \w Hasael|strong="H2371"\w* sein \w Angesicht|strong="H6440"\w* \w stellte|strong="H7760"\w*, \w nach|strong="H5921"\w* \w Jerusalem|strong="H3389"\w* \w hinaufzuziehen|strong="H5927"\w*,  
\v 18  \w nahm|strong="H3947"\w* \w Joas|strong="H3060"\w*, der \w König|strong="H4428"\w* Juda'\w s|strong="H3063"\w*, \w all|strong="H3605"\w* das \w Geheiligte|strong="H6944"\w*, \w das|strong="H0834"\w* seine \w Väter|strong="H0001"\w* \w Josaphat|strong="H3092"\w*, \w Joram|strong="H3088"\w* und \w Ahasja|strong="H0274"\w*, die \w Könige|strong="H4428"\w* Juda'\w s|strong="H3063"\w*, geheiligt \w hatten|strong="H6942"\w*, und was er geheiligt \w hatte|strong="H6944"\w*, dazu \w alles|strong="H3605"\w* \w Gold|strong="H2091"\w*, das man \w fand|strong="H4672"\w* im \w Schatz|strong="H0214"\w* in des \w HERRN|strong="H3068"\w* \w Hause|strong="H1004"\w* und in des \w Königs|strong="H4428"\w* \w Hause|strong="H1004"\w*, und \w schickte|strong="H7971"\w* es \w Hasael|strong="H2371"\w*, dem \w König|strong="H4428"\w* von \w Syrien|strong="H0758"\w*. Da zog er \w ab|strong="H5927"\w* \w von|strong="H4480"\w* \w Jerusalem|strong="H3389"\w*.  
\v 19 Was aber \w mehr|strong="H3499"\w* von \w Joas|strong="H3101"\w* zu sagen \w ist|strong="H1697"\w* und \w alles|strong="H3605"\w*, was er getan \w hat|strong="H6213"\w*, \w das|strong="H1992"\w* ist \w geschrieben|strong="H3789"\w* \w in|strong="H5921"\w* der \w Chronik|strong="H5612"\w* der \w Könige|strong="H4428"\w* Juda'\w s|strong="H3063"\w*,  
\v 20 Und seine \w Knechte|strong="H5650"\w* empörten \w sich|strong="H6965"\w* und \w machten|strong="H7194"\w* einen \w Bund|strong="H7195"\w* und \w schlugen|strong="H5221"\w* \w ihn|strong="H3101"\w* im \w Haus|strong="H1004"\w* \w Millo|strong="H4407"\w*, da man \w hinabgeht|strong="H3381"\w* zu \w Silla|strong="H5538"\w*.  
\v 21 Denn \w Josachar|strong="H3108"\w*, der \w Sohn|strong="H1121"\w* \w Simeaths|strong="H8100"\w*, und \w Josabad|strong="H3075"\w*, der \w Sohn|strong="H1121"\w* \w Somers|strong="H7763"\w*, seine \w Knechte|strong="H5650"\w*, \w schlugen|strong="H5221"\w* ihn \w tot|strong="H4191"\w*. Und man \w begrub|strong="H6912"\w* \w ihn|strong="H0853"\w* \w mit|strong="H5973"\w* seinen \w Vätern|strong="H0001"\w* in der \w Stadt|strong="H5892"\w* \w Davids|strong="H1732"\w*. Und \w Amazja|strong="H0558"\w*, sein \w Sohn|strong="H1121"\w*, ward \w König|strong="H4427"\w* an seiner \w Statt|strong="H8478"\w*.   
