\v 1 Es \w fielen|strong="H6586"\w* aber die \w Moabiter|strong="H4124"\w* \w ab|strong="H6586"\w* von \w Israel|strong="H3478"\w*, \w da|strong="H0310"\w* \w Ahab|strong="H0256"\w* \w tot|strong="H4194"\w* war.  
\v 2 Und \w Ahasja|strong="H0274"\w* \w fiel|strong="H5307"\w* \w durch|strong="H1157"\w* das \w Gitter|strong="H7639"\w* in seinem \w Söller|strong="H5944"\w* \w zu|strong="H0834"\w* \w Samaria|strong="H8111"\w* und ward \w krank|strong="H2470"\w*; und \w sandte|strong="H7971"\w* \w Boten|strong="H4397"\w* und \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihnen: Geht \w hin|strong="H3212"\w* und \w fragt|strong="H1875"\w* Baal-\w Sebub|strong="H1176"\w*, den \w Gott|strong="H0430"\w* zu \w Ekron|strong="H6138"\w*, ob \w ich|strong="H0518"\w* \w von|strong="H4480"\w* \w dieser|strong="H2088"\w* \w Krankheit|strong="H2483"\w* genesen \w werde|strong="H2421"\w*.  
\v 3 Aber der \w Engel|strong="H4397"\w* des \w HERRN|strong="H3068"\w* \w redete|strong="H1696"\w* \w mit|strong="H0413"\w* \w Elia|strong="H0452"\w*, dem \w Thisbiter|strong="H8664"\w*: \w Auf|strong="H6965"\w*! und \w begegne|strong="H7125"\w* den \w Boten|strong="H4397"\w* des \w Königs|strong="H4428"\w* zu \w Samaria|strong="H8111"\w* und \w sprich|strong="H1696"\w* \w zu|strong="H0413"\w* ihnen: \w Ist|strong="H0369"\w* \w denn|strong="H4480"\w* nun \w kein|strong="H0369"\w* \w Gott|strong="H0430"\w* in \w Israel|strong="H3478"\w*, daß \w ihr|strong="H0859"\w* \w hingehet|strong="H1980"\w*, zu \w fragen|strong="H1875"\w* Baal-\w Sebub|strong="H1176"\w*, den \w Gott|strong="H0430"\w* \w Ekrons|strong="H6138"\w*?  
\v 4  \w Darum|strong="H3651"\w* \w so|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: Du sollst \w nicht|strong="H3088"\w* \w von|strong="H4480"\w* dem \w Bette|strong="H4296"\w* \w kommen|strong="H3381"\w*, \w darauf|strong="H0834"\w* du dich gelegt \w hast|strong="H5927"\w*, \w sondern|strong="H3588"\w* sollst des \w Todes|strong="H4191"\w* \w sterben|strong="H4191"\w*. Und \w Elia|strong="H0452"\w* ging \w weg|strong="H3212"\w*.  
\v 5 Und da die \w Boten|strong="H4397"\w* \w wieder|strong="H7725"\w* \w zu|strong="H0413"\w* ihm \w kamen|strong="H7725"\w*, \w sprach|strong="H0559"\w* er \w zu|strong="H0413"\w* ihnen: \w Warum|strong="H4100"\w* kommt ihr \w wieder|strong="H7725"\w*?  
\v 6 Sie \w sprachen|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: Es \w kam|strong="H5927"\w* ein \w Mann|strong="H0376"\w* \w herauf|strong="H5927"\w* uns \w entgegen|strong="H7125"\w* und \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* uns: \w Gehet|strong="H3212"\w* \w wiederum|strong="H7725"\w* \w hin|strong="H3212"\w* \w zu|strong="H0413"\w* dem \w König|strong="H4428"\w*, \w der|strong="H0834"\w* \w euch|strong="H0853"\w* gesandt \w hat|strong="H7971"\w*, und \w sprecht|strong="H1696"\w* \w zu|strong="H0413"\w* ihm: \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Ist|strong="H0369"\w* \w denn|strong="H4480"\w* \w kein|strong="H0369"\w* \w Gott|strong="H0430"\w* in \w Israel|strong="H3478"\w*, daß \w du|strong="H0859"\w* \w hinsendest|strong="H7971"\w*, zu \w fragen|strong="H1875"\w* Baal-\w Sebub|strong="H1176"\w*, den \w Gott|strong="H0430"\w* \w Ekrons|strong="H6138"\w*? \w Darum|strong="H3651"\w* sollst du \w nicht|strong="H3808"\w* \w kommen|strong="H3381"\w* \w von|strong="H4480"\w* dem \w Bette|strong="H4296"\w*, \w darauf|strong="H0834"\w* du dich gelegt \w hast|strong="H5927"\w*, \w sondern|strong="H3588"\w* sollst des \w Todes|strong="H4191"\w* \w sterben|strong="H4191"\w*.  
\v 7 Er \w sprach|strong="H1696"\w* zu ihnen: \w Wie|strong="H4100"\w* war der \w Mann|strong="H0376"\w* \w gestaltet|strong="H4941"\w*, \w der|strong="H0834"\w* euch \w begegnete|strong="H7125"\w* und \w solches|strong="H0428"\w* \w zu|strong="H0413"\w* euch \w sagte|strong="H1696"\w*?  
\v 8 Sie \w sprachen|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: \w Er|strong="H0376"\w* \w hatte|strong="H1167"\w* eine \w rauhe|strong="H8181"\w* Haut an und einen \w ledernen|strong="H5785"\w* \w Gürtel|strong="H0232"\w* um seine \w Lenden|strong="H4975"\w*. Er aber \w sprach|strong="H0559"\w*: \w Es|strong="H1931"\w* ist \w Elia|strong="H0452"\w*, der \w Thisbiter|strong="H8664"\w*.  
\v 9 Und er \w sandte|strong="H7971"\w* hin \w zu|strong="H0413"\w* ihm einen \w Hauptmann|strong="H8269"\w* über \w fünfzig|strong="H2572"\w* samt seinen \w fünfzigen|strong="H2572"\w*. Und da er \w hinaufkam|strong="H0413"\w*, \w siehe|strong="H2009"\w*, da \w saß|strong="H3427"\w* er \w oben|strong="H5921"\w* \w auf|strong="H7218"\w* dem \w Berge|strong="H2022"\w*. Er aber \w sprach|strong="H1696"\w* \w zu|strong="H0413"\w* Ihm: Du \w Mann|strong="H0376"\w* \w Gottes|strong="H0430"\w*, der \w König|strong="H4428"\w* \w sagt|strong="H1696"\w*: Du sollst \w herabkommen|strong="H3381"\w*!  
\v 10  \w Elia|strong="H0452"\w* \w antwortete|strong="H6030"\w* dem \w Hauptmann|strong="H8269"\w* über \w fünfzig|strong="H2572"\w* und \w sprach|strong="H1696"\w* \w zu|strong="H0413"\w* ihm: \w Bin|strong="H0518"\w* \w ich|strong="H0589"\w* ein \w Mann|strong="H0376"\w* \w Gottes|strong="H0430"\w*, so \w falle|strong="H3381"\w* \w Feuer|strong="H0784"\w* \w vom|strong="H4480"\w* \w Himmel|strong="H8064"\w* und \w fresse|strong="H0398"\w* \w dich|strong="H0853"\w* und deine \w fünfzig|strong="H2572"\w*. Da \w fiel|strong="H3381"\w* \w Feuer|strong="H0784"\w* \w vom|strong="H4480"\w* \w Himmel|strong="H8064"\w* und \w fraß|strong="H0398"\w* \w ihn|strong="H0853"\w* und seine \w fünfzig|strong="H2572"\w*.  
\v 11 Und er \w sandte|strong="H7971"\w* \w wiederum|strong="H7725"\w* einen \w andern|strong="H0312"\w* \w Hauptmann|strong="H8269"\w* über \w fünfzig|strong="H2572"\w* \w zu|strong="H0413"\w* ihm samt seinen \w fünfzigen|strong="H2572"\w*. Der \w antwortete|strong="H6030"\w* und \w sprach|strong="H1696"\w* \w zu|strong="H0413"\w* ihm: Du \w Mann|strong="H0376"\w* \w Gottes|strong="H0430"\w*, \w so|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w König|strong="H4428"\w*: \w Komm|strong="H3381"\w* \w eilends|strong="H4120"\w* \w herab|strong="H3381"\w*!  
\v 12  \w Elia|strong="H0452"\w* \w antwortete|strong="H6030"\w* und \w sprach|strong="H1696"\w*: Bin \w ich|strong="H0859"\w* ein \w Mann|strong="H0376"\w* \w Gottes|strong="H0430"\w*, so \w falle|strong="H3381"\w* \w Feuer|strong="H0784"\w* \w vom|strong="H4480"\w* \w Himmel|strong="H8064"\w* und \w fresse|strong="H0398"\w* \w dich|strong="H0853"\w* und deine \w fünfzig|strong="H2572"\w*. Da \w fiel|strong="H3381"\w* das \w Feuer|strong="H0784"\w* \w Gottes|strong="H0430"\w* \w vom|strong="H4480"\w* \w Himmel|strong="H8064"\w* und \w fraß|strong="H0398"\w* \w ihn|strong="H0853"\w* und seine \w fünfzig|strong="H2572"\w*.  
\v 13 Da \w sandte|strong="H7971"\w* er \w wiederum|strong="H7725"\w* den \w dritten|strong="H7992"\w* \w Hauptmann|strong="H8269"\w* über \w fünfzig|strong="H2572"\w* samt seinen \w fünfzigen|strong="H2572"\w*. Da \w der|strong="H7992"\w* zu ihm \w hinaufkam|strong="H5927"\w*, \w beugte|strong="H3766"\w* er seine \w Kniee|strong="H1290"\w* \w gegen|strong="H5048"\w* \w Elia|strong="H0452"\w* und \w flehte|strong="H2603"\w* \w ihn|strong="H0413"\w* an und \w sprach|strong="H1696"\w* \w zu|strong="H0413"\w* ihm: Du \w Mann|strong="H0376"\w* \w Gottes|strong="H0430"\w*, \w laß|strong="H4994"\w* meine \w Seele|strong="H5315"\w* und die \w Seele|strong="H5315"\w* deiner \w Knechte|strong="H5650"\w*, \w dieser|strong="H0428"\w* \w fünfzig|strong="H2572"\w*, vor \w dir|strong="H5869"\w* etwas \w gelten|strong="H3365"\w*.  
\v 14  \w Siehe|strong="H2009"\w*, das \w Feuer|strong="H0784"\w* ist \w vom|strong="H4480"\w* \w Himmel|strong="H8064"\w* \w gefallen|strong="H3381"\w* und hat die \w ersten|strong="H7223"\w* \w zwei|strong="H8147"\w* \w Hauptmänner|strong="H8269"\w* über \w fünfzig|strong="H2572"\w* mit ihren \w fünfzigen|strong="H2572"\w* \w gefressen|strong="H0398"\w*; nun \w aber|strong="H6258"\w* laß meine \w Seele|strong="H5315"\w* etwas \w gelten|strong="H3365"\w* vor \w dir|strong="H5869"\w*.  
\v 15 Da \w sprach|strong="H1696"\w* der \w Engel|strong="H4397"\w* des \w HERRN|strong="H3068"\w* zu \w Elia|strong="H0452"\w*: \w Gehe|strong="H3381"\w* \w mit|strong="H0854"\w* ihm \w hinab|strong="H3381"\w* und \w fürchte|strong="H3372"\w* dich \w nicht|strong="H0408"\w* \w vor|strong="H4480"\w* \w ihm|strong="H6440"\w*! und er machte sich \w auf|strong="H6965"\w* und \w ging|strong="H3381"\w* \w mit|strong="H0854"\w* ihm \w hinab|strong="H3381"\w* \w zum|strong="H0413"\w* \w König|strong="H4428"\w*.  
\v 16 Und er \w sprach|strong="H1696"\w* \w zu|strong="H0413"\w* ihm: \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Darum|strong="H3282"\w* \w daß|strong="H0834"\w* du \w hast|strong="H7971"\w* \w Boten|strong="H4397"\w* \w hingesandt|strong="H7971"\w* und lassen \w fragen|strong="H1875"\w* Baal-\w Sebub|strong="H1176"\w*, den \w Gott|strong="H0430"\w* zu \w Ekron|strong="H6138"\w*, \w als|strong="H4480"\w* wäre \w kein|strong="H0369"\w* \w Gott|strong="H0430"\w* in \w Israel|strong="H3478"\w*, dessen \w Wort|strong="H1697"\w* man \w fragen|strong="H1875"\w* möchte, \w so|strong="H3651"\w* sollst du \w von|strong="H4480"\w* dem \w Bette|strong="H4296"\w* \w nicht|strong="H3808"\w* \w kommen|strong="H3381"\w*, \w darauf|strong="H0834"\w* du dich gelegt \w hast|strong="H5927"\w*, \w sondern|strong="H3588"\w* sollst des \w Todes|strong="H4191"\w* \w sterben|strong="H4191"\w*.  
\v 17 Also starb \w er|strong="H4191"\w* nach dem \w Wort|strong="H1697"\w* des \w HERRN|strong="H3068"\w*, \w das|strong="H0834"\w* \w Elia|strong="H0452"\w* geredet \w hatte|strong="H1696"\w*. Und \w Joram|strong="H3088"\w* ward \w König|strong="H4427"\w* an seiner \w Statt|strong="H8478"\w* im \w zweiten|strong="H8147"\w* \w Jahr|strong="H8141"\w* \w Jorams|strong="H3088"\w*, des \w Sohnes|strong="H1121"\w* \w Josaphats|strong="H3092"\w*, des \w Königs|strong="H4428"\w* Juda'\w s|strong="H3063"\w*; \w denn|strong="H3588"\w* er \w hatte|strong="H1961"\w* \w keinen|strong="H3808"\w* \w Sohn|strong="H1121"\w*.  
\v 18  \w Was|strong="H1697"\w* aber \w mehr|strong="H3499"\w* von \w Ahasja|strong="H0274"\w* zu sagen ist, \w das|strong="H0834"\w* er getan \w hat|strong="H6213"\w*, \w siehe|strong="H3808"\w*, \w das|strong="H1992"\w* ist \w geschrieben|strong="H3789"\w* \w in|strong="H5921"\w* der \w Chronik|strong="H5612"\w* der \w Könige|strong="H4428"\w* \w Israels|strong="H3478"\w*.   
\c 2  
\p
\v 1  \w Da|strong="H1961"\w* aber der \w HERR|strong="H3068"\w* wollte \w Elia|strong="H0452"\w* im \w Wetter|strong="H5591"\w* gen \w Himmel|strong="H8064"\w* \w holen|strong="H5927"\w*, \w gingen|strong="H3212"\w* \w Elia|strong="H0452"\w* und \w Elisa|strong="H0477"\w* \w von|strong="H4480"\w* \w Gilgal|strong="H1537"\w*.  
\v 2 Und \w Elia|strong="H0452"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Elisa|strong="H0477"\w*: \w Bleib|strong="H3427"\w* \w doch|strong="H4994"\w* \w hier|strong="H6311"\w*; \w denn|strong="H3588"\w* der \w HERR|strong="H3068"\w* hat mich \w gen|strong="H5704"\w* Beth-\w El|strong="H1008"\w* \w gesandt|strong="H7971"\w*. \w Elisa|strong="H0477"\w* aber \w sprach|strong="H0559"\w*: So wahr der \w HERR|strong="H3068"\w* \w lebt|strong="H2416"\w* und deine \w Seele|strong="H5315"\w*, ich \w verlasse|strong="H5800"\w* dich \w nicht|strong="H5800"\w*. Und da sie \w hinab|strong="H3381"\w* gen Beth-\w El|strong="H1008"\w* \w kamen|strong="H3381"\w*,  
\v 3  \w gingen|strong="H3318"\w* der \w Propheten|strong="H5030"\w* \w Kinder|strong="H1121"\w*, \w die|strong="H0834"\w* zu Beth-\w El|strong="H1008"\w* waren, \w heraus|strong="H3318"\w* \w zu|strong="H0413"\w* \w Elisa|strong="H0477"\w* und \w sprachen|strong="H0559"\w* zu ihm: Weißt \w du|strong="H3045"\w* auch, \w daß|strong="H3588"\w* der \w HERR|strong="H3068"\w* \w wird|strong="H3947"\w* deinen \w Herrn|strong="H0113"\w* \w heute|strong="H3117"\w* \w von|strong="H4480"\w* deinen \w Häupten|strong="H7218"\w* \w nehmen|strong="H3947"\w*? Er aber \w sprach|strong="H0559"\w*: \w Ich|strong="H0589"\w* \w weiß|strong="H3045"\w* es \w auch|strong="H1571"\w* wohl; schweigt nur \w still|strong="H2814"\w*.  
\v 4 Und \w Elia|strong="H0452"\w* \w sprach|strong="H0559"\w* zu ihm: \w Elisa|strong="H0477"\w*, \w bleib|strong="H3427"\w* \w doch|strong="H4994"\w* \w hier|strong="H6311"\w*; \w denn|strong="H3588"\w* der \w HERR|strong="H3068"\w* hat mich gen \w Jericho|strong="H3405"\w* \w gesandt|strong="H7971"\w*. Er aber \w sprach|strong="H0559"\w*: So wahr der \w HERR|strong="H3068"\w* \w lebt|strong="H2416"\w* und deine \w Seele|strong="H5315"\w*, ich \w verlasse|strong="H5800"\w* dich \w nicht|strong="H5800"\w*. Und da sie gen \w Jericho|strong="H3405"\w* \w kamen|strong="H0935"\w*,  
\v 5  \w traten|strong="H5066"\w* der \w Propheten|strong="H5030"\w* \w Kinder|strong="H1121"\w*, \w die|strong="H0834"\w* zu \w Jericho|strong="H3405"\w* waren, \w zu|strong="H0413"\w* \w Elisa|strong="H0477"\w* und \w sprachen|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: Weißt \w du|strong="H3045"\w* auch, \w daß|strong="H3588"\w* der \w HERR|strong="H3068"\w* \w wird|strong="H3947"\w* deinen \w Herrn|strong="H0113"\w* \w heute|strong="H3117"\w* \w von|strong="H4480"\w* deinen \w Häupten|strong="H7218"\w* \w nehmen|strong="H3947"\w*? Er aber \w sprach|strong="H0559"\w*: \w Ich|strong="H0589"\w* \w weiß|strong="H3045"\w* es \w auch|strong="H1571"\w* wohl; schweigt nur \w still|strong="H2814"\w*.  
\v 6 Und \w Elia|strong="H0452"\w* \w sprach|strong="H0559"\w* zu ihm: \w Bleib|strong="H3427"\w* \w doch|strong="H4994"\w* \w hier|strong="H6311"\w*; \w denn|strong="H3588"\w* der \w HERR|strong="H3068"\w* hat mich \w gesandt|strong="H7971"\w* an den \w Jordan|strong="H3383"\w*. Er aber \w sprach|strong="H0559"\w*: So wahr der \w HERR|strong="H3068"\w* \w lebt|strong="H2416"\w* und deine \w Seele|strong="H5315"\w*, ich \w verlasse|strong="H5800"\w* dich \w nicht|strong="H5800"\w*. Und sie \w gingen|strong="H3212"\w* \w beide|strong="H8147"\w* \w miteinander|strong="H3212"\w*.  
\v 7 Aber \w fünfzig|strong="H2572"\w* \w Männer|strong="H0376"\w* \w unter|strong="H4480"\w* der \w Propheten|strong="H5030"\w* \w Kindern|strong="H1121"\w* gingen \w hin|strong="H1980"\w* und \w traten|strong="H5975"\w* \w gegenüber|strong="H4480"\w* \w von|strong="H4480"\w* \w ferne|strong="H7350"\w*; aber die \w beiden|strong="H8147"\w* \w standen|strong="H5975"\w* \w am|strong="H5921"\w* \w Jordan|strong="H3383"\w*.  
\v 8 Da \w nahm|strong="H3947"\w* \w Elia|strong="H0452"\w* seinen \w Mantel|strong="H0155"\w* und wickelte ihn \w zusammen|strong="H1563"\w* und \w schlug|strong="H5221"\w* ins \w Wasser|strong="H4325"\w*; das \w teilte|strong="H2673"\w* sich auf beiden \w Seiten|strong="H2008"\w*, daß die \w beiden|strong="H8147"\w* \w trocken|strong="H2724"\w* \w hindurchgingen|strong="H5674"\w*.  
\v 9 Und \w da|strong="H1961"\w* sie \w hinüberkamen|strong="H5674"\w*, \w sprach|strong="H0559"\w* \w Elia|strong="H0452"\w* \w zu|strong="H0413"\w* \w Elisa|strong="H0477"\w*: \w Bitte|strong="H7592"\w*, \w was|strong="H4100"\w* ich dir tun \w soll|strong="H6213"\w*, \w ehe|strong="H2962"\w* ich \w von|strong="H4480"\w* dir genommen \w werde|strong="H3947"\w*. \w Elisa|strong="H0477"\w* \w sprach|strong="H0559"\w*: \w Daß|strong="H4994"\w* \w mir|strong="H0413"\w* \w werde|strong="H1961"\w* ein \w zwiefältig|strong="H8147"\w* \w Teil|strong="H6310"\w* von deinem \w Geiste|strong="H7307"\w*.  
\v 10 Er \w sprach|strong="H0559"\w*: Du hast ein \w Hartes|strong="H7185"\w* \w gebeten|strong="H7592"\w*. Doch, \w so|strong="H0518"\w* du \w mich|strong="H0853"\w* sehen \w wirst|strong="H7200"\w*, wenn ich \w von|strong="H4480"\w* dir genommen \w werde|strong="H3947"\w*, so wird's \w ja|strong="H3651"\w* \w sein|strong="H1961"\w*; wo \w nicht|strong="H0369"\w*, \w so|strong="H0518"\w* wird's \w nicht|strong="H3808"\w* \w sein|strong="H1961"\w*.  
\v 11 Und \w da|strong="H1961"\w* \w sie|strong="H1992"\w* miteinander \w gingen|strong="H1980"\w* und \w redeten|strong="H1696"\w*, \w siehe|strong="H2009"\w*, da kam ein \w feuriger|strong="H0784"\w* \w Wagen|strong="H7393"\w* mit \w feurigen|strong="H0784"\w* \w Rossen|strong="H5483"\w*, die \w schieden|strong="H6504"\w* die \w beiden|strong="H8147"\w* \w voneinander|strong="H0996"\w*; und \w Elia|strong="H0452"\w* \w fuhr|strong="H5927"\w* also im \w Wetter|strong="H5591"\w* gen \w Himmel|strong="H8064"\w*.  
\v 12  \w Elisa|strong="H0477"\w* aber \w sah|strong="H7200"\w* es \w und|strong="H1931"\w* \w schrie|strong="H6817"\w*: \w Vater|strong="H0001"\w*, mein \w Vater|strong="H0001"\w*, \w Wagen|strong="H7393"\w* \w Israels|strong="H3478"\w* und seine \w Reiter|strong="H6571"\w*! und \w sah|strong="H7200"\w* ihn \w nicht|strong="H3808"\w* \w mehr|strong="H5750"\w*. Und er \w faßte|strong="H2388"\w* sein \w Kleider|strong="H0899"\w* und \w zerriß|strong="H7167"\w* sie in \w zwei|strong="H8147"\w* \w Stücke|strong="H7168"\w*  
\v 13 und hob \w auf|strong="H7311"\w* den \w Mantel|strong="H0155"\w* Elia'\w s|strong="H0452"\w*, \w der|strong="H0834"\w* \w ihm|strong="H4480"\w* entfallen \w war|strong="H5307"\w*, und kehrte \w um|strong="H7725"\w* und \w trat|strong="H5975"\w* \w an|strong="H5921"\w* das \w Ufer|strong="H8193"\w* des \w Jordans|strong="H3383"\w*  
