\v 23 Was aber \w mehr|strong="H3499"\w* von \w Joram|strong="H3141"\w* zu sagen \w ist|strong="H1697"\w* und \w alles|strong="H3605"\w*, \w was|strong="H0834"\w* er getan \w hat|strong="H6213"\w*, \w siehe|strong="H1992"\w*, das ist \w geschrieben|strong="H3789"\w* \w in|strong="H5921"\w* der \w Chronik|strong="H5612"\w* der \w Könige|strong="H4428"\w* Juda'\w s|strong="H3063"\w*.  
\v 24 Und \w Joram|strong="H3141"\w* \w entschlief|strong="H7901"\w* \w mit|strong="H5973"\w* seinen \w Vätern|strong="H0001"\w* in der \w Stadt|strong="H5892"\w* \w Davids|strong="H1732"\w*. Und \w Ahasja|strong="H0274"\w*, sein \w Sohn|strong="H1121"\w*, ward \w König|strong="H4427"\w* an seiner \w Statt|strong="H8478"\w*.  
\v 25 Im \w zwölften|strong="H8147"\w* \w Jahr|strong="H8141"\w* \w Jorams|strong="H3141"\w*, des \w Sohnes|strong="H1121"\w* \w Ahabs|strong="H0256"\w*, des \w Königs|strong="H4428"\w* \w Israels|strong="H3478"\w*, \w ward|strong="H4427"\w* \w Ahasja|strong="H0274"\w*, der \w Sohn|strong="H1121"\w* \w Jorams|strong="H3088"\w*, \w König|strong="H4428"\w* in \w Juda|strong="H3063"\w*.  
\v 26  \w Zweiundzwanzig|strong="H8147"\w* \w Jahre|strong="H8141"\w* \w alt|strong="H1121"\w* war \w Ahasja|strong="H0274"\w*, da er König \w ward|strong="H4427"\w*, und \w regierte|strong="H4427"\w* \w ein|strong="H0259"\w* \w Jahr|strong="H8141"\w* zu \w Jerusalem|strong="H3389"\w*. Seine \w Mutter|strong="H0517"\w* \w hieß|strong="H8034"\w* \w Athalja|strong="H6271"\w*, eine \w Tochter|strong="H1323"\w* \w Omris|strong="H6018"\w*, des \w Königs|strong="H4428"\w* \w Israels|strong="H3478"\w*.  
\v 27 Und er \w wandelte|strong="H3212"\w* auf dem \w Wege|strong="H1870"\w* des \w Hauses|strong="H1004"\w* \w Ahab|strong="H0256"\w* und \w tat|strong="H6213"\w*, was dem \w HERRN|strong="H3068"\w* \w übel|strong="H7451"\w* \w gefiel|strong="H5869"\w*, wie das \w Haus|strong="H1004"\w* \w Ahab|strong="H0256"\w*; denn \w er|strong="H1931"\w* war \w Schwager|strong="H2860"\w* im \w Hause|strong="H1004"\w* \w Ahab|strong="H0256"\w*.  
\v 28 Und er \w zog|strong="H3212"\w* mit \w Joram|strong="H3141"\w*, dem \w Sohn|strong="H1121"\w* \w Ahabs|strong="H0256"\w*, in den \w Streit|strong="H4421"\w* \w wider|strong="H5973"\w* \w Hasael|strong="H2371"\w*, den \w König|strong="H4428"\w* von \w Syrien|strong="H0758"\w* gen \w Ramoth|strong="H7433"\w* in \w Gilead|strong="H1568"\w*; aber die \w Syrer|strong="H0761"\w* \w schlugen|strong="H5221"\w* \w Joram|strong="H3141"\w*.  
\v 29 Da \w kehrte|strong="H7725"\w* \w Joram|strong="H3141"\w*, der \w König|strong="H4428"\w*, \w um|strong="H7725"\w*, daß er sich heilen \w ließ|strong="H7495"\w* zu \w Jesreel|strong="H3157"\w* \w von|strong="H4480"\w* den \w Wunden|strong="H4347"\w*, \w die|strong="H0834"\w* ihm die \w Syrer|strong="H0761"\w* geschlagen \w hatten|strong="H5221"\w* zu \w Rama|strong="H7414"\w*, da er mit \w Hasael|strong="H2371"\w*, dem \w König|strong="H4428"\w* von \w Syrien|strong="H0758"\w*, \w stritt|strong="H3898"\w*. Und \w Ahasja|strong="H0274"\w*, der \w Sohn|strong="H1121"\w* \w Jorams|strong="H3088"\w*, der \w König|strong="H4428"\w* Juda'\w s|strong="H3063"\w*, kam \w hinab|strong="H3381"\w*, zu \w besuchen|strong="H7200"\w* \w Joram|strong="H3141"\w*, den \w Sohn|strong="H1121"\w* \w Ahabs|strong="H0256"\w*, zu \w Jesreel|strong="H3157"\w*; \w denn|strong="H3588"\w* \w er|strong="H1931"\w* lag \w krank|strong="H2470"\w*.   
\c 9  
\p
\v 1  \w Elisa|strong="H0477"\w* aber, der \w Prophet|strong="H5030"\w*, \w rief|strong="H7121"\w* \w der|strong="H4480"\w* \w Propheten|strong="H5030"\w* \w Kinder|strong="H1121"\w* \w einen|strong="H0259"\w* und \w sprach|strong="H0559"\w* zu ihm: \w Gürte|strong="H2296"\w* deine \w Lenden|strong="H4975"\w* und \w nimm|strong="H3947"\w* \w diesen|strong="H2088"\w* \w Ölkrug|strong="H6378"\w* mit \w dir|strong="H3027"\w* und gehe \w hin|strong="H3212"\w* gen \w Ramoth|strong="H7433"\w* in \w Gilead|strong="H1568"\w*.  
\v 2 Und wenn du \w dahin|strong="H8033"\w* \w kommst|strong="H0935"\w*, wirst du \w daselbst|strong="H8033"\w* \w sehen|strong="H7200"\w* \w Jehu|strong="H3058"\w*, den \w Sohn|strong="H1121"\w* \w Josaphats|strong="H3092"\w*, des \w Sohnes|strong="H1121"\w* \w Nimsis|strong="H5250"\w*. Und gehe \w hinein|strong="H0935"\w* und heiß ihn \w aufstehen|strong="H6965"\w* \w unter|strong="H4480"\w* seinen \w Brüdern|strong="H0251"\w* und \w führe|strong="H0935"\w* \w ihn|strong="H0853"\w* in die \w innerste|strong="H2315"\w* \w Kammer|strong="H2315"\w*  
\v 3 und \w nimm|strong="H3947"\w* den \w Ölkrug|strong="H6378"\w* und \w schütte|strong="H3332"\w* es \w auf|strong="H5921"\w* sein \w Haupt|strong="H7218"\w* und \w sprich|strong="H0559"\w*: \w So|strong="H3541"\w* \w sagt|strong="H0559"\w* der \w HERR|strong="H3068"\w*: Ich habe dich zum \w König|strong="H4428"\w* \w über|strong="H0413"\w* \w Israel|strong="H3478"\w* \w gesalbt|strong="H4886"\w*. Und sollst die \w Tür|strong="H1817"\w* \w auftun|strong="H6605"\w* und \w fliehen|strong="H5127"\w* und \w nicht|strong="H3808"\w* \w verziehen|strong="H2442"\w*.  
\v 4 Und der \w Jüngling|strong="H5288"\w*, der \w Diener|strong="H5288"\w* des \w Propheten|strong="H5030"\w*, \w ging|strong="H3212"\w* hin gen \w Ramoth|strong="H7433"\w* in \w Gilead|strong="H1568"\w*.  
\v 5 Und da er \w hineinkam|strong="H0935"\w*, \w siehe|strong="H2009"\w*, da \w saßen|strong="H3427"\w* die \w Hauptleute|strong="H8269"\w* des \w Heeres|strong="H2428"\w*. Und er \w sprach|strong="H0559"\w*: Ich habe \w dir|strong="H0413"\w*, \w Hauptmann|strong="H8269"\w*, was zu \w sagen|strong="H1697"\w*. \w Jehu|strong="H3058"\w* \w sprach|strong="H0559"\w*: \w Welchem|strong="H0413"\w* \w unter|strong="H4480"\w* uns \w allen|strong="H3605"\w*? Er \w sprach|strong="H0559"\w*: \w Dir|strong="H0413"\w*, \w Hauptmann|strong="H8269"\w*.  
\v 6 Da stand er \w auf|strong="H6965"\w* und \w ging|strong="H0935"\w* \w hinein|strong="H1004"\w*. Er aber \w schüttete|strong="H3332"\w* das \w Öl|strong="H8081"\w* \w auf|strong="H0413"\w* sein \w Haupt|strong="H7218"\w* und \w sprach|strong="H0559"\w* zu \w ihm|strong="H3541"\w*: So \w sagt|strong="H0559"\w* der \w HERR|strong="H3068"\w*, der \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*: Ich habe dich zum \w König|strong="H4428"\w* \w gesalbt|strong="H4886"\w* \w über|strong="H0413"\w* das \w Volk|strong="H5971"\w* \w Israel|strong="H3478"\w*.  
\v 7 Und du sollst das \w Haus|strong="H1004"\w* \w Ahabs|strong="H0256"\w*, deines \w Herrn|strong="H0113"\w*, \w schlagen|strong="H5221"\w*, daß ich das \w Blut|strong="H1818"\w* der \w Propheten|strong="H5030"\w*, meiner \w Knechte|strong="H5650"\w*, und das \w Blut|strong="H1818"\w* \w aller|strong="H3605"\w* \w Knechte|strong="H5650"\w* des \w HERRN|strong="H3068"\w* \w räche|strong="H5358"\w*, \w das|strong="H4480"\w* die \w Hand|strong="H3027"\w* \w Isebels|strong="H0348"\w* vergossen hat,  
\v 8 daß das \w ganze|strong="H3605"\w* \w Haus|strong="H1004"\w* \w Ahab|strong="H0256"\w* \w umkomme|strong="H0006"\w*. Und ich will von \w Ahab|strong="H0256"\w* \w ausrotten|strong="H3772"\w*, was \w männlich|strong="H8366"\w* ist, den \w Verschlossenen|strong="H6113"\w* und \w Verlassenen|strong="H5800"\w* in \w Israel|strong="H3478"\w*,  
\v 9 und will das \w Haus|strong="H1004"\w* \w Ahabs|strong="H0256"\w* \w machen|strong="H5414"\w* wie das \w Haus|strong="H1004"\w* \w Jerobeams|strong="H3379"\w*, des \w Sohnes|strong="H1121"\w* \w Nebats|strong="H5028"\w*, und wie das \w Haus|strong="H1004"\w* \w Baesas|strong="H1201"\w*, des \w Sohnes|strong="H1121"\w* \w Ahias|strong="H0281"\w*.  
