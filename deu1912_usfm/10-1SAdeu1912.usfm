\v 1  \w Also|strong="H0727"\w* \w war|strong="H1961"\w* die \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w* \w sieben|strong="H7651"\w* \w Monate|strong="H2320"\w* im \w Lande|strong="H7704"\w* der \w Philister|strong="H6430"\w*.  
\v 2  \w Und|strong="H7121"\w* die \w Philister|strong="H6430"\w* \w riefen|strong="H7121"\w* ihre \w Priester|strong="H3548"\w* und \w Weissager|strong="H7080"\w* und \w sprachen|strong="H0559"\w*: \w Was|strong="H4100"\w* sollen wir mit der \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w* \w machen|strong="H6213"\w*? Lehrt \w uns|strong="H3045"\w*, \w womit|strong="H4100"\w* \w sollen|strong="H7971"\w* wir sie an ihren \w Ort|strong="H4725"\w* \w senden|strong="H7971"\w*?  
\v 3 Sie \w sprachen|strong="H0559"\w*: \w Wollt|strong="H7971"\w* ihr die \w Lade|strong="H0727"\w* des \w Gottes|strong="H0430"\w* \w Israels|strong="H3478"\w* \w senden|strong="H7971"\w*, so \w sendet|strong="H7971"\w* \w sie|strong="H0853"\w* \w nicht|strong="H0408"\w* \w leer|strong="H7387"\w*, \w sondern|strong="H3588"\w* \w sollt|strong="H7725"\w* \w ihm|strong="H7725"\w* \w vergelten|strong="H7725"\w* ein \w Schuldopfer|strong="H0817"\w*; \w so|strong="H0227"\w* werdet ihr gesund \w werden|strong="H7495"\w* und wird euch kund \w werden|strong="H3045"\w*, \w warum|strong="H4100"\w* seine \w Hand|strong="H3027"\w* \w nicht|strong="H3808"\w* \w von|strong="H4480"\w* \w euch|strong="H3808"\w* \w läßt|strong="H5493"\w*.  
\v 4 Sie aber \w sprachen|strong="H0559"\w*: \w Welches|strong="H4100"\w* ist das \w Schuldopfer|strong="H0817"\w*, \w das|strong="H0834"\w* wir ihm geben \w sollen|strong="H7725"\w*? Sie \w antworteten|strong="H0559"\w*: \w Fünf|strong="H2568"\w* \w goldene|strong="H2091"\w* \w Beulen|strong="H2914"\w* und \w fünf|strong="H2568"\w* \w goldene|strong="H2091"\w* \w Mäuse|strong="H5909"\w* nach der \w Zahl|strong="H4557"\w* der fünf \w Fürsten|strong="H5633"\w* der \w Philister|strong="H6430"\w*; \w denn|strong="H3588"\w* es ist \w einerlei|strong="H0259"\w* Plage \w gewesen|strong="H4046"\w* über euch \w alle|strong="H3605"\w* und über eure \w Fürsten|strong="H5633"\w*.  
\v 5 So müßt ihr nun \w machen|strong="H6213"\w* \w Bilder|strong="H6754"\w* eurer \w Beulen|strong="H2914"\w* \w und|strong="H6754"\w* eurer \w Mäuse|strong="H5909"\w*, die euer \w Land|strong="H0776"\w* verderbt \w haben|strong="H7843"\w*, daß \w ihr|strong="H5414"\w* dem \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w* die \w Ehre|strong="H3519"\w* \w gebt|strong="H5414"\w*; \w vielleicht|strong="H0194"\w* wird seine \w Hand|strong="H3027"\w* leichter \w werden|strong="H7043"\w* \w über|strong="H5921"\w* euch \w und|strong="H4480"\w* \w über|strong="H5921"\w* euren \w Gott|strong="H0430"\w* \w und|strong="H4480"\w* \w über|strong="H5921"\w* euer \w Land|strong="H0776"\w*.  
\v 6  \w Warum|strong="H4100"\w* \w verstockt|strong="H3513"\w* ihr euer \w Herz|strong="H3824"\w*, \w wie|strong="H0834"\w* die \w Ägypter|strong="H4714"\w* und \w Pharao|strong="H6547"\w* ihr \w Herz|strong="H3820"\w* \w verstockten|strong="H3513"\w*? Ist's \w nicht|strong="H3808"\w* \w also|strong="H0834"\w*: da er seine Macht an ihnen \w bewies|strong="H5953"\w*, ließen sie sie \w fahren|strong="H7971"\w*, daß sie \w hingingen|strong="H3212"\w*?  
\v 7  \w So|strong="H6258"\w* \w nehmet|strong="H3947"\w* \w nun|strong="H6258"\w* und \w machet|strong="H6213"\w* \w einen|strong="H0259"\w* \w neuen|strong="H2319"\w* \w Wagen|strong="H5699"\w* und \w zwei|strong="H8147"\w* junge, \w säugende|strong="H5763"\w* \w Kühe|strong="H6510"\w*, \w auf|strong="H5921"\w* \w die|strong="H0834"\w* noch nie \w ein|strong="H3808"\w* \w Joch|strong="H5923"\w* gekommen \w ist|strong="H5927"\w*, und \w spannt|strong="H0631"\w* \w sie|strong="H6510"\w* an den \w Wagen|strong="H5699"\w* und \w laßt|strong="H7725"\w* ihre \w Kälber|strong="H1121"\w* \w hinter|strong="H0310"\w* ihnen \w daheim|strong="H1004"\w* \w bleiben|strong="H7725"\w*.  
\v 8 Und \w nehmet|strong="H3947"\w* die \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w* und \w legt|strong="H5414"\w* \w sie|strong="H0853"\w* auf den \w Wagen|strong="H5699"\w*; \w und|strong="H7760"\w* die \w goldenen|strong="H2091"\w* \w Kleinode|strong="H3627"\w*, \w die|strong="H0834"\w* ihr ihm zum \w Schuldopfer|strong="H0817"\w* \w gebet|strong="H7725"\w*, tut in ein \w Kästlein|strong="H0712"\w* \w neben|strong="H4480"\w* ihre \w Seite|strong="H6654"\w*. Und \w sendet|strong="H7971"\w* \w sie|strong="H0853"\w* \w hin|strong="H7971"\w* und laßt sie \w gehen|strong="H1980"\w*.  
\v 9 Und sehet \w zu|strong="H7200"\w*: \w geht|strong="H5927"\w* \w sie|strong="H1931"\w* \w hin|strong="H5927"\w* auf dem \w Weg|strong="H1870"\w* ihrer \w Grenze|strong="H1366"\w* gen Beth-\w Semes|strong="H1053"\w*, so hat er uns \w all|strong="H2063"\w* das \w große|strong="H1419"\w* \w Übel|strong="H7451"\w* \w getan|strong="H6213"\w*; \w wo|strong="H0518"\w* \w nicht|strong="H3808"\w*, so werden wir \w wissen|strong="H3045"\w*, \w daß|strong="H3588"\w* sein \w Hand|strong="H3027"\w* uns \w nicht|strong="H3808"\w* gerührt \w hat|strong="H5060"\w*, sondern \w es|strong="H1931"\w* ist uns \w ungefähr|strong="H4745"\w* \w widerfahren|strong="H1961"\w*.  
\v 10 Die \w Leute|strong="H0582"\w* \w taten|strong="H6213"\w* \w also|strong="H3651"\w* und \w nahmen|strong="H3947"\w* \w zwei|strong="H8147"\w* junge, \w säugende|strong="H5763"\w* \w Kühe|strong="H6510"\w* und \w spannten|strong="H0631"\w* sie an den \w Wagen|strong="H5699"\w* \w und|strong="H1121"\w* \w behielten|strong="H3607"\w* ihre \w Kälber|strong="H1121"\w* \w daheim|strong="H1004"\w*  
\v 11 und \w legten|strong="H7760"\w* die \w Lade|strong="H0727"\w* des \w HERR|strong="H3068"\w* \w auf|strong="H0413"\w* den \w Wagen|strong="H5699"\w* und das \w Kästlein|strong="H0712"\w* mit den \w goldenen|strong="H2091"\w* \w Mäusen|strong="H5909"\w* und mit den \w Bildern|strong="H6754"\w* ihrer \w Beulen|strong="H2914"\w*.  
\v 12 Und die \w Kühe|strong="H6510"\w* gingen \w geradewegs|strong="H3474"\w* \w auf|strong="H5921"\w* Beth-\w Semes|strong="H1053"\w* zu auf \w einer|strong="H0259"\w* \w Straße|strong="H4546"\w* und \w gingen|strong="H1980"\w* und \w blökten|strong="H1600"\w* und \w wichen|strong="H5493"\w* \w nicht|strong="H3808"\w* weder zur \w Rechten|strong="H3225"\w* noch zur \w Linken|strong="H8040"\w*; und die \w Fürsten|strong="H5633"\w* der \w Philister|strong="H6430"\w* \w gingen|strong="H1980"\w* ihnen \w nach|strong="H0310"\w* bis \w an|strong="H5704"\w* die \w Grenze|strong="H1366"\w* von Beth-\w Semes|strong="H1053"\w*.  
\v 13 Die Beth-Semiter \w aber|strong="H1053"\w* schnitten \w eben|strong="H7114"\w* in der \w Weizenernte|strong="H2406"\w* im \w Grund|strong="H6010"\w*, \w und|strong="H5869"\w* \w hoben|strong="H5375"\w* ihre \w Augen|strong="H5869"\w* \w auf|strong="H5375"\w* und \w sahen|strong="H7200"\w* die \w Lade|strong="H0727"\w* und freuten \w sich|strong="H8055"\w*, sie zu \w sehen|strong="H7200"\w*.  
\v 14 Der Wagen \w aber|strong="H5699"\w* \w kam|strong="H0935"\w* \w auf|strong="H0413"\w* den \w Acker|strong="H7704"\w* \w Josuas|strong="H3091"\w*, des Beth-\w Semiters|strong="H1030"\w*, und stand \w daselbst|strong="H8033"\w* \w still|strong="H5975"\w*. \w Und|strong="H8033"\w* war ein \w großer|strong="H1419"\w* \w Stein|strong="H0068"\w* \w daselbst|strong="H8033"\w*. Und sie \w spalteten|strong="H1234"\w* das \w Holz|strong="H6086"\w* vom \w Wagen|strong="H5699"\w* und \w opferten|strong="H5927"\w* die \w Kühe|strong="H6510"\w* dem \w HERRN|strong="H3068"\w* zum \w Brandopfer|strong="H5930"\w*.  
\v 15 Die Leviten \w aber|strong="H3881"\w* \w hoben|strong="H3381"\w* die \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w* herab und das \w Kästlein|strong="H0712"\w*, \w das|strong="H0834"\w* \w obendran|strong="H0854"\w* war, \w darin|strong="H0834"\w* die \w goldenen|strong="H2091"\w* \w Kleinode|strong="H3627"\w* waren, und \w setzten|strong="H7760"\w* sie \w auf|strong="H0413"\w* den \w großen|strong="H1419"\w* \w Stein|strong="H0068"\w*. Aber die \w Leute|strong="H0582"\w* zu Beth-\w Semes|strong="H1053"\w* \w opferten|strong="H5927"\w* dem \w HERRN|strong="H3068"\w* \w desselben|strong="H1931"\w* \w Tages|strong="H3117"\w* \w Brandopfer|strong="H5930"\w* \w und|strong="H2076"\w* andere \w Opfer|strong="H2077"\w*.  
\v 16 Da aber die \w fünf|strong="H2568"\w* \w Fürsten|strong="H5633"\w* der \w Philister|strong="H6430"\w* zugesehen \w hatten|strong="H7200"\w*, zogen sie \w wiederum|strong="H7725"\w* gen \w Ekron|strong="H6138"\w* \w desselben|strong="H1931"\w* \w Tages|strong="H3117"\w*.  
\v 17  \w Dies|strong="H0428"\w* sind aber die \w goldenen|strong="H2091"\w* \w Beulen|strong="H2914"\w*, \w die|strong="H0834"\w* die \w Philister|strong="H6430"\w* dem \w HERRN|strong="H3068"\w* zum \w Schuldopfer|strong="H0817"\w* \w gaben|strong="H7725"\w*: \w Sadod|strong="H0795"\w* \w eine|strong="H0259"\w*, \w Gaza|strong="H5804"\w* \w eine|strong="H0259"\w*, \w Askalon|strong="H0831"\w* \w eine|strong="H0259"\w*, \w Gath|strong="H1661"\w* \w eine|strong="H0259"\w* und \w Ekron|strong="H6138"\w* \w eine|strong="H0259"\w*;  
\v 18 und die \w goldenen|strong="H2091"\w* \w Mäuse|strong="H5909"\w* nach der \w Zahl|strong="H4557"\w* \w aller|strong="H3605"\w* \w Städte|strong="H5892"\w* der \w Philister|strong="H6430"\w* unter den \w fünf|strong="H2568"\w* \w Fürsten|strong="H5633"\w*, \w der|strong="H4480"\w* \w gemauerten|strong="H4013"\w* \w Städte|strong="H5892"\w* und \w der|strong="H5704"\w* \w Dörfer|strong="H6521"\w*. \w Und|strong="H5704"\w* \w Zeuge|strong="H0059"\w* ist der \w große|strong="H1419"\w* Stein, \w darauf|strong="H5921"\w* \w sie|strong="H0834"\w* die \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w* \w ließen|strong="H3240"\w*, bis \w auf|strong="H5704"\w* \w diesen|strong="H2088"\w* \w Tag|strong="H3117"\w* auf dem \w Acker|strong="H7704"\w* \w Josuas|strong="H3091"\w*, des Beth-\w Semiters|strong="H1030"\w*.  
\v 19  \w Und|strong="H5221"\w* \w etliche|strong="H0376"\w* zu Beth-\w Semes|strong="H1053"\w* wurden \w geschlagen|strong="H5221"\w*, darum \w daß|strong="H3588"\w* sie die \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w* angesehen \w hatten|strong="H7200"\w*. Und er \w schlug|strong="H5221"\w* des \w Volks|strong="H5971"\w* \w siebzig|strong="H7657"\w* \w Mann|strong="H2572"\w* (\w fünfzigtausendund|strong="H0505"\w* siebzig). Da \w trug|strong="H0056"\w* das \w Volk|strong="H5971"\w* \w Leid|strong="H0056"\w*, \w daß|strong="H3588"\w* der \w HERR|strong="H3068"\w* so eine \w große|strong="H1419"\w* \w Schlacht|strong="H4347"\w* im \w Volk|strong="H5971"\w* getan \w hatte|strong="H5221"\w*.  
\v 20  \w Und|strong="H0559"\w* die \w Leute|strong="H0582"\w* zu Beth-\w Semes|strong="H1053"\w* \w sprachen|strong="H0559"\w*: \w Wer|strong="H4310"\w* \w kann|strong="H3201"\w* \w stehen|strong="H5975"\w* \w vor|strong="H6440"\w* dem \w HERRN|strong="H3068"\w*, \w solchem|strong="H2088"\w* \w heiligen|strong="H6918"\w* \w Gott|strong="H0430"\w*? Und \w zu|strong="H0413"\w* \w wem|strong="H4310"\w* soll \w er|strong="H5927"\w* \w von|strong="H4480"\w* uns \w ziehen|strong="H5927"\w*?  
\v 21 Und sie \w sandten|strong="H7971"\w* \w Boten|strong="H4397"\w* \w zu|strong="H0413"\w* den \w Bürgern|strong="H3427"\w* Kirjath-\w Jearims|strong="H7157"\w* und ließen ihnen \w sagen|strong="H0559"\w*: Die \w Philister|strong="H6430"\w* haben uns die \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w* \w wiedergebracht|strong="H7725"\w*; kommt \w herab|strong="H3381"\w* und holt \w sie|strong="H0853"\w* \w zu|strong="H0413"\w* euch \w hinauf|strong="H5927"\w*.   
