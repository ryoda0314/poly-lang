\v 1  \w David|strong="H1732"\w* aber \w gedachte|strong="H0559"\w* \w in|strong="H0413"\w* seinem \w Herzen|strong="H3820"\w*: \w Ich|strong="H6258"\w* werde \w der|strong="H0259"\w* \w Tage|strong="H3117"\w* einen \w Saul|strong="H7586"\w* in die \w Hände|strong="H3027"\w* \w fallen|strong="H5595"\w*; es ist mir \w nichts|strong="H0369"\w* \w besser|strong="H2896"\w*, denn \w daß|strong="H3588"\w* ich \w entrinne|strong="H4422"\w* \w in|strong="H0413"\w* der \w Philister|strong="H6430"\w* \w Land|strong="H0776"\w*, daß \w Saul|strong="H7586"\w* \w von|strong="H4480"\w* mir \w ablasse|strong="H2976"\w*, mich \w fürder|strong="H5750"\w* zu \w suchen|strong="H1245"\w* im \w ganzen|strong="H3605"\w* \w Gebiet|strong="H1366"\w* \w Israels|strong="H3478"\w*; so werde ich \w seinen|strong="H4480"\w* \w Händen|strong="H3027"\w* \w entrinnen|strong="H4422"\w*.  
\v 2  \w Und|strong="H1732"\w* machte sich \w auf|strong="H6965"\w* und ging \w hinüber|strong="H5674"\w* \w samt|strong="H1931"\w* den \w sechshundert|strong="H8337"\w* \w Mann|strong="H0376"\w*, \w die|strong="H0834"\w* \w bei|strong="H5973"\w* ihm waren, \w zu|strong="H0413"\w* \w Achis|strong="H0397"\w*, dem \w Sohn|strong="H1121"\w* \w Maochs|strong="H4582"\w*, dem \w König|strong="H4428"\w* zu \w Gath|strong="H1661"\w*.  
\v 3 Also \w blieb|strong="H3427"\w* \w David|strong="H1732"\w* \w bei|strong="H5973"\w* \w Achis|strong="H0397"\w* zu \w Gath|strong="H1661"\w* \w mit|strong="H1931"\w* seinen \w Männern|strong="H0582"\w*, ein \w jeglicher|strong="H0376"\w* mit seinem \w Hause|strong="H1004"\w*, \w David|strong="H1732"\w* auch mit seinen \w zwei|strong="H8147"\w* \w Weibern|strong="H0802"\w* \w Ahinoam|strong="H0293"\w*, der \w Jesreelitin|strong="H3159"\w*, und \w Abigail|strong="H0026"\w*, des \w Nabals|strong="H5037"\w* \w Weibe|strong="H0802"\w*, der \w Karmeliterin|strong="H3762"\w*.  
\v 4 Und da \w Saul|strong="H7586"\w* angesagt \w ward|strong="H5046"\w*, \w daß|strong="H3588"\w* \w David|strong="H1732"\w* gen \w Gath|strong="H1661"\w* geflohen \w wäre|strong="H1272"\w*, \w suchte|strong="H1245"\w* er ihn \w nicht|strong="H3808"\w* \w mehr|strong="H5750"\w*.  
\v 5 Und \w David|strong="H1732"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Achis|strong="H0397"\w*: Habe \w ich|strong="H4994"\w* \w Gnade|strong="H2580"\w* vor deinen \w Augen|strong="H5869"\w* \w gefunden|strong="H4672"\w*, so laß mir \w geben|strong="H5414"\w* einen \w Raum|strong="H4725"\w* in \w der|strong="H0259"\w* \w Städte|strong="H5892"\w* einer auf dem \w Lande|strong="H7704"\w*, daß ich \w darin|strong="H8033"\w* \w wohne|strong="H3427"\w*; was \w soll|strong="H4100"\w* dein \w Knecht|strong="H5650"\w* in der \w königlichen|strong="H4467"\w* \w Stadt|strong="H5892"\w* \w bei|strong="H5973"\w* dir \w wohnen|strong="H3427"\w*?  
\v 6 Da \w gab|strong="H5414"\w* ihm \w Achis|strong="H0397"\w* \w des|strong="H1931"\w* \w Tages|strong="H3117"\w* \w Ziklag|strong="H6860"\w*. \w Daher|strong="H3651"\w* \w gehört|strong="H1961"\w* \w Ziklag|strong="H6860"\w* zu den \w Königen|strong="H4428"\w* Juda'\w s|strong="H3063"\w* \w bis|strong="H5704"\w* auf \w diesen|strong="H2088"\w* \w Tag|strong="H3117"\w*.  
\v 7  \w Die|strong="H4557"\w* \w Zeit|strong="H3117"\w* aber, \w die|strong="H0834"\w* \w David|strong="H1732"\w* in der \w Philister|strong="H6430"\w* \w Lande|strong="H7704"\w* \w wohnte|strong="H3427"\w*, \w ist|strong="H1961"\w* ein \w Jahr|strong="H3117"\w* und \w vier|strong="H0702"\w* \w Monate|strong="H2320"\w*.  
\v 8  \w David|strong="H1732"\w* aber zog \w hinauf|strong="H5927"\w* samt seinen \w Männern|strong="H0582"\w* und fiel \w ins|strong="H6584"\w* Land der \w Gessuriter|strong="H1651"\w* und \w Girsiter|strong="H1511"\w* und \w Amalekiter|strong="H6003"\w*; \w denn|strong="H3588"\w* \w diese|strong="H2007"\w* waren von \w alters|strong="H0834"\w* her die \w Einwohner|strong="H3427"\w* dieses \w Landes|strong="H0776"\w*, wo man \w kommt|strong="H0935"\w* gen \w Sur|strong="H7793"\w* \w bis|strong="H5704"\w* an \w Ägyptenland|strong="H0776"\w*.  
\v 9 Da aber \w David|strong="H1732"\w* das \w Land|strong="H0776"\w* \w schlug|strong="H5221"\w*, ließ er weder \w Mann|strong="H0376"\w* \w noch|strong="H3808"\w* \w Weib|strong="H0802"\w* \w leben|strong="H2421"\w* und \w nahm|strong="H3947"\w* \w Schafe|strong="H6629"\w*, \w Rinder|strong="H1241"\w*, \w Esel|strong="H2543"\w*, \w Kamele|strong="H1581"\w* und \w Kleider|strong="H0899"\w* und kehrte \w wieder|strong="H7725"\w* und \w kam|strong="H0935"\w* \w zu|strong="H0413"\w* \w Achis|strong="H0397"\w*.  
\v 10 Wenn dann \w Achis|strong="H0397"\w* \w sprach|strong="H0559"\w*: \w Seid|strong="H0408"\w* ihr \w heute|strong="H3117"\w* nicht \w eingefallen|strong="H6584"\w*? so \w sprach|strong="H0559"\w* \w David|strong="H1732"\w*: \w In|strong="H5921"\w* das \w Mittagsland|strong="H5045"\w* Juda'\w s|strong="H3063"\w* und \w in|strong="H5921"\w* das \w Mittagsland|strong="H5045"\w* der \w Jerahmeeliter|strong="H3397"\w* und \w in|strong="H0413"\w* das \w Mittagsland|strong="H5045"\w* der \w Keniter|strong="H7017"\w*.  
\v 11  \w David|strong="H1732"\w* aber ließ \w weder|strong="H3808"\w* \w Mann|strong="H0376"\w* noch \w Weib|strong="H0802"\w* \w lebendig|strong="H2421"\w* gen \w Gath|strong="H1661"\w* \w kommen|strong="H0935"\w* und \w gedachte|strong="H0559"\w*: Sie \w möchten|strong="H5921"\w* wider \w uns|strong="H6435"\w* \w reden|strong="H5046"\w* und \w schwätzen|strong="H0559"\w*. \w Also|strong="H3541"\w* \w tat|strong="H6213"\w* \w David|strong="H1732"\w*, und \w das|strong="H3541"\w* war seine \w Weise|strong="H4941"\w*, \w solange|strong="H3605"\w* \w er|strong="H0834"\w* \w wohnte|strong="H3427"\w* in der \w Philister|strong="H6430"\w* \w Lande|strong="H7704"\w*.  
\v 12 Darum \w glaubte|strong="H0539"\w* \w Achis|strong="H0397"\w* \w David|strong="H1732"\w* und \w gedachte|strong="H0559"\w*: Er hat \w sich|strong="H0887"\w* stinkend \w gemacht|strong="H0887"\w* vor seinem \w Volk|strong="H5971"\w* \w Israel|strong="H3478"\w*, darum soll er \w immer|strong="H5769"\w* mein \w Knecht|strong="H5650"\w* \w sein|strong="H1961"\w*.   
