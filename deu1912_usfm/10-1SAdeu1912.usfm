\v 1 Es \w war|strong="H1961"\w* \w ein|strong="H0259"\w* \w Mann|strong="H0376"\w* \w von|strong="H4480"\w* Ramathaim-\w Zophim|strong="H7436"\w*, \w vom|strong="H4480"\w* \w Gebirge|strong="H2022"\w* \w Ephraim|strong="H0669"\w*, der \w hieß|strong="H8034"\w* \w Elkana|strong="H0511"\w*, ein \w Sohn|strong="H1121"\w* \w Jerohams|strong="H3395"\w*, des \w Sohnes|strong="H1121"\w* \w Elihus|strong="H0453"\w*, des \w Sohnes|strong="H1121"\w* \w Thohus|strong="H8459"\w*, des \w Sohnes|strong="H1121"\w* \w Zuphs|strong="H6689"\w*, ein \w Ephraimiter|strong="H0673"\w*.  
\v 2 Und er hatte \w zwei|strong="H8147"\w* \w Weiber|strong="H0802"\w*; \w eine|strong="H0259"\w* \w hieß|strong="H8034"\w* \w Hanna|strong="H2584"\w*, \w die|strong="H8034"\w* \w andere|strong="H8145"\w* \w Peninna|strong="H6444"\w*. \w Peninna|strong="H6444"\w* aber \w hatte|strong="H1961"\w* \w Kinder|strong="H3206"\w*, und \w Hanna|strong="H2584"\w* hatte \w keine|strong="H0369"\w* \w Kinder|strong="H3206"\w*.  
\v 3 Und \w derselbe|strong="H1931"\w* \w Mann|strong="H0376"\w* \w ging|strong="H5927"\w* \w jährlich|strong="H3117"\w* \w hinauf|strong="H5927"\w* \w von|strong="H4480"\w* seiner \w Stadt|strong="H5892"\w*, daß er \w anbetete|strong="H7812"\w* und \w opferte|strong="H2076"\w* dem \w HERRN|strong="H3068"\w* \w Zebaoth|strong="H6635"\w* zu \w Silo|strong="H7887"\w*. \w Daselbst|strong="H8033"\w* waren aber \w Priester|strong="H3548"\w* des \w HERRN|strong="H3068"\w* \w Hophni|strong="H2652"\w* und \w Pinehas|strong="H6372"\w*, die \w zwei|strong="H8147"\w* \w Söhne|strong="H1121"\w* \w Elis|strong="H5941"\w*.  
\v 4  \w Und|strong="H1961"\w* des \w Tages|strong="H3117"\w*, da \w Elkana|strong="H0511"\w* \w opferte|strong="H2076"\w*, gab \w er|strong="H5414"\w* seinem \w Weib|strong="H0802"\w* \w Peninna|strong="H6444"\w* und \w allen|strong="H3605"\w* ihren \w Söhnen|strong="H1121"\w* und \w Töchtern|strong="H1323"\w* \w Stücke|strong="H4490"\w*.  
\v 5 Aber \w Hanna|strong="H2584"\w* gab \w er|strong="H5414"\w* \w ein|strong="H0259"\w* \w Stück|strong="H4490"\w* \w traurig|strong="H0639"\w*; \w denn|strong="H3588"\w* er \w hatte|strong="H0157"\w* \w Hanna|strong="H2584"\w* \w lieb|strong="H0157"\w*, aber der \w HERR|strong="H3068"\w* hatte ihren \w Leib|strong="H7358"\w* \w verschlossen|strong="H5462"\w*.  
\v 6 Und ihre \w Widersacherin|strong="H6869"\w* \w betrübte|strong="H3707"\w* \w und|strong="H5668"\w* reizte sie \w sehr|strong="H7481"\w*, darum \w daß|strong="H3588"\w* der \w HERR|strong="H3068"\w* \w ihren|strong="H1157"\w* \w Leib|strong="H7358"\w* verschlossen \w hatte|strong="H5462"\w*.  
\v 7  \w Also|strong="H3651"\w* ging'\w s|strong="H6213"\w* \w alle|strong="H8141"\w* \w Jahre|strong="H8141"\w*; \w wenn|strong="H1767"\w* sie \w hinaufzog|strong="H5927"\w* \w zu|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w Hause|strong="H1004"\w*, betrübte \w jene|strong="H3707"\w* sie also; so weinte sie \w dann|strong="H1058"\w* und \w aß|strong="H0398"\w* \w nichts|strong="H3808"\w*.  
\v 8  \w Elkana|strong="H0511"\w* \w aber|strong="H0559"\w*, ihr \w Mann|strong="H0376"\w*, sprach zu \w ihr|strong="H0559"\w*: \w Hanna|strong="H2584"\w*, \w warum|strong="H4100"\w* weinst \w du|strong="H1058"\w*, und \w warum|strong="H4100"\w* issest \w du|strong="H0398"\w* \w nichts|strong="H3808"\w*, und \w warum|strong="H4100"\w* ist dein \w Herz|strong="H3824"\w* so \w traurig|strong="H3415"\w*? Bin ich dir \w nicht|strong="H3808"\w* \w besser|strong="H2896"\w* \w denn|strong="H4480"\w* \w zehn|strong="H6235"\w* \w Söhne|strong="H1121"\w*?  
\v 9 Da \w stand|strong="H6965"\w* \w Hanna|strong="H2584"\w* \w auf|strong="H6965"\w*, \w nachdem|strong="H0310"\w* sie \w gegessen|strong="H0398"\w* \w hatten|strong="H8354"\w* zu \w Silo|strong="H7887"\w* \w und|strong="H0310"\w* \w getrunken|strong="H8354"\w*. (Eli \w aber|strong="H5941"\w*, der \w Priester|strong="H3548"\w*, \w saß|strong="H3427"\w* \w auf|strong="H5921"\w* einem \w Stuhl|strong="H3678"\w* \w an|strong="H5921"\w* der \w Pfoste|strong="H4201"\w* des \w Tempels|strong="H1964"\w* des \w HERRN|strong="H3068"\w*.)  
\v 10 Und \w sie|strong="H1931"\w* war von \w Herzen|strong="H4751"\w* \w betrübt|strong="H5315"\w* und \w betete|strong="H6419"\w* \w zum|strong="H5921"\w* \w HERRN|strong="H3068"\w* und \w weinte|strong="H1058"\w* \w sehr|strong="H1058"\w*  
\v 11 und \w gelobte|strong="H5087"\w* ein \w Gelübde|strong="H5088"\w* und \w sprach|strong="H0559"\w*: \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w*, \w wirst|strong="H0518"\w* \w du|strong="H7200"\w* deiner \w Magd|strong="H0519"\w* \w Elend|strong="H6040"\w* \w ansehen|strong="H7200"\w* und an mich \w gedenken|strong="H2142"\w* und deiner \w Magd|strong="H0519"\w* \w nicht|strong="H3808"\w* \w vergessen|strong="H7911"\w* und \w wirst|strong="H5414"\w* deiner \w Magd|strong="H0519"\w* \w einen|strong="H0582"\w* \w Sohn|strong="H2233"\w* \w geben|strong="H5414"\w*, so will ich ihn dem \w HERRN|strong="H3068"\w* \w geben|strong="H5414"\w* sein \w Leben|strong="H2416"\w* \w lang|strong="H3117"\w* und soll \w kein|strong="H3808"\w* \w Schermesser|strong="H4177"\w* \w auf|strong="H5921"\w* sein \w Haupt|strong="H7218"\w* \w kommen|strong="H5927"\w*.  
\v 12  \w Und|strong="H1961"\w* \w da|strong="H3588"\w* sie \w lange|strong="H7235"\w* \w betete|strong="H6419"\w* \w vor|strong="H6440"\w* dem \w HERRN|strong="H3068"\w*, \w hatte|strong="H8104"\w* \w Eli|strong="H5941"\w* acht \w auf|strong="H8104"\w* ihren \w Mund|strong="H6310"\w*.  
\v 13 Denn \w Hanna|strong="H2584"\w* \w redete|strong="H1696"\w* \w in|strong="H5921"\w* ihrem \w Herzen|strong="H3820"\w*; \w allein|strong="H7535"\w* ihre \w Lippen|strong="H8193"\w* regten \w sich|strong="H5128"\w*, und ihre \w Stimme|strong="H6963"\w* \w hörte|strong="H8085"\w* man \w nicht|strong="H3808"\w*. Da \w meinte|strong="H2803"\w* \w Eli|strong="H5941"\w*, \w sie|strong="H2803"\w* wäre \w trunken|strong="H7910"\w*,  
\v 14  \w und|strong="H5941"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihr: \w Wie|strong="H5704"\w* \w lange|strong="H4970"\w* willst du trunken \w sein|strong="H7937"\w*? \w Laß|strong="H5493"\w* den \w Wein|strong="H3196"\w* \w von|strong="H4480"\w* dir kommen, den du bei dir hast!  
\v 15 Hanna \w aber|strong="H2584"\w* \w antwortete|strong="H6030"\w* und \w sprach|strong="H0559"\w*: \w Nein|strong="H3808"\w*, mein \w Herr|strong="H0113"\w*, \w ich|strong="H0595"\w* bin \w ein|strong="H0802"\w* \w betrübtes|strong="H7186"\w* \w Weib|strong="H0802"\w*. \w Wein|strong="H3196"\w* und starkes \w Getränk|strong="H7941"\w* habe ich \w nicht|strong="H3808"\w* \w getrunken|strong="H8354"\w*, sondern habe mein \w Herz|strong="H5315"\w* \w vor|strong="H6440"\w* dem \w HERRN|strong="H3068"\w* \w ausgeschüttet|strong="H8210"\w*.  
\v 16 Du wolltest deine \w Magd|strong="H0519"\w* \w nicht|strong="H0408"\w* \w achten|strong="H5414"\w* \w wie|strong="H6440"\w* \w ein|strong="H1323"\w* \w loses|strong="H1100"\w* \w Weib|strong="H1323"\w*; \w denn|strong="H3588"\w* ich \w habe|strong="H5704"\w* aus meinem \w großen|strong="H7230"\w* \w Kummer|strong="H7879"\w* und \w Traurigkeit|strong="H3708"\w* \w geredet|strong="H1696"\w* \w bisher|strong="H2008"\w*.  
\v 17  \w Eli|strong="H5941"\w* \w antwortete|strong="H6030"\w* und \w sprach|strong="H0559"\w*: Gehe \w hin|strong="H3212"\w* mit \w Frieden|strong="H7965"\w*; der \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w* wird \w dir|strong="H7596"\w* \w geben|strong="H5414"\w* deine \w Bitte|strong="H7596"\w*, \w die|strong="H0834"\w* du \w von|strong="H4480"\w* ihm gebeten \w hast|strong="H7592"\w*.  
\v 18 Sie \w sprach|strong="H0559"\w*: Laß deine \w Magd|strong="H8198"\w* \w Gnade|strong="H2580"\w* \w finden|strong="H4672"\w* vor deinen \w Augen|strong="H5869"\w*. Also \w ging|strong="H3212"\w* das \w Weib|strong="H0802"\w* \w hin|strong="H3212"\w* ihres \w Weges|strong="H1870"\w* und \w aß|strong="H0398"\w* und \w sah|strong="H6440"\w* \w nicht|strong="H3808"\w* \w mehr|strong="H5750"\w* so \w traurig|strong="H1961"\w*.  
\v 19  \w Und|strong="H7925"\w* des \w Morgens|strong="H1242"\w* früh machten sie sich \w auf|strong="H7925"\w*; und da sie angebetet \w hatten|strong="H7812"\w* \w vor|strong="H6440"\w* dem \w HERRN|strong="H3068"\w*, kehrten sie wieder \w um|strong="H7725"\w* und \w kamen|strong="H0935"\w* \w heim|strong="H1004"\w* gen \w Rama|strong="H7414"\w*. Und \w Elkana|strong="H0511"\w* \w erkannte|strong="H3045"\w* sein \w Weib|strong="H0802"\w* \w Hanna|strong="H2584"\w*, und der \w HERR|strong="H3068"\w* \w gedachte|strong="H2142"\w* an sie.  
\v 20 Und \w da|strong="H1961"\w* die \w Tage|strong="H3117"\w* um \w waren|strong="H8622"\w*, \w ward|strong="H2029"\w* \w Hanna|strong="H2584"\w* \w schwanger|strong="H2029"\w* und \w gebar|strong="H3205"\w* einen \w Sohn|strong="H1121"\w* und \w hieß|strong="H7121"\w* \w ihn|strong="H8034"\w* \w Samuel|strong="H8050"\w*: “\w denn|strong="H3588"\w* ich habe ihn \w von|strong="H4480"\w* dem \w HERRN|strong="H3068"\w* \w erbeten|strong="H7592"\w*.”  
\v 21 Und da der \w Mann|strong="H0376"\w* \w Elkana|strong="H0511"\w* \w hinaufzog|strong="H5927"\w* mit seinem \w ganzen|strong="H3605"\w* \w Hause|strong="H1004"\w*, daß er dem \w HERRN|strong="H3068"\w* \w opferte|strong="H2076"\w* das \w jährliche|strong="H3117"\w* \w Opfer|strong="H2077"\w* und sein \w Gelübde|strong="H5088"\w*,  
\v 22  \w zog|strong="H5927"\w* \w Hanna|strong="H2584"\w* \w nicht|strong="H3808"\w* mit \w hinauf|strong="H5927"\w*, \w sondern|strong="H3588"\w* \w sprach|strong="H0559"\w* zu ihrem \w Mann|strong="H0376"\w*: \w Bis|strong="H5704"\w* der \w Knabe|strong="H5288"\w* entwöhnt \w werde|strong="H1580"\w*, so will ich ihn \w bringen|strong="H0935"\w*, daß er \w vor|strong="H6440"\w* dem \w HERRN|strong="H3068"\w* \w erscheine|strong="H7200"\w* und \w bleibe|strong="H3427"\w* \w daselbst|strong="H8033"\w* \w ewiglich|strong="H5769"\w*.  
\v 23  \w Elkana|strong="H0511"\w*, ihr \w Mann|strong="H0376"\w*, \w sprach|strong="H0559"\w* zu ihr: So \w tue|strong="H6213"\w*, \w wie|strong="H2869"\w* dir'\w s|strong="H5896"\w* \w gefällt|strong="H2869"\w*: \w bleib|strong="H3427"\w*, \w bis|strong="H5704"\w* du \w ihn|strong="H0853"\w* \w entwöhnst|strong="H1580"\w*; der \w HERR|strong="H3068"\w* \w bestätige|strong="H6965"\w* aber was er geredet \w hat|strong="H1697"\w*. Also \w blieb|strong="H3427"\w* das \w Weib|strong="H0802"\w* und \w säugte|strong="H3243"\w* ihren \w Sohn|strong="H1121"\w*, bis \w daß|strong="H5704"\w* sie \w ihn|strong="H0853"\w* \w entwöhnte|strong="H1580"\w*,  
\v 24  \w und|strong="H0834"\w* \w brachte|strong="H5927"\w* ihn \w mit|strong="H5973"\w* sich \w hinauf|strong="H5927"\w*, \w nachdem|strong="H0834"\w* sie ihn entwöhnt \w hatte|strong="H1580"\w*, mit \w drei|strong="H7969"\w* \w Farren|strong="H6499"\w*, mit \w einem|strong="H0259"\w* \w Epha|strong="H0374"\w* \w Mehl|strong="H7058"\w* und einem \w Krug|strong="H5035"\w* \w Wein|strong="H3196"\w*; und \w brachte|strong="H0935"\w* ihn in das \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w* zu \w Silo|strong="H7887"\w*. Der \w Knabe|strong="H5288"\w* war aber noch \w jung|strong="H5288"\w*.  
\v 25 Und sie \w schlachteten|strong="H7819"\w* einen \w Farren|strong="H6499"\w* und \w brachten|strong="H0935"\w* den \w Knaben|strong="H5288"\w* \w zu|strong="H0413"\w* \w Eli|strong="H5941"\w*.  
\v 26 Und sie \w sprach|strong="H0559"\w*: \w Ach|strong="H0994"\w*, mein \w Herr|strong="H0113"\w*, so wahr deine \w Seele|strong="H5315"\w* \w lebt|strong="H2416"\w*, mein \w Herr|strong="H0113"\w*, \w ich|strong="H0589"\w* bin das \w Weib|strong="H0802"\w*, das \w hier|strong="H2088"\w* \w bei|strong="H5973"\w* dir \w stand|strong="H5324"\w*, \w zu|strong="H0413"\w* dem \w HERRN|strong="H3068"\w* zu \w beten|strong="H6419"\w*.  
\v 27  \w Um|strong="H0413"\w* \w diesen|strong="H2088"\w* \w Knaben|strong="H5288"\w* bat \w ich|strong="H6419"\w*. \w Nun|strong="H3068"\w* \w hat|strong="H7596"\w* der \w HERR|strong="H3068"\w* meine \w Bitte|strong="H7596"\w* \w gegeben|strong="H5414"\w*, \w die|strong="H0834"\w* ich \w von|strong="H4480"\w* ihm \w bat|strong="H7592"\w*.  
\v 28  \w Darum|strong="H0595"\w* \w gebe|strong="H7592"\w* \w ich|strong="H0595"\w* \w ihm|strong="H1571"\w* dem \w HERRN|strong="H3068"\w* \w wieder|strong="H7592"\w* sein \w Leben|strong="H3117"\w* \w lang|strong="H3605"\w*, weil er vom \w HERRN|strong="H3068"\w* erbeten \w ist|strong="H7592"\w*. Und sie \w beteten|strong="H7812"\w* \w daselbst|strong="H8033"\w* den \w HERRN|strong="H3068"\w* \w an|strong="H7812"\w*.   
