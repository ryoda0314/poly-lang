\v 41 Da der \w Knabe|strong="H5288"\w* \w hineinkam|strong="H0935"\w*, stand \w David|strong="H1732"\w* \w auf|strong="H6965"\w* \w vom|strong="H4480"\w* Ort gegen \w Mittag|strong="H5045"\w* und \w fiel|strong="H5307"\w* auf sein \w Antlitz|strong="H0639"\w* zur \w Erde|strong="H0776"\w* und beugte \w sich|strong="H7812"\w* \w dreimal|strong="H7969"\w* nieder, und sie \w küßten|strong="H5401"\w* sich \w miteinander|strong="H0376"\w* und \w weinten|strong="H1058"\w* \w miteinander|strong="H0376"\w*, \w David|strong="H1732"\w* aber am \w allermeisten|strong="H1431"\w*.  
\v 42 Und \w Jonathan|strong="H3083"\w* \w sprach|strong="H0559"\w* zu \w David|strong="H1732"\w*: \w Gehe|strong="H3212"\w* hin mit \w Frieden|strong="H7965"\w*! \w Was|strong="H0834"\w* \w wir|strong="H0587"\w* \w beide|strong="H8147"\w* geschworen \w haben|strong="H7650"\w* im \w Namen|strong="H8034"\w* des \w HERRN|strong="H3068"\w* und \w gesagt|strong="H0559"\w*: Der \w HERR|strong="H3068"\w* \w sei|strong="H1961"\w* \w zwischen|strong="H0996"\w* \w mir|strong="H0996"\w* und dir, \w zwischen|strong="H0996"\w* meinem \w Samen|strong="H2233"\w* \w und|strong="H0996"\w* deinem \w Samen|strong="H2233"\w*, das \w bleibe|strong="H5704"\w* \w ewiglich|strong="H5769"\w*. [21:1] Und \w Jonathan|strong="H3083"\w* machte sich \w auf|strong="H6965"\w* \w und|strong="H3212"\w* \w kam|strong="H0935"\w* in die \w Stadt|strong="H5892"\w*.   
\c 21  
\p
\v 1  \w David|strong="H1732"\w* aber \w kam|strong="H0935"\w* gen \w Nobe|strong="H5011"\w* \w zum|strong="H0413"\w* \w Priester|strong="H3548"\w* \w Ahimelech|strong="H0288"\w*. Und \w Ahimelech|strong="H0288"\w* entsetzte \w sich|strong="H2729"\w*, da er \w David|strong="H1732"\w* \w entgegenging|strong="H7125"\w*, und \w sprach|strong="H0559"\w* zu ihm: \w Warum|strong="H4069"\w* \w kommst|strong="H0859"\w* du \w allein|strong="H0909"\w* und ist \w kein|strong="H0369"\w* \w Mann|strong="H0376"\w* \w mit|strong="H0854"\w* dir?  
\v 2  \w David|strong="H1732"\w* \w sprach|strong="H0559"\w* zu \w Ahimelech|strong="H0288"\w*, dem \w Priester|strong="H3548"\w*: Der \w König|strong="H4428"\w* hat mir eine \w Sache|strong="H1697"\w* \w befohlen|strong="H6680"\w* und \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* mir: Laß \w niemand|strong="H0376"\w* \w wissen|strong="H3045"\w*, \w warum|strong="H0834"\w* \w ich|strong="H0595"\w* dich gesandt \w habe|strong="H7971"\w* und \w was|strong="H0834"\w* ich dir befohlen \w habe|strong="H6680"\w*. Denn ich habe auch meine \w Leute|strong="H5288"\w* \w an|strong="H6423"\w* \w den|strong="H0492"\w* und den \w Ort|strong="H4725"\w* \w beschieden|strong="H3045"\w*.  
\v 3  \w Hast|strong="H3426"\w* du \w nun|strong="H6258"\w* \w etwas|strong="H4100"\w* \w unter|strong="H8478"\w* deiner \w Hand|strong="H3027"\w*, ein \w Brot|strong="H3899"\w* oder \w fünf|strong="H2568"\w*, die \w gib|strong="H5414"\w* mir in meine \w Hand|strong="H3027"\w*, \w oder|strong="H0176"\w* was du \w findest|strong="H4672"\w*.  
\v 4 Der \w Priester|strong="H3548"\w* \w antwortete|strong="H6030"\w* \w David|strong="H1732"\w* und \w sprach|strong="H0559"\w*: Ich \w habe|strong="H3426"\w* \w kein|strong="H0369"\w* \w gemeines|strong="H2455"\w* \w Brot|strong="H3899"\w* \w unter|strong="H0413"\w* meiner \w Hand|strong="H3027"\w*, \w sondern|strong="H3588"\w* \w heiliges|strong="H6944"\w* \w Brot|strong="H3899"\w*; \w wenn|strong="H0518"\w* sich \w nur|strong="H0389"\w* die \w Leute|strong="H5288"\w* \w von|strong="H4480"\w* \w Weibern|strong="H0802"\w* enthalten \w hätten|strong="H8104"\w*!  
\v 5  \w David|strong="H1732"\w* \w antwortete|strong="H6030"\w* dem \w Priester|strong="H3548"\w* und \w sprach|strong="H0559"\w* zu \w ihm|strong="H3588"\w*: Es \w sind|strong="H0518"\w* die \w Weiber|strong="H0802"\w* \w drei|strong="H8032"\w* \w Tage|strong="H8543"\w* uns versperrt \w gewesen|strong="H6113"\w*, da ich \w auszog|strong="H3318"\w*, und der \w Leute|strong="H5288"\w* \w Zeug|strong="H3627"\w* \w war|strong="H1961"\w* \w heilig|strong="H6944"\w*; ist \w aber|strong="H1931"\w* dieser \w Weg|strong="H1870"\w* \w unheilig|strong="H2455"\w*, \w so|strong="H0637"\w* wird \w er|strong="H3588"\w* \w heute|strong="H3117"\w* geheiligt \w werden|strong="H6942"\w* an dem \w Zeuge|strong="H3627"\w*.  
\v 6 Da \w gab|strong="H5414"\w* ihm der \w Priester|strong="H3548"\w* von dem \w heiligen|strong="H6944"\w* \w Brot|strong="H3899"\w*, \w weil|strong="H3588"\w* \w kein|strong="H3808"\w* anderes \w da|strong="H8033"\w* \w war|strong="H1961"\w* \w denn|strong="H3588"\w* die \w Schaubrote|strong="H3899"\w*, die \w man|strong="H4480"\w* \w vor|strong="H6440"\w* dem \w HERRN|strong="H3068"\w* \w abhob|strong="H5493"\w*, daß man anderes \w frisches|strong="H2527"\w* \w Brot|strong="H3899"\w* \w auflegte|strong="H7760"\w* des \w Tages|strong="H3117"\w*, da man sie \w wegnahm|strong="H3947"\w*.  
\v 7 Es war \w aber|strong="H8033"\w* \w des|strong="H1931"\w* \w Tages|strong="H3117"\w* ein \w Mann|strong="H0376"\w* drinnen \w versperrt|strong="H6113"\w* \w vor|strong="H6440"\w* dem \w HERRN|strong="H3068"\w* \w aus|strong="H4480"\w* den \w Knechten|strong="H5650"\w* \w Sauls|strong="H7586"\w*, mit \w Namen|strong="H8034"\w* \w Doeg|strong="H1673"\w*, ein \w Edomiter|strong="H0130"\w*, der \w mächtigste|strong="H0047"\w* unter den \w Hirten|strong="H7462"\w* \w Sauls|strong="H0834"\w*.  
\v 8 Und \w David|strong="H1732"\w* \w sprach|strong="H0559"\w* zu \w Ahimelech|strong="H0288"\w*: \w Ist|strong="H3426"\w* \w nicht|strong="H0371"\w* \w hier|strong="H6311"\w* \w unter|strong="H8478"\w* deiner \w Hand|strong="H3027"\w* ein \w Spieß|strong="H2595"\w* \w oder|strong="H0176"\w* \w Schwert|strong="H2719"\w*? \w Ich|strong="H3588"\w* habe \w mein|strong="H1571"\w* \w Schwert|strong="H2719"\w* und meine \w Waffen|strong="H3627"\w* \w nicht|strong="H3808"\w* \w mit|strong="H1571"\w* \w mir|strong="H3027"\w* \w genommen|strong="H3947"\w*; \w denn|strong="H3588"\w* die \w Sache|strong="H1697"\w* des \w Königs|strong="H4428"\w* \w war|strong="H1961"\w* \w eilend|strong="H5169"\w*.  
\v 9 Der \w Priester|strong="H3548"\w* \w sprach|strong="H0559"\w*: Das \w Schwert|strong="H2719"\w* des \w Philisters|strong="H6430"\w* \w Goliath|strong="H1555"\w*, \w den|strong="H0834"\w* du \w schlugst|strong="H5221"\w* im \w Eichgrunde|strong="H6010"\w*, \w das|strong="H1931"\w* ist hier, \w gewickelt|strong="H3874"\w* in einen \w Mantel|strong="H8071"\w* \w hinter|strong="H0310"\w* dem \w Leibrock|strong="H0646"\w*. \w Willst|strong="H0518"\w* du \w das|strong="H0853"\w*, so nimm'\w s|strong="H3947"\w* \w hin|strong="H3947"\w*; \w denn|strong="H3588"\w* es ist \w hier|strong="H2088"\w* \w kein|strong="H0369"\w* \w anderes|strong="H0312"\w* \w als|strong="H2108"\w* \w das|strong="H2088"\w*. \w David|strong="H1732"\w* \w sprach|strong="H0559"\w*: Es \w ist|strong="H0369"\w* \w seinesgleichen|strong="H3644"\w* nicht; \w gib|strong="H5414"\w* mir's!  
\v 10 Und \w David|strong="H1732"\w* machte sich \w auf|strong="H6965"\w* und \w floh|strong="H1272"\w* \w vor|strong="H4480"\w* \w Saul|strong="H7586"\w* und \w kam|strong="H0935"\w* \w zu|strong="H0413"\w* \w Achis|strong="H0397"\w*, dem \w König|strong="H4428"\w* zu \w Gath|strong="H1661"\w*.  
\v 11 Aber die \w Knechte|strong="H5650"\w* des \w Achis|strong="H0397"\w* \w sprachen|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: \w Das|strong="H2088"\w* ist \w der|strong="H3808"\w* \w David|strong="H1732"\w*, des \w Landes|strong="H0776"\w* \w König|strong="H4428"\w*, von dem \w sie|strong="H2088"\w* \w sangen|strong="H6030"\w* im \w Reigen|strong="H4246"\w* und \w sprachen|strong="H0559"\w*: \w Saul|strong="H7586"\w* \w schlug|strong="H5221"\w* \w tausend|strong="H0505"\w*, \w David|strong="H1732"\w* aber \w zehntausend|strong="H7233"\w*.  
\v 12 Und \w David|strong="H1732"\w* \w nahm|strong="H7760"\w* \w die|strong="H0428"\w* \w Rede|strong="H1697"\w* zu \w Herzen|strong="H3824"\w* und \w fürchtete|strong="H3372"\w* sich \w sehr|strong="H3966"\w* \w vor|strong="H4480"\w* \w Achis|strong="H0397"\w*, dem \w König|strong="H4428"\w* zu \w Gath|strong="H1661"\w*,  
\v 13 und \w verstellte|strong="H8138"\w* seine \w Gebärde|strong="H2940"\w* vor \w ihnen|strong="H5869"\w* und \w tobte|strong="H1984"\w* unter ihren \w Händen|strong="H3027"\w* und stieß \w sich|strong="H8427"\w* an \w die|strong="H5921"\w* \w Tür|strong="H1817"\w* am \w Tor|strong="H8179"\w*, und sein \w Geifer|strong="H7388"\w* \w floß|strong="H3381"\w* ihm \w in|strong="H0413"\w* den \w Bart|strong="H2206"\w*.  
\v 14 Da \w sprach|strong="H0559"\w* \w Achis|strong="H0397"\w* \w zu|strong="H0413"\w* seinen \w Knechten|strong="H5650"\w*: \w Siehe|strong="H2009"\w*, ihr \w seht|strong="H7200"\w*, daß der \w Mann|strong="H0376"\w* unsinnig \w ist|strong="H7696"\w*; \w warum|strong="H4100"\w* habt ihr \w ihn|strong="H0853"\w* \w zu|strong="H0413"\w* mir \w gebracht|strong="H0935"\w*?  
\v 15 Habe \w ich|strong="H0589"\w* der \w Unsinnigen|strong="H7696"\w* zu \w wenig|strong="H2638"\w*, \w daß|strong="H3588"\w* ihr \w diesen|strong="H2088"\w* \w herbrächtet|strong="H0935"\w*, daß er neben mir \w rasete|strong="H7696"\w*? Sollte \w der|strong="H2088"\w* \w in|strong="H0413"\w* mein \w Haus|strong="H1004"\w* \w kommen|strong="H0935"\w*?   
\c 22  
\p
\v 1  \w David|strong="H1732"\w* \w ging|strong="H3212"\w* \w von|strong="H4480"\w* \w dannen|strong="H8033"\w* und \w entrann|strong="H4422"\w* \w in|strong="H0413"\w* die \w Höhle|strong="H4631"\w* \w Adullam|strong="H5725"\w*. Da das seine \w Brüder|strong="H0251"\w* \w hörten|strong="H8085"\w* und das \w ganze|strong="H3605"\w* \w Haus|strong="H1004"\w* seines \w Vaters|strong="H0001"\w*, \w kamen|strong="H3381"\w* sie zu ihm \w hinab|strong="H8033"\w* \w dahin|strong="H0413"\w*.  
\v 2 Und es \w versammelten|strong="H6908"\w* sich \w zu|strong="H0413"\w* ihm \w allerlei|strong="H3605"\w* \w Männer|strong="H0376"\w*, \w die|strong="H0834"\w* in \w Not|strong="H4689"\w* \w und|strong="H3605"\w* \w Schulden|strong="H5378"\w* \w und|strong="H3605"\w* \w betrübten|strong="H4751"\w* \w Herzens|strong="H5315"\w* waren; und er \w war|strong="H1961"\w* \w ihr|strong="H5921"\w* \w Oberster|strong="H8269"\w*, \w daß|strong="H5973"\w* bei \w vierhundert|strong="H0702"\w* \w Mann|strong="H0376"\w* bei ihm \w waren|strong="H1961"\w*.  
\v 3 Und \w David|strong="H1732"\w* \w ging|strong="H3212"\w* \w von|strong="H4480"\w* \w da|strong="H8033"\w* gen \w Mizpe|strong="H4708"\w* in der \w Moabiter|strong="H4124"\w* Land und \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* der \w Moabiter|strong="H4124"\w* \w König|strong="H4428"\w*: \w Laß|strong="H4994"\w* meinen \w Vater|strong="H0001"\w* und meine \w Mutter|strong="H0517"\w* \w bei|strong="H0854"\w* euch \w aus|strong="H3318"\w* und ein gehen, \w bis|strong="H5704"\w* ich \w erfahre|strong="H3045"\w*, \w was|strong="H4100"\w* \w Gott|strong="H0430"\w* mit mir tun \w wird|strong="H6213"\w*.  
\v 4 Und er \w ließ|strong="H5148"\w* sie \w vor|strong="H6440"\w* dem \w König|strong="H4428"\w* der \w Moabiter|strong="H4124"\w*, daß sie \w bei|strong="H5973"\w* \w ihm|strong="H3605"\w* \w blieben|strong="H3427"\w*, \w solange|strong="H3117"\w* \w David|strong="H1732"\w* sich \w barg|strong="H1961"\w* an sicherem \w Orte|strong="H4686"\w*.  
\v 5 Aber der \w Prophet|strong="H5030"\w* \w Gad|strong="H1410"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w David|strong="H1732"\w*: \w Bleibe|strong="H3427"\w* \w nicht|strong="H3808"\w* \w verborgen|strong="H4686"\w*, sondern \w gehe|strong="H3212"\w* hin und \w komm|strong="H0935"\w* ins \w Land|strong="H0776"\w* \w Juda|strong="H3063"\w*. Da \w ging|strong="H3212"\w* \w David|strong="H1732"\w* hin und \w kam|strong="H0935"\w* in den \w Wald|strong="H3293"\w* \w Hereth|strong="H2802"\w*.  
\v 6 Und es \w kam|strong="H8085"\w* vor \w Saul|strong="H7586"\w*, \w daß|strong="H3588"\w* \w David|strong="H1732"\w* und die \w Männer|strong="H0582"\w*, \w die|strong="H0834"\w* \w bei|strong="H0854"\w* ihm waren, wären \w hervorgekommen|strong="H3045"\w*. Und \w Saul|strong="H7586"\w* \w saß|strong="H3427"\w* zu \w Gibea|strong="H1390"\w* \w unter|strong="H8478"\w* dem \w Baum|strong="H0815"\w* auf der \w Höhe|strong="H7414"\w* und hatte seinen \w Spieß|strong="H2595"\w* in der \w Hand|strong="H3027"\w*, und \w alle|strong="H3605"\w* seine \w Knechte|strong="H5650"\w* \w standen|strong="H5324"\w* \w neben|strong="H5921"\w* ihm.  
\v 7 Da \w sprach|strong="H0559"\w* \w Saul|strong="H7586"\w* zu seinen \w Knechten|strong="H5650"\w*, die \w neben|strong="H5921"\w* ihm \w standen|strong="H5324"\w*: \w Höret|strong="H8085"\w*, ihr \w Benjaminiter|strong="H1121"\w*! wird \w auch|strong="H1571"\w* der \w Sohn|strong="H1121"\w* \w Isais|strong="H3448"\w* euch allen \w Äcker|strong="H7704"\w* und \w Weinberge|strong="H3754"\w* \w geben|strong="H5414"\w* und euch alle über \w tausend|strong="H0505"\w* \w und|strong="H8269"\w* über \w hundert|strong="H3967"\w* zu \w Obersten|strong="H8269"\w* \w machen|strong="H7760"\w*,  
\v 8  \w daß|strong="H3588"\w* ihr euch \w alle|strong="H3605"\w* verbunden \w habt|strong="H7194"\w* \w wider|strong="H5921"\w* mich und ist \w niemand|strong="H0369"\w*, der es meinen \w Ohren|strong="H0241"\w* \w offenbarte|strong="H1540"\w*, weil auch mein \w Sohn|strong="H1121"\w* einen Bund gemacht \w hat|strong="H3772"\w* \w mit|strong="H5973"\w* dem \w Sohn|strong="H1121"\w* \w Isais|strong="H3448"\w*? Ist \w niemand|strong="H0369"\w* \w unter|strong="H4480"\w* euch, den es \w kränke|strong="H2470"\w* \w meinethalben|strong="H5921"\w* und der es meinen \w Ohren|strong="H0241"\w* \w offenbare|strong="H1540"\w*? \w Denn|strong="H3588"\w* mein \w Sohn|strong="H1121"\w* hat meinen \w Knecht|strong="H5650"\w* \w wider|strong="H5921"\w* mich \w auferweckt|strong="H6965"\w*, daß er mir \w nachstellt|strong="H0693"\w*, wie es \w am|strong="H2088"\w* \w Tage|strong="H3117"\w* ist.  
\v 9 Da \w antwortete|strong="H6030"\w* \w Doeg|strong="H1673"\w*, der \w Edomiter|strong="H0130"\w*, \w der|strong="H1931"\w* \w neben|strong="H5921"\w* den \w Knechten|strong="H5650"\w* \w Sauls|strong="H7586"\w* \w stand|strong="H5324"\w*, und \w sprach|strong="H0559"\w*: Ich \w sah|strong="H7200"\w* den \w Sohn|strong="H1121"\w* \w Isais|strong="H3448"\w*, daß er gen \w Nobe|strong="H5011"\w* \w kam|strong="H0935"\w* \w zu|strong="H0413"\w* \w Ahimelech|strong="H0288"\w*, dem \w Sohn|strong="H1121"\w* \w Ahitobs|strong="H0285"\w*.  
\v 10 Der \w fragte|strong="H7592"\w* den \w HERRN|strong="H3068"\w* für ihn und \w gab|strong="H5414"\w* ihm \w Speise|strong="H6720"\w* \w und|strong="H5414"\w* das \w Schwert|strong="H2719"\w* \w Goliaths|strong="H1555"\w*, des \w Philisters|strong="H6430"\w*.  
\v 11 Da \w sandte|strong="H7971"\w* der \w König|strong="H4428"\w* hin und ließ \w rufen|strong="H7121"\w* \w Ahimelech|strong="H0288"\w*, den \w Priester|strong="H3548"\w*, den \w Sohn|strong="H1121"\w* \w Ahitobs|strong="H0285"\w*, und seines \w Vaters|strong="H0001"\w* \w ganzes|strong="H3605"\w* \w Haus|strong="H1004"\w*, die \w Priester|strong="H3548"\w*, \w die|strong="H0834"\w* zu \w Nobe|strong="H5011"\w* waren. Und sie \w kamen|strong="H0935"\w* \w alle|strong="H3605"\w* zum \w König|strong="H4428"\w*.  
\v 12 Und \w Saul|strong="H7586"\w* \w sprach|strong="H0559"\w*: \w Höre|strong="H8085"\w*, du \w Sohn|strong="H1121"\w* \w Ahitobs|strong="H0285"\w*! Er \w sprach|strong="H0559"\w*: \w Hier|strong="H2009"\w* bin ich, mein \w Herr|strong="H0113"\w*.  
\v 13 Und \w Saul|strong="H7586"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: \w Warum|strong="H4100"\w* habt ihr einen Bund \w wider|strong="H5921"\w* mich \w gemacht|strong="H7194"\w*, \w du|strong="H0859"\w* und der \w Sohn|strong="H1121"\w* \w Isais|strong="H3448"\w*, daß du ihm \w Brot|strong="H3899"\w* und \w Schwert|strong="H2719"\w* \w gegeben|strong="H5414"\w* und \w Gott|strong="H0430"\w* \w für|strong="H0413"\w* ihn gefragt \w hast|strong="H7592"\w*, daß du ihn \w erweckest|strong="H6965"\w*, daß er mir \w nachstelle|strong="H0693"\w*, \w wie|strong="H2088"\w* es am \w Tage|strong="H3117"\w* ist?  
\v 14  \w Ahimelech|strong="H0288"\w* \w antwortete|strong="H6030"\w* dem \w König|strong="H4428"\w* und \w sprach|strong="H0559"\w*: Und \w wer|strong="H4310"\w* ist unter \w allen|strong="H3605"\w* deinen \w Knechten|strong="H5650"\w* wie \w David|strong="H1732"\w*, der \w getreu|strong="H0539"\w* ist und des \w Königs|strong="H4428"\w* \w Eidam|strong="H2860"\w* und \w geht|strong="H5493"\w* \w in|strong="H0413"\w* deinem \w Gehorsam|strong="H4928"\w* und ist \w herrlich|strong="H3513"\w* gehalten in deinem \w Hause|strong="H1004"\w*?  
