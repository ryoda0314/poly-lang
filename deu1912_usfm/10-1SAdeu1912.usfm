\v 19  \w Samuel|strong="H8050"\w* aber nahm \w zu|strong="H1431"\w*, und der \w HERR|strong="H3068"\w* \w war|strong="H1961"\w* \w mit|strong="H5973"\w* ihm, \w und|strong="H3808"\w* \w fiel|strong="H5307"\w* \w keines|strong="H3808"\w* \w unter|strong="H4480"\w* \w allen|strong="H3605"\w* seinen \w Worten|strong="H1697"\w* auf die \w Erde|strong="H0776"\w*.  
\v 20 Und \w ganz|strong="H3605"\w* \w Israel|strong="H3478"\w* \w von|strong="H4480"\w* \w Dan|strong="H1835"\w* \w an|strong="H3045"\w* \w bis|strong="H5704"\w* gen Beer-\w Seba|strong="H0884"\w* \w erkannte|strong="H3045"\w*, \w daß|strong="H3588"\w* \w Samuel|strong="H8050"\w* ein treuer \w Prophet|strong="H5030"\w* des \w HERRN|strong="H3068"\w* \w war|strong="H0539"\w*.  
\v 21 Und der \w HERR|strong="H3068"\w* \w erschien|strong="H7200"\w* \w hinfort|strong="H3254"\w* zu \w Silo|strong="H7887"\w*; \w denn|strong="H3588"\w* der \w HERR|strong="H3068"\w* \w war|strong="H1540"\w* \w durch|strong="H0413"\w* \w Samuel|strong="H8050"\w* offenbart \w worden|strong="H1540"\w* zu \w Silo|strong="H7887"\w* durchs \w Wort|strong="H1697"\w* des \w HERRN|strong="H3068"\w*. Und Samuel fing an zu predigen dem ganzen Israel.   
\c 4  
\p
\v 1  Israel \w aber|strong="H3478"\w* zog \w aus|strong="H3318"\w*, den \w Philistern|strong="H6430"\w* \w entgegen|strong="H7125"\w*, in den \w Streit|strong="H4421"\w*, und lagerten \w sich|strong="H2583"\w* \w bei|strong="H5921"\w* Eben-\w Ezer|strong="H0072"\w*. Die Philister \w aber|strong="H6430"\w* hatten sich \w gelagert|strong="H2583"\w* zu \w Aphek|strong="H0663"\w*  
\v 2  \w und|strong="H6430"\w* stellten \w sich|strong="H6186"\w* gegen \w Israel|strong="H3478"\w*. Und der \w Streit|strong="H4421"\w* teilte sich \w weit|strong="H5203"\w*, und Israel \w ward|strong="H3478"\w* \w vor|strong="H6440"\w* den \w Philistern|strong="H6430"\w* \w geschlagen|strong="H5062"\w*; und sie \w schlugen|strong="H5221"\w* in der \w Ordnung|strong="H4634"\w* im \w Felde|strong="H7704"\w* bei \w viertausend|strong="H0702"\w* \w Mann|strong="H0376"\w*.  
\v 3 Und da das \w Volk|strong="H5971"\w* \w ins|strong="H0413"\w* \w Lager|strong="H4264"\w* \w kam|strong="H0935"\w*, \w sprachen|strong="H0559"\w* die \w Ältesten|strong="H2205"\w* \w Israels|strong="H3478"\w*: \w Warum|strong="H4100"\w* hat uns der \w HERR|strong="H3068"\w* \w heute|strong="H3117"\w* schlagen \w lassen|strong="H5062"\w* \w vor|strong="H6440"\w* den \w Philistern|strong="H6430"\w*? Laßt \w uns|strong="H7887"\w* \w zu|strong="H0413"\w* uns \w nehmen|strong="H3947"\w* die \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* des \w HERRN|strong="H3068"\w* von \w Silo|strong="H7887"\w* und laßt sie \w unter|strong="H7130"\w* uns \w kommen|strong="H0935"\w*, daß sie uns \w helfe|strong="H3467"\w* \w von|strong="H4480"\w* der \w Hand|strong="H3709"\w* unsrer \w Feinde|strong="H0341"\w*.  
\v 4 Und das \w Volk|strong="H5971"\w* \w sandte|strong="H7971"\w* gen \w Silo|strong="H7887"\w* und \w ließ|strong="H5375"\w* \w von|strong="H4480"\w* \w da|strong="H8033"\w* \w holen|strong="H5375"\w* die \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* des \w HERRN|strong="H3068"\w* \w Zebaoth|strong="H6635"\w*, der über den \w Cherubim|strong="H3742"\w* \w sitzt|strong="H3427"\w*. Und \w es|strong="H8147"\w* waren \w da|strong="H8033"\w* die \w zwei|strong="H8147"\w* \w Söhne|strong="H1121"\w* \w Elis|strong="H5941"\w* \w mit|strong="H5973"\w* der \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* \w Gottes|strong="H0430"\w*, \w Hophni|strong="H2652"\w* und \w Pinehas|strong="H6372"\w*.  
\v 5  \w Und|strong="H1961"\w* da die \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* des \w HERRN|strong="H3068"\w* \w ins|strong="H0413"\w* \w Lager|strong="H4264"\w* \w kam|strong="H0935"\w*, \w jauchzte|strong="H7321"\w* das \w ganze|strong="H3605"\w* \w Israel|strong="H3478"\w* mit \w großem|strong="H1419"\w* \w Jauchzen|strong="H8643"\w*, daß die \w Erde|strong="H0776"\w* \w erschallte|strong="H1949"\w*.  
\v 6 Da aber die \w Philister|strong="H6430"\w* \w hörten|strong="H8085"\w* das \w Geschrei|strong="H6963"\w* solches \w Jauchzens|strong="H8643"\w*, sprachen \w sie|strong="H0559"\w*: \w Was|strong="H4100"\w* ist das \w Geschrei|strong="H6963"\w* \w solches|strong="H2063"\w* \w großen|strong="H1419"\w* \w Jauchzens|strong="H8643"\w* \w in|strong="H4264"\w* der \w Hebräer|strong="H5680"\w* \w Lager|strong="H4264"\w*? Und da sie \w erfuhren|strong="H3045"\w*, \w daß|strong="H3588"\w* die \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w* \w ins|strong="H0413"\w* \w Lager|strong="H4264"\w* gekommen \w wäre|strong="H0935"\w*,  
\v 7  \w fürchteten|strong="H3372"\w* \w sie|strong="H6430"\w* \w sich|strong="H3372"\w* \w und|strong="H3588"\w* \w sprachen|strong="H0559"\w*: \w Gott|strong="H0430"\w* ist \w ins|strong="H0413"\w* \w Lager|strong="H4264"\w* \w gekommen|strong="H0935"\w*; und sprachen \w weiter|strong="H0559"\w*: \w Wehe|strong="H0188"\w* uns! \w denn|strong="H3588"\w* es ist \w zuvor|strong="H0865"\w* \w nicht|strong="H3808"\w* also \w gestanden|strong="H1961"\w*.  
\v 8  \w Wehe|strong="H0188"\w* uns! \w Wer|strong="H4310"\w* will uns \w erretten|strong="H5337"\w* \w von|strong="H4480"\w* der \w Hand|strong="H3027"\w* \w dieser|strong="H0428"\w* \w mächtigen|strong="H0117"\w* \w Götter|strong="H0430"\w*, die \w Ägypten|strong="H4714"\w* \w schlugen|strong="H5221"\w* mit \w allerlei|strong="H3605"\w* \w Plage|strong="H4347"\w* in der \w Wüste|strong="H4057"\w*.  
\v 9 So seid nun \w getrost|strong="H2388"\w* \w ihr|strong="H1961"\w* \w Männer|strong="H0582"\w*, ihr \w Philister|strong="H6430"\w*, \w daß|strong="H6435"\w* \w ihr|strong="H5680"\w* \w nicht|strong="H6435"\w* dienen \w müßt|strong="H5647"\w* den \w Hebräern|strong="H5680"\w*, \w wie|strong="H0834"\w* sie euch gedient \w haben|strong="H5647"\w*! \w Seid|strong="H1961"\w* \w Männer|strong="H0582"\w* und \w streitet|strong="H3898"\w*!  
\v 10 Da \w stritten|strong="H3898"\w* die \w Philister|strong="H6430"\w*, und \w Israel|strong="H3478"\w* ward \w geschlagen|strong="H5062"\w*, \w und|strong="H5127"\w* ein \w jeglicher|strong="H0376"\w* \w floh|strong="H5127"\w* in seine \w Hütte|strong="H0168"\w*; und es \w war|strong="H1961"\w* eine \w sehr|strong="H3966"\w* \w große|strong="H1419"\w* \w Schlacht|strong="H4347"\w*, daß \w aus|strong="H4480"\w* \w Israel|strong="H3478"\w* \w fielen|strong="H5307"\w* \w dreißigtausend|strong="H7970"\w* Mann \w Fußvolk|strong="H7273"\w*.  
\v 11 Und die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* ward \w genommen|strong="H3947"\w*, und die \w zwei|strong="H8147"\w* \w Söhne|strong="H1121"\w* \w Elis|strong="H5941"\w*, \w Hophni|strong="H2652"\w* und \w Pinehas|strong="H6372"\w*, \w starben|strong="H4191"\w*.  
\v 12 Da \w lief|strong="H7323"\w* einer von \w Benjamin|strong="H0376"\w* \w aus|strong="H4480"\w* dem \w Heer|strong="H4634"\w* und \w kam|strong="H0935"\w* gen \w Silo|strong="H7887"\w* \w desselben|strong="H1931"\w* \w Tages|strong="H3117"\w* \w und|strong="H4055"\w* \w hatte|strong="H7167"\w* seine \w Kleider|strong="H4055"\w* \w zerrissen|strong="H7167"\w* und hatte \w Erde|strong="H0127"\w* \w auf|strong="H5921"\w* sein \w Haupt|strong="H7218"\w* gestreut.  
\v 13  \w Und|strong="H0935"\w* \w siehe|strong="H2009"\w*, als er \w hineinkam|strong="H0935"\w*, \w saß|strong="H3427"\w* \w Eli|strong="H5941"\w* \w auf|strong="H5921"\w* dem \w Stuhl|strong="H3678"\w*, daß \w er|strong="H3027"\w* den \w Weg|strong="H1870"\w* \w sähe|strong="H6822"\w*; \w denn|strong="H3588"\w* sein \w Herz|strong="H3820"\w* \w war|strong="H1961"\w* \w zaghaft|strong="H2730"\w* \w über|strong="H5921"\w* die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w*. Und da der \w Mann|strong="H0376"\w* in die \w Stadt|strong="H5892"\w* \w kam|strong="H0935"\w*, sagte er's \w an|strong="H5046"\w*, \w und|strong="H2199"\w* die \w ganze|strong="H3605"\w* \w Stadt|strong="H5892"\w* \w schrie|strong="H2199"\w*.  
\v 14 Und da \w Eli|strong="H5941"\w* das \w laute|strong="H6963"\w* \w Schreien|strong="H6818"\w* \w hörte|strong="H8085"\w*, fragte \w er|strong="H0559"\w*: \w Was|strong="H4100"\w* ist das für \w ein|strong="H6963"\w* \w lautes|strong="H2088"\w* \w Getümmel|strong="H1995"\w*? Da \w kam|strong="H0935"\w* der \w Mann|strong="H0376"\w* \w eilend|strong="H4116"\w* und \w sagte|strong="H5046"\w* es Eli \w an|strong="H5941"\w*.  
\v 15  \w Eli|strong="H5941"\w* aber \w war|strong="H1121"\w* \w achtundneunzig|strong="H8083"\w* Jahre \w alt|strong="H8141"\w*, und seine \w Augen|strong="H5869"\w* waren \w dunkel|strong="H6965"\w*, daß er \w nicht|strong="H3808"\w* \w sehen|strong="H7200"\w* \w konnte|strong="H3201"\w*.  
\v 16 Der Mann \w aber|strong="H0376"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Eli|strong="H5941"\w*: \w Ich|strong="H0595"\w* \w komme|strong="H0935"\w* \w und|strong="H0589"\w* bin \w heute|strong="H3117"\w* \w aus|strong="H4480"\w* dem \w Heer|strong="H4634"\w* \w geflohen|strong="H5127"\w*. Er aber \w sprach|strong="H0559"\w*: \w Wie|strong="H4100"\w* geht es \w zu|strong="H1961"\w*, mein \w Sohn|strong="H1121"\w*?  
\v 17 Da \w antwortete|strong="H6030"\w* der \w Verkündiger|strong="H1319"\w* und \w sprach|strong="H0559"\w*: \w Israel|strong="H3478"\w* ist \w geflohen|strong="H5127"\w* \w vor|strong="H6440"\w* den \w Philistern|strong="H6430"\w*, und \w ist|strong="H1571"\w* eine \w große|strong="H1419"\w* \w Schlacht|strong="H4046"\w* im \w Volk|strong="H5971"\w* \w geschehen|strong="H1961"\w*, \w und|strong="H1571"\w* deine \w zwei|strong="H8147"\w* \w Söhne|strong="H1121"\w*, \w Hophni|strong="H2652"\w* und \w Pinehas|strong="H6372"\w*, sind \w gestorben|strong="H4191"\w*; dazu die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* ist \w genommen|strong="H3947"\w*.  
\v 18  Da er aber der \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* \w gedachte|strong="H2142"\w*, fiel \w er|strong="H5307"\w* \w zurück|strong="H0322"\w* \w vom|strong="H4480"\w* \w Stuhl|strong="H3678"\w* \w am|strong="H1157"\w* \w Tor|strong="H8179"\w* und \w brach|strong="H7665"\w* seinen \w Hals|strong="H4665"\w* \w entzwei|strong="H7665"\w* und \w starb|strong="H4191"\w*; \w denn|strong="H3588"\w* \w er|strong="H0376"\w* war \w alt|strong="H2204"\w* und ein schwerer \w Mann|strong="H3513"\w*. \w Er|strong="H1931"\w* \w richtete|strong="H8199"\w* \w aber|strong="H1931"\w* \w Israel|strong="H3478"\w* \w vierzig|strong="H0705"\w* \w Jahre|strong="H8141"\w*.  
\v 19 Seine Schwiegertochter \w aber|strong="H3618"\w*, des \w Pinehas|strong="H6372"\w* \w Weib|strong="H0802"\w*, war \w schwanger|strong="H2030"\w* und sollte \w gebären|strong="H3205"\w*. Da sie das \w Gerücht|strong="H8052"\w* \w hörte|strong="H8085"\w*, \w daß|strong="H0413"\w* die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* \w genommen|strong="H3947"\w* und ihr \w Schwiegervater|strong="H2524"\w* und ihr \w Mann|strong="H0376"\w* tot \w war|strong="H4191"\w*, krümmte sie \w sich|strong="H3766"\w* und \w gebar|strong="H3205"\w*; \w denn|strong="H3588"\w* es \w kam|strong="H2015"\w* \w sie|strong="H5921"\w* ihre \w Wehe|strong="H6735"\w* \w an|strong="H2015"\w*.  
\v 20 Und da sie \w jetzt|strong="H6256"\w* \w starb|strong="H4191"\w*, \w sprachen|strong="H1696"\w* die Weiber, die \w neben|strong="H5921"\w* ihr \w standen|strong="H5324"\w*: Fürchte \w dich|strong="H3372"\w* \w nicht|strong="H0408"\w*, du hast einen jungen \w Sohn|strong="H1121"\w*. Aber sie \w antwortete|strong="H6030"\w* \w nicht|strong="H3808"\w* und nahm'\w s|strong="H7896"\w* auch \w nicht|strong="H3808"\w* zu \w Herzen|strong="H3820"\w*.  
\v 21 Und sie \w hieß|strong="H7121"\w* den \w Knaben|strong="H5288"\w* \w Ikabod|strong="H0350"\w* und \w sprach|strong="H0559"\w*: Die \w Herrlichkeit|strong="H3519"\w* ist \w dahin|strong="H1540"\w* \w von|strong="H4480"\w* \w Israel|strong="H3478"\w*! \w weil|strong="H0413"\w* die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* genommen \w war|strong="H3947"\w*, und \w wegen|strong="H0413"\w* ihres \w Schwiegervaters|strong="H2524"\w* und ihres \w Mannes|strong="H0376"\w*.  
\v 22 Und sprach \w abermals|strong="H0559"\w*: Die \w Herrlichkeit|strong="H3519"\w* ist \w dahin|strong="H1540"\w* \w von|strong="H4480"\w* \w Israel|strong="H3478"\w*; \w denn|strong="H3588"\w* die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* ist \w genommen|strong="H3947"\w*.   
\c 5  
\p
\v 1 Die \w Philister|strong="H6430"\w* aber \w nahmen|strong="H3947"\w* die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* und \w brachten|strong="H0935"\w* sie \w von|strong="H4480"\w* Eben-\w Ezer|strong="H0072"\w* gen \w Asdod|strong="H0795"\w*  
\v 2  in das \w Haus|strong="H1004"\w* \w Dagons|strong="H1712"\w* und \w stellten|strong="H3322"\w* \w sie|strong="H0853"\w* \w neben|strong="H0681"\w* \w Dagon|strong="H1712"\w*.  
\v 3 Und da die von \w Asdod|strong="H0796"\w* \w des|strong="H4480"\w* andern \w Morgens|strong="H4283"\w* früh \w aufstanden|strong="H7925"\w*, \w fanden|strong="H2009"\w* sie \w Dagon|strong="H1712"\w* auf seinem \w Antlitz|strong="H6440"\w* \w liegen|strong="H5307"\w* auf der \w Erde|strong="H0776"\w* \w vor|strong="H6440"\w* der \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w*. Aber sie \w nahmen|strong="H3947"\w* den \w Dagon|strong="H1712"\w* und setzten \w ihn|strong="H0583"\w* \w wieder|strong="H7725"\w* an seinen \w Ort|strong="H4725"\w*.  
\v 4 Da sie aber \w des|strong="H4480"\w* \w andern|strong="H4283"\w* \w Morgens|strong="H1242"\w* früh \w aufstanden|strong="H7925"\w*, fanden \w sie|strong="H2009"\w* \w Dagon|strong="H1712"\w* abermals auf seinem \w Antlitz|strong="H6440"\w* \w liegen|strong="H5307"\w* auf der \w Erde|strong="H0776"\w* \w vor|strong="H6440"\w* der \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w*, aber sein \w Haupt|strong="H7218"\w* \w und|strong="H8147"\w* \w seine|strong="H3027"\w* \w beiden|strong="H8147"\w* \w Hände|strong="H3027"\w* waren \w abgehauen|strong="H3772"\w* \w auf|strong="H0413"\w* der \w Schwelle|strong="H4670"\w*, \w daß|strong="H7535"\w* der \w Rumpf|strong="H1712"\w* \w allein|strong="H7535"\w* \w dalag|strong="H5921"\w*.  
\v 5  \w Darum|strong="H5921"\w* \w treten|strong="H1869"\w* die \w Priester|strong="H3548"\w* \w Dagons|strong="H1712"\w* und \w alle|strong="H3605"\w*, die \w in|strong="H1004"\w* \w Dagons|strong="H1712"\w* \w Haus|strong="H1004"\w* \w gehen|strong="H0935"\w*, \w nicht|strong="H3808"\w* \w auf|strong="H5921"\w* die \w Schwelle|strong="H4670"\w* \w Dagons|strong="H1712"\w* zu \w Asdod|strong="H0795"\w* bis \w auf|strong="H5704"\w* \w diesen|strong="H2088"\w* \w Tag|strong="H3117"\w*.  
\v 6 Aber die \w Hand|strong="H3027"\w* des \w HERRN|strong="H3068"\w* war \w schwer|strong="H3513"\w* \w über|strong="H0413"\w* die von \w Asdod|strong="H0796"\w* und \w verderbte|strong="H8074"\w* \w sie|strong="H0853"\w* und \w schlug|strong="H5221"\w* sie mit bösen \w Beulen|strong="H2914"\w*, \w Asdod|strong="H0795"\w* und sein \w Gebiet|strong="H1366"\w*.  
\v 7 Da aber die \w Leute|strong="H0582"\w* zu \w Asdod|strong="H0795"\w* \w sahen|strong="H7200"\w*, \w daß|strong="H3588"\w* es \w so|strong="H3651"\w* zuging, sprachen \w sie|strong="H0559"\w*: Laßt die \w Lade|strong="H0727"\w* des \w Gottes|strong="H0430"\w* \w Israels|strong="H3478"\w* \w nicht|strong="H3808"\w* \w bei|strong="H5973"\w* \w uns|strong="H3808"\w* \w bleiben|strong="H3427"\w*; \w denn|strong="H3588"\w* seine \w Hand|strong="H3027"\w* ist zu \w hart|strong="H7185"\w* \w über|strong="H5921"\w* uns \w und|strong="H5921"\w* unserm \w Gott|strong="H0430"\w* \w Dagon|strong="H1712"\w*.  
\v 8 Und sie sandten \w hin|strong="H7971"\w* und \w versammelten|strong="H0622"\w* \w alle|strong="H3605"\w* \w Fürsten|strong="H5633"\w* der \w Philister|strong="H6430"\w* \w zu|strong="H0413"\w* \w sich|strong="H3605"\w* und \w sprachen|strong="H0559"\w*: \w Was|strong="H4100"\w* sollen wir mit der \w Lade|strong="H0727"\w* des \w Gottes|strong="H0430"\w* \w Israels|strong="H3478"\w* \w machen|strong="H6213"\w*? Da antworteten \w sie|strong="H0559"\w*: Laßt die \w Lade|strong="H0727"\w* des \w Gottes|strong="H0430"\w* \w Israels|strong="H3478"\w* \w nach|strong="H5437"\w* \w Gath|strong="H1661"\w* \w tragen|strong="H5437"\w*. Und sie \w trugen|strong="H5437"\w* die \w Lade|strong="H0727"\w* des \w Gottes|strong="H0430"\w* \w Israels|strong="H3478"\w* \w dahin|strong="H5437"\w*.  
\v 9  \w Da|strong="H0310"\w* sie aber \w dieselbe|strong="H0853"\w* dahin getragen \w hatten|strong="H5437"\w*, \w ward|strong="H1961"\w* durch die \w Hand|strong="H3027"\w* des \w HERRN|strong="H3068"\w* in der \w Stadt|strong="H5892"\w* ein \w sehr|strong="H3966"\w* \w großer|strong="H1419"\w* \w Schrecken|strong="H4103"\w*, und er \w schlug|strong="H5221"\w* die \w Leute|strong="H0582"\w* in der \w Stadt|strong="H5892"\w*, \w beide|strong="H4480"\w*, \w klein|strong="H6996"\w* \w und|strong="H5704"\w* \w groß|strong="H1419"\w*, also daß an ihnen \w Beulen|strong="H2914"\w* \w ausbrachen|strong="H8368"\w*.  
\v 10 Da sandten \w sie|strong="H7971"\w* die \w Lade|strong="H0727"\w* des \w HERRN|strong="H0430"\w* gen \w Ekron|strong="H6138"\w*. Da aber die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* gen \w Ekron|strong="H6138"\w* \w kam|strong="H0935"\w*, \w schrieen|strong="H2199"\w* die von \w Ekron|strong="H6139"\w*: Sie haben die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* \w hergetragen|strong="H5437"\w* \w zu|strong="H0413"\w* \w mir|strong="H5437"\w*, daß sie \w mich|strong="H5971"\w* \w töte|strong="H4191"\w* und mein \w Volk|strong="H5971"\w*.  
\v 11 Da sandten sie \w hin|strong="H7971"\w* und \w versammelten|strong="H0622"\w* \w alle|strong="H3605"\w* \w Fürsten|strong="H5633"\w* der \w Philister|strong="H6430"\w* und \w sprachen|strong="H0559"\w*: \w Sendet|strong="H7971"\w* die \w Lade|strong="H0727"\w* des \w Gottes|strong="H0430"\w* \w Israels|strong="H3478"\w* \w wieder|strong="H7725"\w* an ihren \w Ort|strong="H4725"\w*, daß sie \w mich|strong="H0853"\w* und mein \w Volk|strong="H5971"\w* \w nicht|strong="H3808"\w* \w töte|strong="H4191"\w*. \w Denn|strong="H3588"\w* die \w Hand|strong="H3027"\w* \w Gottes|strong="H0430"\w* \w machte|strong="H3513"\w* \w einen|strong="H1961"\w* \w sehr|strong="H3966"\w* großen \w Schrecken|strong="H4103"\w* mit \w Würgen|strong="H4194"\w* in der \w ganzen|strong="H3605"\w* \w Stadt|strong="H5892"\w*.  
\v 12  \w Und|strong="H0582"\w* welche \w Leute|strong="H0834"\w* \w nicht|strong="H3808"\w* \w starben|strong="H4191"\w*, die wurden \w geschlagen|strong="H5221"\w* mit \w Beulen|strong="H2914"\w*, daß das \w Geschrei|strong="H7775"\w* der \w Stadt|strong="H5892"\w* \w auf|strong="H5927"\w* gen \w Himmel|strong="H8064"\w* \w ging|strong="H5927"\w*.   
