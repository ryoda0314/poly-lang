\v 1 Also \w kamen|strong="H0935"\w* die \w Leute|strong="H0582"\w* von Kirjath-\w Jearim|strong="H7157"\w* und \w holten|strong="H5927"\w* die \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w* \w hinauf|strong="H5927"\w* und \w brachten|strong="H0935"\w* \w sie|strong="H0853"\w* \w ins|strong="H0413"\w* \w Haus|strong="H1004"\w* \w Abinadabs|strong="H0041"\w* auf dem \w Hügel|strong="H1389"\w*; \w und|strong="H6942"\w* seinen \w Sohn|strong="H1121"\w* \w Eleasar|strong="H0499"\w* heiligten \w sie|strong="H6942"\w*, daß er die \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w* \w hütete|strong="H8104"\w*.  
\v 2  \w Und|strong="H1961"\w* \w von|strong="H4480"\w* dem \w Tage|strong="H3117"\w* an, da die \w Lade|strong="H0727"\w* des HERRN zu Kirjath-\w Jearim|strong="H7157"\w* \w blieb|strong="H3427"\w*, verzog sich die Zeit so \w lange|strong="H3117"\w*, bis es \w zwanzig|strong="H6242"\w* \w Jahre|strong="H8141"\w* \w wurden|strong="H1961"\w*; und das \w ganze|strong="H3605"\w* \w Haus|strong="H1004"\w* \w Israel|strong="H3478"\w* \w weinte|strong="H5091"\w* \w vor|strong="H0310"\w* dem \w HERRN|strong="H3068"\w*.  
\v 3  \w Samuel|strong="H8050"\w* aber \w sprach|strong="H0559"\w* \w zum|strong="H0413"\w* \w ganzen|strong="H3605"\w* \w Hause|strong="H1004"\w* \w Israel|strong="H3478"\w*: \w So|strong="H0518"\w* \w ihr|strong="H0859"\w* euch mit \w ganzem|strong="H3605"\w* \w Herzen|strong="H3824"\w* \w bekehrt|strong="H7725"\w* \w zu|strong="H0413"\w* dem \w HERRN|strong="H3068"\w*, so tut von \w euch|strong="H5493"\w* die \w fremden|strong="H5236"\w* \w Götter|strong="H0430"\w* und die \w Astharoth|strong="H6252"\w* und \w richtet|strong="H3559"\w* euer \w Herz|strong="H3824"\w* \w zu|strong="H0413"\w* dem \w HERRN|strong="H3068"\w* und \w dienet|strong="H5647"\w* ihm \w allein|strong="H0909"\w*, so wird er \w euch|strong="H0853"\w* \w erretten|strong="H5337"\w* \w aus|strong="H4480"\w* der \w Philister|strong="H6430"\w* \w Hand|strong="H3027"\w*.  
\v 4 Da \w taten|strong="H5493"\w* \w die|strong="H5493"\w* \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w* von \w sich|strong="H5493"\w* die \w Baalim|strong="H1168"\w* und die \w Astharoth|strong="H6252"\w* und \w dienten|strong="H5647"\w* dem \w HERRN|strong="H3068"\w* allein.  
\v 5  \w Samuel|strong="H8050"\w* aber \w sprach|strong="H0559"\w*: \w Versammelt|strong="H6908"\w* das \w ganze|strong="H3605"\w* \w Israel|strong="H3478"\w* gen \w Mizpa|strong="H4708"\w*, daß \w ich|strong="H0413"\w* \w für|strong="H1157"\w* euch \w bitte|strong="H6419"\w* zum \w HERRN|strong="H3068"\w*.  
\v 6 Und sie kamen \w zusammen|strong="H6908"\w* gen \w Mizpa|strong="H4709"\w* und \w schöpften|strong="H7579"\w* \w Wasser|strong="H4325"\w* und gossen's \w aus|strong="H8210"\w* \w vor|strong="H6440"\w* dem \w HERRN|strong="H3068"\w* und \w fasteten|strong="H6684"\w* \w denselben|strong="H1931"\w* \w Tag|strong="H3117"\w* und \w sprachen|strong="H0559"\w* \w daselbst|strong="H8033"\w*: Wir haben an dem \w HERRN|strong="H3068"\w* \w gesündigt|strong="H2398"\w*. Also \w richtete|strong="H8199"\w* \w Samuel|strong="H8050"\w* die \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w* zu \w Mizpa|strong="H4708"\w*.  
\v 7 Da aber die \w Philister|strong="H6430"\w* \w hörten|strong="H8085"\w*, \w daß|strong="H3588"\w* die \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w* zusammengekommen \w waren|strong="H6908"\w* gen \w Mizpa|strong="H4708"\w*, \w zogen|strong="H5927"\w* die \w Fürsten|strong="H5633"\w* der \w Philister|strong="H6430"\w* \w hinauf|strong="H5927"\w* \w wider|strong="H0413"\w* \w Israel|strong="H3478"\w*. Da das die \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w* \w hörten|strong="H8085"\w*, fürchteten sie \w sich|strong="H3372"\w* \w vor|strong="H4480"\w* den \w Philistern|strong="H6430"\w*  
\v 8  und \w sprachen|strong="H0559"\w* \w zu|strong="H0413"\w* \w Samuel|strong="H8050"\w*: \w Laß|strong="H2790"\w* \w nicht|strong="H0408"\w* \w ab|strong="H4480"\w*, für uns \w zu|strong="H4480"\w* \w schreien|strong="H2199"\w* \w zu|strong="H0413"\w* dem \w HERRN|strong="H3068"\w*, unserm \w Gott|strong="H0430"\w*, daß er uns \w helfe|strong="H3467"\w* \w aus|strong="H4480"\w* der \w Philister|strong="H6430"\w* \w Hand|strong="H3027"\w*.  
\v 9  \w Samuel|strong="H8050"\w* \w nahm|strong="H3947"\w* \w ein|strong="H0259"\w* \w Milchlämmlein|strong="H2461"\w* und \w opferte|strong="H5927"\w* dem \w HERRN|strong="H3068"\w* ein \w ganzes|strong="H3632"\w* \w Brandopfer|strong="H5930"\w* \w und|strong="H8050"\w* \w schrie|strong="H2199"\w* \w zum|strong="H0413"\w* \w HERRN|strong="H3068"\w* \w für|strong="H1157"\w* \w Israel|strong="H3478"\w*; und der \w HERR|strong="H3068"\w* \w erhörte|strong="H6030"\w* ihn.  
\v 10  \w Und|strong="H1961"\w* indem \w Samuel|strong="H8050"\w* das \w Brandopfer|strong="H5930"\w* \w opferte|strong="H5927"\w*, \w kamen|strong="H5066"\w* die \w Philister|strong="H6430"\w* \w herzu|strong="H5066"\w*, zu \w streiten|strong="H4421"\w* wider \w Israel|strong="H3478"\w*. Aber der \w HERR|strong="H3068"\w* ließ \w donnern|strong="H7481"\w* einen \w großen|strong="H1419"\w* \w Donner|strong="H6963"\w* \w über|strong="H5921"\w* die \w Philister|strong="H6430"\w* \w desselben|strong="H1931"\w* \w Tages|strong="H3117"\w* und \w schreckte|strong="H2000"\w* sie, daß \w sie|strong="H5062"\w* \w vor|strong="H6440"\w* \w Israel|strong="H3478"\w* geschlagen \w wurden|strong="H5062"\w*.  
\v 11  \w Da|strong="H0582"\w* \w zogen|strong="H3318"\w* die \w Männer|strong="H0582"\w* \w Israels|strong="H3478"\w* \w aus|strong="H3318"\w* \w von|strong="H4480"\w* \w Mizpa|strong="H4709"\w* und \w jagten|strong="H7291"\w* die \w Philister|strong="H6430"\w* und \w schlugen|strong="H5221"\w* sie \w bis|strong="H5704"\w* \w unter|strong="H4480"\w* Beht-\w Kar|strong="H1033"\w*.  
\v 12 Da \w nahm|strong="H3947"\w* \w Samuel|strong="H8050"\w* \w einen|strong="H0259"\w* \w Stein|strong="H0068"\w* und \w setzte|strong="H7760"\w* ihn \w zwischen|strong="H0996"\w* \w Mizpa|strong="H4709"\w* \w und|strong="H0996"\w* \w Sen|strong="H8129"\w* und \w hieß|strong="H7121"\w* \w ihn|strong="H8034"\w* Eben-\w Ezer|strong="H0072"\w* und \w sprach|strong="H0559"\w*: \w Bis|strong="H5704"\w* \w hierher|strong="H2008"\w* \w hat|strong="H3068"\w* \w uns|strong="H5826"\w* der \w HERR|strong="H3068"\w* \w geholfen|strong="H5826"\w*.  
\v 13 Also wurden die \w Philister|strong="H6430"\w* \w gedämpft|strong="H3665"\w* und \w kamen|strong="H0935"\w* \w nicht|strong="H3808"\w* \w mehr|strong="H5750"\w* in die \w Grenze|strong="H1366"\w* \w Israels|strong="H3478"\w*; und die \w Hand|strong="H3027"\w* des \w HERRN|strong="H3068"\w* \w war|strong="H1961"\w* wider die \w Philister|strong="H6430"\w*, \w solange|strong="H3605"\w* \w Samuel|strong="H8050"\w* \w lebte|strong="H3117"\w*.  
\v 14  \w Also|strong="H5892"\w* \w wurden|strong="H7725"\w* \w Israel|strong="H3478"\w* die \w Städte|strong="H5892"\w* \w wieder|strong="H7725"\w*, \w die|strong="H0834"\w* die \w Philister|strong="H6430"\w* \w ihnen|strong="H3478"\w* genommen \w hatten|strong="H3947"\w*, \w von|strong="H4480"\w* \w Ekron|strong="H6138"\w* an \w bis|strong="H5704"\w* gen \w Gath|strong="H1661"\w*, samt ihrem \w Gebiet|strong="H1366"\w*; die \w errettete|strong="H5337"\w* \w Israel|strong="H3478"\w* \w von|strong="H4480"\w* der \w Hand|strong="H3027"\w* der \w Philister|strong="H6430"\w*. \w Und|strong="H1961"\w* \w Israel|strong="H3478"\w* \w hatte|strong="H1961"\w* \w Frieden|strong="H7965"\w* \w mit|strong="H0996"\w* \w den|strong="H0996"\w* \w Amoritern|strong="H0567"\w*.  
\v 15  \w Samuel|strong="H8050"\w* aber \w richtete|strong="H8199"\w* \w Israel|strong="H3478"\w* sein \w Leben|strong="H2416"\w* \w lang|strong="H3117"\w*  
\v 16 und \w zog|strong="H1980"\w* \w jährlich|strong="H1767"\w* \w umher|strong="H5437"\w* zu Beth-\w El|strong="H1008"\w* und \w Gilgal|strong="H1537"\w* und \w Mizpa|strong="H4709"\w*. Und wenn \w er|strong="H8199"\w* \w Israel|strong="H3478"\w* an \w allen|strong="H3605"\w* \w diesen|strong="H0428"\w* \w Orten|strong="H4725"\w* gerichtet \w hatte|strong="H8199"\w*,  
\v 17 kam er \w wieder|strong="H8666"\w* gen \w Rama|strong="H7414"\w* (\w denn|strong="H3588"\w* \w da|strong="H8033"\w* war sein \w Haus|strong="H1004"\w*) und \w richtete|strong="H8199"\w* \w Israel|strong="H3478"\w* \w daselbst|strong="H8199"\w* und \w baute|strong="H1129"\w* dem \w HERRN|strong="H3068"\w* \w daselbst|strong="H8033"\w* einen \w Altar|strong="H4196"\w*.   
\c 8  
\p
\v 1  Da \w aber|strong="H0834"\w* \w Samuel|strong="H8050"\w* alt \w ward|strong="H2204"\w*, setzte \w er|strong="H7760"\w* seine \w Söhne|strong="H1121"\w* zu \w Richtern|strong="H8199"\w* über \w Israel|strong="H3478"\w*.  
\v 2 Sein \w erstgeborener|strong="H1060"\w* \w Sohn|strong="H1121"\w* \w hieß|strong="H1961"\w* \w Joel|strong="H3100"\w* und \w der|strong="H8034"\w* \w andere|strong="H4932"\w* \w Abia|strong="H0029"\w*, und sie waren \w Richter|strong="H8199"\w* zu Beer-\w Seba|strong="H0884"\w*.  
\v 3 Aber seine \w Söhne|strong="H1121"\w* \w wandelten|strong="H1980"\w* \w nicht|strong="H3808"\w* in seinem \w Wege|strong="H1870"\w*, sondern neigten \w sich|strong="H5186"\w* \w zum|strong="H0310"\w* \w Geiz|strong="H1215"\w* und \w nahmen|strong="H3947"\w* \w Geschenke|strong="H7810"\w* und \w beugten|strong="H5186"\w* das \w Recht|strong="H4941"\w*.  
\v 4 Da versammelten \w sich|strong="H6908"\w* \w alle|strong="H3605"\w* \w Ältesten|strong="H2205"\w* in \w Israel|strong="H3478"\w* und \w kamen|strong="H0935"\w* gen \w Rama|strong="H7414"\w* \w zu|strong="H0413"\w* \w Samuel|strong="H8050"\w*  
\v 5 und \w sprachen|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: \w Siehe|strong="H2009"\w*, \w du|strong="H0859"\w* bist alt \w geworden|strong="H2204"\w*, und deine \w Söhne|strong="H1121"\w* \w wandeln|strong="H1980"\w* \w nicht|strong="H3808"\w* in deinen \w Wegen|strong="H1870"\w*; so \w setze|strong="H7760"\w* \w nun|strong="H6258"\w* einen \w König|strong="H4428"\w* über uns, der uns \w richte|strong="H8199"\w*, wie \w alle|strong="H3605"\w* \w Heiden|strong="H1471"\w* haben.  
\v 6  \w Das|strong="H1697"\w* \w gefiel|strong="H3415"\w* \w Samuel|strong="H8050"\w* \w übel|strong="H3415"\w*, \w daß|strong="H0834"\w* sie \w sagten|strong="H0559"\w*: \w Gib|strong="H5414"\w* uns einen \w König|strong="H4428"\w*, der uns \w richte|strong="H8199"\w*. Und \w Samuel|strong="H8050"\w* \w betete|strong="H6419"\w* \w vor|strong="H0413"\w* dem \w HERRN|strong="H3068"\w*.  
\v 7 Der HERR \w aber|strong="H3068"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Samuel|strong="H8050"\w*: \w Gehorche|strong="H8085"\w* der \w Stimme|strong="H6963"\w* des \w Volks|strong="H5971"\w* in \w allem|strong="H3605"\w*, \w was|strong="H0834"\w* sie \w zu|strong="H0413"\w* dir gesagt \w haben|strong="H0559"\w*; \w denn|strong="H3588"\w* sie \w haben|strong="H0853"\w* \w nicht|strong="H3808"\w* \w dich|strong="H0853"\w*, \w sondern|strong="H3588"\w* \w mich|strong="H0853"\w* \w verworfen|strong="H3988"\w*, daß ich \w nicht|strong="H4480"\w* soll \w König|strong="H4427"\w* \w über|strong="H5921"\w* sie \w sein|strong="H4427"\w*.  
\v 8  \w Sie|strong="H3605"\w* tun \w dir|strong="H4639"\w*, \w wie|strong="H0834"\w* sie immer getan \w haben|strong="H6213"\w* \w von|strong="H4480"\w* dem \w Tage|strong="H3117"\w* an, da ich \w sie|strong="H0853"\w* \w aus|strong="H4480"\w* \w Ägypten|strong="H4714"\w* \w führte|strong="H5927"\w*, bis \w auf|strong="H5704"\w* \w diesen|strong="H2088"\w* \w Tag|strong="H3117"\w*, und sie mich \w verlassen|strong="H5800"\w* und \w andern|strong="H0312"\w* \w Göttern|strong="H0430"\w* gedient \w haben|strong="H5647"\w*.  
\v 9  \w So|strong="H6258"\w* \w gehorche|strong="H8085"\w* \w nun|strong="H6258"\w* ihrer \w Stimme|strong="H6963"\w*. \w Doch|strong="H0389"\w* \w bezeuge|strong="H5749"\w* \w ihnen|strong="H5749"\w* und verkündige \w ihnen|strong="H5046"\w* das \w Recht|strong="H4941"\w* des \w Königs|strong="H4428"\w*, \w der|strong="H0834"\w* \w über|strong="H5921"\w* sie herrschen \w wird|strong="H4427"\w*.  
\v 10  \w Und|strong="H0559"\w* \w Samuel|strong="H8050"\w* \w sagte|strong="H0559"\w* \w alle|strong="H3605"\w* \w Worte|strong="H1697"\w* des \w HERRN|strong="H3068"\w* dem \w Volk|strong="H5971"\w*, \w das|strong="H0413"\w* \w von|strong="H4480"\w* \w ihm|strong="H0854"\w* einen \w König|strong="H4428"\w* \w forderte|strong="H7592"\w*,  
\v 11 und \w sprach|strong="H0559"\w*: \w Das|strong="H2088"\w* wird des \w Königs|strong="H4428"\w* \w Recht|strong="H4941"\w* \w sein|strong="H1961"\w*, \w der|strong="H0834"\w* \w über|strong="H5921"\w* euch herrschen \w wird|strong="H4427"\w*: Eure Söhne wird \w er|strong="H1121"\w* \w nehmen|strong="H3947"\w* zu seinem \w Wagen|strong="H4818"\w* und zu \w Reitern|strong="H6571"\w*, und daß sie \w vor|strong="H6440"\w* seinem \w Wagen|strong="H4818"\w* her \w laufen|strong="H7323"\w*,  
\v 12  und zu \w Hauptleuten|strong="H8269"\w* über \w tausend|strong="H0505"\w* und \w über|strong="H8269"\w* \w fünfzig|strong="H2572"\w* und zu \w Ackerleuten|strong="H2758"\w*, die ihm seinen Acker \w bauen|strong="H2790"\w*, und zu \w Schnittern|strong="H7105"\w* in seiner \w Ernte|strong="H7114"\w*, und daß sie seine \w Kriegswaffen|strong="H3627"\w* und was zu seinen Wagen \w gehört|strong="H3627"\w*, \w machen|strong="H6213"\w*.  
\v 13 Eure Töchter \w aber|strong="H1323"\w* wird er \w nehmen|strong="H3947"\w*, daß sie \w Salbenbereiterinnen|strong="H7548"\w*, \w Köchinnen|strong="H2879"\w* und \w Bäckerinnen|strong="H0644"\w* seien.  
\v 14  \w Eure|strong="H7704"\w* \w besten|strong="H2896"\w* \w Äcker|strong="H7704"\w* und \w Weinberge|strong="H3754"\w* und \w Ölgärten|strong="H2132"\w* wird er \w nehmen|strong="H3947"\w* und seinen \w Knechten|strong="H5650"\w* \w geben|strong="H5414"\w*.  
\v 15 Dazu von eurer \w Saat|strong="H2233"\w* und euren \w Weinbergen|strong="H3754"\w* wird er den Zehnten \w nehmen|strong="H6237"\w* und seinen \w Kämmerern|strong="H5631"\w* und \w Knechten|strong="H5650"\w* \w geben|strong="H5414"\w*.  
\v 16 Und eure \w Knechte|strong="H5650"\w* und \w Mägde|strong="H8198"\w* und eure \w schönsten|strong="H2896"\w* \w Jünglinge|strong="H0970"\w* und eure \w Esel|strong="H2543"\w* wird er \w nehmen|strong="H3947"\w* und seine \w Geschäfte|strong="H4399"\w* damit \w ausrichten|strong="H6213"\w*.  
\v 17 Von euren Herden wird \w er|strong="H6629"\w* den Zehnten \w nehmen|strong="H6237"\w*, und ihr müßt seine \w Knechte|strong="H5650"\w* \w sein|strong="H1961"\w*.  
\v 18 Wenn ihr \w dann|strong="H1931"\w* schreien \w werdet|strong="H2199"\w* zu der \w Zeit|strong="H3117"\w* \w über|strong="H4480"\w* euren \w König|strong="H4428"\w*, \w den|strong="H0834"\w* ihr euch erwählt \w habt|strong="H0977"\w*, \w so|strong="H3068"\w* \w wird|strong="H0853"\w* der \w HERR|strong="H3068"\w* zu \w derselben|strong="H1931"\w* \w Zeit|strong="H3117"\w* \w euch|strong="H0853"\w* \w nicht|strong="H3808"\w* \w erhören|strong="H6030"\w*.  
\v 19 Aber das \w Volk|strong="H5971"\w* weigerte \w sich|strong="H3985"\w*, zu \w gehorchen|strong="H8085"\w* der \w Stimme|strong="H6963"\w* \w Samuels|strong="H8050"\w*, und \w sprachen|strong="H0559"\w*: \w Mitnichten|strong="H3808"\w*, \w sondern|strong="H3588"\w* es soll ein \w König|strong="H4428"\w* \w über|strong="H5921"\w* uns \w sein|strong="H1961"\w*,  
\v 20 daß \w wir|strong="H0587"\w* auch \w seien|strong="H1961"\w* wie \w alle|strong="H3605"\w* \w Heiden|strong="H1471"\w*, daß uns unser \w König|strong="H4428"\w* \w richte|strong="H8199"\w* und vor \w uns|strong="H6440"\w* her \w ausziehe|strong="H3318"\w* und unsere \w Kriege|strong="H4421"\w* \w führe|strong="H3898"\w*.  
\v 21 Und da \w Samuel|strong="H8050"\w* \w alle|strong="H3605"\w* \w Worte|strong="H1697"\w* des \w Volks|strong="H5971"\w* gehört \w hatte|strong="H8085"\w*, sagte \w er|strong="H1696"\w* sie vor den \w Ohren|strong="H0241"\w* des \w HERRN|strong="H3068"\w*.  
\v 22 Der \w HERR|strong="H3068"\w* aber \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Samuel|strong="H8050"\w*: \w Gehorche|strong="H8085"\w* ihrer \w Stimme|strong="H6963"\w* und \w mache|strong="H4427"\w* ihnen einen \w König|strong="H4428"\w*. \w Und|strong="H0559"\w* \w Samuel|strong="H8050"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* den \w Männern|strong="H0582"\w* \w Israels|strong="H3478"\w*: Geht \w hin|strong="H3212"\w*, ein \w jeglicher|strong="H0376"\w* in seine \w Stadt|strong="H5892"\w*.   
\c 9  
\p
