\v 1 Im \w achten|strong="H8066"\w* \w Monat|strong="H2320"\w* des \w zweiten|strong="H8147"\w* \w Jahres|strong="H8141"\w* des Königs \w Darius|strong="H1867"\w* \w geschah|strong="H1961"\w* das \w Wort|strong="H1697"\w* des \w HERR|strong="H3068"\w* \w zu|strong="H0413"\w* \w Sacharja|strong="H2148"\w*, dem \w Sohn|strong="H1121"\w* \w Berechjas|strong="H1296"\w*, des \w Sohnes|strong="H1121"\w* \w Iddos|strong="H5714"\w*, dem \w Propheten|strong="H5030"\w*, und \w sprach|strong="H0559"\w*:  
\v 2 Der \w HERR|strong="H3068"\w* \w ist|strong="H7110"\w* zornig \w gewesen|strong="H7107"\w* \w über|strong="H5921"\w* eure \w Väter|strong="H0001"\w*.  
\v 3 Und \w sprich|strong="H0559"\w* \w zu|strong="H0413"\w* ihnen: \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w*: Kehret \w euch|strong="H7725"\w* \w zu|strong="H0413"\w* mir, \w spricht|strong="H5002"\w* der \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w*, so will ich mich \w zu|strong="H0413"\w* euch \w kehren|strong="H7725"\w*, \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w*.  
\v 4  \w Seid|strong="H1961"\w* \w nicht|strong="H0408"\w* wie eure \w Väter|strong="H0001"\w*, \w welchen|strong="H0834"\w* die \w vorigen|strong="H7223"\w* \w Propheten|strong="H5030"\w* \w predigten|strong="H7121"\w* und \w sprachen|strong="H0559"\w*: \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w*: Kehret \w euch|strong="H7725"\w* \w von|strong="H4480"\w* euren \w bösen|strong="H7451"\w* \w Wegen|strong="H1870"\w* und von eurem \w bösen|strong="H7451"\w* \w Tun|strong="H4611"\w*! aber sie \w gehorchten|strong="H8085"\w* \w nicht|strong="H3808"\w* und \w achteten|strong="H7181"\w* \w nicht|strong="H3808"\w* \w auf|strong="H0413"\w* mich, \w spricht|strong="H5002"\w* der \w HERR|strong="H3068"\w*.  
\v 5  \w Wo|strong="H0346"\w* sind \w nun|strong="H1992"\w* eure \w Väter|strong="H0001"\w*? Und die \w Propheten|strong="H5030"\w*, \w leben|strong="H2421"\w* sie auch \w noch|strong="H5769"\w*?  
\v 6 Ist's aber nicht \w also|strong="H0389"\w*, daß meine \w Worte|strong="H1697"\w* und meine \w Rechte|strong="H2706"\w*, \w die|strong="H0834"\w* ich durch meine \w Knechte|strong="H5650"\w*, die \w Propheten|strong="H5030"\w*, \w gebot|strong="H6680"\w*, haben eure \w Väter|strong="H0001"\w* \w getroffen|strong="H5381"\w*, daß sie haben müssen \w umkehren|strong="H7725"\w* und \w sagen|strong="H0559"\w*: \w Gleichwie|strong="H0834"\w* der \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w* \w vorhatte|strong="H2161"\w* uns zu \w tun|strong="H6213"\w*, wie wir \w gingen|strong="H1870"\w* und \w taten|strong="H4611"\w*, \w also|strong="H3651"\w* hat \w er|strong="H0853"\w* uns auch \w getan|strong="H6213"\w*?  
\v 7 Am \w vierundzwanzigsten|strong="H0702"\w* \w Tage|strong="H3117"\w* des \w elften|strong="H6249"\w* \w Monats|strong="H2320"\w*, \w welcher|strong="H1931"\w* \w ist|strong="H8147"\w* der \w Monat|strong="H2320"\w* \w Sebat|strong="H7627"\w*, im \w zweiten|strong="H8147"\w* \w Jahr|strong="H8141"\w* des Königs \w Darius|strong="H1867"\w*, \w geschah|strong="H1961"\w* das \w Wort|strong="H1697"\w* des \w HERRN|strong="H3068"\w* \w zu|strong="H0413"\w* \w Sacharja|strong="H2148"\w*, dem \w Sohn|strong="H1121"\w* \w Berechjas|strong="H1296"\w*, des \w Sohnes|strong="H1121"\w* \w Iddos|strong="H5714"\w* dem \w Propheten|strong="H5030"\w*, und \w sprach|strong="H0559"\w*:  
\v 8 Ich \w sah|strong="H7200"\w* bei der \w Nacht|strong="H3915"\w*, und \w siehe|strong="H2009"\w*, ein \w Mann|strong="H0376"\w* \w saß|strong="H7392"\w* \w auf|strong="H5921"\w* einem \w roten|strong="H0122"\w* \w Pferde|strong="H5483"\w*, und \w er|strong="H1931"\w* \w hielt|strong="H5975"\w* \w unter|strong="H0996"\w* den \w Myrten|strong="H1918"\w* in der \w Aue|strong="H4699"\w*, und \w hinter|strong="H0310"\w* ihm waren \w rote|strong="H0122"\w*, \w braune|strong="H8320"\w* und \w weiße|strong="H3836"\w* \w Pferde|strong="H5483"\w*.  
\v 9 Und ich \w sprach|strong="H0559"\w*: Mein \w HERR|strong="H0113"\w*, \w wer|strong="H4100"\w* sind \w diese|strong="H0428"\w*? \w Und|strong="H0559"\w* der \w Engel|strong="H4397"\w*, der mit mir \w redete|strong="H1696"\w*, \w sprach|strong="H0559"\w* zu \w mir|strong="H0413"\w*: \w Ich|strong="H0589"\w* will dir \w zeigen|strong="H7200"\w*, \w wer|strong="H4100"\w* \w diese|strong="H0428"\w* \w sind|strong="H1992"\w*.  
\v 10  \w Und|strong="H6030"\w* der \w Mann|strong="H0376"\w*, der \w unter|strong="H0996"\w* den \w Myrten|strong="H1918"\w* \w hielt|strong="H5975"\w*, \w antwortete|strong="H6030"\w* und \w sprach|strong="H0559"\w*: \w Diese|strong="H0428"\w* sind es, \w die|strong="H0834"\w* der \w HERR|strong="H3068"\w* ausgesandt \w hat|strong="H7971"\w*, die \w Erde|strong="H0776"\w* zu \w durchziehen|strong="H1980"\w*.  
\v 11 Sie aber \w antworteten|strong="H6030"\w* dem \w Engel|strong="H4397"\w* des \w HERRN|strong="H3068"\w*, der \w unter|strong="H0996"\w* den \w Myrten|strong="H1918"\w* \w hielt|strong="H5975"\w*, und \w sprachen|strong="H0559"\w*: Wir haben die \w Erde|strong="H0776"\w* \w durchzogen|strong="H1980"\w*, und \w siehe|strong="H2009"\w*, \w alle|strong="H3605"\w* \w Länder|strong="H0776"\w* \w sitzen|strong="H3427"\w* \w still|strong="H8252"\w*.  
\v 12 Da \w antwortete|strong="H6030"\w* der \w Engel|strong="H4397"\w* des \w HERRN|strong="H3068"\w* und \w sprach|strong="H0559"\w*: \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w*, \w wie|strong="H5704"\w* \w lange|strong="H4970"\w* willst \w du|strong="H0859"\w* denn dich \w nicht|strong="H3808"\w* \w erbarmen|strong="H7355"\w* über \w Jerusalem|strong="H3389"\w* und über die \w Städte|strong="H5892"\w* Juda'\w s|strong="H3063"\w*, über \w welche|strong="H0834"\w* du zornig bist \w gewesen|strong="H2194"\w* \w diese|strong="H2088"\w* \w siebzig|strong="H7657"\w* \w Jahre|strong="H8141"\w*?  
\v 13 Und der \w HERR|strong="H3068"\w* \w antwortete|strong="H6030"\w* dem \w Engel|strong="H4397"\w*, der mit mir \w redete|strong="H1696"\w*, \w freundliche|strong="H2896"\w* \w Worte|strong="H1697"\w* und \w tröstliche|strong="H5150"\w* \w Worte|strong="H1697"\w*.  
\v 14 Und der \w Engel|strong="H4397"\w*, der mit mir \w redete|strong="H1696"\w*, \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* mir: \w Predige|strong="H7121"\w* und \w sprich|strong="H0559"\w*: \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w*: Ich \w eifere|strong="H7065"\w* um \w Jerusalem|strong="H3389"\w* und \w Zion|strong="H6726"\w* mit \w großem|strong="H1419"\w* \w Eifer|strong="H7068"\w*  
\v 15  \w und|strong="H0589"\w* bin \w sehr|strong="H1419"\w* \w zornig|strong="H7110"\w* \w über|strong="H5921"\w* die \w stolzen|strong="H7600"\w* \w Heiden|strong="H1471"\w*; \w denn|strong="H0834"\w* \w ich|strong="H0589"\w* war nur ein \w wenig|strong="H4592"\w* \w zornig|strong="H7107"\w*, sie \w aber|strong="H1992"\w* \w halfen|strong="H5826"\w* zum \w Verderben|strong="H7451"\w*.  
\v 16  \w Darum|strong="H3651"\w* \w so|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: Ich will \w mich|strong="H3389"\w* \w wieder|strong="H7725"\w* zu \w Jerusalem|strong="H3389"\w* \w kehren|strong="H7725"\w* mit \w Barmherzigkeit|strong="H7356"\w*, und mein \w Haus|strong="H1004"\w* soll darin gebaut \w werden|strong="H1129"\w*, \w spricht|strong="H5002"\w* der \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w*; \w dazu|strong="H6957"\w* \w soll|strong="H5921"\w* die \w Zimmerschnur|strong="H6957"\w* \w in|strong="H5921"\w* \w Jerusalem|strong="H3389"\w* gezogen \w werde|strong="H5186"\w*.  
\v 17 Und \w predige|strong="H7121"\w* \w weiter|strong="H5750"\w* und \w sprich|strong="H0559"\w*: \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w*: Es \w soll|strong="H5750"\w* meinen \w Städten|strong="H5892"\w* \w wieder|strong="H4480"\w* \w wohl|strong="H2896"\w* \w gehen|strong="H6327"\w*, und der \w HERR|strong="H3068"\w* wird \w Zion|strong="H6726"\w* \w wieder|strong="H5750"\w* \w trösten|strong="H5162"\w* und wird \w Jerusalem|strong="H3389"\w* \w wieder|strong="H5750"\w* \w erwählen|strong="H0977"\w*.  
\v 18 [2:1] Und ich \w hob|strong="H5375"\w* meine \w Augen|strong="H5869"\w* \w auf|strong="H5375"\w* und \w sah|strong="H7200"\w*, und \w siehe|strong="H2009"\w*, da waren \w vier|strong="H0702"\w* \w Hörner|strong="H7161"\w*.  
\v 19 [2:2] Und ich \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* dem \w Engel|strong="H4397"\w*, der mit mir \w redete|strong="H1696"\w*: \w Wer|strong="H4100"\w* sind \w diese|strong="H0428"\w*? Er \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* mir: Es sind \w Hörner|strong="H7161"\w*, \w die|strong="H0834"\w* \w Juda|strong="H3063"\w* samt \w Israel|strong="H3478"\w* und \w Jerusalem|strong="H3389"\w* zerstreut \w haben|strong="H2219"\w*.  
\v 20 [2:3] Und der \w HERR|strong="H3068"\w* \w zeigte|strong="H7200"\w* mir \w vier|strong="H0702"\w* \w Schmiede|strong="H2796"\w*.  
\v 21 [2:4] Da sprach \w ich|strong="H0559"\w*: \w Was|strong="H4100"\w* \w sollen|strong="H0935"\w* \w die|strong="H0428"\w* \w machen|strong="H6213"\w*? Er \w sprach|strong="H0559"\w*: \w Die|strong="H0428"\w* \w Hörner|strong="H7161"\w*, \w die|strong="H0834"\w* \w Juda|strong="H3063"\w* so zerstreut \w haben|strong="H2219"\w*, \w daß|strong="H6310"\w* \w niemand|strong="H0376"\w* sein \w Haupt|strong="H7218"\w* hat mögen \w aufheben|strong="H5375"\w*, \w sie|strong="H0853"\w* \w abzuschrecken|strong="H2729"\w* \w sind|strong="H0935"\w* \w diese|strong="H0428"\w* \w gekommen|strong="H0935"\w*, daß sie die \w Hörner|strong="H7161"\w* der \w Heiden|strong="H1471"\w* \w abstoßen|strong="H3034"\w*, welche das \w Horn|strong="H7161"\w* \w haben|strong="H5375"\w* \w über|strong="H0413"\w* das \w Land|strong="H0776"\w* \w Juda|strong="H3063"\w* \w gehoben|strong="H5375"\w*, es zu \w zerstreuen|strong="H2219"\w*.   
\c 2  
\p
\v 1 Und ich \w hob|strong="H5375"\w* meine \w Augen|strong="H5869"\w* \w auf|strong="H5375"\w* und \w sah|strong="H7200"\w*, und \w siehe|strong="H2009"\w*, ein \w Mann|strong="H0376"\w* \w hatte|strong="H3027"\w* eine \w Meßschnur|strong="H4060"\w* in der \w Hand|strong="H3027"\w*.  
\v 2 Und ich \w sprach|strong="H0559"\w*: \w Wo|strong="H0575"\w* \w gehst|strong="H1980"\w* \w du|strong="H0859"\w* \w hin|strong="H1980"\w*? Er aber \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* mir: Daß ich \w Jerusalem|strong="H3389"\w* \w messe|strong="H4058"\w* und \w sehe|strong="H7200"\w*, wie \w lang|strong="H4100"\w* und \w weit|strong="H7341"\w* es sein soll.  
\v 3 Und \w siehe|strong="H2009"\w*, der \w Engel|strong="H4397"\w*, der mit mir \w redete|strong="H1696"\w*, ging \w heraus|strong="H3318"\w*; und ein \w anderer|strong="H0312"\w* \w Engel|strong="H4397"\w* ging \w heraus|strong="H3318"\w* ihm \w entgegen|strong="H7125"\w*  
\v 4 und \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: Lauf \w hin|strong="H7323"\w* und \w sage|strong="H1696"\w* \w diesem|strong="H1975"\w* \w Jüngling|strong="H5288"\w* \w und|strong="H0413"\w* \w sprich|strong="H0559"\w*: \w Jerusalem|strong="H3389"\w* \w wird|strong="H6519"\w* bewohnt \w werden|strong="H3427"\w* ohne \w Mauern|strong="H6519"\w* \w vor|strong="H4480"\w* großer \w Menge|strong="H7230"\w* der \w Menschen|strong="H0120"\w* und \w Viehs|strong="H0929"\w*, die \w darin|strong="H8432"\w* sein werden.  
\v 5 Und \w ich|strong="H0589"\w* \w will|strong="H1961"\w*, \w spricht|strong="H5002"\w* der \w HERR|strong="H3068"\w*, eine \w feurige|strong="H0784"\w* \w Mauer|strong="H2346"\w* \w umher|strong="H5439"\w* \w sein|strong="H1961"\w* und will mich \w herrlich|strong="H3519"\w* \w darin|strong="H8432"\w* \w erzeigen|strong="H1961"\w*.  
\v 6  \w Hui|strong="H1945"\w*, \w hui|strong="H1945"\w*! \w Fliehet|strong="H5127"\w* \w aus|strong="H4480"\w* dem \w Mitternachtlande|strong="H0776"\w*! \w spricht|strong="H5002"\w* der \w HERR|strong="H3068"\w*; \w denn|strong="H3588"\w* ich habe \w euch|strong="H0853"\w* in die \w vier|strong="H0702"\w* \w Winde|strong="H7307"\w* unter dem \w Himmel|strong="H8064"\w* \w zerstreut|strong="H6566"\w*, \w spricht|strong="H5002"\w* der \w HERR|strong="H3068"\w*.  
\v 7  \w Hui|strong="H1945"\w*, \w Zion|strong="H6726"\w*, die du \w wohnst|strong="H3427"\w* bei der \w Tochter|strong="H1323"\w* \w Babel|strong="H0894"\w*, \w entrinne|strong="H4422"\w*!  
\v 8  \w Denn|strong="H3588"\w* \w so|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w*: Er hat mich \w gesandt|strong="H7971"\w* \w nach|strong="H0310"\w* \w Ehre|strong="H3519"\w* \w zu|strong="H0413"\w* den \w Heiden|strong="H1471"\w*, die \w euch|strong="H0853"\w* beraubt \w haben|strong="H7997"\w*; \w denn|strong="H3588"\w* wer euch \w antastet|strong="H5060"\w*, der \w tastet|strong="H5060"\w* seinen \w Augapfel|strong="H0892"\w* \w an|strong="H5060"\w*.  
\v 9  \w Denn|strong="H3588"\w* \w siehe|strong="H2009"\w*, ich will meine \w Hand|strong="H3027"\w* \w über|strong="H5921"\w* sie \w schwingen|strong="H5130"\w*, daß sie \w sollen|strong="H5647"\w* ein \w Raub|strong="H7998"\w* \w werden|strong="H1961"\w* denen, die ihnen gedient \w haben|strong="H5647"\w*; und ihr sollt \w erfahren|strong="H3045"\w*, \w daß|strong="H3588"\w* \w mich|strong="H7971"\w* der \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w* gesandt \w hat|strong="H7971"\w*.  
\v 10 Freue \w dich|strong="H7442"\w* und sei \w fröhlich|strong="H8055"\w*, du \w Tochter|strong="H1323"\w* \w Zion|strong="H6726"\w*! \w denn|strong="H3588"\w* siehe, ich \w komme|strong="H0935"\w* und will \w bei|strong="H8432"\w* dir \w wohnen|strong="H7931"\w*, \w spricht|strong="H5002"\w* der \w HERR|strong="H3068"\w*.  
\v 11  \w Und|strong="H7227"\w* sollen zu \w der|strong="H1931"\w* \w Zeit|strong="H3117"\w* \w viel|strong="H7227"\w* \w Heiden|strong="H1471"\w* \w zum|strong="H0413"\w* \w HERRN|strong="H3068"\w* getan \w werden|strong="H3867"\w* und sollen mein \w Volk|strong="H5971"\w* \w sein|strong="H1961"\w*; und ich will \w bei|strong="H8432"\w* dir \w wohnen|strong="H7931"\w*, und sollst \w erfahren|strong="H3045"\w*, \w daß|strong="H3588"\w* \w mich|strong="H0413"\w* der \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w* \w zu|strong="H0413"\w* dir gesandt \w hat|strong="H7971"\w*.  
\v 12 Und der HERR \w wird|strong="H3068"\w* \w Juda|strong="H3063"\w* \w erben|strong="H5157"\w* als sein \w Teil|strong="H2506"\w* \w in|strong="H5921"\w* dem \w heiligen|strong="H6944"\w* \w Lande|strong="H0127"\w* und wird \w Jerusalem|strong="H3389"\w* \w wieder|strong="H5750"\w* \w erwählen|strong="H0977"\w*.  
\v 13  \w Alles|strong="H3605"\w* \w Fleisch|strong="H1320"\w* sei \w still|strong="H2013"\w* \w vor|strong="H4480"\w* dem \w HERRN|strong="H3068"\w*; \w denn|strong="H3588"\w* er hat sich \w aufgemacht|strong="H5782"\w* \w aus|strong="H4480"\w* seiner \w heiligen|strong="H6944"\w* \w Stätte|strong="H4583"\w*.   
\c 3  
\p
\v 1 Und mir ward \w gezeigt|strong="H7200"\w* der \w Hohepriester|strong="H1419"\w* \w Josua|strong="H3091"\w*, \w stehend|strong="H5975"\w* \w vor|strong="H6440"\w* dem \w Engel|strong="H4397"\w* des \w HERRN|strong="H3068"\w*; und der \w Satan|strong="H7854"\w* \w stand|strong="H5975"\w* \w zu|strong="H5921"\w* seiner \w Rechten|strong="H3225"\w*, daß er ihm \w widerstünde|strong="H7853"\w*.  
\v 2 Und der \w HERR|strong="H3068"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* dem \w Satan|strong="H7854"\w*: Der \w HERR|strong="H3068"\w* \w schelte|strong="H1605"\w* dich du \w Satan|strong="H7854"\w*! ja, der \w HERR|strong="H3068"\w* \w schelte|strong="H1605"\w* dich, der \w Jerusalem|strong="H3389"\w* erwählt \w hat|strong="H0977"\w*! Ist \w dieser|strong="H2088"\w* \w nicht|strong="H3808"\w* ein \w Brand|strong="H0181"\w*, der aus dem \w Feuer|strong="H0784"\w* errettet \w ist|strong="H5337"\w*?  
\v 3 Und \w Josua|strong="H3091"\w* \w hatte|strong="H1961"\w* \w unreine|strong="H6674"\w* \w Kleider|strong="H0899"\w* \w an|strong="H3847"\w* \w und|strong="H6440"\w* \w stand|strong="H5975"\w* \w vor|strong="H6440"\w* dem \w Engel|strong="H4397"\w*,  
\v 4 welcher \w antwortete|strong="H6030"\w* und \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* denen, die vor \w ihm|strong="H6440"\w* \w standen|strong="H5975"\w*: \w Tut|strong="H5493"\w* die \w unreinen|strong="H6674"\w* \w Kleider|strong="H0899"\w* \w von|strong="H4480"\w* \w ihm|strong="H5493"\w*! Und er \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: \w Siehe|strong="H7200"\w*, ich habe deine \w Sünde|strong="H5771"\w* \w von|strong="H4480"\w* dir \w genommen|strong="H5674"\w* und habe \w dich|strong="H0853"\w* mit \w Feierkleidern|strong="H4254"\w* \w angezogen|strong="H3847"\w*.  
\v 5 Und er \w sprach|strong="H0559"\w*: \w Setzt|strong="H7760"\w* einen \w reinen|strong="H2889"\w* \w Hut|strong="H6797"\w* \w auf|strong="H5921"\w* sein \w Haupt|strong="H7218"\w*! Und sie \w setzten|strong="H7760"\w* einen \w reinen|strong="H2889"\w* \w Hut|strong="H6797"\w* \w auf|strong="H5921"\w* sein \w Haupt|strong="H7218"\w* und zogen \w ihm|strong="H3847"\w* \w Kleider|strong="H0899"\w* \w an|strong="H3847"\w*, und der \w Engel|strong="H4397"\w* des \w HERRN|strong="H3068"\w* \w stand|strong="H5975"\w* da.  
\v 6  \w Und|strong="H5749"\w* der \w Engel|strong="H4397"\w* des \w HERRN|strong="H3068"\w* \w bezeugte|strong="H5749"\w* \w Josua|strong="H3091"\w* und \w sprach|strong="H0559"\w*:  
