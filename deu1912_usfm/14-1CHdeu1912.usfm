\v 49 Da \w Saul|strong="H7586"\w* \w starb|strong="H4191"\w*, ward \w König|strong="H4427"\w* an seiner \w Statt|strong="H8478"\w* Baal-\w Hanan|strong="H1177"\w*, der \w Sohn|strong="H1121"\w* \w Achbors|strong="H5907"\w*.  
\v 50 Da Baal-\w Hanan|strong="H1177"\w* \w starb|strong="H4191"\w*, ward \w König|strong="H4427"\w* an seiner \w Statt|strong="H8478"\w* \w Hadad|strong="H1908"\w*, und seine \w Stadt|strong="H5892"\w* \w hieß|strong="H8034"\w* \w Pagi|strong="H6464"\w*; und sein \w Weib|strong="H0802"\w* \w hieß|strong="H8034"\w* \w Mehetabeel|strong="H4105"\w*, eine \w Tochter|strong="H1323"\w* \w Matreds|strong="H4308"\w*, die \w Mesahabs|strong="H4314"\w* \w Tochter|strong="H1323"\w* war.  
\v 51 Da aber \w Hadad|strong="H1908"\w* \w starb|strong="H4191"\w*, \w wurden|strong="H1961"\w* \w Fürsten|strong="H0441"\w* zu \w Edom|strong="H0123"\w*: \w Fürst|strong="H0441"\w* \w Thimna|strong="H8555"\w*, \w Fürst|strong="H0441"\w* \w Alwa|strong="H5933"\w*, \w Fürst|strong="H0441"\w* \w Jetheth|strong="H3509"\w*,  
\v 52  \w Fürst|strong="H0441"\w* \w Oholibama|strong="H0173"\w*, \w Fürst|strong="H0441"\w* \w Ela|strong="H0425"\w*, \w Fürst|strong="H0441"\w* \w Pinon|strong="H6373"\w*,  
\v 53  \w Fürst|strong="H0441"\w* \w Kenas|strong="H7073"\w*, \w Fürst|strong="H0441"\w* \w Theman|strong="H8487"\w*, \w Fürst|strong="H0441"\w* \w Mizbar|strong="H4014"\w*,  
\v 54  \w Fürst|strong="H0441"\w* \w Magdiel|strong="H4025"\w*, \w Fürst|strong="H0441"\w* \w Iram|strong="H5902"\w*. \w Das|strong="H0428"\w* sind die \w Fürsten|strong="H0441"\w* zu \w Edom|strong="H0123"\w*.   
\c 2  
\p
\v 1  \w Dies|strong="H0428"\w* sind die \w Kinder|strong="H1121"\w* \w Israels|strong="H3478"\w*: \w Ruben|strong="H7205"\w*, \w Simeon|strong="H8095"\w*, \w Levi|strong="H3878"\w*, \w Juda|strong="H3063"\w*, \w Isaschar|strong="H3485"\w*, \w Sebulon|strong="H2074"\w*,  
\v 2  \w Dan|strong="H1835"\w*, \w Joseph|strong="H3130"\w*, \w Benjamin|strong="H1144"\w*, \w Naphthali|strong="H5321"\w*, \w Gad|strong="H1410"\w*, \w Asser|strong="H0836"\w*.  
\v 3 Die \w Kinder|strong="H1121"\w* Juda'\w s|strong="H3063"\w* sind: \w Ger|strong="H6147"\w*, \w Onan|strong="H0209"\w*, \w Sela|strong="H7956"\w*. Die \w drei|strong="H7969"\w* wurden ihm \w geboren|strong="H3205"\w* \w von|strong="H4480"\w* der \w Kanaanitin|strong="H3669"\w*, der \w Tochter|strong="H1323"\w* \w Suas|strong="H7774"\w*. \w Ger|strong="H6147"\w* aber, der erste \w Sohn|strong="H1060"\w* Juda'\w s|strong="H3063"\w*, \w war|strong="H1961"\w* \w böse|strong="H7451"\w* \w vor|strong="H5869"\w* dem \w HERRN|strong="H3068"\w*; darum \w tötete|strong="H4191"\w* er ihn.  
\v 4  \w Thamar|strong="H8559"\w* aber, seine \w Schwiegertochter|strong="H3618"\w*, \w gebar|strong="H3205"\w* ihm \w Perez|strong="H6557"\w* und \w Serah|strong="H2226"\w*, daß \w aller|strong="H3605"\w* \w Kinder|strong="H1121"\w* Juda'\w s|strong="H3063"\w* waren \w fünf|strong="H2568"\w*.  
\v 5 Die \w Kinder|strong="H1121"\w* des \w Perez|strong="H6557"\w* sind: \w Hezron|strong="H2696"\w* und \w Hamul|strong="H2538"\w*.  
\v 6 Die \w Kinder|strong="H1121"\w* aber \w Serahs|strong="H2226"\w* sind: \w Simri|strong="H2174"\w*, \w Ethan|strong="H0387"\w*, \w Heman|strong="H1968"\w*, \w Chalkol|strong="H3633"\w*, \w Dara|strong="H1873"\w*. Diese \w alle|strong="H3605"\w* sind \w fünf|strong="H2568"\w*.  
\v 7 Die \w Kinder|strong="H1121"\w* \w Charmis|strong="H3756"\w* sind \w Achan|strong="H5917"\w*, welcher \w Israel|strong="H3478"\w* \w betrübte|strong="H5916"\w*, \w da|strong="H0428"\w* er sich am \w Verbannten|strong="H2764"\w* \w vergriff|strong="H4603"\w*.  
\v 8 Die \w Kinder|strong="H1121"\w* \w Ethans|strong="H0387"\w* sind: \w Asarja|strong="H5838"\w*.  
\v 9 Die \w Kinder|strong="H1121"\w* aber \w Hezrons|strong="H2696"\w*, die ihm \w geboren|strong="H3205"\w*, sind: \w Jerahmeel|strong="H3396"\w*, \w Ram|strong="H7410"\w*, \w Chalubai|strong="H3621"\w*.  
\v 10  \w Ram|strong="H7410"\w* aber \w zeugte|strong="H3205"\w* \w Amminadab|strong="H5992"\w*. \w Amminadab|strong="H5992"\w* \w zeugte|strong="H3205"\w* \w Nahesson|strong="H5177"\w*, den \w Fürsten|strong="H5387"\w* der \w Kinder|strong="H1121"\w* \w Juda|strong="H3063"\w*.  
\v 11  \w Nahesson|strong="H5177"\w* \w zeugte|strong="H3205"\w* \w Salma|strong="H8007"\w*. \w Salma|strong="H8007"\w* \w zeugte|strong="H3205"\w* \w Boas|strong="H1162"\w*.  
\v 12  \w Boas|strong="H1162"\w* \w zeugte|strong="H3205"\w* \w Obed|strong="H5744"\w*. \w Obed|strong="H5744"\w* \w zeugte|strong="H3205"\w* \w Isai|strong="H3448"\w*.  
\v 13  \w Isai|strong="H3448"\w* \w zeugte|strong="H3205"\w* seinen ersten \w Sohn|strong="H1060"\w* \w Eliab|strong="H0446"\w*; \w Abinadab|strong="H0041"\w*, den \w zweiten|strong="H8145"\w*; \w Simea|strong="H8092"\w*, den \w dritten|strong="H7992"\w*;  
\v 14  \w Nathanel|strong="H5417"\w*, den \w vierten|strong="H7243"\w*; \w Raddai|strong="H7288"\w*, den \w fünften|strong="H2549"\w*;  
\v 15  \w Ozem|strong="H0684"\w*, den \w sechsten|strong="H8345"\w*; \w David|strong="H1732"\w*, den \w siebenten|strong="H7637"\w*.  
\v 16 Und ihre \w Schwestern|strong="H0269"\w* waren: \w Zeruja|strong="H6870"\w* und \w Abigail|strong="H0026"\w*. Die \w Kinder|strong="H1121"\w* \w Zerujas|strong="H6870"\w* sind \w Abisai|strong="H0052"\w*, \w Joab|strong="H3097"\w*, \w Asahael|strong="H6214"\w*, die \w drei|strong="H7969"\w*.  
\v 17  \w Abigail|strong="H0026"\w* aber \w gebar|strong="H3205"\w* \w Amasa|strong="H6021"\w*. Der \w Vater|strong="H0001"\w* aber \w Amasas|strong="H6021"\w* war \w Jether|strong="H3500"\w*, ein \w Ismaeliter|strong="H3459"\w*.  
\v 18  \w Kaleb|strong="H3612"\w*, der \w Sohn|strong="H1121"\w* \w Hezrons|strong="H2696"\w*, \w zeugte|strong="H3205"\w* \w mit|strong="H0854"\w* \w Asuba|strong="H5806"\w*, seiner \w Frau|strong="H0802"\w*, und mit \w Jerigoth|strong="H3408"\w*; und dies sind \w derselben|strong="H0428"\w* \w Kinder|strong="H1121"\w*: \w Jeser|strong="H3475"\w*, \w Sobab|strong="H7727"\w* und \w Ardon|strong="H0715"\w*.  
\v 19 Da aber \w Asuba|strong="H5806"\w* \w starb|strong="H4191"\w*, \w nahm|strong="H3947"\w* \w Kaleb|strong="H3612"\w* \w Ephrath|strong="H0672"\w*; die \w gebar|strong="H3205"\w* ihm \w Hur|strong="H2354"\w*.  
\v 20  \w Hur|strong="H2354"\w* \w zeugte|strong="H3205"\w* \w Uri|strong="H0221"\w*. \w Uri|strong="H0221"\w* \w zeugte|strong="H3205"\w* \w Bezaleel|strong="H1212"\w*.  
