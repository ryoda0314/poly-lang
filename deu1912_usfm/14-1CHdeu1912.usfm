\v 1 Die \w Kinder|strong="H1121"\w* \w Isaschars|strong="H3485"\w* waren: \w Thola|strong="H8439"\w*, \w Phua|strong="H6312"\w*, \w Jasub|strong="H3437"\w* und \w Simron|strong="H8110"\w*, die \w vier|strong="H0702"\w*.  
\v 2 Die \w Kinder|strong="H1121"\w* aber \w Tholas|strong="H8439"\w* waren: \w Usi|strong="H5813"\w*, \w Rephaja|strong="H7509"\w*, \w Jeriel|strong="H3400"\w*, \w Jahemai|strong="H3181"\w*, \w Jibsam|strong="H3005"\w* und \w Samuel|strong="H8050"\w*, \w Häupter|strong="H7218"\w* in ihren \w Vaterhäusern|strong="H0001"\w* von \w Thola|strong="H8439"\w* und \w gewaltige|strong="H2428"\w* \w Männer|strong="H1368"\w* in ihrem \w Geschlecht|strong="H8435"\w*, an der \w Zahl|strong="H4557"\w* zu \w Davids|strong="H1732"\w* \w Zeiten|strong="H3117"\w* \w zweiundzwanzigtausend|strong="H8147"\w* und \w sechshundert|strong="H8337"\w*.  
\v 3 Die \w Kinder|strong="H1121"\w* \w Usis|strong="H5813"\w*, waren: \w Jisrahja|strong="H3156"\w*. Aber die \w Kinder|strong="H1121"\w* \w Jisrahjas|strong="H3156"\w* waren: \w Michael|strong="H4317"\w*, \w Obadja|strong="H5662"\w*, \w Joel|strong="H3100"\w* und \w Jissia|strong="H3449"\w*, die \w fünf|strong="H2568"\w*, und \w alle|strong="H3605"\w* waren \w Häupter|strong="H7218"\w*.  
\v 4 Und \w mit|strong="H5921"\w* ihnen unter ihrem \w Geschlecht|strong="H8435"\w* nach ihren \w Vaterhäusern|strong="H0001"\w* waren \w gerüstetes|strong="H1416"\w* \w Heervolk|strong="H6635"\w* zum \w Streit|strong="H4421"\w* \w sechsunddreißigtausend|strong="H8337"\w*; \w denn|strong="H3588"\w* sie hatten \w viel|strong="H7235"\w* \w Weiber|strong="H0802"\w* und \w Kinder|strong="H1121"\w*.  
\v 5 Und ihre \w Brüder|strong="H0251"\w* in \w allen|strong="H3605"\w* \w Geschlechtern|strong="H4940"\w* \w Isaschars|strong="H3485"\w* waren \w gewaltige|strong="H2428"\w* \w Männer|strong="H1368"\w* und wurden \w alle|strong="H3605"\w* \w aufgezeichnet|strong="H3187"\w*, \w siebenundachtzigtausend|strong="H7651"\w*.  
\v 6 Die Kinder \w Benjamins|strong="H1144"\w* waren \w Bela|strong="H1106"\w*, \w Becher|strong="H1071"\w* und \w Jediael|strong="H3043"\w*, die \w drei|strong="H7969"\w*.  
\v 7 Aber die \w Kinder|strong="H1121"\w* \w Belas|strong="H1106"\w* waren: \w Ezbon|strong="H0675"\w*, \w Usi|strong="H5813"\w*, \w Usiel|strong="H5816"\w*, \w Jerimoth|strong="H3406"\w* und \w Iri|strong="H5901"\w*, die \w fünf|strong="H2568"\w*, \w Häupter|strong="H7218"\w* in ihren \w Vaterhäusern|strong="H0001"\w*, \w gewaltige|strong="H2428"\w* \w Männer|strong="H1368"\w*. Und wurden \w aufgezeichnet|strong="H3187"\w* \w zweiundzwanzigtausend|strong="H8147"\w* und \w vierunddreißig|strong="H0702"\w*.  
\v 8 Die \w Kinder|strong="H1121"\w* \w Bechers|strong="H1071"\w* waren: \w Semira|strong="H2160"\w*, \w Joas|strong="H3135"\w*, \w Elieser|strong="H0461"\w*, \w Eljoenai|strong="H0454"\w*, \w Omri|strong="H6018"\w*, \w Jerimoth|strong="H3406"\w*, \w Abia|strong="H0029"\w*, \w Anathoth|strong="H6068"\w* und \w Alemeth|strong="H5964"\w*; \w die|strong="H0428"\w* waren \w alle|strong="H3605"\w* \w Kinder|strong="H1121"\w* des \w Becher|strong="H1071"\w*.  
\v 9 Und wurden \w aufgezeichnet|strong="H3187"\w* in ihren \w Geschlechtern|strong="H8435"\w* nach den \w Häuptern|strong="H7218"\w* ihrer \w Vaterhäuser|strong="H0001"\w*, \w gewaltige|strong="H2428"\w* \w Männer|strong="H1368"\w*, \w zwanzigtausend|strong="H6242"\w* und \w zweihundert|strong="H3967"\w*.  
