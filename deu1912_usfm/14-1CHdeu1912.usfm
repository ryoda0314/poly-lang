\v 11 Da \w ward|strong="H2734"\w* \w David|strong="H1732"\w* \w traurig|strong="H2734"\w*, \w daß|strong="H3588"\w* der \w HERR|strong="H3068"\w* den \w Usa|strong="H5798"\w* \w wegriß|strong="H6556"\w*, und \w hieß|strong="H7121"\w* \w die|strong="H1931"\w* \w Stätte|strong="H4725"\w* Perez-\w Usa|strong="H6560"\w* bis \w auf|strong="H5704"\w* \w diesen|strong="H2088"\w* \w Tag|strong="H3117"\w*.  
\v 12 Und \w David|strong="H1732"\w* \w fürchtete|strong="H3372"\w* sich vor \w Gott|strong="H0430"\w* \w des|strong="H1931"\w* \w Tages|strong="H3117"\w* und \w sprach|strong="H0559"\w*: \w Wie|strong="H1963"\w* soll ich die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* \w zu|strong="H0413"\w* mir \w bringen|strong="H0935"\w*?  
\v 13 Darum ließ \w er|strong="H1732"\w* die \w Lade|strong="H0727"\w* Gottes \w nicht|strong="H3808"\w* \w zu|strong="H0413"\w* sich \w bringen|strong="H5493"\w* \w in|strong="H0413"\w* die \w Stadt|strong="H5892"\w* \w Davids|strong="H1732"\w*, sondern \w lenkte|strong="H5186"\w* sie hin \w ins|strong="H0413"\w* \w Haus|strong="H1004"\w* Obed-\w Edoms|strong="H5654"\w*, des \w Gahtiters|strong="H1663"\w*.  
\v 14 Also \w blieb|strong="H3427"\w* die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* \w bei|strong="H5973"\w* Obed-\w Edom|strong="H1004"\w* in seinem \w Hause|strong="H1004"\w* \w drei|strong="H7969"\w* \w Monate|strong="H2320"\w*. Und der \w HERR|strong="H3068"\w* \w segnete|strong="H1288"\w* das \w Haus|strong="H1004"\w* Obed-\w Edoms|strong="H5654"\w* und \w alles|strong="H3605"\w*, \w was|strong="H0834"\w* er hatte.   
\c 14  
\p
\v 1 Und \w Hiram|strong="H2438"\w*, der \w König|strong="H4428"\w* zu \w Tyrus|strong="H6865"\w*, \w sandte|strong="H7971"\w* \w Boten|strong="H4397"\w* \w zu|strong="H0413"\w* \w David|strong="H1732"\w* und \w Zedernholz|strong="H6086"\w*, \w Maurer|strong="H7023"\w* und \w Zimmerleute|strong="H2796"\w*, daß sie ihm ein \w Haus|strong="H1004"\w* \w bauten|strong="H1129"\w*.  
\v 2 Und \w David|strong="H1732"\w* \w merkte|strong="H3045"\w*, \w daß|strong="H3588"\w* ihn der \w HERR|strong="H3068"\w* zum \w König|strong="H4428"\w* \w über|strong="H5921"\w* \w Israel|strong="H3478"\w* bestätigt \w hatte|strong="H3559"\w*; \w denn|strong="H3588"\w* sein \w Königreich|strong="H4438"\w* stieg \w auf|strong="H4605"\w* \w um|strong="H5668"\w* seines \w Volkes|strong="H5971"\w* \w Israel|strong="H3478"\w* willen.  
\v 3 Und \w David|strong="H1732"\w* \w nahm|strong="H3947"\w* noch \w mehr|strong="H5750"\w* \w Weiber|strong="H0802"\w* zu \w Jerusalem|strong="H3389"\w* \w und|strong="H1732"\w* \w zeugte|strong="H3205"\w* noch \w mehr|strong="H5750"\w* \w Söhne|strong="H1121"\w* und \w Töchter|strong="H1323"\w*.  
\v 4 Und \w die|strong="H0834"\w* ihm zu \w Jerusalem|strong="H3389"\w* geboren \w wurden|strong="H3205"\w*, \w hießen|strong="H8034"\w* \w also|strong="H0428"\w*: \w Sammua|strong="H8051"\w*, \w Sobab|strong="H7727"\w*, \w Nathan|strong="H5416"\w*, \w Salomo|strong="H8010"\w*,  
\v 5  \w Jibhar|strong="H2984"\w*, \w Elisua|strong="H0474"\w*, \w Elpelet|strong="H0467"\w*,  
\v 6  \w Nogah|strong="H5052"\w*, \w Nepheg|strong="H5298"\w*, \w Japhia|strong="H3309"\w*,  
\v 7  \w Elisama|strong="H0476"\w*, \w Baeljada|strong="H1182"\w*, \w Eliphelet|strong="H0467"\w*.  
\v 8 Und da die \w Philister|strong="H6430"\w* \w hörten|strong="H8085"\w*, \w daß|strong="H3588"\w* \w David|strong="H1732"\w* zum \w König|strong="H4428"\w* gesalbt \w war|strong="H4886"\w* \w über|strong="H5921"\w* \w ganz|strong="H3605"\w* \w Israel|strong="H3478"\w*, \w zogen|strong="H5927"\w* \w sie|strong="H6430"\w* \w alle|strong="H3605"\w* \w herauf|strong="H5927"\w*, \w David|strong="H1732"\w* zu \w suchen|strong="H1245"\w*. Da das \w David|strong="H1732"\w* \w hörte|strong="H8085"\w*, zog \w aus|strong="H3318"\w* \w gegen|strong="H6440"\w* sie.  
\v 9 Und die \w Philister|strong="H6430"\w* \w kamen|strong="H0935"\w* und ließen sich \w nieder|strong="H6584"\w* im \w Grunde|strong="H6010"\w* \w Rephaim|strong="H7497"\w*.  
\v 10  \w David|strong="H1732"\w* aber \w fragte|strong="H7592"\w* \w Gott|strong="H0430"\w* und \w sprach|strong="H0559"\w*: Soll ich \w hinaufziehen|strong="H5927"\w* \w wider|strong="H5921"\w* die \w Philister|strong="H6430"\w*? und willst du sie in meine \w Hand|strong="H3027"\w* \w geben|strong="H5414"\w*? Der \w HERR|strong="H3068"\w* \w sprach|strong="H0559"\w* zu ihm: Zieh \w hinauf|strong="H5927"\w*! ich hab sie in deine \w Hände|strong="H3027"\w* \w gegeben|strong="H5414"\w*.  
\v 11 Und da sie \w hinaufzogen|strong="H5927"\w* gen Baal-\w Perazim|strong="H1188"\w*, \w schlug|strong="H5221"\w* sie \w David|strong="H1732"\w* \w daselbst|strong="H8033"\w*. Und \w David|strong="H1732"\w* \w sprach|strong="H0559"\w*: \w Gott|strong="H0430"\w* hat meine \w Feinde|strong="H0341"\w* durch meine \w Hand|strong="H3027"\w* \w zertrennt|strong="H6555"\w*, wie sich das \w Wasser|strong="H4325"\w* \w trennt|strong="H6556"\w*. \w Daher|strong="H5921"\w* \w hießen|strong="H8034"\w* \w sie|strong="H7121"\w* \w die|strong="H1931"\w* \w Stätte|strong="H4725"\w* Baal-\w Perazim|strong="H1188"\w*.  
\v 12 Und sie \w ließen|strong="H5800"\w* ihre \w Götter|strong="H0430"\w* \w daselbst|strong="H8033"\w*; da \w hieß|strong="H0559"\w* sie \w David|strong="H1732"\w* mit \w Feuer|strong="H0784"\w* \w verbrennen|strong="H8313"\w*.  
\v 13 Aber die \w Philister|strong="H6430"\w* machten \w sich|strong="H3254"\w* \w wieder|strong="H5750"\w* \w heran|strong="H3254"\w* und ließen sich \w nieder|strong="H6584"\w* im \w Grunde|strong="H6010"\w*.  
\v 14 Und \w David|strong="H1732"\w* \w fragte|strong="H7592"\w* \w abermals|strong="H5750"\w* \w Gott|strong="H0430"\w*; und \w Gott|strong="H0430"\w* \w sprach|strong="H0559"\w* zu ihm: Du sollst \w nicht|strong="H3808"\w* \w hinaufziehen|strong="H5927"\w* \w hinter|strong="H0310"\w* ihnen her, sondern lenke \w dich|strong="H5437"\w* \w von|strong="H4480"\w* ihnen, daß du an sie \w kommst|strong="H0935"\w* \w gegenüber|strong="H4480"\w* den \w Maulbeerbäumen|strong="H1057"\w*.  
\v 15  \w Wenn|strong="H1961"\w* du dann wirst \w hören|strong="H8085"\w* das \w Rauschen|strong="H6963"\w* oben \w auf|strong="H7218"\w* den \w Maulbeerbäumen|strong="H1057"\w* \w einhergehen|strong="H6807"\w*, \w so|strong="H0227"\w* fahre \w heraus|strong="H3318"\w* zum \w Streit|strong="H4421"\w*; \w denn|strong="H3588"\w* \w Gott|strong="H0430"\w* ist da \w vor|strong="H6440"\w* dir \w ausgezogen|strong="H3318"\w*, zu \w schlagen|strong="H5221"\w* der \w Philister|strong="H6430"\w* \w Heer|strong="H4264"\w*.  
\v 16 Und \w David|strong="H1732"\w* \w tat|strong="H6213"\w*, \w wie|strong="H0834"\w* ihm \w Gott|strong="H0430"\w* geboten \w hatte|strong="H6680"\w*; und sie \w schlugen|strong="H5221"\w* das \w Heer|strong="H4264"\w* der \w Philister|strong="H6430"\w* \w von|strong="H4480"\w* \w Gibeon|strong="H1391"\w* an bis \w gen|strong="H5704"\w* \w Geser|strong="H1507"\w*.  
\v 17 Und \w Davids|strong="H1732"\w* \w Namen|strong="H8034"\w* ging \w aus|strong="H3318"\w* in \w alle|strong="H3605"\w* \w Lande|strong="H0776"\w*, und der \w HERR|strong="H3068"\w* \w ließ|strong="H5414"\w* seine \w Furcht|strong="H6343"\w* \w über|strong="H5921"\w* \w alle|strong="H3605"\w* \w Heiden|strong="H1471"\w* \w kommen|strong="H5414"\w*.   
\c 15  
\p
\v 1 Und er \w baute|strong="H6213"\w* \w Häuser|strong="H1004"\w* in der \w Stadt|strong="H5892"\w* \w Davids|strong="H1732"\w* und \w bereitete|strong="H3559"\w* der \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* eine \w Stätte|strong="H4725"\w* und \w breitete|strong="H5186"\w* eine \w Hütte|strong="H0168"\w* über sie.  
\v 2  \w Dazumal|strong="H0227"\w* \w sprach|strong="H0559"\w* \w David|strong="H1732"\w*: Die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* soll \w niemand|strong="H3808"\w* \w tragen|strong="H5375"\w* \w außer|strong="H3588"\w* den \w Leviten|strong="H3881"\w*; \w denn|strong="H3588"\w* diese hat der \w HERR|strong="H3068"\w* \w erwählt|strong="H0977"\w*, daß sie die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* \w tragen|strong="H5375"\w* und ihm \w dienen|strong="H8334"\w* \w ewiglich|strong="H5704"\w*.  
\v 3 Da \w versammelte|strong="H6950"\w* \w David|strong="H1732"\w* das \w ganze|strong="H3605"\w* \w Israel|strong="H3478"\w* \w gen|strong="H0413"\w* \w Jerusalem|strong="H3389"\w*, daß sie die \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w* \w hinaufbrächten|strong="H5927"\w* \w an|strong="H0413"\w* die \w Stätte|strong="H4725"\w*, \w die|strong="H0834"\w* er dazu bereitet \w hatte|strong="H3559"\w*.  
\v 4 Und \w David|strong="H1732"\w* brachte \w zuhauf|strong="H0622"\w* die \w Kinder|strong="H1121"\w* \w Aaron|strong="H0175"\w* und die \w Leviten|strong="H3881"\w*:  
\v 5 aus den \w Kindern|strong="H1121"\w* \w Kahath|strong="H6955"\w*: \w Uriel|strong="H0222"\w*, den \w Obersten|strong="H8269"\w*, samt seinen \w Brüdern|strong="H0251"\w*, \w hundertundzwanzig|strong="H3967"\w*;  
\v 6 aus den \w Kindern|strong="H1121"\w* \w Merari|strong="H4847"\w*: \w Asaja|strong="H6222"\w*, den \w Obersten|strong="H8269"\w*, samt seinen \w Brüdern|strong="H0251"\w*, \w zweihundertzwanzig|strong="H3967"\w*;  
\v 7 aus den \w Kindern|strong="H1121"\w* \w Gerson|strong="H1647"\w*: \w Joel|strong="H3100"\w*, den \w Obersten|strong="H8269"\w*, samt seinen \w Brüdern|strong="H0251"\w*, \w hundertunddreißig|strong="H3967"\w*;  
\v 8 aus den \w Kindern|strong="H1121"\w* \w Elizaphan|strong="H0469"\w*: \w Semaja|strong="H8098"\w*, den \w Obersten|strong="H8269"\w*, samt seinen \w Brüdern|strong="H0251"\w*, \w zweihundert|strong="H3967"\w*;  
\v 9 aus den \w Kindern|strong="H1121"\w* \w Hebron|strong="H2275"\w*: \w Eliel|strong="H0447"\w*, den \w Obersten|strong="H8269"\w*, samt seinen \w Brüdern|strong="H0251"\w*, \w achtzig|strong="H8084"\w*;  
\v 10 aus den \w Kinder|strong="H1121"\w* \w Usiel|strong="H5816"\w*: \w Amminadab|strong="H5992"\w*, den \w Obersten|strong="H8269"\w*, samt seinen \w Brüdern|strong="H0251"\w*, \w hundertundzwölf|strong="H3967"\w*.  
\v 11 Und \w David|strong="H1732"\w* \w rief|strong="H7121"\w* \w Zadok|strong="H6659"\w* und \w Abjathar|strong="H0054"\w*, die \w Priester|strong="H3548"\w*, und die \w Leviten|strong="H3881"\w*, nämlich \w Uriel|strong="H0222"\w*, \w Asaja|strong="H6222"\w*, \w Joel|strong="H3100"\w*, \w Semaja|strong="H8098"\w*, \w Eliel|strong="H0447"\w*, \w Amminadab|strong="H5992"\w*,  
\v 12 und \w sprach|strong="H0559"\w* zu ihnen: \w Ihr|strong="H0859"\w* seid die \w Häupter|strong="H7218"\w* der \w Vaterhäuser|strong="H0001"\w* unter den \w Leviten|strong="H3881"\w*; so \w heiligt|strong="H6942"\w* nun \w euch|strong="H0859"\w* und eure \w Brüder|strong="H0251"\w*, daß ihr die \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w*, des \w Gottes|strong="H0430"\w* \w Israels|strong="H3478"\w*, \w heraufbringt|strong="H5927"\w* \w an|strong="H0413"\w* den Ort, den ich ihr bereitet \w habe|strong="H3559"\w*;  
\v 13  \w denn|strong="H3588"\w* das \w erstemal|strong="H7223"\w*, da \w ihr|strong="H0859"\w* \w nicht|strong="H3808"\w* da waret, \w machte|strong="H6555"\w* der \w HERR|strong="H3068"\w*, unser \w Gott|strong="H0430"\w*, einen \w Riß|strong="H6555"\w* unter uns, darum \w daß|strong="H3588"\w* wir ihn \w nicht|strong="H3808"\w* \w suchten|strong="H1875"\w*, wie sich's \w gebührt|strong="H4941"\w*.  
\v 14 Also heiligten \w sich|strong="H6942"\w* die \w Priester|strong="H3548"\w* und die \w Leviten|strong="H3881"\w*, daß sie die \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w*, des \w Gottes|strong="H0430"\w* \w Israels|strong="H3478"\w*, \w heraufbrächten|strong="H5927"\w*.  
\v 15 Und die \w Kinder|strong="H1121"\w* \w Levi|strong="H3881"\w* \w trugen|strong="H5375"\w* die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* auf ihren \w Achseln|strong="H3802"\w* mit den \w Stangen|strong="H4133"\w* \w daran|strong="H5921"\w*, \w wie|strong="H0834"\w* \w Mose|strong="H4872"\w* geboten \w hatte|strong="H6680"\w* nach dem \w Wort|strong="H1697"\w* des \w HERRN|strong="H3068"\w*.  
\v 16 Und \w David|strong="H1732"\w* \w sprach|strong="H0559"\w* zu den \w Obersten|strong="H8269"\w* der \w Leviten|strong="H3881"\w*, daß sie ihre \w Brüder|strong="H0251"\w* zu \w Sängern|strong="H7891"\w* bestellen \w sollten|strong="H5975"\w* mit \w Saitenspiel|strong="H3627"\w*, mit \w Psaltern|strong="H5035"\w*, \w Harfen|strong="H3658"\w* und hellen \w Zimbeln|strong="H4700"\w*, daß sie \w laut|strong="H7311"\w* \w sängen|strong="H8085"\w* und mit \w Freuden|strong="H8057"\w*.  
\v 17 Da \w bestellten|strong="H5975"\w* die \w Leviten|strong="H3881"\w* \w Heman|strong="H1968"\w*, den \w Sohn|strong="H1121"\w* \w Joels|strong="H3100"\w*, und \w aus|strong="H4480"\w* seinen \w Brüdern|strong="H0251"\w* \w Asaph|strong="H0623"\w*, den \w Sohn|strong="H1121"\w* \w Berechjas|strong="H1296"\w*, und \w aus|strong="H4480"\w* den \w Kindern|strong="H1121"\w* \w Meraris|strong="H4847"\w*, ihren \w Brüdern|strong="H0251"\w*, \w Ethan|strong="H0387"\w*, den \w Sohn|strong="H1121"\w* \w Kusajas|strong="H6984"\w*,  
\v 18 und \w mit|strong="H5973"\w* ihnen ihre \w Brüder|strong="H0251"\w* der \w zweiten|strong="H4932"\w* Ordnung: \w Sacharja|strong="H2148"\w*, Ben-\w Jaesiel|strong="H1122"\w*, \w Semiramoth|strong="H8070"\w*, \w Jehiel|strong="H3171"\w*, \w Unni|strong="H6042"\w*, \w Eliab|strong="H0446"\w*, \w Benaja|strong="H1141"\w*, \w Maaseja|strong="H4641"\w*, \w Matthithja|strong="H4993"\w*, \w Eliphelehu|strong="H0466"\w*, \w Mikneja|strong="H4737"\w*, Obed-\w Edom|strong="H5654"\w*, \w Jeiel|strong="H3273"\w*, die \w Torhüter|strong="H7778"\w*.  
\v 19 Denn \w Heman|strong="H1968"\w*, \w Asaph|strong="H0623"\w* und \w Ethan|strong="H0387"\w* waren \w Sänger|strong="H7891"\w* mit \w ehernen|strong="H5178"\w* \w Zimbeln|strong="H4700"\w*, hell zu \w klingen|strong="H8085"\w*;  
\v 20  \w Sacharja|strong="H2148"\w* aber, \w Asiel|strong="H5815"\w*, \w Semiramoth|strong="H8070"\w*, \w Jehiel|strong="H3171"\w*, \w Unni|strong="H6042"\w*, \w Eliab|strong="H0446"\w*, \w Maaseja|strong="H4641"\w* und \w Benaja|strong="H1141"\w* mit \w Psaltern|strong="H5035"\w*, \w nachzusingen|strong="H5921"\w*;  
\v 21  \w Matthithja|strong="H4993"\w* aber, \w Eliphelehu|strong="H0466"\w*, \w Mikneja|strong="H4737"\w*, Obed-\w Edom|strong="H5654"\w*, \w Jeiel|strong="H3273"\w* und \w Asasja|strong="H5812"\w* mit \w Harfen|strong="H3658"\w* \w von|strong="H5921"\w* acht \w Saiten|strong="H8067"\w*, \w vorzusingen|strong="H5329"\w*;  
\v 22  \w Chenanja|strong="H3663"\w* aber, der \w Leviten|strong="H3881"\w* \w Oberster|strong="H8269"\w*, der \w Sangmeister|strong="H4853"\w*, daß er sie \w unterwiese|strong="H3256"\w* zu \w singen|strong="H4853"\w*; \w denn|strong="H3588"\w* \w er|strong="H1931"\w* war \w verständig|strong="H0995"\w*.  
\v 23 Und \w Berechja|strong="H1296"\w* und \w Elkana|strong="H0511"\w* waren \w Torhüter|strong="H7778"\w* der \w Lade|strong="H0727"\w*.  
\v 24 Aber \w Sebanja|strong="H7645"\w*, \w Josaphat|strong="H3146"\w*, \w Nathanael|strong="H5417"\w*, \w Amasai|strong="H6022"\w*, \w Sacharja|strong="H2148"\w*, \w Benaja|strong="H1141"\w*, \w Elieser|strong="H0461"\w*, die \w Priester|strong="H3548"\w*, \w bliesen|strong="H2690"\w* die \w Drommeten|strong="H2689"\w* \w vor|strong="H6440"\w* der \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w*; und Obed-\w Edom|strong="H5654"\w* und \w Jehia|strong="H3174"\w* \w waren|strong="H1961"\w* \w Torhüter|strong="H7778"\w* an der \w Lade|strong="H0727"\w*.  
\v 25  \w Also|strong="H1961"\w* gingen \w hin|strong="H1980"\w* \w David|strong="H1732"\w* und die \w Ältesten|strong="H2205"\w* in \w Israel|strong="H3478"\w* und die \w Obersten|strong="H8269"\w* über die \w Tausende|strong="H0505"\w*, \w heraufzuholen|strong="H5927"\w* die \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* des \w HERRN|strong="H3068"\w* \w aus|strong="H4480"\w* dem \w Hause|strong="H1004"\w* Obed-\w Edoms|strong="H5654"\w* mit \w Freuden|strong="H8057"\w*.  
\v 26 Und \w da|strong="H1961"\w* \w Gott|strong="H0430"\w* den \w Leviten|strong="H3881"\w* \w half|strong="H5826"\w*, die die \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* des \w HERRN|strong="H3068"\w* \w trugen|strong="H5375"\w*, \w opferte|strong="H2076"\w* man \w sieben|strong="H7651"\w* \w Farren|strong="H6499"\w* und \w sieben|strong="H7651"\w* \w Widder|strong="H0352"\w*.  
\v 27 Und \w David|strong="H1732"\w* \w hatte|strong="H3736"\w* einen \w leinenen|strong="H0948"\w* \w Rock|strong="H4598"\w* \w an|strong="H3736"\w*, dazu \w alle|strong="H3605"\w* \w Leviten|strong="H3881"\w*, die die \w Lade|strong="H0727"\w* \w trugen|strong="H5375"\w*, und die \w Sänger|strong="H7891"\w* und \w Chenanja|strong="H3663"\w*, der \w Sangmeister|strong="H4853"\w*, mit den \w Sängern|strong="H7891"\w*; auch \w hatte|strong="H5921"\w* \w David|strong="H1732"\w* einen \w leinenen|strong="H0906"\w* \w Leibrock|strong="H0646"\w* \w darüber|strong="H5921"\w*.  
\v 28 Also \w brachte|strong="H5927"\w* das \w ganze|strong="H3605"\w* \w Israel|strong="H3478"\w* die \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* des \w HERRN|strong="H3068"\w* \w hinauf|strong="H5927"\w* mit \w Jauchzen|strong="H8643"\w*, \w Posaunen|strong="H6963"\w*, \w Drommeten|strong="H2689"\w* und hellen \w Zimbeln|strong="H4700"\w*, mit \w Psaltern|strong="H5035"\w* und \w Harfen|strong="H3658"\w*.  
\v 29  \w Da|strong="H1961"\w* nun die \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* des \w HERRN|strong="H3068"\w* \w in|strong="H5704"\w* die \w Stadt|strong="H5892"\w* \w Davids|strong="H1732"\w* \w kam|strong="H0935"\w*, \w sah|strong="H8259"\w* \w Michal|strong="H4324"\w*, die \w Tochter|strong="H1323"\w* \w Sauls|strong="H7586"\w*, \w zum|strong="H1157"\w* \w Fenster|strong="H2474"\w* \w heraus|strong="H8259"\w*; und da sie den \w König|strong="H4428"\w* \w David|strong="H1732"\w* \w sah|strong="H7200"\w* \w hüpfen|strong="H7540"\w* und \w spielen|strong="H7832"\w*, \w verachtete|strong="H0959"\w* sie ihn in ihrem \w Herzen|strong="H3820"\w*.   
\c 16  
\p
\v 1 Und da sie die \w Lade|strong="H0727"\w* \w Gottes|strong="H0430"\w* \w hineinbrachten|strong="H0935"\w*, setzten \w sie|strong="H3322"\w* \w sie|strong="H0853"\w* \w in|strong="H8432"\w* die \w Hütte|strong="H0168"\w*, \w die|strong="H0834"\w* ihr \w David|strong="H1732"\w* aufgerichtet \w hatte|strong="H5186"\w*, und \w opferten|strong="H7126"\w* \w Brandopfer|strong="H5930"\w* und \w Dankopfer|strong="H8002"\w* \w vor|strong="H6440"\w* \w Gott|strong="H0430"\w*.  
\v 2 Und da \w David|strong="H1732"\w* die \w Brandopfer|strong="H5930"\w* und \w Dankopfer|strong="H8002"\w* ausgerichtet \w hatte|strong="H3615"\w*, segnete \w er|strong="H1288"\w* das \w Volk|strong="H5971"\w* im \w Namen|strong="H8034"\w* des \w HERRN|strong="H3068"\w*  
\v 3 und \w teilte|strong="H2505"\w* aus \w jedermann|strong="H3605"\w* in \w Israel|strong="H3478"\w*, \w Männern|strong="H0376"\w* \w und|strong="H5704"\w* \w Weibern|strong="H0802"\w*, einen \w Laib|strong="H3603"\w* \w Brot|strong="H3899"\w* und ein \w Stück|strong="H0829"\w* Fleisch und ein halbes \w Maß|strong="H0809"\w* Wein.  
\v 4 Und er \w bestellte|strong="H5414"\w* \w etliche|strong="H4480"\w* \w Leviten|strong="H3881"\w* zu \w Dienern|strong="H8334"\w* \w vor|strong="H6440"\w* der \w Lade|strong="H0727"\w* des \w HERRN|strong="H3068"\w*, daß sie priesen, \w dankten|strong="H1984"\w* und \w lobten|strong="H3034"\w* den \w HERRN|strong="H3068"\w*, den \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*:  
\v 5 nämlich \w Asaph|strong="H0623"\w*, den \w ersten|strong="H7218"\w*, \w Sacharja|strong="H2148"\w*, den \w andern|strong="H4932"\w*, \w Jeiel|strong="H3273"\w*, \w Semiramoth|strong="H8070"\w*, \w Jehiel|strong="H3171"\w*, \w Matthithja|strong="H4993"\w*, \w Eliab|strong="H0446"\w*, \w Benaja|strong="H1141"\w*, Obed-\w Edom|strong="H5654"\w* und \w Jeiel|strong="H3273"\w* mit \w Psaltern|strong="H3627"\w* und \w Harfen|strong="H3658"\w*, \w Asaph|strong="H0623"\w* aber mit \w hellen|strong="H8085"\w* \w Zimbeln|strong="H4700"\w*,  
\v 6  \w Benaja|strong="H1141"\w* aber und \w Jahasiel|strong="H3166"\w*, die \w Priester|strong="H3548"\w*, mit \w Drommeten|strong="H2689"\w* \w allezeit|strong="H8548"\w* \w vor|strong="H6440"\w* der \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* \w Gottes|strong="H0430"\w*.  
\v 7  \w Zu|strong="H0227"\w* \w der|strong="H1931"\w* \w Zeit|strong="H3117"\w* \w bestellte|strong="H5414"\w* \w David|strong="H1732"\w* zum \w ersten|strong="H7218"\w*, dem \w HERRN|strong="H3068"\w* zu \w danken|strong="H3034"\w*, \w durch|strong="H3027"\w* \w Asaph|strong="H0623"\w* und seine \w Brüder|strong="H0251"\w*:  
\v 8  \w Danket|strong="H3034"\w* dem \w HERRN|strong="H3068"\w*, \w prediget|strong="H7121"\w* seinen \w Namen|strong="H8034"\w*; tut \w kund|strong="H3045"\w* unter den \w Völkern|strong="H5971"\w* sein \w Tun|strong="H5949"\w*!  
\v 9  \w Singet|strong="H7891"\w* und \w spielet|strong="H2167"\w* ihm; \w dichtet|strong="H7878"\w* von \w allen|strong="H3605"\w* seinen \w Wundern|strong="H6381"\w*!  
\v 10  \w Rühmet|strong="H1984"\w* seinen \w heiligen|strong="H6944"\w* \w Namen|strong="H8034"\w*; es \w freue|strong="H8055"\w* sich das \w Herz|strong="H3820"\w* derer, die den \w HERRN|strong="H3068"\w* \w suchen|strong="H1245"\w*!  
\v 11  \w Fraget|strong="H1875"\w* nach dem \w HERRN|strong="H3068"\w* und nach seiner \w Macht|strong="H5797"\w*; \w suchet|strong="H1245"\w* sein \w Angesicht|strong="H6440"\w* \w allezeit|strong="H8548"\w*!  
\v 12  \w Gedenket|strong="H2142"\w* seiner \w Wunderwerke|strong="H6381"\w*, \w die|strong="H0834"\w* er getan \w hat|strong="H6213"\w*, seiner \w Wunder|strong="H4159"\w* und der \w Gerichte|strong="H4941"\w* seines \w Mundes|strong="H6310"\w*,  
\v 13 ihr, der \w Same|strong="H2233"\w* \w Israels|strong="H3478"\w*, seines \w Knechtes|strong="H5650"\w*, ihr \w Kinder|strong="H1121"\w* \w Jakobs|strong="H3290"\w*, seine \w Auserwählten|strong="H0972"\w*!  
\v 14  \w Er|strong="H1931"\w* ist der \w HERR|strong="H3068"\w*, unser \w Gott|strong="H0430"\w*; er \w richtet|strong="H4941"\w* in \w aller|strong="H3605"\w* \w Welt|strong="H0776"\w*.  
\v 15  \w Gedenket|strong="H2142"\w* \w ewiglich|strong="H5769"\w* seines \w Bundes|strong="H1285"\w*, \w was|strong="H1697"\w* er verheißen \w hat|strong="H6680"\w* in \w tausend|strong="H0505"\w* \w Geschlechter|strong="H1755"\w*,  
\v 16  \w den|strong="H0834"\w* er gemacht \w hat|strong="H3772"\w* mit \w Abraham|strong="H0085"\w*, und seines \w Eides|strong="H7621"\w* mit \w Isaak|strong="H3327"\w*;  
\v 17 und \w stellte|strong="H5975"\w* es \w Jakob|strong="H3290"\w* zum \w Recht|strong="H2706"\w* und \w Israel|strong="H3478"\w* zum \w ewigen|strong="H5769"\w* \w Bund|strong="H1285"\w*  
\v 18 und \w sprach|strong="H0559"\w*: Dir will ich das \w Land|strong="H0776"\w* \w Kanaan|strong="H3667"\w* \w geben|strong="H5414"\w*, das \w Los|strong="H2256"\w* eures \w Erbteils|strong="H5159"\w*,  
\v 19 da sie \w wenig|strong="H4962"\w* und \w gering|strong="H4592"\w* \w waren|strong="H1961"\w* und \w Fremdlinge|strong="H1481"\w* darin.  
\v 20 Und sie \w zogen|strong="H1980"\w* \w von|strong="H4480"\w* einem \w Volk|strong="H1471"\w* \w zum|strong="H5704"\w* \w andern|strong="H1471"\w* und \w aus|strong="H4480"\w* einem \w Königreich|strong="H4467"\w* \w zum|strong="H0413"\w* \w andern|strong="H0312"\w* \w Volk|strong="H5971"\w*.  
\v 21 Er \w ließ|strong="H3240"\w* \w niemand|strong="H3808"\w* ihnen Schaden \w tun|strong="H6231"\w* und \w strafte|strong="H3198"\w* \w Könige|strong="H4428"\w* \w um|strong="H5921"\w* ihretwillen.  
\v 22 “\w Tastet|strong="H5060"\w* meine \w Gesalbten|strong="H4899"\w* \w nicht|strong="H0408"\w* \w an|strong="H5060"\w* und \w tut|strong="H7489"\w* meinen \w Propheten|strong="H5030"\w* \w kein|strong="H0408"\w* \w Leid|strong="H7489"\w*!”  
\v 23  \w Singet|strong="H7891"\w* dem \w HERRN|strong="H3068"\w*, \w alle|strong="H3605"\w* \w Lande|strong="H0776"\w*; \w verkündiget|strong="H1319"\w* \w täglich|strong="H4480"\w* sein \w Heil|strong="H3444"\w*!  
\v 24  \w Erzählet|strong="H5608"\w* unter den \w Heiden|strong="H1471"\w* seine \w Herrlichkeit|strong="H3519"\w*, unter \w allen|strong="H3605"\w* \w Völkern|strong="H5971"\w* seine \w Wunder|strong="H6381"\w*!  
\v 25  \w Denn|strong="H3588"\w* der \w HERR|strong="H3068"\w* ist \w groß|strong="H1419"\w* und \w sehr|strong="H3966"\w* \w löblich|strong="H1984"\w* \w und|strong="H1931"\w* \w herrlich|strong="H3372"\w* \w über|strong="H5921"\w* \w alle|strong="H3605"\w* \w Götter|strong="H0430"\w*.  
\v 26  \w Denn|strong="H3588"\w* \w aller|strong="H3605"\w* \w Heiden|strong="H5971"\w* \w Götter|strong="H0430"\w* sind \w Götzen|strong="H0457"\w*; der \w HERR|strong="H3068"\w* aber hat den \w Himmel|strong="H8064"\w* \w gemacht|strong="H6213"\w*.  
\v 27 Es stehet \w herrlich|strong="H1935"\w* und \w prächtig|strong="H1926"\w* vor \w ihm|strong="H6440"\w* und gehet \w gewaltig|strong="H5797"\w* und \w fröhlich|strong="H2304"\w* zu an seinem \w Ort|strong="H4725"\w*.  
\v 28  \w Bringet|strong="H3051"\w* her dem \w HERRN|strong="H3068"\w*, ihr \w Völker|strong="H4940"\w*, \w bringet|strong="H3051"\w* her dem \w HERRN|strong="H3068"\w* \w Ehre|strong="H3519"\w* und \w Macht|strong="H5797"\w*!  
\v 29  \w Bringet|strong="H3051"\w* her dem \w HERRN|strong="H3068"\w* die \w Ehre|strong="H3519"\w* seines \w Namens|strong="H8034"\w*; \w bringet|strong="H5375"\w* \w Geschenke|strong="H4503"\w* und \w kommt|strong="H0935"\w* vor \w ihn|strong="H6440"\w* und \w betet|strong="H7812"\w* den \w HERRN|strong="H3068"\w* an in \w heiligem|strong="H6944"\w* \w Schmuck|strong="H1927"\w*!  
\v 30 Es \w fürchte|strong="H2342"\w* \w ihn|strong="H4480"\w* \w alle|strong="H3605"\w* \w Welt|strong="H0776"\w*; er hat den \w Erdboden|strong="H8398"\w* \w bereitet|strong="H3559"\w*, daß er \w nicht|strong="H1077"\w* bewegt \w wird|strong="H4131"\w*.  
\v 31 Es freue \w sich|strong="H8055"\w* der \w Himmel|strong="H8064"\w*, und die \w Erde|strong="H0776"\w* sei \w Fröhlich|strong="H1523"\w*; und man \w sage|strong="H0559"\w* unter den \w Heiden|strong="H1471"\w*, daß der \w HERR|strong="H3068"\w* \w regieret|strong="H4427"\w*.  
\v 32 Das \w Meer|strong="H3220"\w* \w brause|strong="H7481"\w* und was darinnen \w ist|strong="H4393"\w*; und das \w Feld|strong="H7704"\w* sei \w fröhlich|strong="H5970"\w* und \w alles|strong="H3605"\w*, \w was|strong="H0834"\w* darauf ist.  
\v 33  \w Und|strong="H0227"\w* lasset \w jauchzen|strong="H7442"\w* alle \w Bäume|strong="H6086"\w* im \w Walde|strong="H3293"\w* \w vor|strong="H4480"\w* dem \w HERRN|strong="H3068"\w*; \w denn|strong="H3588"\w* er \w kommt|strong="H0935"\w*, zu \w richten|strong="H8199"\w* die \w Erde|strong="H0776"\w*.  
\v 34  \w Danket|strong="H3034"\w* dem \w HERRN|strong="H3068"\w*; \w denn|strong="H3588"\w* er ist \w freundlich|strong="H2896"\w*, \w und|strong="H3588"\w* seine \w Güte|strong="H2617"\w* währet \w ewiglich|strong="H5769"\w*.  
\v 35 Und \w sprecht|strong="H0559"\w*: \w Hilf|strong="H3467"\w* uns, \w Gott|strong="H0430"\w*, unser \w Heiland|strong="H3468"\w*, und \w sammle|strong="H6908"\w* uns und \w errette|strong="H5337"\w* uns \w aus|strong="H4480"\w* den \w Heiden|strong="H1471"\w*, daß wir deinem \w heiligen|strong="H6944"\w* \w Namen|strong="H8034"\w* \w danken|strong="H3034"\w* und dir \w Lob|strong="H8416"\w* \w sagen|strong="H7623"\w*.  
\v 36  \w Gelobet|strong="H1288"\w* sei der \w HERR|strong="H3068"\w*, der \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*, \w von|strong="H4480"\w* \w Ewigkeit|strong="H5769"\w* \w zu|strong="H5704"\w* \w Ewigkeit|strong="H5769"\w*! Und \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* \w sagte|strong="H0559"\w* \w Amen|strong="H0543"\w*! und: \w Lobe|strong="H1984"\w* den \w HERRN|strong="H3068"\w*!  
\v 37 Also ließ \w er|strong="H5800"\w* daselbst \w vor|strong="H6440"\w* der \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* des \w HERRN|strong="H3068"\w* den \w Asaph|strong="H0623"\w* und seine \w Brüder|strong="H0251"\w*, zu \w dienen|strong="H8334"\w* \w vor|strong="H6440"\w* der \w Lade|strong="H0727"\w* \w allezeit|strong="H8548"\w*, einen jeglichen \w Tag|strong="H3117"\w* sein \w Tagewerk|strong="H3117"\w*,  
\v 38 aber Obed-\w Edom|strong="H5654"\w* und ihre \w Brüder|strong="H0251"\w*, \w achtundsechzig|strong="H8083"\w*, und Obed-\w Edom|strong="H5654"\w*, den \w Sohn|strong="H1121"\w* \w Jedithuns|strong="H3038"\w*, und \w Hosa|strong="H2621"\w* zu \w Torhütern|strong="H7778"\w*.  
\v 39 Und \w Zadok|strong="H6659"\w*, den \w Priester|strong="H3548"\w*, und seine \w Brüder|strong="H0251"\w*, die \w Priester|strong="H3548"\w*, ließ er \w vor|strong="H6440"\w* der \w Wohnung|strong="H4908"\w* des \w HERRN|strong="H3068"\w* auf der \w Höhe|strong="H1116"\w* \w zu|strong="H0834"\w* \w Gibeon|strong="H1391"\w*,  
\v 40 daß sie dem \w HERRN|strong="H3068"\w* \w täglich|strong="H8548"\w* \w Brandopfer|strong="H5930"\w* \w täten|strong="H5927"\w* \w auf|strong="H5921"\w* dem \w Brandopferaltar|strong="H4196"\w*, des \w Morgens|strong="H1242"\w* und des \w Abends|strong="H6153"\w*, \w wie|strong="H3605"\w* geschrieben \w steht|strong="H3789"\w* im \w Gesetz|strong="H8451"\w* des \w HERRN|strong="H3068"\w*, \w das|strong="H0834"\w* \w er|strong="H5921"\w* an \w Israel|strong="H3478"\w* geboten \w hat|strong="H6680"\w*,  
\v 41 und \w mit|strong="H5973"\w* ihnen \w Heman|strong="H1968"\w* und \w Jedithun|strong="H3038"\w* und die \w andern|strong="H7605"\w* \w Erwählten|strong="H1305"\w*, \w die|strong="H0834"\w* mit \w Namen|strong="H8034"\w* benannt \w waren|strong="H5344"\w*, zu \w danken|strong="H3034"\w* dem \w HERRN|strong="H3068"\w*, \w daß|strong="H3588"\w* seine \w Güte|strong="H2617"\w* währet \w ewiglich|strong="H5769"\w*,  
\v 42 und \w mit|strong="H5973"\w* ihnen \w Heman|strong="H1968"\w* und \w Jedithun|strong="H3038"\w*, mit \w Drommeten|strong="H2689"\w* und \w Zimbeln|strong="H4700"\w* zu \w klingen|strong="H8085"\w* und mit \w Saitenspielen|strong="H3627"\w* \w Gottes|strong="H0430"\w*. Die \w Kinder|strong="H1121"\w* aber \w Jedithun|strong="H3038"\w* machte er zu \w Torhütern|strong="H8179"\w*.  
\v 43 Also \w zog|strong="H3212"\w* \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* \w heim|strong="H3212"\w*, ein \w jeglicher|strong="H0376"\w* in sein \w Haus|strong="H1004"\w*; und \w David|strong="H1732"\w* \w kehrte|strong="H5437"\w* auch heim, sein \w Haus|strong="H1004"\w* zu \w grüßen|strong="H1288"\w*.   
\c 17  
\p
\v 1 Es begab \w sich|strong="H1961"\w*, \w da|strong="H0834"\w* \w David|strong="H1732"\w* in seinem \w Hause|strong="H1004"\w* \w wohnte|strong="H3427"\w*, \w sprach|strong="H0559"\w* \w er|strong="H1732"\w* \w zu|strong="H0413"\w* dem \w Propheten|strong="H5030"\w* \w Nathan|strong="H5416"\w*: \w Siehe|strong="H2009"\w*, \w ich|strong="H0598"\w* \w wohne|strong="H3427"\w* in einem \w Zedernhaus|strong="H0730"\w*, und die \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* des \w HERRN|strong="H3068"\w* ist \w unter|strong="H8478"\w* \w Teppichen|strong="H3407"\w*.  
\v 2  \w Nathan|strong="H5416"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w David|strong="H1732"\w*: \w Alles|strong="H3605"\w* \w was|strong="H0834"\w* in deinem \w Herzen|strong="H3824"\w* ist, das \w tue|strong="H6213"\w*; \w denn|strong="H3588"\w* \w Gott|strong="H0430"\w* ist \w mit|strong="H5973"\w* dir.  
\v 3  \w Aber|strong="H1961"\w* in \w derselben|strong="H1931"\w* \w Nacht|strong="H3915"\w* \w kam|strong="H1961"\w* das \w Wort|strong="H1697"\w* \w Gottes|strong="H0430"\w* \w zu|strong="H0413"\w* \w Nathan|strong="H5416"\w* und \w sprach|strong="H0559"\w*:  
\v 4 Gehe \w hin|strong="H3212"\w* und \w sage|strong="H0559"\w* \w David|strong="H1732"\w*, meinem \w Knecht|strong="H5650"\w*: \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Du|strong="H0859"\w* sollst mir \w nicht|strong="H3808"\w* ein \w Haus|strong="H1004"\w* \w bauen|strong="H1129"\w* zur \w Wohnung|strong="H3427"\w*.  
\v 5  \w Denn|strong="H3588"\w* ich habe in \w keinem|strong="H3808"\w* \w Hause|strong="H1004"\w* \w gewohnt|strong="H3427"\w* \w von|strong="H4480"\w* dem \w Tage|strong="H3117"\w* an, \w da|strong="H0834"\w* ich die Kinder \w Israel|strong="H3478"\w* \w ausführte|strong="H5927"\w*, bis \w auf|strong="H5704"\w* \w diesen|strong="H2088"\w* \w Tag|strong="H3117"\w*; sondern bin \w gewesen|strong="H1961"\w*, \w wo|strong="H4480"\w* die \w Hütte|strong="H0168"\w* gewesen ist \w und|strong="H4480"\w* die \w Wohnung|strong="H4908"\w*.  
\v 6  \w Wo|strong="H0834"\w* ich \w wandelte|strong="H1980"\w* im \w ganzen|strong="H3605"\w* \w Israel|strong="H3478"\w*, habe ich auch zu der \w Richter|strong="H8199"\w* \w einem|strong="H0259"\w* in \w Israel|strong="H3478"\w* je \w gesagt|strong="H1697"\w*, \w denen|strong="H0834"\w* ich \w gebot|strong="H6680"\w* zu \w weiden|strong="H7462"\w* mein \w Volk|strong="H5971"\w*, und \w gesprochen|strong="H0559"\w*: \w Warum|strong="H4100"\w* baut \w ihr|strong="H1129"\w* mir \w nicht|strong="H3808"\w* ein \w Zedernhaus|strong="H0730"\w*?  
