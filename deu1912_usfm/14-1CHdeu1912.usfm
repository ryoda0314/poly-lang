\v 11 und \w Asarja|strong="H5838"\w*, der \w Sohn|strong="H1121"\w* \w Hilkias|strong="H2518"\w*, des \w Sohnes|strong="H1121"\w* \w Mesullams|strong="H4918"\w*, des \w Sohnes|strong="H1121"\w* \w Zadoks|strong="H6659"\w*, des \w Sohnes|strong="H1121"\w* \w Merajoths|strong="H4812"\w*, des \w Sohnes|strong="H1121"\w* \w Ahitobs|strong="H0285"\w*, ein \w Fürst|strong="H5057"\w* im \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w*,  
\v 12 und \w Adaja|strong="H5718"\w*, der \w Sohn|strong="H1121"\w* \w Jerohams|strong="H3395"\w*, des \w Sohnes|strong="H1121"\w* \w Pashurs|strong="H6583"\w*, des \w Sohnes|strong="H1121"\w* \w Malchias|strong="H4441"\w*, und \w Maesai|strong="H4640"\w*, der \w Sohn|strong="H1121"\w* \w Abdiels|strong="H5717"\w*, des \w Sohnes|strong="H1121"\w* \w Jahseras|strong="H3170"\w*, des \w Sohnes|strong="H1121"\w* \w Mesullams|strong="H4918"\w*, des \w Sohnes|strong="H1121"\w* \w Mesillemiths|strong="H4921"\w*, des \w Sohnes|strong="H1121"\w* \w Immers|strong="H0564"\w*,  
\v 13 dazu ihre \w Brüder|strong="H0251"\w*, \w Häupter|strong="H7218"\w* ihrer \w Vaterhäuser|strong="H0001"\w*, \w tausendsiebenhundert|strong="H0505"\w* und \w sechzig|strong="H8346"\w*, \w tüchtige|strong="H2428"\w* \w Leute|strong="H1368"\w* im \w Geschäft|strong="H4399"\w* des \w Amtes|strong="H5656"\w* im \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w*.  
\v 14  \w Von|strong="H4480"\w* den \w Leviten|strong="H3881"\w* aber \w aus|strong="H4480"\w* den \w Kinder|strong="H1121"\w* \w Meraris|strong="H4847"\w*: \w Semaja|strong="H8098"\w*, der \w Sohn|strong="H1121"\w* \w Hassubs|strong="H2815"\w*, des \w Sohnes|strong="H1121"\w* \w Asrikams|strong="H5840"\w*, des \w Sohnes|strong="H1121"\w* \w Hasabjas|strong="H2811"\w*,  
\v 15 und \w Bakbakkar|strong="H1230"\w*, \w Heres|strong="H2792"\w* und \w Galal|strong="H1559"\w* und \w Matthanja|strong="H4983"\w*, der \w Sohn|strong="H1121"\w* \w Michas|strong="H4316"\w*, des \w Sohnes|strong="H1121"\w* \w Sichris|strong="H2147"\w*, des \w Sohnes|strong="H1121"\w* \w Asaphs|strong="H0623"\w*,  
\v 16 und \w Obadja|strong="H5662"\w*, der \w Sohn|strong="H1121"\w* \w Semajas|strong="H8098"\w*, des \w Sohnes|strong="H1121"\w* \w Galals|strong="H1559"\w*, des \w Sohnes|strong="H1121"\w* \w Jeduthuns|strong="H3038"\w*, und \w Berechja|strong="H1296"\w*, der \w Sohn|strong="H1121"\w* \w Asas|strong="H0609"\w*, des \w Sohnes|strong="H1121"\w* \w Elkanas|strong="H0511"\w*, der in den \w Dörfern|strong="H2691"\w* der \w Netophathiter|strong="H5200"\w* \w wohnte|strong="H3427"\w*.  
\v 17 Die \w Pförtner|strong="H7778"\w* aber waren: \w Sallum|strong="H7967"\w*, \w Akkub|strong="H6126"\w*, \w Talmon|strong="H2929"\w*, \w Ahiman|strong="H0289"\w* mit ihren \w Brüdern|strong="H0251"\w*; und \w Sallum|strong="H7967"\w* war der \w Oberste|strong="H7218"\w*,  
\v 18 und er hat \w bisher|strong="H5704"\w* am \w Tor|strong="H8179"\w* des \w Königs|strong="H4428"\w* gegen \w Aufgang|strong="H4217"\w* gewartet. \w Dies|strong="H1992"\w* sind die \w Pförtner|strong="H7778"\w* in den \w Lagern|strong="H4264"\w* der \w Kinder|strong="H1121"\w* \w Levi|strong="H3878"\w*.  
\v 19 Und \w Sallum|strong="H7967"\w*, der \w Sohn|strong="H1121"\w* \w Kores|strong="H6981"\w*, des \w Sohnes|strong="H1121"\w* \w Abiasaphs|strong="H0043"\w*, des \w Sohnes|strong="H1121"\w* \w Korahs|strong="H7141"\w*, und seine \w Brüder|strong="H0251"\w* aus seinem \w Vaterhause|strong="H0001"\w*, die \w Korahiter|strong="H7145"\w*, waren \w im|strong="H5921"\w* \w Geschäft|strong="H4399"\w* des \w Amts|strong="H5656"\w*, daß sie \w warteten|strong="H8104"\w* an der \w Schwelle|strong="H5592"\w* der \w Hütte|strong="H0168"\w*, wie auch ihre \w Väter|strong="H0001"\w* \w im|strong="H5921"\w* \w Lager|strong="H4264"\w* des \w HERRN|strong="H3068"\w* des \w Eingangs|strong="H3996"\w* gewartet \w hatten|strong="H8104"\w*.  
\v 20  \w Pinehas|strong="H6372"\w* aber, der \w Sohn|strong="H1121"\w* \w Eleasars|strong="H0499"\w*, \w war|strong="H1961"\w* \w vorzeiten|strong="H6440"\w* \w Fürst|strong="H5057"\w* \w über|strong="H5921"\w* sie, darum \w daß|strong="H5973"\w* der \w HERR|strong="H3068"\w* mit ihm gewesen war.  
\v 21  \w Sacharja|strong="H2148"\w* aber, der \w Sohn|strong="H1121"\w* \w Meselemjas|strong="H4920"\w*, war \w Hüter|strong="H7778"\w* am \w Tor|strong="H6607"\w* der \w Hütte|strong="H0168"\w* des \w Stifts|strong="H4150"\w*.  
\v 22  \w Alle|strong="H3605"\w* diese waren \w auserlesen|strong="H1305"\w* zu \w Hütern|strong="H7778"\w* an der \w Schwelle|strong="H5592"\w*, \w zweihundertundzwölf|strong="H3967"\w*; \w die|strong="H1992"\w* waren \w aufgezeichnet|strong="H3187"\w* in ihren \w Dörfern|strong="H2691"\w*. Und \w David|strong="H1732"\w* und \w Samuel|strong="H8050"\w*, der \w Seher|strong="H7200"\w*, \w setzten|strong="H3245"\w* \w sie|strong="H1992"\w* \w ein|strong="H3245"\w* auf \w Glauben|strong="H0530"\w*,  
\v 23 daß \w sie|strong="H1992"\w* und ihre \w Kinder|strong="H1121"\w* hüten \w sollten|strong="H5921"\w* die \w Tore|strong="H8179"\w* am \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*, nämlich an dem \w Hause|strong="H1004"\w* der \w Hütte|strong="H0168"\w*, daß sie sein \w warteten|strong="H4931"\w*.  
\v 24 Es \w waren|strong="H1961"\w* aber solche \w Torwächter|strong="H7778"\w* gegen die \w vier|strong="H0702"\w* \w Winde|strong="H7307"\w* gestellt: gegen \w Morgen|strong="H4217"\w*, gegen \w Abend|strong="H3220"\w*, gegen \w Mitternacht|strong="H6828"\w*, gegen \w Mittag|strong="H5045"\w*.  
\v 25 Ihre \w Brüder|strong="H0251"\w* aber waren auf ihren \w Dörfern|strong="H2691"\w*, daß sie \w hereinkämen|strong="H0935"\w* \w allezeit|strong="H4480"\w* je des \w siebenten|strong="H7651"\w* \w Tages|strong="H3117"\w*, \w bei|strong="H5973"\w* \w ihnen|strong="H0428"\w* zu sein,  
\v 26  \w Denn|strong="H3588"\w* auf \w Glauben|strong="H0530"\w* \w waren|strong="H1992"\w* diese die \w vier|strong="H0702"\w* \w obersten|strong="H1368"\w* \w Torhüter|strong="H7778"\w*. Und \w die|strong="H1992"\w* \w Leviten|strong="H3881"\w* \w waren|strong="H1961"\w* \w über|strong="H5921"\w* die \w Kammern|strong="H3957"\w* \w und|strong="H5921"\w* \w Schätze|strong="H0214"\w* im \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w*.  
\v 27 Auch blieben sie über \w Nacht|strong="H3885"\w* \w um|strong="H5439"\w* das \w Haus|strong="H1004"\w* \w Gottes|strong="H0430"\w*; \w denn|strong="H3588"\w* es gebührte \w ihnen|strong="H5921"\w* die \w Hut|strong="H4931"\w*, daß \w sie|strong="H1992"\w* \w alle|strong="H1242"\w* \w Morgen|strong="H1242"\w* \w auftäten|strong="H5921"\w*.  
\v 28 Und etliche \w aus|strong="H4480"\w* \w ihnen|strong="H1992"\w* waren \w über|strong="H5921"\w* das \w Gerät|strong="H3627"\w* des \w Amts|strong="H5656"\w*; \w denn|strong="H3588"\w* sie trugen'\w s|strong="H0935"\w* \w gezählt|strong="H4557"\w* \w aus|strong="H0935"\w* und \w ein|strong="H3318"\w*.  
\v 29 und ihrer \w etliche|strong="H4480"\w* waren \w bestellt|strong="H4487"\w* \w über|strong="H5921"\w* die \w Gefäße|strong="H3627"\w* und \w über|strong="H5921"\w* \w alles|strong="H3605"\w* \w heilige|strong="H6944"\w* \w Gerät|strong="H3627"\w*, \w über|strong="H5921"\w* \w Semmelmehl|strong="H5560"\w*, über \w Wein|strong="H3196"\w*, über \w Öl|strong="H8081"\w*, über \w Weihrauch|strong="H3828"\w*, über \w Spezereien|strong="H1314"\w*.  
\v 30  \w Und|strong="H4480"\w* der \w Priester|strong="H3548"\w* \w Kinder|strong="H1121"\w* machten \w etliche|strong="H7543"\w* das \w Salböl|strong="H4842"\w* mit \w Spezereien|strong="H1314"\w*.  
\v 31 Und \w Matthithja|strong="H4993"\w*, \w aus|strong="H4480"\w* den \w Leviten|strong="H3881"\w*, \w dem|strong="H1931"\w* ersten \w Sohn|strong="H1060"\w* \w Sallums|strong="H7967"\w*, des \w Korahiters|strong="H7145"\w*, waren \w vertraut|strong="H0530"\w* die \w Pfannen|strong="H2281"\w*.  
\v 32  \w Aus|strong="H4480"\w* den \w Kahathitern|strong="H1121"\w* aber, ihren \w Brüdern|strong="H0251"\w*, waren \w etliche|strong="H5921"\w* über die \w Schaubrote|strong="H3899"\w*, sie \w zuzurichten|strong="H4635"\w* auf \w alle|strong="H7676"\w* \w Sabbate|strong="H7676"\w*.  
\v 33  \w Jene|strong="H0428"\w* aber sind die \w Sänger|strong="H7891"\w*, die \w Häupter|strong="H7218"\w* der \w Vaterhäuser|strong="H0001"\w* der \w Leviten|strong="H3881"\w*, die in den \w Kammern|strong="H3957"\w* keinen Dienst \w hatten|strong="H6362"\w*; \w denn|strong="H3588"\w* \w Tag|strong="H3119"\w* und \w Nacht|strong="H3915"\w* waren sie \w in|strong="H5921"\w* ihrem \w Geschäft|strong="H4399"\w*.  
\v 34  \w Das|strong="H0428"\w* sind die \w Häupter|strong="H7218"\w* der \w Vaterhäuser|strong="H0001"\w* unter den \w Leviten|strong="H3881"\w* in ihren \w Geschlechtern|strong="H8435"\w*. \w Diese|strong="H0428"\w* \w wohnten|strong="H3427"\w* zu \w Jerusalem|strong="H3389"\w*.  
\v 35 Zu \w Gibeon|strong="H1391"\w* \w wohnten|strong="H3427"\w* \w Jeiel|strong="H3273"\w*, der \w Vater|strong="H0001"\w* \w Gibeons|strong="H1391"\w*; sein \w Weib|strong="H0802"\w* \w hieß|strong="H8034"\w* \w Maacha|strong="H4601"\w*  
\v 36 und sein \w erster|strong="H1060"\w* \w Sohn|strong="H1121"\w* \w Abdon|strong="H5658"\w*, \w Zur|strong="H6698"\w*, \w Kis|strong="H7027"\w*, \w Baal|strong="H1168"\w*, \w Ner|strong="H5369"\w*, \w Nadab|strong="H5070"\w*,  
\v 37  \w Gedor|strong="H1446"\w*, \w Ahjo|strong="H0283"\w*, \w Sacharja|strong="H2148"\w*, \w Mikloth|strong="H4732"\w*;  
\v 38  \w Mikloth|strong="H4732"\w* aber \w zeugte|strong="H3205"\w* \w Simeam|strong="H8043"\w*. Und \w sie|strong="H1992"\w* \w wohnten|strong="H3427"\w* \w auch|strong="H0637"\w* ihren \w Brüdern|strong="H0251"\w* \w gegenüber|strong="H5048"\w* zu \w Jerusalem|strong="H3389"\w* \w unter|strong="H5973"\w* den \w Ihren|strong="H0251"\w*.  
\v 39  \w Ner|strong="H5369"\w* aber \w zeugte|strong="H3205"\w* \w Kis|strong="H7027"\w*. \w Kis|strong="H7027"\w* \w zeugte|strong="H3205"\w* \w Saul|strong="H7586"\w*. \w Saul|strong="H7586"\w* \w zeugte|strong="H3205"\w* \w Jonathan|strong="H3083"\w*, \w Malchisua|strong="H4444"\w*, \w Abinadab|strong="H0041"\w*, \w Esbaal|strong="H0792"\w*.  
\v 40 Der \w Sohn|strong="H1121"\w* aber \w Jonathans|strong="H3083"\w* war Merib-\w Baal|strong="H4807"\w*. Merib-\w Baal|strong="H4810"\w* aber \w zeugte|strong="H3205"\w* \w Micha|strong="H4318"\w*.  
\v 41 Die \w Kinder|strong="H1121"\w* \w Michas|strong="H4318"\w* waren: \w Pithon|strong="H6377"\w*, \w Melech|strong="H4429"\w* und \w Tharea|strong="H8475"\w*.  
\v 42  \w Ahas|strong="H0271"\w* \w zeugte|strong="H3205"\w* \w Jaera|strong="H3294"\w*. \w Jaera|strong="H3294"\w* \w zeugte|strong="H3205"\w* \w Alemeth|strong="H5964"\w*, \w Asmaveth|strong="H5820"\w* und \w Simmri|strong="H2174"\w*. \w Simmri|strong="H2174"\w* \w zeugte|strong="H3205"\w* \w Moza|strong="H4162"\w*.  
\v 43  \w Moza|strong="H4162"\w* \w zeugte|strong="H3205"\w* \w Binea|strong="H1150"\w*; des \w Sohn|strong="H1121"\w* war \w Raphaja|strong="H7509"\w*; des \w Sohn|strong="H1121"\w* war \w Eleasa|strong="H0501"\w*; des \w Sohn|strong="H1121"\w* war \w Azel|strong="H0682"\w*.  
\v 44  \w Azel|strong="H0682"\w* aber hatte \w sechs|strong="H8337"\w* \w Söhne|strong="H1121"\w*; \w die|strong="H0428"\w* \w hießen|strong="H8034"\w*: \w Asrikam|strong="H5840"\w*, \w Bochru|strong="H1074"\w*, \w Ismael|strong="H3458"\w*, \w Searja|strong="H8187"\w*, \w Obadja|strong="H5662"\w*, \w Hanan|strong="H2605"\w*. \w Das|strong="H0428"\w* sind die \w Kinder|strong="H1121"\w* \w Azels|strong="H0682"\w*.   
