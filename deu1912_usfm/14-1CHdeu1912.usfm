\v 30 Unter den \w Hebroniten|strong="H2276"\w* aber waren \w Hasabja|strong="H2811"\w* und seine \w Brüder|strong="H0251"\w*, \w tüchtige|strong="H2428"\w* \w Leute|strong="H1121"\w*, \w tausend|strong="H0505"\w* und \w siebenhundert|strong="H7651"\w*, \w über|strong="H5921"\w* die \w Ämter|strong="H6486"\w* \w Israels|strong="H3478"\w* \w diesseits|strong="H4480"\w* des \w Jordans|strong="H3383"\w* gegen \w Abend|strong="H4628"\w*, zu \w allerlei|strong="H3605"\w* \w Geschäft|strong="H4399"\w* des \w HERRN|strong="H3068"\w* und zu \w dienen|strong="H5656"\w* dem \w König|strong="H4428"\w*.  
\v 31 Unter den \w Hebroniten|strong="H2276"\w* war \w Jeria|strong="H3404"\w*, der \w Vornehmste|strong="H7218"\w* unter den \w Hebroniten|strong="H2276"\w* seines \w Geschlechts|strong="H8435"\w* unter den \w Vaterhäusern|strong="H0001"\w* (es wurden aber unter ihnen \w gesucht|strong="H1875"\w* und \w gefunden|strong="H4672"\w* im \w vierzigsten|strong="H0705"\w* \w Jahr|strong="H8141"\w* des \w Königreiches|strong="H4438"\w* \w Davids|strong="H1732"\w* \w tüchtige|strong="H2428"\w* \w Männer|strong="H1368"\w* zu \w Jaser|strong="H3270"\w* in \w Gilead|strong="H1568"\w*),  
\v 32 und seine \w Brüder|strong="H0251"\w*, \w tüchtige|strong="H2428"\w* \w Männer|strong="H1121"\w*, \w zweitausend|strong="H0505"\w* und \w siebenhundert|strong="H7651"\w* \w Oberste|strong="H7218"\w* der \w Vaterhäuser|strong="H0001"\w*. Und \w David|strong="H4428"\w* \w setzte|strong="H6485"\w* sie \w über|strong="H5921"\w* die \w Rubeniter|strong="H7206"\w*, \w Gaditer|strong="H1425"\w* und den \w halben|strong="H2677"\w* \w Stamm|strong="H7626"\w* \w Manasse|strong="H4520"\w* zu \w allen|strong="H3605"\w* \w Händeln|strong="H1697"\w* \w Gottes|strong="H0430"\w* und \w des|strong="H1697"\w* \w Königs|strong="H4428"\w*.   
\c 27  
\p
\v 1 Dies sind aber die \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w* nach ihrer \w Zahl|strong="H4557"\w*, die \w Häupter|strong="H7218"\w* der \w Vaterhäuser|strong="H0001"\w* und die \w Obersten|strong="H8269"\w* über \w tausend|strong="H0505"\w* und über \w hundert|strong="H3967"\w*, und ihre \w Amtleute|strong="H7860"\w*, die dem \w König|strong="H4428"\w* \w dienten|strong="H8334"\w*, nach \w ihren|strong="H3605"\w* \w Ordnungen|strong="H4256"\w*, die \w ab|strong="H0935"\w* und \w zu|strong="H3318"\w* \w zogen|strong="H0935"\w*, einen \w jeglichen|strong="H2320"\w* \w Monat|strong="H2320"\w* eine, in \w allen|strong="H3605"\w* \w Monaten|strong="H2320"\w* des \w Jahres|strong="H8141"\w*. Eine \w jegliche|strong="H0259"\w* \w Ordnung|strong="H4256"\w* aber hatte \w vierundzwanzigtausend|strong="H0702"\w*.  
\v 2  \w Über|strong="H5921"\w* die \w erste|strong="H7223"\w* \w Ordnung|strong="H4256"\w* des \w ersten|strong="H7223"\w* \w Monats|strong="H2320"\w* war \w Jasobeam|strong="H3434"\w*, der \w Sohn|strong="H1121"\w* \w Sabdiels|strong="H2068"\w*; und \w unter|strong="H5921"\w* seiner \w Ordnung|strong="H4256"\w* waren \w vierundzwanzigtausend|strong="H0702"\w*.  
\v 3 Er war \w aus|strong="H4480"\w* den \w Kinder|strong="H1121"\w* \w Perez|strong="H6557"\w* und war der \w Oberste|strong="H7218"\w* über \w alle|strong="H3605"\w* \w Hauptleute|strong="H8269"\w* der \w Heere|strong="H6635"\w* im \w ersten|strong="H7223"\w* \w Monat|strong="H2320"\w*.  
\v 4  \w Über|strong="H5921"\w* die \w Ordnung|strong="H4256"\w* des \w zweiten|strong="H8145"\w* \w Monats|strong="H2320"\w* war \w Dodai|strong="H1737"\w*, der \w Ahohiter|strong="H0266"\w*, und \w Mikloth|strong="H4732"\w* war \w Fürst|strong="H5057"\w* über seine \w Ordnung|strong="H4256"\w*; und \w unter|strong="H5921"\w* seiner \w Ordnung|strong="H4256"\w* waren \w vierundzwanzigtausend|strong="H0702"\w*.  
\v 5 Der \w dritte|strong="H7992"\w* \w Feldhauptmann|strong="H6635"\w* des \w dritten|strong="H7992"\w* \w Monats|strong="H2320"\w*, der \w Oberste|strong="H7218"\w*, war \w Benaja|strong="H1141"\w*, der \w Sohn|strong="H1121"\w* \w Jojadas|strong="H3077"\w*, des \w Priesters|strong="H3548"\w*: und \w unter|strong="H5921"\w* seiner \w Ordnung|strong="H4256"\w* waren \w vierundzwanzigtausend|strong="H0702"\w*.  
\v 6  \w Das|strong="H1931"\w* ist \w Benaja|strong="H1141"\w*, der \w Held|strong="H1368"\w* unter den \w dreißigen|strong="H7970"\w* und \w über|strong="H5921"\w* die \w dreißig|strong="H7970"\w*; und seine \w Ordnung|strong="H4256"\w* war unter seinem \w Sohn|strong="H1121"\w* \w Ammisabad|strong="H5990"\w*.  
\v 7 Der \w vierte|strong="H7243"\w* im \w vierten|strong="H7243"\w* \w Monat|strong="H2320"\w* war \w Asahel|strong="H6214"\w*, \w Joabs|strong="H3097"\w* \w Bruder|strong="H0251"\w*, und \w nach|strong="H0310"\w* ihm \w Sebadja|strong="H2069"\w*, sein \w Sohn|strong="H1121"\w*; und \w unter|strong="H5921"\w* seiner \w Ordnung|strong="H4256"\w* waren \w vierundzwanzigtausend|strong="H0702"\w*.  
\v 8 Der \w fünfte|strong="H2549"\w* im \w fünften|strong="H2549"\w* \w Monat|strong="H2320"\w* war \w Samehuth|strong="H8049"\w*, der \w Jishariter|strong="H3155"\w*; und \w unter|strong="H5921"\w* seine \w Ordnung|strong="H4256"\w* waren \w vierundzwanzigtausend|strong="H0702"\w*.  
\v 9 Der \w sechste|strong="H8345"\w* im \w sechsten|strong="H8345"\w* \w Monat|strong="H2320"\w* war \w Ira|strong="H5896"\w*, der \w Sohn|strong="H1121"\w* des \w Ikkes|strong="H6142"\w*, der \w Thekoiter|strong="H8621"\w*; und \w unter|strong="H5921"\w* seiner \w Ordnung|strong="H4256"\w* waren \w vierundzwanzigtausend|strong="H0702"\w*.  
\v 10 Der \w siebente|strong="H7637"\w* im \w siebenten|strong="H7637"\w* \w Monat|strong="H2320"\w* war \w Helez|strong="H2503"\w*, der \w Peloniter|strong="H6397"\w*, \w aus|strong="H4480"\w* den \w Kindern|strong="H1121"\w* \w Ephraim|strong="H0669"\w*; und \w unter|strong="H5921"\w* seiner \w Ordnung|strong="H4256"\w* waren \w vierundzwanzigtausend|strong="H0702"\w*.  
\v 11 Der \w achte|strong="H8066"\w* im \w achten|strong="H8066"\w* \w Monat|strong="H2320"\w* war \w Sibbechai|strong="H5444"\w*, der \w Husathiter|strong="H2843"\w*, aus den \w Serahitern|strong="H2227"\w*; und \w unter|strong="H5921"\w* seiner \w Ordnung|strong="H4256"\w* waren \w vierundzwanzigtausend|strong="H0702"\w*.  
\v 12 Der \w neunte|strong="H8671"\w* im \w neunten|strong="H8671"\w* \w Monat|strong="H2320"\w* war \w Abieser|strong="H0044"\w*, der \w Anathothiter|strong="H6069"\w*, aus den \w Benjaminitern|strong="H1145"\w*; und \w unter|strong="H5921"\w* seiner \w Ordnung|strong="H4256"\w* waren \w vierundzwanzigtausend|strong="H0702"\w*.  
\v 13 Der \w zehnte|strong="H6224"\w* im \w zehnten|strong="H6224"\w* \w Monat|strong="H2320"\w* war \w Maherai|strong="H4121"\w*, der \w Netophathiter|strong="H5200"\w*, aus den \w Serahitern|strong="H2227"\w*; und \w unter|strong="H5921"\w* seiner \w Ordnung|strong="H4256"\w* waren \w vierundzwanzigtausend|strong="H0702"\w*.  
\v 14 Der \w elfte|strong="H6249"\w* im \w elften|strong="H6249"\w* \w Monat|strong="H2320"\w* war \w Benaja|strong="H1141"\w* der \w Pirathoniter|strong="H6553"\w*, \w aus|strong="H4480"\w* den \w Kindern|strong="H1121"\w* \w Ephraim|strong="H0669"\w*; und \w unter|strong="H5921"\w* seiner \w Ordnung|strong="H4256"\w* waren \w vierundzwanzigtausend|strong="H0702"\w*.  
\v 15 Der \w zwölfte|strong="H8147"\w* im \w zwölften|strong="H8147"\w* \w Monat|strong="H2320"\w* war \w Heldai|strong="H2469"\w*, der \w Netophathiter|strong="H5200"\w*, aus \w Othniel|strong="H6274"\w*; und \w unter|strong="H5921"\w* seiner \w Ordnung|strong="H4256"\w* waren \w vierundzwanzigtausend|strong="H0702"\w*.  
\v 16  \w Über|strong="H5921"\w* die \w Stämme|strong="H7626"\w* \w Israels|strong="H3478"\w* aber waren diese: unter den \w Rubenitern|strong="H7206"\w* war \w Fürst|strong="H5057"\w*: \w Elieser|strong="H0461"\w*, der \w Sohn|strong="H1121"\w* \w Sichris|strong="H2147"\w*; unter den \w Simeonitern|strong="H8099"\w* war \w Sephatja|strong="H8203"\w*, der \w Sohn|strong="H1121"\w* \w Maachas|strong="H4601"\w*;  
\v 17 unter den \w Leviten|strong="H3881"\w* war \w Hasabja|strong="H2811"\w*, der \w Sohn|strong="H1121"\w* \w Kemuels|strong="H7055"\w*; unter den \w Aaroniten|strong="H0175"\w* war \w Zadok|strong="H6659"\w*;  
\v 18 unter \w Juda|strong="H3063"\w* war \w Elihu|strong="H0453"\w* \w aus|strong="H4480"\w* den \w Brüdern|strong="H0251"\w* \w Davids|strong="H1732"\w*; unter \w Isaschar|strong="H3485"\w* war \w Omri|strong="H6018"\w*, der \w Sohn|strong="H1121"\w* \w Michaels|strong="H4317"\w*;  
\v 19 unter \w Sebulon|strong="H2074"\w* war \w Jismaja|strong="H3460"\w*, der \w Sohn|strong="H1121"\w* \w Obadjas|strong="H5662"\w*; unter \w Naphthali|strong="H5321"\w* war \w Jeremoth|strong="H3406"\w*, der \w Sohn|strong="H1121"\w* \w Asriels|strong="H5837"\w*;  
\v 20 unter den \w Kindern|strong="H1121"\w* \w Ephraim|strong="H0669"\w* war \w Hosea|strong="H1954"\w*, der \w Sohn|strong="H1121"\w* \w Asasjas|strong="H5812"\w*; unter dem \w halben|strong="H2677"\w* \w Stamm|strong="H7626"\w* \w Manasse|strong="H4519"\w* war \w Joel|strong="H3100"\w*, der \w Sohn|strong="H1121"\w* \w Pedajas|strong="H6305"\w*;  
\v 21 unter dem \w halben|strong="H2677"\w* Stamm \w Manasse|strong="H4519"\w* in \w Gilead|strong="H1568"\w* war \w Iddo|strong="H3035"\w*, der \w Sohn|strong="H1121"\w* \w Sacharjas|strong="H2148"\w*; unter \w Benjamin|strong="H1144"\w* war \w Jaesiel|strong="H3300"\w*, der \w Sohn|strong="H1121"\w* \w Abners|strong="H0074"\w*;  
\v 22 unter \w Dan|strong="H1835"\w* war \w Asareel|strong="H5832"\w*, der \w Sohn|strong="H1121"\w* \w Jerohams|strong="H3395"\w*. \w Das|strong="H0428"\w* sind die \w Fürsten|strong="H8269"\w* der \w Stämme|strong="H7626"\w* \w Israels|strong="H3478"\w*.  
\v 23 Aber \w David|strong="H1732"\w* \w nahm|strong="H5375"\w* \w nicht|strong="H3808"\w* die \w Zahl|strong="H4557"\w* derer, die von \w zwanzig|strong="H6242"\w* \w Jahren|strong="H8141"\w* und \w darunter|strong="H4295"\w* waren; \w denn|strong="H3588"\w* der \w HERR|strong="H3068"\w* hatte \w verheißen|strong="H0559"\w*, \w Israel|strong="H3478"\w* zu \w mehren|strong="H7235"\w* wie die \w Sterne|strong="H3556"\w* am \w Himmel|strong="H8064"\w*.  
\v 24  \w Joab|strong="H3097"\w* aber, der \w Zeruja|strong="H6870"\w* \w Sohn|strong="H1121"\w*, der hatte \w angefangen|strong="H2490"\w* zu \w zählen|strong="H4487"\w*, und \w vollendete|strong="H3615"\w* es \w nicht|strong="H3808"\w*; denn es \w kam|strong="H1961"\w* \w darum|strong="H2063"\w* ein \w Zorn|strong="H7110"\w* \w über|strong="H5921"\w* \w Israel|strong="H3478"\w*. Darum \w kam|strong="H5927"\w* die \w Zahl|strong="H4557"\w* \w nicht|strong="H3808"\w* in die \w Chronik|strong="H1697"\w* des \w Königs|strong="H4428"\w* \w David|strong="H1732"\w*.  
\v 25  \w Über|strong="H5921"\w* den \w Schatz|strong="H0214"\w* des \w Königs|strong="H4428"\w* war \w Asmaveth|strong="H5820"\w*, der \w Sohn|strong="H1121"\w* \w Abdiels|strong="H5717"\w*; und über die \w Schätze|strong="H0214"\w* auf dem \w Lande|strong="H7704"\w* in \w Städten|strong="H5892"\w*, \w Dörfern|strong="H3723"\w* und \w Türmen|strong="H4026"\w* war \w Jonathan|strong="H3083"\w*, der \w Sohn|strong="H1121"\w* \w Usias|strong="H5818"\w*.  
\v 26  \w Über|strong="H5921"\w* die \w Ackerleute|strong="H4399"\w*, das \w Land|strong="H5656"\w* zu \w bauen|strong="H6213"\w*, war \w Esri|strong="H5836"\w*, der \w Sohn|strong="H1121"\w* \w Chelubs|strong="H3620"\w*.  
\v 27  \w Über|strong="H5921"\w* die \w Weinberge|strong="H3754"\w* war \w Simei|strong="H8096"\w*, der \w Ramathiter|strong="H7435"\w*; \w über|strong="H5921"\w* die \w Weinkeller|strong="H3754"\w* und \w Schätze|strong="H0214"\w* des \w Weins|strong="H3196"\w* war \w Sabdi|strong="H2067"\w*, der \w Sephamiter|strong="H8225"\w*.  
\v 28  \w Über|strong="H5921"\w* die \w Ölgärten|strong="H2132"\w* und \w Maulbeerbäume|strong="H8256"\w* in den \w Auen|strong="H8219"\w* war Baal-\w Hanan|strong="H1177"\w*, der \w Gaderiter|strong="H1451"\w*. Über den \w Ölschatz|strong="H8081"\w* war \w Joas|strong="H3135"\w*.  
\v 29  \w Über|strong="H5921"\w* die \w Weiderinder|strong="H7462"\w* zu \w Saron|strong="H8289"\w* war \w Sitrai|strong="H7861"\w*, der \w Saroniter|strong="H8290"\w*; aber \w über|strong="H5921"\w* die \w Rinder|strong="H1241"\w* in den \w Gründen|strong="H6010"\w* war \w Saphat|strong="H8202"\w*, der \w Sohn|strong="H1121"\w* \w Adlais|strong="H5724"\w*.  
\v 30  \w Über|strong="H5921"\w* die \w Kamele|strong="H1581"\w* war \w Obil|strong="H0179"\w*, der \w Ismaeliter|strong="H3459"\w*. \w Über|strong="H5921"\w* die \w Esel|strong="H0860"\w* war \w Jehdeja|strong="H3165"\w*, der \w Meronothiter|strong="H4824"\w*.  
\v 31  \w Über|strong="H5921"\w* die \w Schafe|strong="H6629"\w* war \w Jasis|strong="H3151"\w*, der \w Hagariter|strong="H1905"\w*. \w Diese|strong="H0428"\w* waren \w alle|strong="H3605"\w* \w Oberste|strong="H8269"\w* über die \w Güter|strong="H7399"\w* des \w Königs|strong="H4428"\w* \w David|strong="H1732"\w*.  
\v 32  \w Jonathan|strong="H3083"\w* aber, \w Davids|strong="H1732"\w* \w Vetter|strong="H1730"\w*, war \w Rat|strong="H3289"\w*, ein \w verständiger|strong="H0995"\w* \w und|strong="H1931"\w* \w gelehrter|strong="H5608"\w* \w Mann|strong="H0376"\w*. Und \w Jehiel|strong="H3171"\w*, der \w Sohn|strong="H1121"\w* \w Hachmonis|strong="H2453"\w*, war \w bei|strong="H5973"\w* den \w Söhnen|strong="H1121"\w* des \w Königs|strong="H4428"\w*.  
\v 33  \w Ahithophel|strong="H0302"\w* war auch \w Rat|strong="H3289"\w* des \w Königs|strong="H4428"\w*. \w Husai|strong="H2365"\w*, der \w Arachiter|strong="H0757"\w*, war des \w Königs|strong="H4428"\w* \w Freund|strong="H7453"\w*.  
\v 34  \w Nach|strong="H0310"\w* \w Ahithophel|strong="H0302"\w* war \w Jojada|strong="H3077"\w*, der \w Sohn|strong="H1121"\w* \w Benajas|strong="H1141"\w*, und \w Abjathar|strong="H0054"\w*. \w Joab|strong="H3097"\w* aber war der \w Feldhauptmann|strong="H8269"\w* des \w Königs|strong="H4428"\w*.   
\c 28  
\p
\v 1 Und \w David|strong="H1732"\w* \w versammelte|strong="H6950"\w* \w gen|strong="H0413"\w* \w Jerusalem|strong="H3389"\w* \w alle|strong="H3605"\w* \w Obersten|strong="H8269"\w* \w Israels|strong="H3478"\w*, nämlich die \w Fürsten|strong="H8269"\w* der \w Stämme|strong="H7626"\w*, die \w Fürsten|strong="H8269"\w* der \w Ordnungen|strong="H4256"\w*, die dem \w König|strong="H4428"\w* \w dienten|strong="H8334"\w*, die \w Fürsten|strong="H8269"\w* über \w tausend|strong="H0505"\w* und \w über|strong="H8269"\w* \w hundert|strong="H3967"\w*, die \w Fürsten|strong="H8269"\w* über die \w Güter|strong="H3605"\w* und das \w Vieh|strong="H4735"\w* des \w Königs|strong="H4428"\w* und seiner \w Söhne|strong="H1121"\w* \w mit|strong="H5973"\w* den \w Kämmerern|strong="H5631"\w*, die \w Kriegsmänner|strong="H1368"\w* und \w alle|strong="H3605"\w* ansehnlichen \w Männer|strong="H2428"\w*.  
\v 2 Und \w David|strong="H1732"\w*, der \w König|strong="H4428"\w*, \w stand|strong="H6965"\w* \w auf|strong="H5921"\w* und \w sprach|strong="H0559"\w*: \w Höret|strong="H8085"\w* mir zu, meine \w Brüder|strong="H0251"\w* und mein \w Volk|strong="H5971"\w*! \w Ich|strong="H0589"\w* hatte mir \w vorgenommen|strong="H5973"\w*, ein \w Haus|strong="H1004"\w* zu \w bauen|strong="H1129"\w*, da \w ruhen|strong="H4496"\w* sollte die \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* des \w HERRN|strong="H3068"\w* und der \w Schemel|strong="H1916"\w* seiner \w Füße|strong="H7272"\w* unsres \w Gottes|strong="H0430"\w*, und hatte mich \w geschickt|strong="H3559"\w*, zu \w bauen|strong="H1129"\w*.  
\v 3 Aber \w Gott|strong="H0430"\w* ließ mir \w sagen|strong="H0559"\w*: Du sollst meinem \w Namen|strong="H8034"\w* \w kein|strong="H3808"\w* \w Haus|strong="H1004"\w* \w bauen|strong="H1129"\w*; \w denn|strong="H3588"\w* \w du|strong="H0859"\w* bist ein \w Kriegsmann|strong="H0376"\w* und hast \w Blut|strong="H1818"\w* \w vergossen|strong="H8210"\w*.  
\v 4 Nun hat der \w HERR|strong="H3068"\w*, der \w Gott|strong="H0430"\w* \w Israel|strong="H3478"\w*, mich \w erwählt|strong="H0977"\w* \w aus|strong="H4480"\w* meines \w Vaters|strong="H0001"\w* \w ganzem|strong="H3605"\w* \w Hause|strong="H1004"\w*, daß ich \w König|strong="H4428"\w* \w über|strong="H5921"\w* \w Israel|strong="H3478"\w* sein \w sollte|strong="H1961"\w* \w ewiglich|strong="H5769"\w*. \w Denn|strong="H3588"\w* er hat \w Juda|strong="H3063"\w* \w erwählt|strong="H0977"\w* zum \w Fürstentum|strong="H5057"\w*, und im \w Hause|strong="H1004"\w* \w Juda|strong="H3063"\w* meines \w Vaters|strong="H0001"\w* \w Haus|strong="H1004"\w*, und unter meines \w Vaters|strong="H0001"\w* \w Kindern|strong="H1121"\w* hat er Gefallen \w gehabt|strong="H7521"\w* an mir, daß er mich \w über|strong="H5921"\w* \w ganz|strong="H3605"\w* \w Israel|strong="H3478"\w* zum König \w machte|strong="H4427"\w*.  
\v 5 Und \w unter|strong="H4480"\w* \w allen|strong="H3605"\w* seinen \w Söhnen|strong="H1121"\w* (denn der \w HERR|strong="H3068"\w* hat mir \w viele|strong="H7227"\w* \w Söhne|strong="H1121"\w* \w gegeben|strong="H5414"\w*) hat er meinen \w Sohn|strong="H1121"\w* \w Salomo|strong="H8010"\w* \w erwählt|strong="H0977"\w*, daß er sitzen \w soll|strong="H3427"\w* \w auf|strong="H5921"\w* dem \w Stuhl|strong="H3678"\w* des \w Königreichs|strong="H4438"\w* des \w Herrn|strong="H3068"\w* \w über|strong="H5921"\w* \w Israel|strong="H3478"\w*,  
\v 6 und hat zu mir \w geredet|strong="H0559"\w*: Dein \w Sohn|strong="H1121"\w* \w Salomo|strong="H8010"\w* soll mein \w Haus|strong="H1004"\w* und meine \w Vorhöfe|strong="H2691"\w* \w bauen|strong="H1129"\w*; \w denn|strong="H3588"\w* ich habe ihn \w erwählt|strong="H0977"\w* zum \w Sohn|strong="H1121"\w*, und \w ich|strong="H0589"\w* will sein \w Vater|strong="H0001"\w* sein  
\v 7 und will sein \w Königreich|strong="H4438"\w* \w bestätigen|strong="H3559"\w* \w ewiglich|strong="H5704"\w*, \w so|strong="H0518"\w* er wird \w anhalten|strong="H2388"\w*, daß er \w tue|strong="H6213"\w* nach meinen \w Geboten|strong="H4687"\w* und \w Rechten|strong="H4941"\w*, wie es \w heute|strong="H2088"\w* steht.  
\v 8  \w Nun|strong="H6258"\w* \w vor|strong="H5869"\w* dem \w ganzen|strong="H3605"\w* \w Israel|strong="H3478"\w*, der \w Gemeinde|strong="H6951"\w* des \w HERRN|strong="H3068"\w*, und vor den \w Ohren|strong="H0241"\w* unseres \w Gottes|strong="H0430"\w*: So \w haltet|strong="H8104"\w* und \w sucht|strong="H1875"\w* \w alle|strong="H3605"\w* die \w Gebote|strong="H4687"\w* des \w HERRN|strong="H3068"\w*, eures \w Gottes|strong="H0430"\w*, auf \w daß|strong="H4616"\w* ihr \w besitzet|strong="H3423"\w* das \w gute|strong="H2896"\w* \w Land|strong="H0776"\w* und es \w vererbt|strong="H5157"\w* auf eure \w Kinder|strong="H1121"\w* \w nach|strong="H0310"\w* euch \w ewiglich|strong="H5704"\w*.  
\v 9 Und \w du|strong="H0589"\w*, mein \w Sohn|strong="H1121"\w* \w Salomo|strong="H8010"\w*, \w erkenne|strong="H3045"\w* den \w Gott|strong="H0430"\w* deines \w Vaters|strong="H0001"\w* und \w diene|strong="H5647"\w* ihm mit \w ganzem|strong="H8003"\w* \w Herzen|strong="H3820"\w* und mit \w williger|strong="H2655"\w* \w Seele|strong="H5315"\w*. \w Denn|strong="H3588"\w* der \w HERR|strong="H3068"\w* \w sucht|strong="H1875"\w* \w alle|strong="H3605"\w* \w Herzen|strong="H3824"\w* und \w versteht|strong="H0995"\w* \w aller|strong="H3605"\w* \w Gedanken|strong="H4284"\w* \w Dichten|strong="H3336"\w*. Wirst du ihn \w suchen|strong="H1875"\w*, so wirst du ihn \w finden|strong="H4672"\w*; wirst du ihn aber \w verlassen|strong="H5800"\w*, so wird er dich \w verwerfen|strong="H2186"\w* \w ewiglich|strong="H5703"\w*.  
\v 10 So \w siehe|strong="H7200"\w* \w nun|strong="H6258"\w* \w zu|strong="H7200"\w*; \w denn|strong="H3588"\w* der \w HERR|strong="H3068"\w* hat dich \w erwählt|strong="H0977"\w*, daß du sein \w Haus|strong="H1004"\w* \w baust|strong="H1129"\w* zum \w Heiligtum|strong="H4720"\w*. Sei \w getrost|strong="H2388"\w* und \w mache|strong="H6213"\w* es!  
\v 11 Und \w David|strong="H1732"\w* \w gab|strong="H5414"\w* seinem \w Sohn|strong="H1121"\w* \w Salomo|strong="H8010"\w* ein \w Vorbild|strong="H8403"\w* der Halle des \w Tempels|strong="H0197"\w* und seiner \w Häuser|strong="H1004"\w* und der \w Gemächer|strong="H1597"\w* und \w Söller|strong="H5944"\w* und \w Kammern|strong="H6442"\w* inwendig und des \w Hauses|strong="H1004"\w* \w Gnadenstuhls|strong="H3727"\w*,  
\v 12 dazu \w Vorbilder|strong="H8403"\w* \w alles|strong="H3605"\w* dessen, \w was|strong="H0834"\w* \w bei|strong="H5973"\w* ihm in seinem \w Gemüt|strong="H7307"\w* \w war|strong="H1961"\w*, nämlich die \w Vorhöfe|strong="H2691"\w* am \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* und \w aller|strong="H3605"\w* \w Gemächer|strong="H3957"\w* \w umher|strong="H5439"\w* für die \w Schätze|strong="H0214"\w* im \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w* und für die \w Schätze|strong="H0214"\w* des \w Geheiligten|strong="H6944"\w*,  
\v 13 und der \w Ordnungen|strong="H4256"\w* der \w Priester|strong="H3548"\w* und \w Leviten|strong="H3881"\w*, und \w aller|strong="H3605"\w* \w Geschäfte|strong="H4399"\w* \w und|strong="H3605"\w* \w Geräte|strong="H3627"\w* der \w Ämter|strong="H5656"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*,  
\v 14 und des \w goldenen|strong="H2091"\w* Zeuges nach dem \w Goldgewicht|strong="H4948"\w* zu \w allerlei|strong="H3605"\w* \w Geräte|strong="H3627"\w* eines jeglichen \w Amts|strong="H5656"\w*, und \w alles|strong="H3605"\w* \w silbernen|strong="H3701"\w* \w Zeuges|strong="H3627"\w* nach dem \w Gewicht|strong="H4948"\w* zu \w allerlei|strong="H3605"\w* \w Geräte|strong="H3627"\w* eines jeglichen \w Amts|strong="H5656"\w*,  
\v 15 und das \w Gewicht|strong="H4948"\w* für den \w goldenen|strong="H2091"\w* \w Leuchter|strong="H4501"\w* und die \w goldenen|strong="H2091"\w* \w Lampen|strong="H5216"\w*, für jeglichen \w Leuchter|strong="H4501"\w* und seine \w Lampen|strong="H5216"\w* sein \w Gewicht|strong="H4948"\w*, also \w auch|strong="H4948"\w* für die \w silbernen|strong="H3701"\w* \w Leuchter|strong="H4501"\w*, für den \w Leuchter|strong="H4501"\w* und seine \w Lampen|strong="H5216"\w*, nach dem \w Amt|strong="H5656"\w* eines jeglichen \w Leuchters|strong="H4501"\w*;  
\v 16 auch gab er das \w Gewicht|strong="H4948"\w* des \w Goldes|strong="H2091"\w* für die \w Tische|strong="H7979"\w* der \w Schaubrote|strong="H4635"\w*, für jeglichen \w Tisch|strong="H7979"\w* sein Gewicht, also auch des \w Silbers|strong="H3701"\w* für die \w silbernen|strong="H3701"\w* \w Tische|strong="H7979"\w*,  
\v 17 und für die \w Gabeln|strong="H4207"\w*, \w Becken|strong="H4219"\w* und \w Kannen|strong="H7184"\w* von \w lauterem|strong="H2889"\w* \w Golde|strong="H2091"\w* und für die \w goldenen|strong="H2091"\w* \w Becher|strong="H3713"\w*, für jeglichen \w Becher|strong="H3713"\w* sein \w Gewicht|strong="H4948"\w*, und für die \w silbernen|strong="H3701"\w* Becher, für jeglichen \w Becher|strong="H3713"\w* sein \w Gewicht|strong="H4948"\w*,  
\v 18 und für den \w Räucheraltar|strong="H4196"\w* vom \w allerlautersten|strong="H2212"\w* \w Golde|strong="H2091"\w* sein \w Gewicht|strong="H4948"\w*, auch ein \w Vorbild|strong="H8403"\w* des \w Wagens|strong="H4818"\w*, nämlich der \w goldenen|strong="H2091"\w* \w Cherubim|strong="H3742"\w*, daß sie sich \w ausbreiteten|strong="H6566"\w* und \w bedeckten|strong="H5526"\w* \w oben|strong="H5921"\w* die \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* des \w HERRN|strong="H3068"\w*.  
\v 19 “Das \w alles|strong="H3605"\w* ist \w mir|strong="H5921"\w* \w beschrieben|strong="H3791"\w* \w gegeben|strong="H7919"\w* \w von|strong="H4480"\w* der \w Hand|strong="H3027"\w* des \w HERRN|strong="H3068"\w*, daß es mich unterwiese über \w alle|strong="H3605"\w* \w Werke|strong="H4399"\w* des \w Vorbildes|strong="H8403"\w*.”  
\v 20 Und \w David|strong="H1732"\w* \w sprach|strong="H0559"\w* zu seinem \w Sohn|strong="H1121"\w* \w Salomo|strong="H8010"\w*: Sei \w getrost|strong="H2388"\w* und \w unverzagt|strong="H0553"\w* und \w mache|strong="H6213"\w* es; \w fürchte|strong="H3372"\w* dich \w nicht|strong="H0408"\w* und \w zage|strong="H2865"\w* \w nicht|strong="H0408"\w*! \w Gott|strong="H0430"\w* der \w HERR|strong="H3068"\w*, mein \w Gott|strong="H0430"\w*, wird \w mit|strong="H5973"\w* dir sein und wird die Hand \w nicht|strong="H3808"\w* \w abziehen|strong="H7503"\w* \w noch|strong="H3808"\w* dich \w verlassen|strong="H5800"\w*, \w bis|strong="H5704"\w* du \w alle|strong="H3605"\w* \w Werke|strong="H4399"\w* zum \w Amt|strong="H5656"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w vollendest|strong="H3615"\w*.  
\v 21  \w Siehe|strong="H2009"\w* da, die \w Ordnungen|strong="H4256"\w* der \w Priester|strong="H3548"\w* und \w Leviten|strong="H3881"\w* zu \w allen|strong="H3605"\w* \w Ämtern|strong="H5656"\w* im \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w* sind \w mit|strong="H5973"\w* dir zu \w allem|strong="H3605"\w* \w Geschäft|strong="H4399"\w* \w und|strong="H3605"\w* sind \w willig|strong="H5081"\w* und \w weise|strong="H2451"\w* zu \w allen|strong="H3605"\w* \w Ämtern|strong="H5656"\w*, dazu die \w Fürsten|strong="H8269"\w* und \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* zu \w allen|strong="H3605"\w* deinen \w Händeln|strong="H1697"\w*.   
\c 29  
\p
\v 1 Und der \w König|strong="H4428"\w* \w David|strong="H1732"\w* \w sprach|strong="H0559"\w* zu der \w ganzen|strong="H3605"\w* \w Gemeinde|strong="H6951"\w*: \w Gott|strong="H0430"\w* hat \w Salomo|strong="H8010"\w*, meiner \w Söhne|strong="H1121"\w* \w einen|strong="H0259"\w*, \w erwählt|strong="H0977"\w*, der noch \w jung|strong="H5288"\w* und \w zart|strong="H7390"\w* ist; das \w Werk|strong="H4399"\w* aber ist \w groß|strong="H1419"\w*; \w denn|strong="H3588"\w* es ist \w nicht|strong="H3808"\w* eines \w Menschen|strong="H0120"\w* \w Wohnung|strong="H1002"\w*, \w sondern|strong="H3588"\w* \w Gottes|strong="H0430"\w* des \w HERRN|strong="H3068"\w*.  
\v 2 Ich aber habe aus \w allen|strong="H3605"\w* meinen \w Kräften|strong="H3581"\w* \w zugerichtet|strong="H3559"\w* zum \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w* \w Gold|strong="H2091"\w* zu \w goldenem|strong="H2091"\w*, \w Silber|strong="H3701"\w* zu \w silbernem|strong="H3701"\w*, \w Erz|strong="H5178"\w* zu \w erhernem|strong="H5178"\w*, \w Eisen|strong="H1270"\w* zu \w eisernem|strong="H1270"\w*, \w Holz|strong="H6086"\w* zu \w hölzernem|strong="H6086"\w* Geräte, \w Onyxsteine|strong="H7718"\w* und \w eingefaßte|strong="H4394"\w* Steine, \w Rubine|strong="H6320"\w* und bunte \w Steine|strong="H7553"\w* und \w allerlei|strong="H3605"\w* \w Edelsteine|strong="H3368"\w* und \w Marmelsteine|strong="H7893"\w* die \w Menge|strong="H7230"\w*.  
\v 3  \w Überdas|strong="H5750"\w*, aus \w Wohlgefallen|strong="H7521"\w* am \w Hause|strong="H1004"\w* meines \w Gottes|strong="H0430"\w*, habe \w ich|strong="H5414"\w* eigenes \w Gutes|strong="H5459"\w*, \w Gold|strong="H2091"\w* und \w Silber|strong="H3701"\w*,  
\v 4  \w dreitausend|strong="H7969"\w* \w Zentner|strong="H3603"\w* \w Gold|strong="H2091"\w* \w von|strong="H4480"\w* \w Ophir|strong="H0211"\w* und \w siebentausend|strong="H7651"\w* \w Zentner|strong="H3603"\w* \w lauteres|strong="H2212"\w* \w Silber|strong="H3701"\w*, das \w gebe|strong="H3426"\w* ich zum \w heiligen|strong="H6944"\w* \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w* \w außer|strong="H4480"\w* \w allem|strong="H3605"\w*, was ich zugerichtet \w habe|strong="H3559"\w*, die \w Wände|strong="H7023"\w* der \w Häuser|strong="H1004"\w* zu \w überziehen|strong="H2902"\w*,  
\v 5 daß \w golden|strong="H2091"\w* werde, was \w golden|strong="H2091"\w*, \w silbern|strong="H3701"\w*, was \w silbern|strong="H3701"\w* sein soll, und zu \w allerlei|strong="H3605"\w* \w Werk|strong="H4399"\w* durch die \w Hand|strong="H3027"\w* der \w Werkmeister|strong="H2796"\w*. Und \w wer|strong="H4310"\w* ist \w nun|strong="H3117"\w* \w willig|strong="H5068"\w*, seine \w Hand|strong="H3027"\w* heute dem \w HERRN|strong="H3068"\w* zu \w füllen|strong="H4390"\w*?  
\v 6 Da waren die \w Fürsten|strong="H8269"\w* der \w Vaterhäuser|strong="H0001"\w*, die \w Fürsten|strong="H8269"\w* der \w Stämme|strong="H7626"\w* \w Israels|strong="H3478"\w*, die \w Fürsten|strong="H8269"\w* über \w tausend|strong="H0505"\w* und über \w hundert|strong="H3967"\w* und die \w Fürsten|strong="H8269"\w* über des \w Königs|strong="H4428"\w* \w Geschäfte|strong="H4399"\w* \w willig|strong="H5068"\w*  
\v 7 und \w gaben|strong="H5414"\w* zum \w Amt|strong="H5656"\w* im \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w* \w fünftausend|strong="H2568"\w* \w Zentner|strong="H3603"\w* \w Gold|strong="H2091"\w* und \w zehntausend|strong="H7239"\w* \w Goldgulden|strong="H0150"\w* und \w zehntausend|strong="H6235"\w* \w Zentner|strong="H3603"\w* \w Silber|strong="H3701"\w*, \w achtzehntausend|strong="H8083"\w* \w Zentner|strong="H3603"\w* \w Erz|strong="H5178"\w* und \w hundertausend|strong="H3967"\w* \w Zentner|strong="H3603"\w* \w Eisen|strong="H1270"\w*.  
\v 8 Und \w bei|strong="H0854"\w* welchem \w Steine|strong="H0068"\w* gefunden \w wurden|strong="H4672"\w*, die gaben \w sie|strong="H5414"\w* zum \w Schatz|strong="H0214"\w* des \w Hauses|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w unter|strong="H5921"\w* die \w Hand|strong="H3027"\w* \w Jehiels|strong="H3171"\w*, des \w Gersoniten|strong="H1649"\w*.  
