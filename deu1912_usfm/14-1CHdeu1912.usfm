\v 1  Und \w nach|strong="H0310"\w* \w diesem|strong="H3651"\w* \w starb|strong="H4191"\w* \w Nahas|strong="H5176"\w*, der \w König|strong="H4428"\w* der \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w*, und sein \w Sohn|strong="H1121"\w* ward \w König|strong="H4427"\w* an seiner \w Statt|strong="H8478"\w*.  
\v 2 Da \w gedachte|strong="H0559"\w* \w David|strong="H1732"\w*: Ich will \w Barmherzigkeit|strong="H2617"\w* \w tun|strong="H6213"\w* \w an|strong="H5973"\w* \w Hanon|strong="H2586"\w*, dem \w Sohn|strong="H1121"\w* des \w Nahas|strong="H5176"\w*; \w denn|strong="H3588"\w* sein \w Vater|strong="H0001"\w* hat \w an|strong="H5973"\w* mir \w Barmherzigkeit|strong="H2617"\w* \w getan|strong="H6213"\w*. \w Und|strong="H1732"\w* \w sandte|strong="H7971"\w* \w Boten|strong="H4397"\w* hin, ihn zu \w trösten|strong="H5162"\w* \w über|strong="H5921"\w* seinen \w Vater|strong="H0001"\w*. Und da die \w Knechte|strong="H5650"\w* \w Davids|strong="H1732"\w* \w ins|strong="H0413"\w* \w Land|strong="H0776"\w* der \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w* \w kamen|strong="H0935"\w* \w zu|strong="H0413"\w* \w Hanon|strong="H2586"\w*, ihn zu \w trösten|strong="H5162"\w*,  
\v 3  \w sprachen|strong="H0559"\w* die \w Fürsten|strong="H8269"\w* der \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w* zu \w Hanon|strong="H2586"\w*: Meinst du, daß \w David|strong="H1732"\w* deinen \w Vater|strong="H0001"\w* \w ehre|strong="H3513"\w* vor deinen \w Augen|strong="H5869"\w*, \w daß|strong="H3588"\w* er \w Tröster|strong="H5162"\w* zu dir gesandt \w hat|strong="H7971"\w*? Ja, seine \w Knechte|strong="H5650"\w* sind \w gekommen|strong="H0935"\w* \w zu|strong="H0413"\w* dir, zu \w forschen|strong="H2713"\w* und \w umzukehren|strong="H2015"\w* und zu \w erkunden|strong="H7270"\w* das \w Land|strong="H0776"\w*.  
\v 4 Da \w nahm|strong="H3947"\w* \w Hanon|strong="H2586"\w* die \w Knechte|strong="H1732"\w* \w Davids|strong="H5650"\w* und \w schor|strong="H1548"\w* sie und \w schnitt|strong="H3772"\w* ihre \w Kleider|strong="H4063"\w* \w halb|strong="H2677"\w* \w ab|strong="H3772"\w* bis \w an|strong="H5704"\w* die \w Lenden|strong="H4667"\w* und ließ sie \w gehen|strong="H7971"\w*.  
\v 5 Und etliche gingen \w hin|strong="H3212"\w* und \w sagten|strong="H5046"\w* es \w David|strong="H1732"\w* \w an|strong="H5046"\w* \w von|strong="H5921"\w* den \w Männern|strong="H0582"\w*. Er aber \w sandte|strong="H7971"\w* ihnen \w entgegen|strong="H7125"\w*; \w denn|strong="H3588"\w* die \w Männer|strong="H0582"\w* \w waren|strong="H1961"\w* \w sehr|strong="H3966"\w* \w geschändet|strong="H3637"\w*. Und der \w König|strong="H4428"\w* \w sprach|strong="H0559"\w*: \w Bleibet|strong="H3427"\w* zu \w Jericho|strong="H3405"\w*, \w bis|strong="H5704"\w* euer \w Bart|strong="H2206"\w* \w wachse|strong="H6779"\w*; so kommt dann \w wieder|strong="H7725"\w*.  
\v 6 Da aber die \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w* \w sahen|strong="H7200"\w*, \w daß|strong="H3588"\w* sie waren stinkend \w geworden|strong="H0887"\w* \w vor|strong="H5973"\w* \w David|strong="H1732"\w*, \w sandten|strong="H7971"\w* sie hin, beide \w Hanon|strong="H2586"\w* und die \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w*, \w tausend|strong="H0505"\w* \w Zentner|strong="H3603"\w* \w Silber|strong="H3701"\w*, \w Wagen|strong="H7393"\w* und \w Reiter|strong="H6571"\w* zu \w dingen|strong="H7936"\w* \w aus|strong="H4480"\w* \w Mesopotamien|strong="H0763"\w*, \w aus|strong="H4480"\w* dem \w Syrien|strong="H0758"\w* von \w Maacha|strong="H4601"\w* und \w aus|strong="H4480"\w* \w Zoba|strong="H6678"\w*.  
\v 7 Und \w dingten|strong="H7936"\w* \w zweiunddreißigtausend|strong="H8147"\w* \w Wagen|strong="H7393"\w* und den \w König|strong="H4428"\w* von \w Maacha|strong="H4601"\w* mit seinem \w Volk|strong="H5971"\w*; die \w kamen|strong="H0935"\w* und lagerten \w sich|strong="H2583"\w* \w vor|strong="H6440"\w* \w Medeba|strong="H4311"\w*. Und die \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w* sammelten \w sich|strong="H0622"\w* \w aus|strong="H4480"\w* ihren \w Städten|strong="H5892"\w* und \w kamen|strong="H0935"\w* zum \w Streit|strong="H4421"\w*.  
\v 8 Da das \w David|strong="H1732"\w* \w hörte|strong="H8085"\w*, sandte \w er|strong="H7971"\w* hin \w Joab|strong="H3097"\w* mit dem \w ganzen|strong="H3605"\w* \w Heer|strong="H6635"\w* der \w Helden|strong="H1368"\w*.  
\v 9 Die \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w* aber waren \w ausgezogen|strong="H3318"\w* und rüsteten \w sich|strong="H6186"\w* zum \w Streit|strong="H4421"\w* vor der \w Stadt|strong="H5892"\w* \w Tor|strong="H6607"\w*. Die \w Könige|strong="H4428"\w* aber, \w die|strong="H0834"\w* gekommen \w waren|strong="H0935"\w*, hielten im \w Felde|strong="H7704"\w* \w besonders|strong="H0909"\w*.  
\v 10 Da nun \w Joab|strong="H3097"\w* \w sah|strong="H7200"\w*, \w daß|strong="H3588"\w* \w vorn|strong="H6440"\w* und \w hinter|strong="H0268"\w* ihm \w Streit|strong="H6440"\w* \w wider|strong="H0413"\w* ihn \w war|strong="H1961"\w*, erwählte \w er|strong="H0977"\w* \w aus|strong="H4480"\w* \w aller|strong="H3605"\w* jungen \w Mannschaft|strong="H0977"\w* in \w Israel|strong="H3478"\w* und stellte \w sich|strong="H6186"\w* \w gegen|strong="H7125"\w* die \w Syrer|strong="H0758"\w*.  
\v 11 Das \w übrige|strong="H3499"\w* \w Volk|strong="H5971"\w* aber tat \w er|strong="H5414"\w* unter die \w Hand|strong="H3027"\w* \w Abisais|strong="H0052"\w*, seines \w Bruders|strong="H0251"\w*, daß sie sich \w rüsteten|strong="H6186"\w* \w wider|strong="H7125"\w* die \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w*,  
\v 12 und \w sprach|strong="H0559"\w*: \w Wenn|strong="H0518"\w* \w mir|strong="H4480"\w* die \w Syrer|strong="H0758"\w* zu stark \w werden|strong="H2388"\w*, so \w komm|strong="H1961"\w* mir zu \w Hilfe|strong="H8668"\w*; \w wo|strong="H0518"\w* \w dir|strong="H4480"\w* aber die \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w* zu stark \w werden|strong="H2388"\w*, will ich dir \w helfen|strong="H3467"\w*.  
\v 13 Sei \w getrost|strong="H2388"\w* und laß uns getrost \w handeln|strong="H2388"\w* \w für|strong="H1157"\w* unser \w Volk|strong="H5971"\w* und \w für|strong="H1157"\w* die \w Städte|strong="H5892"\w* unseres \w Gottes|strong="H0430"\w*; der \w HERR|strong="H3068"\w* \w tue|strong="H6213"\w*, was \w ihm|strong="H5869"\w* \w gefällt|strong="H2896"\w*.  
\v 14 Und \w Joab|strong="H3097"\w* machte sich \w herzu|strong="H5066"\w* mit dem \w Volk|strong="H5971"\w*, \w das|strong="H0834"\w* \w bei|strong="H5973"\w* ihm war, \w gegen|strong="H6440"\w* die \w Syrer|strong="H0758"\w* zu \w streiten|strong="H4421"\w*; und sie \w flohen|strong="H5127"\w* \w vor|strong="H4480"\w* \w ihm|strong="H6440"\w*.  
\v 15 Da aber die \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w* \w sahen|strong="H7200"\w*, \w daß|strong="H3588"\w* die \w Syrer|strong="H0758"\w* \w flohen|strong="H5127"\w*, \w flohen|strong="H5127"\w* \w sie|strong="H1992"\w* \w auch|strong="H1571"\w* \w vor|strong="H4480"\w* \w Abisai|strong="H0052"\w*, seinem \w Bruder|strong="H0251"\w*, und \w zogen|strong="H0935"\w* in die \w Stadt|strong="H5892"\w*. \w Joab|strong="H3097"\w* aber \w kam|strong="H0935"\w* gen \w Jerusalem|strong="H3389"\w*.  
\v 16 Da aber die \w Syrer|strong="H0758"\w* \w sahen|strong="H7200"\w*, \w daß|strong="H3588"\w* sie \w vor|strong="H6440"\w* \w Israel|strong="H3478"\w* geschlagen \w waren|strong="H5062"\w*, sandten \w sie|strong="H7971"\w* \w Boten|strong="H4397"\w* hin und brachten \w heraus|strong="H3318"\w* \w die|strong="H0834"\w* \w Syrer|strong="H0758"\w* \w jenseit|strong="H4480"\w* des \w Stroms|strong="H5104"\w*; und \w Sophach|strong="H7780"\w*, der \w Feldhauptmann|strong="H8269"\w* \w Hadadesers|strong="H1928"\w*, zog vor \w ihnen|strong="H6440"\w* her.  
\v 17 Da das \w David|strong="H1732"\w* angesagt \w ward|strong="H5046"\w*, sammelte \w er|strong="H0622"\w* zuhauf das \w ganze|strong="H3605"\w* \w Israel|strong="H3478"\w* und zog \w über|strong="H5674"\w* den \w Jordan|strong="H3383"\w*; und da er \w an|strong="H0413"\w* sie \w kam|strong="H0935"\w*, \w rüstete|strong="H6186"\w* er sich \w wider|strong="H0413"\w* sie. Und \w David|strong="H1732"\w* \w rüstete|strong="H6186"\w* sich \w gegen|strong="H7125"\w* die \w Syrer|strong="H0758"\w* zum \w Streit|strong="H4421"\w*, und sie \w stritten|strong="H3898"\w* \w mit|strong="H5973"\w* ihm.  
\v 18 Aber die \w Syrer|strong="H0758"\w* \w flohen|strong="H5127"\w* \w vor|strong="H4480"\w* \w Israel|strong="H3478"\w*. Und \w David|strong="H1732"\w* \w verderbte|strong="H2026"\w* \w der|strong="H4480"\w* \w Syrer|strong="H0758"\w* \w siebentausend|strong="H7651"\w* \w Wagen|strong="H7393"\w* und \w vierzigtausend|strong="H0705"\w* \w Mann|strong="H0376"\w* zu \w Fuß|strong="H7273"\w*; dazu tötete \w er|strong="H4191"\w* \w Sophach|strong="H7780"\w*, den \w Feldhauptmann|strong="H8269"\w*.  
\v 19 Und da die \w Knechte|strong="H5650"\w* \w Hadadesers|strong="H1928"\w* \w sahen|strong="H7200"\w*, \w daß|strong="H3588"\w* sie \w vor|strong="H6440"\w* \w Israel|strong="H3478"\w* geschlagen \w waren|strong="H5062"\w*, machten sie \w Frieden|strong="H7999"\w* \w mit|strong="H5973"\w* \w David|strong="H1732"\w* und wurden seine \w Knechte|strong="H5647"\w*. Und die \w Syrer|strong="H0758"\w* \w wollten|strong="H0014"\w* den \w Kindern|strong="H1121"\w* \w Ammon|strong="H5983"\w* \w nicht|strong="H3808"\w* \w mehr|strong="H5750"\w* \w helfen|strong="H3467"\w*.   
\c 20  
\p
\v 1 Und \w da|strong="H1961"\w* das \w Jahr|strong="H8141"\w* um \w war|strong="H8666"\w*, zur \w Zeit|strong="H6256"\w*, \w wann|strong="H6256"\w* die \w Könige|strong="H4428"\w* \w ausziehen|strong="H3318"\w*, \w führte|strong="H5090"\w* \w Joab|strong="H3097"\w* die \w Heermacht|strong="H2428"\w* und \w verderbte|strong="H7843"\w* der \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w* \w Land|strong="H0776"\w*, \w kam|strong="H0935"\w* und \w belagerte|strong="H6696"\w* \w Rabba|strong="H7237"\w*; \w David|strong="H1732"\w* aber \w blieb|strong="H3427"\w* zu \w Jerusalem|strong="H3389"\w*. Und \w Joab|strong="H3097"\w* \w schlug|strong="H5221"\w* \w Rabba|strong="H7237"\w* und \w zerbrach|strong="H2040"\w* es.  
\v 2 Und \w David|strong="H1732"\w* \w nahm|strong="H3947"\w* die \w Krone|strong="H5850"\w* seines \w Königs|strong="H4428"\w* \w von|strong="H4480"\w* seinem \w Haupt|strong="H7218"\w* und \w fand|strong="H4672"\w* \w daran|strong="H4948"\w* einen \w Zentner|strong="H3603"\w* \w Gold|strong="H2091"\w* und \w Edelsteine|strong="H3368"\w*; und sie \w ward|strong="H1961"\w* \w David|strong="H1732"\w* \w auf|strong="H5921"\w* sein \w Haupt|strong="H7218"\w* gesetzt. Auch \w führte|strong="H3318"\w* er aus der \w Stadt|strong="H5892"\w* \w sehr|strong="H3966"\w* \w viel|strong="H7235"\w* \w Raub|strong="H7998"\w*.  
\v 3 Aber \w das|strong="H0834"\w* \w Volk|strong="H5971"\w* drinnen führte er \w heraus|strong="H3318"\w* und \w zerteilte|strong="H7787"\w* sie mit \w Sägen|strong="H4050"\w* und \w eisernen|strong="H1270"\w* \w Dreschwagen|strong="H2757"\w* und \w Keilen|strong="H4050"\w*. \w Also|strong="H3651"\w* \w tat|strong="H6213"\w* \w David|strong="H1732"\w* in \w allen|strong="H3605"\w* \w Städten|strong="H5892"\w* der \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w*. Und \w David|strong="H1732"\w* \w zog|strong="H7725"\w* \w samt|strong="H3605"\w* dem \w Volk|strong="H5971"\w* \w wider|strong="H7725"\w* nach \w Jerusalem|strong="H3389"\w*.  
\v 4  \w Darnach|strong="H0310"\w* erhob \w sich|strong="H5975"\w* ein \w Streit|strong="H4421"\w* zu \w Geser|strong="H6430"\w* \w mit|strong="H5973"\w* den \w Philistern|strong="H1507"\w*. \w Dazumal|strong="H0227"\w* \w schlug|strong="H5221"\w* \w Sibbechai|strong="H5444"\w*, der \w Husathiter|strong="H2843"\w*, den \w Sippai|strong="H5598"\w*, der \w aus|strong="H4480"\w* den \w Kindern|strong="H3211"\w* der \w Riesen|strong="H7497"\w* war, und sie wurden \w gedemütigt|strong="H3665"\w*.  
\v 5 Und es erhob \w sich|strong="H1961"\w* \w noch|strong="H5750"\w* ein \w Streit|strong="H4421"\w* mit den \w Philistern|strong="H6430"\w*. Da \w schlug|strong="H5221"\w* \w Elhanan|strong="H0445"\w*, der \w Sohn|strong="H1121"\w* \w Jairs|strong="H3265"\w*, den \w Lahemi|strong="H3902"\w*, den \w Bruder|strong="H0251"\w* \w Goliaths|strong="H1555"\w*, den \w Gathiter|strong="H1663"\w*, welcher hatte eine \w Spießstange|strong="H2595"\w* wie ein \w Weberbaum|strong="H0707"\w*.  
\v 6  \w Abermals|strong="H5750"\w* \w ward|strong="H1961"\w* ein \w Streit|strong="H4421"\w* zu \w Gath|strong="H1661"\w*. Da \w war|strong="H1961"\w* ein \w großer|strong="H4060"\w* \w Mann|strong="H0376"\w*, der hatte je \w sechs|strong="H8337"\w* \w Finger|strong="H0676"\w* und \w sechs|strong="H8337"\w* Zehen, die machen zusammen \w vierundzwanzig|strong="H0702"\w*; und \w er|strong="H1931"\w* war \w auch|strong="H1571"\w* von den \w Riesen|strong="H7497"\w* \w geboren|strong="H3205"\w*  
\v 7 und \w höhnte|strong="H2778"\w* \w Israel|strong="H3478"\w*. Aber \w Jonathan|strong="H3083"\w*, der \w Sohn|strong="H1121"\w* \w Simeas|strong="H8092"\w*, des \w Bruders|strong="H0251"\w* \w Davids|strong="H1732"\w*, \w schlug|strong="H5221"\w* ihn.  
\v 8  \w Diese|strong="H0411"\w* waren \w geboren|strong="H3205"\w* von den \w Riesen|strong="H7497"\w* zu \w Gath|strong="H1661"\w* und \w fielen|strong="H5307"\w* durch die \w Hand|strong="H3027"\w* \w Davids|strong="H1732"\w* \w und|strong="H3027"\w* seiner \w Knechte|strong="H5650"\w*.   
\c 21  
\p
\v 1 Und der \w Satan|strong="H7854"\w* \w stand|strong="H5975"\w* \w wider|strong="H5921"\w* \w Israel|strong="H3478"\w* und \w reizte|strong="H5496"\w* \w David|strong="H1732"\w*, daß er \w Israel|strong="H3478"\w* zählen \w ließe|strong="H4487"\w*.  
\v 2 Und \w David|strong="H1732"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Joab|strong="H3097"\w* und \w zu|strong="H0413"\w* des \w Volkes|strong="H5971"\w* \w Obersten|strong="H8269"\w*: Gehet \w hin|strong="H3212"\w*, \w zählt|strong="H5608"\w* \w Israel|strong="H3478"\w* \w von|strong="H4480"\w* Beer-\w Seba|strong="H0884"\w* an bis \w gen|strong="H5704"\w* \w Dan|strong="H1835"\w* und \w bringt|strong="H0935"\w* es \w zu|strong="H0413"\w* mir, daß ich \w wisse|strong="H3045"\w*, \w wieviel|strong="H4557"\w* ihrer sind.  
\v 3  \w Joab|strong="H3097"\w* \w sprach|strong="H0559"\w*: Der \w HERR|strong="H3068"\w* tue \w zu|strong="H5921"\w* seinem \w Volk|strong="H5971"\w*, wie \w sie|strong="H1992"\w* jetzt sind, \w hundertmal|strong="H3967"\w* \w soviel|strong="H3254"\w*; aber, mein \w Herr|strong="H0113"\w* \w König|strong="H4428"\w*, sind sie \w nicht|strong="H3808"\w* \w alle|strong="H3605"\w* meines \w Herrn|strong="H0113"\w* \w Knechte|strong="H5650"\w*? \w Warum|strong="H4100"\w* \w fragt|strong="H1245"\w* denn mein \w Herr|strong="H0113"\w* \w darnach|strong="H2063"\w*? \w Warum|strong="H4100"\w* soll eine \w Schuld|strong="H0819"\w* auf \w Israel|strong="H3478"\w* \w kommen|strong="H1961"\w*?  
\v 4 Aber des \w Königs|strong="H4428"\w* \w Wort|strong="H1697"\w* stand \w fest|strong="H2388"\w* \w wider|strong="H5921"\w* \w Joab|strong="H3097"\w*. Und \w Joab|strong="H3097"\w* zog \w aus|strong="H3318"\w* und wandelte \w durch|strong="H1980"\w* das \w ganze|strong="H3605"\w* \w Israel|strong="H3478"\w* und \w kam|strong="H0935"\w* gen \w Jerusalem|strong="H3389"\w*  
\v 5  \w und|strong="H3097"\w* \w gab|strong="H5414"\w* die \w Zahl|strong="H4557"\w* \w des|strong="H4480"\w* \w gezählten|strong="H4662"\w* \w Volks|strong="H5971"\w* \w David|strong="H1732"\w*. Und es \w waren|strong="H1961"\w* des \w ganzen|strong="H3605"\w* \w Israels|strong="H3478"\w* \w elfhundertmal|strong="H0505"\w* \w tausend|strong="H0505"\w* \w Mann|strong="H0376"\w*, die das \w Schwert|strong="H2719"\w* \w auszogen|strong="H8025"\w*, und Juda'\w s|strong="H3063"\w* \w vierhundertmal|strong="H0702"\w* und \w siebzigtausend|strong="H7657"\w* \w Mann|strong="H0376"\w*, die das \w Schwert|strong="H2719"\w* \w auszogen|strong="H8025"\w*.  
\v 6  \w Levi|strong="H3878"\w* aber und \w Benjamin|strong="H1144"\w* zählte \w er|strong="H6485"\w* \w nicht|strong="H3808"\w* \w unter|strong="H8432"\w* ihnen; \w denn|strong="H3588"\w* es war dem \w Joab|strong="H3097"\w* des \w Königs|strong="H4428"\w* \w Wort|strong="H1697"\w* ein \w Greuel|strong="H8581"\w*.  
\v 7  \w Aber|strong="H5921"\w* \w solches|strong="H2088"\w* \w gefiel|strong="H1697"\w* \w Gott|strong="H0430"\w* \w übel|strong="H3415"\w*, und er \w schlug|strong="H5221"\w* \w Israel|strong="H3478"\w*.  
\v 8 Und \w David|strong="H1732"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Gott|strong="H0430"\w*: Ich habe \w schwer|strong="H3966"\w* \w gesündigt|strong="H2398"\w*, \w daß|strong="H0834"\w* ich \w das|strong="H2088"\w* getan \w habe|strong="H6213"\w*. \w Nun|strong="H6258"\w* \w aber|strong="H4994"\w* nimm \w weg|strong="H5674"\w* die \w Missetat|strong="H5771"\w* deines \w Knechtes|strong="H5650"\w*; \w denn|strong="H3588"\w* ich habe \w sehr|strong="H3966"\w* töricht \w getan|strong="H5528"\w*.  
\v 9 Und der \w HERR|strong="H3068"\w* \w redete|strong="H1696"\w* \w mit|strong="H0413"\w* \w Gad|strong="H1410"\w*, dem \w Seher|strong="H2374"\w* \w Davids|strong="H1732"\w*, und \w sprach|strong="H0559"\w*:  
\v 10 Gehe \w hin|strong="H3212"\w*, \w rede|strong="H1696"\w* \w mit|strong="H0413"\w* \w David|strong="H1732"\w* und \w sprich|strong="H0559"\w*: \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Dreierlei|strong="H7969"\w* \w lege|strong="H5186"\w* \w ich|strong="H0589"\w* dir \w vor|strong="H5186"\w*; \w erwähle|strong="H4480"\w* dir \w eins|strong="H0259"\w*, \w daß|strong="H2007"\w* ich es dir \w tue|strong="H6213"\w*.  
