\v 13  \w Dann|strong="H0227"\w* aber wirst du Glück \w haben|strong="H6743"\w*, \w wenn|strong="H0518"\w* du dich \w hältst|strong="H8104"\w*, daß du \w tust|strong="H6213"\w* nach den \w Geboten|strong="H2706"\w* und \w Rechten|strong="H4941"\w*, \w die|strong="H0834"\w* der \w HERR|strong="H3068"\w* dem \w Mose|strong="H4872"\w* geboten \w hat|strong="H6680"\w* \w an|strong="H5921"\w* \w Israel|strong="H3478"\w*. Sei \w getrost|strong="H2388"\w* und \w unverzagt|strong="H0553"\w*, \w fürchte|strong="H3372"\w* dich \w nicht|strong="H0408"\w* und \w zage|strong="H2865"\w* \w nicht|strong="H0408"\w*!  
\v 14  \w Siehe|strong="H2009"\w* ich habe in meiner \w Mühsal|strong="H6040"\w* \w geschafft|strong="H3559"\w* zum \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w hunderttausend|strong="H3967"\w* \w Zentner|strong="H3603"\w* \w Gold|strong="H2091"\w* und \w tausendmal|strong="H0505"\w* \w tausend|strong="H0505"\w* \w Zentner|strong="H3603"\w* \w Silber|strong="H3701"\w*, dazu \w Erz|strong="H5178"\w* und \w Eisen|strong="H1270"\w* \w ohne|strong="H0369"\w* \w Zahl|strong="H4948"\w*; \w denn|strong="H3588"\w* es \w ist|strong="H1961"\w* zu \w viel|strong="H7230"\w*. Auch \w Holz|strong="H6086"\w* und \w Steine|strong="H0068"\w* habe ich \w zugerichtet|strong="H3559"\w*; des \w magst|strong="H3254"\w* du \w noch|strong="H5921"\w* mehr \w machen|strong="H3254"\w*.  
\v 15  \w So|strong="H5973"\w* hast du \w viel|strong="H7230"\w* \w Arbeiter|strong="H4399"\w*, \w Steinmetzen|strong="H2672"\w* und \w Zimmerleute|strong="H2796"\w* an \w Stein|strong="H0068"\w* und \w Holz|strong="H6086"\w*, und \w allerlei|strong="H3605"\w* \w Meister|strong="H2450"\w* in \w allerlei|strong="H3605"\w* \w Arbeit|strong="H4399"\w*,  
\v 16 an \w Gold|strong="H2091"\w*, \w Silber|strong="H3701"\w*, \w Erz|strong="H5178"\w* und \w Eisen|strong="H1270"\w* \w ohne|strong="H0369"\w* \w Zahl|strong="H4557"\w*. So mache dich \w auf|strong="H6965"\w* und richte es \w aus|strong="H6213"\w*; der \w HERR|strong="H3068"\w* wird \w mit|strong="H5973"\w* dir \w sein|strong="H1961"\w*!  
\v 17 Und \w David|strong="H1732"\w* \w gebot|strong="H6680"\w* \w allen|strong="H3605"\w* \w Obersten|strong="H8269"\w* \w Israels|strong="H3478"\w*, daß sie seinem \w Sohn|strong="H1121"\w* \w Salomo|strong="H8010"\w* \w hülfen|strong="H5826"\w*.  
\v 18 “Ist \w nicht|strong="H3808"\w* der \w HERR|strong="H3068"\w*, euer \w Gott|strong="H0430"\w*, \w mit|strong="H5973"\w* euch und hat euch Ruhe \w gegeben|strong="H5117"\w* \w umher|strong="H5439"\w*? \w Denn|strong="H3588"\w* er hat die \w Einwohner|strong="H3427"\w* des \w Landes|strong="H0776"\w* in meine \w Hand|strong="H3027"\w* \w gegeben|strong="H5414"\w*, und das \w Land|strong="H0776"\w* ist \w unterworfen|strong="H3533"\w* \w dem|strong="H6440"\w* \w HERRN|strong="H3068"\w* und \w seinem|strong="H6440"\w* \w Volk|strong="H5971"\w*.  
\v 19 So \w richtet|strong="H5414"\w* \w nun|strong="H6258"\w* euer \w Herz|strong="H3824"\w* und eure \w Seele|strong="H5315"\w*, den \w HERRN|strong="H3068"\w*, euren \w Gott|strong="H0430"\w*, zu \w suchen|strong="H1875"\w*. Und macht euch \w auf|strong="H6965"\w* und \w bauet|strong="H1129"\w* \w Gott|strong="H0430"\w* dem \w HERRN|strong="H3068"\w* ein \w Heiligtum|strong="H4720"\w*, daß man die \w Lade|strong="H0727"\w* des \w Bundes|strong="H1285"\w* des \w HERRN|strong="H3068"\w* und die \w heiligen|strong="H6944"\w* \w Gefäße|strong="H3627"\w* \w Gottes|strong="H0430"\w* in das \w Haus|strong="H1004"\w* \w bringe|strong="H0935"\w*, das dem \w Namen|strong="H8034"\w* des \w HERRN|strong="H3068"\w* gebaut soll \w werden|strong="H1129"\w*.”   
\c 23  
\p
\v 1 Also \w machte|strong="H4427"\w* \w David|strong="H1732"\w* seinen \w Sohn|strong="H1121"\w* \w Salomo|strong="H8010"\w* zum \w König|strong="H4427"\w* \w über|strong="H5921"\w* \w Israel|strong="H3478"\w*, da er \w alt|strong="H2204"\w* und des \w Lebens|strong="H3117"\w* \w satt|strong="H7646"\w* war.  
\v 2 Und David \w versammelte|strong="H0622"\w* \w alle|strong="H3605"\w* \w Obersten|strong="H8269"\w* in \w Israel|strong="H3478"\w* und die \w Priester|strong="H3548"\w* und \w Leviten|strong="H3881"\w*.  
\v 3 Und man \w zählte|strong="H5608"\w* die \w Leviten|strong="H3881"\w* \w von|strong="H4480"\w* \w dreißig|strong="H7970"\w* \w Jahren|strong="H8141"\w* und \w darüber|strong="H4605"\w*; und ihre \w Zahl|strong="H4557"\w* \w war|strong="H1961"\w* von Haupt zu \w Haupt|strong="H1538"\w*, was \w Männer|strong="H1397"\w* waren, \w achtunddreißigtausend|strong="H8083"\w*.  
\v 4 “\w Aus|strong="H4480"\w* \w diesen|strong="H0428"\w* sollen \w vierundzwanzigtausend|strong="H0702"\w* \w dem|strong="H5921"\w* \w Werk|strong="H4399"\w* am \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w vorstehen|strong="H5329"\w* und \w sechstausend|strong="H8337"\w* \w Amtleute|strong="H7860"\w* und \w Richter|strong="H8199"\w* sein  
\v 5 und \w viertausend|strong="H0702"\w* \w Torhüter|strong="H7778"\w* und \w viertausend|strong="H0702"\w* \w Lobsänger|strong="H1984"\w* des \w HERRN|strong="H3068"\w* mit \w Saitenspielen|strong="H3627"\w*, \w die|strong="H0834"\w* ich gemacht \w habe|strong="H6213"\w*, Lob zu \w singen|strong="H1984"\w*.”  
\v 6 Und \w David|strong="H1732"\w* \w machte|strong="H2505"\w* \w Ordnungen|strong="H4256"\w* unter den \w Kindern|strong="H1121"\w* \w Levi|strong="H3878"\w*, nämlich unter \w Gerson|strong="H1648"\w*, \w Kahath|strong="H6955"\w* und \w Merari|strong="H4847"\w*.  
\v 7 Die \w Gersoniter|strong="H1649"\w* waren: \w Laedan|strong="H3936"\w* und \w Simei|strong="H8096"\w*.  
\v 8 Die \w Kinder|strong="H1121"\w* \w Laedans|strong="H3936"\w*: der \w erste|strong="H7218"\w*, \w Jehiel|strong="H3171"\w*, \w Setham|strong="H2241"\w* und \w Joel|strong="H3100"\w*, die \w drei|strong="H7969"\w*.  
\v 9 Die \w Kinder|strong="H1121"\w* \w Simeis|strong="H8096"\w* waren: \w Salomith|strong="H8019"\w*, \w Hasiel|strong="H2381"\w* und \w Haran|strong="H2039"\w*, die \w drei|strong="H7969"\w*. \w Diese|strong="H0428"\w* waren die \w Häupter|strong="H7218"\w* der \w Vaterhäuser|strong="H0001"\w* von \w Laedan|strong="H3936"\w*.  
\v 10 Und diese waren \w Simeis|strong="H8096"\w* \w Kinder|strong="H1121"\w*: \w Jahath|strong="H3189"\w*, \w Sina|strong="H2126"\w*, \w Jeus|strong="H3266"\w* und \w Beria|strong="H1283"\w*. \w Diese|strong="H0428"\w* \w vier|strong="H0702"\w* waren \w Simeis|strong="H8096"\w* \w Kinder|strong="H1121"\w*.  
\v 11  \w Jahath|strong="H3189"\w* aber \w war|strong="H1961"\w* der \w erste|strong="H7218"\w*, \w Sina|strong="H2125"\w* der \w andere|strong="H8145"\w*. Aber \w Jeus|strong="H3266"\w* und \w Beria|strong="H1283"\w* \w hatten|strong="H7235"\w* \w nicht|strong="H3808"\w* \w Kinder|strong="H1121"\w*; darum wurden \w sie|strong="H1961"\w* für ein \w Vaterhaus|strong="H0001"\w* \w gerechnet|strong="H0259"\w*.  
\v 12 Die \w Kinder|strong="H1121"\w* \w Kahaths|strong="H6955"\w* waren: \w Amram|strong="H6019"\w*, \w Jizhar|strong="H3324"\w*, \w Hebron|strong="H2275"\w* und \w Usiel|strong="H5816"\w*, die \w vier|strong="H0702"\w*.  
\v 13 Die \w Kinder|strong="H1121"\w* \w Amrams|strong="H6019"\w* waren: \w Aaron|strong="H0175"\w* und \w Mose|strong="H4872"\w*. \w Aaron|strong="H0175"\w* aber ward \w abgesondert|strong="H0914"\w*, daß er \w geheiligt|strong="H6942"\w* würde zum \w Hochheiligen|strong="H6944"\w*, \w er|strong="H1931"\w* und seine \w Söhne|strong="H1121"\w* \w ewiglich|strong="H5704"\w*, zu \w räuchern|strong="H6999"\w* \w vor|strong="H6440"\w* dem \w HERRN|strong="H3068"\w* und zu \w dienen|strong="H8334"\w* und zu \w segnen|strong="H1288"\w* in dem \w Namen|strong="H8034"\w* des HERRN \w ewiglich|strong="H5704"\w*.  
\v 14 Und Mose'\w s|strong="H4872"\w*, des \w Mannes|strong="H0376"\w* \w Gottes|strong="H0430"\w*, \w Kinder|strong="H1121"\w* wurden \w genannt|strong="H7121"\w* \w unter|strong="H5921"\w* der \w Leviten|strong="H3878"\w* \w Stamm|strong="H7626"\w*.  
\v 15 Die \w Kinder|strong="H1121"\w* aber Mose'\w s|strong="H4872"\w* waren: \w Gersom|strong="H1647"\w* und \w Elieser|strong="H0461"\w*.  
\v 16 Die \w Kinder|strong="H1121"\w* \w Gersoms|strong="H1647"\w*: der \w erste|strong="H7218"\w* war \w Sebuel|strong="H7619"\w*.  
\v 17 Die \w Kinder|strong="H1121"\w* \w Eliesers|strong="H0461"\w*: der \w erste|strong="H7218"\w* \w war|strong="H1961"\w* \w Rehabja|strong="H7345"\w*. Und \w Elieser|strong="H0461"\w* \w hatte|strong="H1961"\w* \w keine|strong="H3808"\w* \w andern|strong="H0312"\w* \w Kinder|strong="H1121"\w*; aber der \w Kinder|strong="H1121"\w* \w Ehabjas|strong="H7345"\w* \w waren|strong="H7235"\w* \w überaus|strong="H4605"\w* \w viele|strong="H7235"\w*.  
\v 18 Die \w Kinder|strong="H1121"\w* \w Jizhars|strong="H3324"\w* waren: \w Salomith|strong="H8019"\w*, der \w erste|strong="H7218"\w*.  
\v 19 Die \w Kinder|strong="H1121"\w* \w Hebrons|strong="H2275"\w* waren: \w Jeria|strong="H3404"\w*, der \w erste|strong="H7218"\w*; \w Amarja|strong="H0568"\w*, der \w zweite|strong="H8145"\w*; \w Jahasiel|strong="H3166"\w*, der \w dritte|strong="H7992"\w*; und \w Jakmeam|strong="H3360"\w*, der \w vierte|strong="H7243"\w*.  
\v 20 Die \w Kinder|strong="H1121"\w* \w Usiels|strong="H5816"\w* waren, \w Micha|strong="H4318"\w*, der \w erste|strong="H7218"\w*, und \w Jissia|strong="H3449"\w*, der \w andere|strong="H8145"\w*.  
\v 21 Die \w Kinder|strong="H1121"\w* \w Meraris|strong="H4847"\w* waren: \w Maheli|strong="H4249"\w* und \w Musi|strong="H4187"\w*. Die \w Kinder|strong="H1121"\w* \w Mahelis|strong="H4249"\w* waren: \w Eleasar|strong="H0499"\w* und \w Kis|strong="H7027"\w*.  
\v 22  \w Eleasar|strong="H0499"\w* aber \w starb|strong="H4191"\w* und \w hatte|strong="H1961"\w* \w keine|strong="H3808"\w* \w Söhne|strong="H1121"\w*, \w sondern|strong="H3588"\w* \w Töchter|strong="H1323"\w*; und die \w Kinder|strong="H1121"\w* des \w Kis|strong="H0251"\w*, ihre \w Brüder|strong="H7027"\w*, \w nahmen|strong="H5375"\w* sie.  
\v 23 Die \w Kinder|strong="H1121"\w* \w Musis|strong="H4187"\w* waren: \w Maheli|strong="H4249"\w*, \w Eder|strong="H5740"\w* und \w Jeremoth|strong="H3406"\w*, die \w drei|strong="H7969"\w*.  
\v 24  \w Das|strong="H0428"\w* sind die \w Kinder|strong="H1121"\w* \w Levi|strong="H3878"\w* nach ihren \w Vaterhäusern|strong="H0001"\w*, nämlich die \w Häupter|strong="H7218"\w* der \w Vaterhäuser|strong="H0001"\w*, die gerechnet \w wurden|strong="H6485"\w* nach der \w Namen|strong="H8034"\w* \w Zahl|strong="H4557"\w* von Haupt zu \w Haupt|strong="H1538"\w*, welche \w taten|strong="H6213"\w* das \w Geschäft|strong="H4399"\w* des \w Amts|strong="H5656"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*, \w von|strong="H4480"\w* \w zwanzig|strong="H6242"\w* \w Jahren|strong="H8141"\w* und \w darüber|strong="H4605"\w*.  
\v 25  \w Denn|strong="H3588"\w* \w David|strong="H1732"\w* \w sprach|strong="H0559"\w*: Der \w HERR|strong="H3068"\w*, der \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*, hat seinem \w Volk|strong="H5971"\w* Ruhe \w gegeben|strong="H5117"\w* und wird zu \w Jerusalem|strong="H3389"\w* \w wohnen|strong="H7931"\w* \w ewiglich|strong="H5704"\w*.  
\v 26 So wurden \w auch|strong="H1571"\w* die \w Kinder|strong="H1121"\w* \w Levi|strong="H3881"\w* \w gezählt|strong="H4557"\w* \w von|strong="H4480"\w* \w zwanzig|strong="H6241"\w* \w Jahren|strong="H8141"\w* und \w darüber|strong="H4605"\w*, da sie ja die \w Wohnung|strong="H4908"\w* \w nicht|strong="H0369"\w* \w mehr|strong="H3605"\w* zu tragen \w hatten|strong="H5375"\w* mit all ihrem \w Geräte|strong="H3627"\w* ihres \w Amts|strong="H5656"\w*,  
\v 27  \w sondern|strong="H3588"\w* nach den \w letzten|strong="H0314"\w* \w Worten|strong="H1697"\w* \w Davids|strong="H1732"\w*,  
\v 28  \w daß|strong="H3588"\w* sie stehen \w sollten|strong="H4612"\w* unter der \w Hand|strong="H3027"\w* der \w Kinder|strong="H1121"\w* \w Aaron|strong="H0175"\w*, zu \w dienen|strong="H5656"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w* \w in|strong="H5921"\w* den \w Vorhöfen|strong="H2691"\w* \w und|strong="H5921"\w* \w Kammern|strong="H3957"\w* und \w zur|strong="H5921"\w* \w Reinigung|strong="H2893"\w* von \w allerlei|strong="H3605"\w* \w Heiligem|strong="H6944"\w* und zu allem \w Werk|strong="H4639"\w* des \w Amts|strong="H5656"\w* im \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w*  
\v 29 und zum \w Schaubrot|strong="H4635"\w*, zum \w Semmelmehl|strong="H5560"\w* für das \w Speisopfer|strong="H4503"\w*, zu den \w ungesäuerten|strong="H4682"\w* \w Fladen|strong="H7550"\w*, zur \w Pfanne|strong="H4227"\w*, zum \w Rösten|strong="H7246"\w* und zu \w allem|strong="H3605"\w* \w Gewicht|strong="H4884"\w* und \w Maß|strong="H4060"\w*  
\v 30 und zu \w stehen|strong="H5975"\w* \w des|strong="H1242"\w* \w Morgens|strong="H1242"\w*, zu \w danken|strong="H3034"\w* und zu \w loben|strong="H1984"\w* den \w HERRN|strong="H3068"\w*, und des \w Abends|strong="H6153"\w* auch \w also|strong="H3651"\w*,  
\v 31 und \w alle|strong="H3605"\w* \w Brandopfer|strong="H5930"\w* dem \w HERRN|strong="H3068"\w* zu \w opfern|strong="H5927"\w* auf die \w Sabbate|strong="H7676"\w*, \w Neumonde|strong="H2320"\w* und \w Feste|strong="H4150"\w*, nach der \w Zahl|strong="H4557"\w* und \w Gebühr|strong="H4941"\w* \w allewege|strong="H5921"\w* \w vor|strong="H6440"\w* dem \w HERRN|strong="H3068"\w*,  
\v 32 daß sie des \w Dienstes|strong="H4931"\w* an der \w Hütte|strong="H0168"\w* des \w Stifts|strong="H4150"\w* \w warteten|strong="H8104"\w* und \w des|strong="H4931"\w* \w Heiligtums|strong="H6944"\w* und \w der|strong="H4931"\w* \w Kinder|strong="H1121"\w* \w Aaron|strong="H0175"\w*, ihrer \w Brüder|strong="H0251"\w*, zu \w dienen|strong="H5656"\w* im \w Hause|strong="H1004"\w* des \w HERRN|strong="H3068"\w*.   
\c 24  
\p
\v 1 Aber dies waren die \w Ordnungen|strong="H4256"\w* der \w Kinder|strong="H1121"\w* \w Aaron|strong="H0175"\w*. Die \w Kinder|strong="H1121"\w* \w Aarons|strong="H0175"\w* waren: \w Nadab|strong="H5070"\w*, \w Abihu|strong="H0030"\w*, \w Eleasar|strong="H0499"\w* und \w Ithamar|strong="H0385"\w*.  
\v 2 Aber \w Nadab|strong="H5070"\w* und \w Abihu|strong="H0030"\w* \w starben|strong="H4191"\w* \w vor|strong="H6440"\w* ihrem \w Vater|strong="H0001"\w* und \w hatten|strong="H1961"\w* \w keine|strong="H3808"\w* \w Kinder|strong="H1121"\w*. Und \w Eleasar|strong="H0499"\w* und \w Ithamar|strong="H0385"\w* wurden \w Priester|strong="H3547"\w*.  
\v 3 Und es \w ordneten|strong="H2505"\w* sie \w David|strong="H1732"\w* und \w Zadok|strong="H6659"\w* \w aus|strong="H4480"\w* den \w Kinder|strong="H1121"\w* \w Eleasars|strong="H0499"\w* und \w Ahimelech|strong="H0288"\w* \w aus|strong="H4480"\w* den \w Kindern|strong="H1121"\w* \w Ithamars|strong="H0385"\w* nach ihrer \w Zahl|strong="H6486"\w* und ihrem \w Amt|strong="H5656"\w*.  
\v 4 Und wurden der \w Kinder|strong="H1121"\w* \w Eleasars|strong="H0499"\w* \w mehr|strong="H7227"\w* \w gefunden|strong="H4672"\w* an \w Häuptern|strong="H7218"\w* der \w Männer|strong="H1397"\w* \w denn|strong="H4480"\w* der \w Kinder|strong="H1121"\w* \w Ithamars|strong="H0385"\w*. Und er \w ordnete|strong="H2505"\w* sie also: \w sechzehn|strong="H8337"\w* aus den \w Kindern|strong="H1121"\w* \w Eleasars|strong="H0499"\w* zu \w Obersten|strong="H7218"\w* ihrer \w Vaterhäuser|strong="H0001"\w* und \w acht|strong="H8083"\w* aus den \w Kindern|strong="H1121"\w* \w Ithamars|strong="H0385"\w* nach ihren \w Vaterhäusern|strong="H0001"\w*.  
\v 5 Er \w ordnete|strong="H2505"\w* \w sie|strong="H0428"\w* aber durchs \w Los|strong="H1486"\w*, darum \w daß|strong="H3588"\w* beide \w aus|strong="H4480"\w* \w Eleasars|strong="H0499"\w* und \w Ithamars|strong="H0385"\w* \w Kindern|strong="H1121"\w* \w Oberste|strong="H8269"\w* \w waren|strong="H1961"\w* im \w Heiligtum|strong="H6944"\w* und \w Oberste|strong="H8269"\w* vor \w Gott|strong="H0430"\w*.  
\v 6 Und der \w Schreiber|strong="H5608"\w* \w Semaja|strong="H8098"\w*, der \w Sohn|strong="H1121"\w* \w Nathanaels|strong="H5417"\w*, \w aus|strong="H4480"\w* den \w Leviten|strong="H3881"\w*, schrieb sie \w auf|strong="H3789"\w* \w vor|strong="H6440"\w* dem \w König|strong="H4428"\w* und vor den \w Obersten|strong="H8269"\w* und vor \w Zadok|strong="H6659"\w*, dem \w Priester|strong="H3548"\w*, und vor \w Ahimelech|strong="H0288"\w*, dem \w Sohn|strong="H1121"\w* \w Abjathars|strong="H0054"\w*, und vor den \w Obersten|strong="H7128"\w* der \w Vaterhäuser|strong="H0001"\w* unter den \w Priestern|strong="H3548"\w* und \w Leviten|strong="H3881"\w*, \w nämlich|strong="H0270"\w* je \w ein|strong="H0259"\w* \w Vaterhaus|strong="H0001"\w* für \w Eleasar|strong="H0499"\w* und das \w andere|strong="H0270"\w* für \w Ithamar|strong="H0385"\w*.  
\v 7 Das \w erste|strong="H7223"\w* \w Los|strong="H1486"\w* fiel \w auf|strong="H3318"\w* \w Jojarib|strong="H3080"\w*, das \w zweite|strong="H8145"\w* auf \w Jedaja|strong="H3048"\w*,  
\v 8 das \w dritte|strong="H7992"\w* auf \w Harim|strong="H2766"\w*, das \w vierte|strong="H7243"\w* auf \w Seorim|strong="H8188"\w*,  
\v 9 das \w fünfte|strong="H2549"\w* auf \w Malchia|strong="H4441"\w*, das \w sechste|strong="H8345"\w* auf \w Mijamin|strong="H4326"\w*,  
\v 10 das \w siebente|strong="H7637"\w* auf \w Hakkoz|strong="H6976"\w*, das \w achte|strong="H8066"\w* auf \w Abia|strong="H0029"\w*,  
\v 11 das \w neunte|strong="H8671"\w* auf \w Jesua|strong="H3442"\w*, das \w zehnte|strong="H6224"\w* auf \w Sechanja|strong="H7935"\w*,  
\v 12 das \w elfte|strong="H6249"\w* auf \w Eljasib|strong="H0475"\w*, das \w zwölfte|strong="H8147"\w* auf \w Jakim|strong="H3356"\w*,  
\v 13 das \w dreizehnte|strong="H7969"\w* auf \w Huppa|strong="H2647"\w*, das \w vierzehnte|strong="H0702"\w* auf \w Jesebeab|strong="H3428"\w*,  
