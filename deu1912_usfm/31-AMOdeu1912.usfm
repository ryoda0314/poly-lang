\c 1  
\p
\v 1 Dies ist'\w s|strong="H1697"\w*, was \w Amos|strong="H5986"\w*, \w der|strong="H0834"\w* unter den \w Hirten|strong="H5349"\w* zu \w Thekoa|strong="H8620"\w* \w war|strong="H1961"\w*, gesehen \w hat|strong="H2372"\w* \w über|strong="H5921"\w* \w Israel|strong="H3478"\w* zur \w Zeit|strong="H3117"\w* \w Usias|strong="H5818"\w*, des \w Königs|strong="H4428"\w* in \w Juda|strong="H3063"\w*, \w und|strong="H3117"\w* \w Jerobeams|strong="H3379"\w*, des \w Sohnes|strong="H1121"\w* \w Joas|strong="H3101"\w*, des \w Königs|strong="H4428"\w* \w Israels|strong="H3478"\w*, zwei \w Jahre|strong="H8141"\w* \w vor|strong="H6440"\w* dem \w Erdbeben|strong="H7494"\w*.  
\v 2 Und er \w sprach|strong="H0559"\w*: Der \w HERR|strong="H3068"\w* wird aus \w Zion|strong="H6726"\w* \w brüllen|strong="H7580"\w* und seine \w Stimme|strong="H6963"\w* aus \w Jerusalem|strong="H3389"\w* hören \w lassen|strong="H5414"\w*, daß die \w Auen|strong="H4999"\w* der \w Hirten|strong="H7462"\w* jämmerlich \w stehen|strong="H0056"\w* werden und der \w Karmel|strong="H3760"\w* \w oben|strong="H7218"\w* verdorren \w wird|strong="H3001"\w*.  
\v 3  \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Um|strong="H5921"\w* \w drei|strong="H7969"\w* \w und|strong="H5921"\w* \w vier|strong="H0702"\w* Frevel \w willen|strong="H6588"\w* der \w Damasker|strong="H1834"\w* will ich ihrer \w nicht|strong="H3808"\w* \w schonen|strong="H7725"\w*, \w darum|strong="H5921"\w* daß sie \w Gilead|strong="H1568"\w* mit \w eisernen|strong="H1270"\w* \w Zacken|strong="H2742"\w* gedroschen \w haben|strong="H1758"\w*;  
\v 4 sondern ich will ein \w Feuer|strong="H0784"\w* \w schicken|strong="H7971"\w* in das \w Haus|strong="H1004"\w* \w Hasaels|strong="H2371"\w*, das soll die \w Paläste|strong="H0759"\w* \w Benhadads|strong="H1130"\w* \w verzehren|strong="H0398"\w*.  
\v 5 Und ich will die \w Riegel|strong="H1280"\w* zu \w Damaskus|strong="H1834"\w* \w zerbrechen|strong="H7665"\w* und die \w Einwohner|strong="H3427"\w* auf dem Felde \w Aven|strong="H1237"\w* samt dem, der das \w Zepter|strong="H7626"\w* \w hält|strong="H8551"\w*, aus dem \w Lusthause|strong="H1004"\w* \w ausrotten|strong="H3772"\w*, daß das \w Volk|strong="H5971"\w* in \w Syrien|strong="H0758"\w* soll gen \w Kir|strong="H7024"\w* weggeführt \w werden|strong="H1540"\w*, \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*.  
\v 6  \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Um|strong="H5921"\w* \w drei|strong="H7969"\w* \w und|strong="H5921"\w* \w vier|strong="H0702"\w* \w Frevels|strong="H6588"\w* willen \w Gazas|strong="H5804"\w* will ich ihrer \w nicht|strong="H3808"\w* \w schonen|strong="H7725"\w*, \w darum|strong="H5921"\w* daß sie die Gefangenen \w alle|strong="H8003"\w* \w weggeführt|strong="H1540"\w* und an \w Edom|strong="H0123"\w* überantwortet \w haben|strong="H5462"\w*;  
\v 7 sondern ich will ein \w Feuer|strong="H0784"\w* in die \w Mauern|strong="H2346"\w* zu \w Gaza|strong="H5804"\w* \w schicken|strong="H7971"\w*, das soll ihre \w Paläste|strong="H0759"\w* \w verzehren|strong="H0398"\w*.  
\v 8 Und ich will die \w Einwohner|strong="H3427"\w* aus \w Asdod|strong="H0795"\w* und den, der das \w Zepter|strong="H7626"\w* \w hält|strong="H8551"\w*, aus \w Askalon|strong="H0831"\w* \w ausrotten|strong="H3772"\w* und meine \w Hand|strong="H3027"\w* \w wider|strong="H5921"\w* \w Ekron|strong="H6138"\w* \w kehren|strong="H7725"\w*, daß umkommen \w soll|strong="H0006"\w*, was von den \w Philistern|strong="H6430"\w* noch \w übrig|strong="H7611"\w* ist, \w spricht|strong="H0559"\w* der \w Herr|strong="H0136"\w* \w HERR|strong="H3069"\w*.  
\v 9  \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Um|strong="H5921"\w* \w drei|strong="H7969"\w* \w und|strong="H5921"\w* \w vier|strong="H0702"\w* \w Frevel|strong="H6588"\w* willen der Stadt \w Tyrus|strong="H6865"\w* will ich ihrer \w nicht|strong="H3808"\w* \w schonen|strong="H7725"\w*, \w darum|strong="H5921"\w* daß sie die \w Gefangenen|strong="H1546"\w* \w alle|strong="H8003"\w* an \w Edom|strong="H0123"\w* überantwortet \w haben|strong="H5462"\w* und \w nicht|strong="H3808"\w* \w gedacht|strong="H2142"\w* an den \w Bund|strong="H1285"\w* der \w Brüder|strong="H0251"\w*;  
\v 10 sondern ich will ein \w Feuer|strong="H0784"\w* in die \w Mauern|strong="H2346"\w* zu \w Tyrus|strong="H6865"\w* \w schicken|strong="H7971"\w*, das soll ihre \w Paläste|strong="H0759"\w* \w verzehren|strong="H0398"\w*.  
\v 11  \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Um|strong="H5921"\w* \w drei|strong="H7969"\w* \w und|strong="H5921"\w* \w vier|strong="H0702"\w* \w Frevel|strong="H6588"\w* willen \w Edoms|strong="H0123"\w* will ich sein \w nicht|strong="H3808"\w* \w schonen|strong="H7725"\w*, \w darum|strong="H5921"\w* daß er seinen \w Bruder|strong="H0251"\w* mit dem \w Schwert|strong="H2719"\w* verfolgt \w hat|strong="H7291"\w* und daß er alles \w Erbarmen|strong="H7356"\w* von sich \w getan|strong="H7843"\w* und \w immer|strong="H5703"\w* \w wütet|strong="H2963"\w* in seinem \w Zorn|strong="H0639"\w* und seinem \w Grimm|strong="H5678"\w* \w ewig|strong="H5331"\w* \w hält|strong="H8104"\w*;  
\v 12 sondern ich will ein \w Feuer|strong="H0784"\w* \w schicken|strong="H7971"\w* gen \w Theman|strong="H8487"\w*, das soll die \w Paläste|strong="H0759"\w* zu \w Bozra|strong="H1224"\w* \w verzehren|strong="H0398"\w*.  
\v 13  \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Um|strong="H5921"\w* \w drei|strong="H7969"\w* \w und|strong="H5921"\w* \w vier|strong="H0702"\w* \w Frevel|strong="H6588"\w* willen der \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w* will ich ihrer \w nicht|strong="H3808"\w* \w schonen|strong="H7725"\w*, \w darum|strong="H5921"\w* daß sie die \w Schwangeren|strong="H2030"\w* in \w Gilead|strong="H1568"\w* zerrissen \w haben|strong="H1234"\w*, \w damit|strong="H4616"\w* sie ihre \w Grenze|strong="H1366"\w* weiter \w machten|strong="H7337"\w*;  
\v 14 sondern ich will ein \w Feuer|strong="H0784"\w* \w anzünden|strong="H3341"\w* in den \w Mauern|strong="H2346"\w* \w Rabbas|strong="H7237"\w*, das soll ihre \w Paläste|strong="H0759"\w* \w verzehren|strong="H0398"\w*, wenn man \w rufen|strong="H8643"\w* wird zur \w Zeit|strong="H3117"\w* des \w Streits|strong="H4421"\w* und wenn das \w Wetter|strong="H5591"\w* kommen wird zur \w Zeit|strong="H3117"\w* des \w Sturms|strong="H5492"\w*.  
\v 15 Da wird dann ihr \w König|strong="H4428"\w* \w samt|strong="H3162"\w* \w seinen|strong="H1931"\w* \w Fürsten|strong="H8269"\w* gefangen \w weggeführt|strong="H1473"\w* \w werden|strong="H1980"\w*, \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*.   
\c 2  
\p
\v 1  \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Um|strong="H5921"\w* \w drei|strong="H7969"\w* \w und|strong="H5921"\w* \w vier|strong="H0702"\w* \w Frevel|strong="H6588"\w* willen \w Moabs|strong="H4124"\w* will ich ihrer \w nicht|strong="H3808"\w* \w schonen|strong="H7725"\w*, \w darum|strong="H5921"\w* daß sie die \w Gebeine|strong="H6106"\w* des \w Königs|strong="H4428"\w* zu \w Edom|strong="H0123"\w* haben zu \w Asche|strong="H7875"\w* \w verbrannt|strong="H8313"\w*;  
\v 2 sondern ich will ein \w Feuer|strong="H0784"\w* \w schicken|strong="H7971"\w* nach \w Moab|strong="H4124"\w*, das soll die \w Paläste|strong="H0759"\w* zu \w Karioth|strong="H7152"\w* \w verzehren|strong="H0398"\w*; und \w Moab|strong="H4124"\w* soll \w sterben|strong="H4191"\w* im \w Getümmel|strong="H7588"\w* und \w Geschrei|strong="H8643"\w* und \w Posaunenhall|strong="H6963"\w*.  
\v 3 Und ich will den \w Richter|strong="H8199"\w* \w unter|strong="H7130"\w* ihnen \w ausrotten|strong="H3772"\w* und \w alle|strong="H3605"\w* ihre \w Fürsten|strong="H8269"\w* \w samt|strong="H5973"\w* ihm \w erwürgen|strong="H2026"\w*, \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*.  
\v 4  \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Um|strong="H5921"\w* \w drei|strong="H7969"\w* \w und|strong="H5921"\w* \w vier|strong="H0702"\w* \w Frevel|strong="H6588"\w* willen Juda'\w s|strong="H3063"\w* will ich sein \w nicht|strong="H3808"\w* \w schonen|strong="H7725"\w*, \w darum|strong="H5921"\w* daß sie des \w HERRN|strong="H3068"\w* \w Gesetz|strong="H8451"\w* \w verachten|strong="H3988"\w* und seine \w Rechte|strong="H2706"\w* \w nicht|strong="H3808"\w* \w halten|strong="H8104"\w* und lassen sich ihre \w Lügen|strong="H3577"\w* \w verführen|strong="H8582"\w*, \w welchen|strong="H0834"\w* ihre \w Väter|strong="H0001"\w* nachgefolgt \w sind|strong="H0310"\w*;  
\v 5 sondern ich will ein \w Feuer|strong="H0784"\w* nach \w Juda|strong="H3063"\w* \w schicken|strong="H7971"\w*, das soll die \w Paläste|strong="H0759"\w* zu \w Jerusalem|strong="H3389"\w* \w verzehren|strong="H0398"\w*.  
\v 6  \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* der \w HERR|strong="H3068"\w*: \w Um|strong="H5921"\w* \w drei|strong="H7969"\w* \w und|strong="H5921"\w* \w vier|strong="H0702"\w* \w Frevel|strong="H6588"\w* willen \w Israels|strong="H3478"\w* will ich ihrer \w nicht|strong="H3808"\w* \w schonen|strong="H7725"\w*, \w darum|strong="H5921"\w* daß sie die \w Gerechten|strong="H6662"\w* um \w Geld|strong="H3701"\w* und die \w Armen|strong="H0034"\w* um ein Paar \w Schuhe|strong="H5275"\w* \w verkaufen|strong="H4376"\w*.  
\v 7  \w Sie|strong="H5921"\w* \w treten|strong="H7602"\w* den \w Kopf|strong="H7218"\w* der \w Armen|strong="H1800"\w* in den \w Kot|strong="H6083"\w* und \w hindern|strong="H5186"\w* den \w Weg|strong="H1870"\w* der \w Elenden|strong="H6035"\w*. Es \w geht|strong="H3212"\w* \w Sohn|strong="H0376"\w* und \w Vater|strong="H0001"\w* \w zur|strong="H0413"\w* \w Dirne|strong="H5291"\w*, \w daß|strong="H4616"\w* sie meinen \w heiligen|strong="H6944"\w* \w Namen|strong="H8034"\w* \w entheiligen|strong="H2490"\w*.  
\v 8 Und \w bei|strong="H0681"\w* \w allen|strong="H3605"\w* \w Altären|strong="H4196"\w* schlemmen \w sie|strong="H5186"\w* \w auf|strong="H5921"\w* den \w verpfändeten|strong="H2254"\w* \w Kleidern|strong="H0899"\w* und \w trinken|strong="H8354"\w* \w Wein|strong="H3196"\w* in ihrer \w Götter|strong="H0430"\w* \w Hause|strong="H1004"\w* von den \w Gebüßten|strong="H6064"\w*.  
\v 9 Und \w ich|strong="H0595"\w* habe doch den \w Amoriter|strong="H0567"\w* \w vor|strong="H4480"\w* ihnen \w her|strong="H6440"\w* \w vertilgt|strong="H8045"\w*, \w der|strong="H0834"\w* so \w hoch|strong="H1363"\w* war \w wie|strong="H1363"\w* die \w Zedern|strong="H0730"\w* \w und|strong="H1931"\w* seine \w Macht|strong="H2634"\w* wie die \w Eichen|strong="H0437"\w*; und ich \w vertilgte|strong="H8045"\w* \w oben|strong="H4480"\w* seine \w Frucht|strong="H6529"\w* \w und|strong="H4480"\w* \w unten|strong="H8478"\w* seine \w Wurzel|strong="H8328"\w*.  
\v 10 Auch habe \w ich|strong="H0595"\w* euch aus \w Ägyptenland|strong="H0776"\w* \w geführt|strong="H5927"\w* und \w vierzig|strong="H0705"\w* \w Jahre|strong="H8141"\w* in der \w Wüste|strong="H4057"\w* \w geleitet|strong="H3212"\w*, daß ihr der \w Amoriter|strong="H0567"\w* \w Land|strong="H0776"\w* \w besäßet|strong="H3423"\w*.  
\v 11 Und habe aus euren \w Kindern|strong="H1121"\w* \w Propheten|strong="H5030"\w* \w auferweckt|strong="H6965"\w* und \w Gottgeweihte|strong="H5139"\w* aus euren \w Jünglingen|strong="H0970"\w*. Ist's \w nicht|strong="H0369"\w* \w also|strong="H0637"\w*, ihr \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w*? \w spricht|strong="H5002"\w* der \w HERR|strong="H3068"\w*.  
\v 12 So gebt ihr den \w Geweihten|strong="H5139"\w* \w Wein|strong="H3196"\w* zu \w trinken|strong="H8248"\w* und \w gebietet|strong="H6680"\w* den \w Propheten|strong="H5030"\w* und \w sprecht|strong="H0559"\w*: Ihr sollt \w nicht|strong="H3808"\w* \w weissagen|strong="H5012"\w*!  
\v 13  \w Siehe|strong="H2009"\w*, \w ich|strong="H0595"\w* will's unter euch knarren \w machen|strong="H5781"\w*, \w wie|strong="H0834"\w* ein \w Wagen|strong="H5699"\w* \w voll|strong="H4392"\w* \w Garben|strong="H5995"\w* \w knarrt|strong="H5781"\w*,  
\v 14 daß der, so \w schnell|strong="H7031"\w* ist, soll \w nicht|strong="H3808"\w* \w entfliehen|strong="H4498"\w* noch der \w Starke|strong="H2389"\w* etwas \w vermögen|strong="H0553"\w* und der \w Mächtige|strong="H1368"\w* \w nicht|strong="H3808"\w* soll sein \w Leben|strong="H5315"\w* retten \w können|strong="H4422"\w*;  
\v 15 und die \w Bogenschützen|strong="H7198"\w* sollen \w nicht|strong="H3808"\w* \w bestehen|strong="H5975"\w*, und der \w schnell|strong="H7031"\w* laufen \w kann|strong="H7272"\w*, soll \w nicht|strong="H3808"\w* \w entlaufen|strong="H4422"\w*, und der \w da|strong="H5483"\w* \w reitet|strong="H7392"\w*, soll sein \w Leben|strong="H5315"\w* \w nicht|strong="H3808"\w* \w erretten|strong="H4422"\w*;  
\v 16 und der unter den \w Starken|strong="H1368"\w* der \w mannhafteste|strong="H0533"\w* ist, soll \w nackt|strong="H6174"\w* \w entfliehen|strong="H5127"\w* müssen \w zu|strong="H1931"\w* der \w Zeit|strong="H3117"\w*, \w spricht|strong="H5002"\w* der \w HERR|strong="H3068"\w*.   
\c 3  
\p
\v 1  \w Höret|strong="H8085"\w*, \w was|strong="H0834"\w* der \w HERR|strong="H3068"\w* \w mit|strong="H5921"\w* euch \w redet|strong="H1696"\w*, ihr \w Kinder|strong="H1121"\w* \w Israel|strong="H3478"\w*, \w mit|strong="H5921"\w* \w allen|strong="H3605"\w* \w Geschlechtern|strong="H4940"\w*, \w die|strong="H0834"\w* ich \w aus|strong="H4480"\w* \w Ägyptenland|strong="H0776"\w* geführt \w habe|strong="H5927"\w*:  
\v 2  \w Aus|strong="H4480"\w* \w allen|strong="H3605"\w* \w Geschlechtern|strong="H4940"\w* auf \w Erden|strong="H0127"\w* habe ich allein euch \w erkannt|strong="H3045"\w*; \w darum|strong="H5921"\w* will ich auch euch \w heimsuchen|strong="H6485"\w* in \w all|strong="H3605"\w* eurer \w Missetat|strong="H5771"\w*.  
\v 3 Mögen auch \w zwei|strong="H8147"\w* \w miteinander|strong="H3162"\w* \w wandeln|strong="H3212"\w*, \w sie|strong="H0518"\w* seien \w denn|strong="H1115"\w* eins \w untereinander|strong="H3259"\w*?  
\v 4  \w Brüllt|strong="H7580"\w* auch ein \w Löwe|strong="H0738"\w* im \w Walde|strong="H3293"\w*, wenn er keinen \w Raub|strong="H2964"\w* \w hat|strong="H0369"\w*? \w Schreit|strong="H6963"\w* auch ein junger \w Löwe|strong="H3715"\w* aus seiner \w Höhle|strong="H4585"\w*, \w er|strong="H1115"\w* habe \w denn|strong="H0518"\w* etwas \w gefangen|strong="H3920"\w*?  
\v 5  \w Fällt|strong="H5307"\w* auch ein \w Vogel|strong="H6833"\w* \w in|strong="H5921"\w* den \w Strick|strong="H6341"\w* auf der \w Erde|strong="H0776"\w*, da kein \w Vogler|strong="H4170"\w* \w ist|strong="H0369"\w*? \w Hebt|strong="H5927"\w* man auch den \w Strick|strong="H6341"\w* \w auf|strong="H5927"\w* \w von|strong="H4480"\w* der \w Erde|strong="H0127"\w*, der \w noch|strong="H3920"\w* \w nichts|strong="H3808"\w* gefangen \w hat|strong="H3920"\w*?  
\v 6  \w Bläst|strong="H8628"\w* man auch die \w Posaune|strong="H7782"\w* in einer \w Stadt|strong="H5892"\w*, daß sich das \w Volk|strong="H5971"\w* davor \w nicht|strong="H3808"\w* \w entsetze|strong="H2729"\w*? \w Ist|strong="H1961"\w* auch ein \w Unglück|strong="H7451"\w* in der \w Stadt|strong="H5892"\w*, daß der \w HERR|strong="H3068"\w* \w nicht|strong="H3808"\w* \w tue|strong="H6213"\w*?  
\v 7  \w Denn|strong="H3588"\w* der \w Herr|strong="H0136"\w* \w HERR|strong="H3069"\w* \w tut|strong="H6213"\w* \w nichts|strong="H3808"\w*, \w er|strong="H3588"\w* \w offenbare|strong="H1540"\w* denn sein \w Geheimnis|strong="H5475"\w* \w den|strong="H0413"\w* \w Propheten|strong="H5030"\w*, seinen \w Knechten|strong="H5650"\w*.  
\v 8 Der \w Löwe|strong="H0738"\w* \w brüllt|strong="H7580"\w*; \w wer|strong="H4310"\w* sollte sich \w nicht|strong="H3808"\w* \w fürchten|strong="H3372"\w*? Der \w Herr|strong="H0136"\w* \w HERR|strong="H3069"\w* \w redet|strong="H1696"\w*; \w wer|strong="H4310"\w* sollte \w nicht|strong="H3808"\w* \w weissagen|strong="H5012"\w*?  
\v 9  \w Verkündigt|strong="H8085"\w* \w in|strong="H5921"\w* den \w Palästen|strong="H0759"\w* zu \w Asdod|strong="H0795"\w* und \w in|strong="H5921"\w* den \w Palästen|strong="H0759"\w* im Lande \w Ägypten|strong="H0776"\w* und \w sprecht|strong="H0559"\w*: \w Sammelt|strong="H0622"\w* euch \w auf|strong="H5921"\w* die \w Berge|strong="H2022"\w* \w Samarias|strong="H8111"\w* und \w sehet|strong="H7200"\w*, \w welch|strong="H7130"\w* ein \w großes|strong="H7227"\w* \w Zetergeschrei|strong="H4103"\w* und \w Unrecht|strong="H6217"\w* \w darin|strong="H8432"\w* ist!  
\v 10 Sie \w achten|strong="H3045"\w* \w keines|strong="H3808"\w* \w Rechts|strong="H5229"\w*, \w spricht|strong="H5002"\w* der \w HERR|strong="H3068"\w*, sammeln \w Schätze|strong="H0686"\w* von \w Frevel|strong="H2555"\w* und \w Raub|strong="H7701"\w* in ihren \w Palästen|strong="H0759"\w*.  
\v 11  \w Darum|strong="H3651"\w* \w spricht|strong="H0559"\w* der \w Herr|strong="H0136"\w* \w HERR|strong="H3069"\w* \w also|strong="H3541"\w*: \w man|strong="H6862"\w* wird dies \w Land|strong="H0776"\w* \w ringsumher|strong="H5439"\w* bedrängen und dich \w von|strong="H4480"\w* deiner \w Macht|strong="H5797"\w* \w herunterreißen|strong="H3381"\w* und deine \w Häuser|strong="H0759"\w* \w plündern|strong="H0962"\w*.  
