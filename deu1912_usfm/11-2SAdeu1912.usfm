\v 1 Und da \w David|strong="H1732"\w* ein \w wenig|strong="H4592"\w* \w von|strong="H4480"\w* der \w Höhe|strong="H7218"\w* gegangen \w war|strong="H5674"\w*, \w siehe|strong="H2009"\w*, da \w begegnete|strong="H7125"\w* ihm \w Ziba|strong="H6717"\w*, der \w Diener|strong="H5288"\w* \w Mephiboseths|strong="H4648"\w*, mit einem \w Paar|strong="H6776"\w* \w Esel|strong="H2543"\w*, \w gesattelt|strong="H2280"\w*, \w darauf|strong="H5921"\w* waren \w zweihundert|strong="H3967"\w* \w Brote|strong="H3899"\w* und \w hundert|strong="H3967"\w* \w Rosinenkuchen|strong="H6778"\w* und \w hundert|strong="H3967"\w* \w Feigenkuchen|strong="H7019"\w* und ein \w Krug|strong="H5035"\w* \w Wein|strong="H3196"\w*.  
\v 2 Da \w sprach|strong="H0559"\w* der \w König|strong="H4428"\w* \w zu|strong="H0413"\w* \w Ziba|strong="H6717"\w*: \w Was|strong="H4100"\w* willst du \w damit|strong="H0428"\w* machen? \w Ziba|strong="H6717"\w* \w sprach|strong="H0559"\w*: Die \w Esel|strong="H2543"\w* sollen für das \w Haus|strong="H1004"\w* des \w Königs|strong="H4428"\w* sein, darauf zu \w reiten|strong="H7392"\w*, und die \w Brote|strong="H3899"\w* und \w Feigenkuchen|strong="H7019"\w* für die \w Diener|strong="H5288"\w*, zu \w essen|strong="H0398"\w*, und der \w Wein|strong="H3196"\w*, zu \w trinken|strong="H8354"\w*, wenn sie \w müde|strong="H3287"\w* werden in der \w Wüste|strong="H4057"\w*.  
\v 3 Der \w König|strong="H4428"\w* \w sprach|strong="H0559"\w*: \w Wo|strong="H0346"\w* ist der \w Sohn|strong="H1121"\w* deines \w Herrn|strong="H0113"\w*? \w Ziba|strong="H6717"\w* \w sprach|strong="H0559"\w* \w zum|strong="H0413"\w* \w König|strong="H4428"\w*: \w Siehe|strong="H2009"\w*, er \w blieb|strong="H3427"\w* zu \w Jerusalem|strong="H3389"\w*; \w denn|strong="H3588"\w* er \w sprach|strong="H0559"\w*: \w Heute|strong="H3117"\w* wird mir das \w Haus|strong="H1004"\w* \w Israel|strong="H3478"\w* meines \w Vaters|strong="H0001"\w* \w Reich|strong="H4468"\w* \w wiedergeben|strong="H7725"\w*.  
\v 4 Der \w König|strong="H4428"\w* \w sprach|strong="H0559"\w* zu \w Ziba|strong="H6717"\w*: \w Siehe|strong="H2009"\w*, es soll dein sein \w alles|strong="H3605"\w*, \w was|strong="H0834"\w* \w Mephiboseth|strong="H4648"\w* hat. \w Ziba|strong="H6717"\w* \w sprach|strong="H0559"\w*: Ich \w neige|strong="H7812"\w* mich; laß mich \w Gnade|strong="H2580"\w* \w finden|strong="H4672"\w* vor \w dir|strong="H5869"\w*, mein \w Herr|strong="H0113"\w* \w König|strong="H4428"\w*.  
\v 5 Da aber der \w König|strong="H4428"\w* \w bis|strong="H5704"\w* gen \w Bahurim|strong="H0980"\w* \w kam|strong="H0935"\w*, \w siehe|strong="H2009"\w*, \w da|strong="H4480"\w* \w ging|strong="H3318"\w* ein \w Mann|strong="H0376"\w* \w daselbst|strong="H8033"\w* \w heraus|strong="H3318"\w*, \w vom|strong="H4480"\w* \w Geschlecht|strong="H4940"\w* des \w Hauses|strong="H1004"\w* \w Sauls|strong="H7586"\w*, der \w hieß|strong="H8034"\w* \w Simei|strong="H8096"\w*, der \w Sohn|strong="H1121"\w* \w Geras|strong="H1617"\w*; der \w ging|strong="H3318"\w* \w heraus|strong="H3318"\w* und \w fluchte|strong="H7043"\w*  
\v 6 und \w warf|strong="H5619"\w* \w David|strong="H1732"\w* mit \w Steinen|strong="H0068"\w* und \w alle|strong="H3605"\w* \w Knechte|strong="H5650"\w* des \w Königs|strong="H4428"\w* \w David|strong="H1732"\w*. Denn \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* und \w alle|strong="H3605"\w* \w Gewaltigen|strong="H1368"\w* waren \w zu|strong="H4480"\w* seiner \w Rechten|strong="H3225"\w* und \w zur|strong="H4480"\w* \w Linken|strong="H8040"\w*.  
\v 7  \w So|strong="H3541"\w* \w sprach|strong="H0559"\w* aber \w Simei|strong="H8096"\w*, da er \w fluchte|strong="H7043"\w*: \w Heraus|strong="H3318"\w*, \w heraus|strong="H3318"\w*, du \w Bluthund|strong="H1818"\w*, du \w heilloser|strong="H1100"\w* \w Mann|strong="H0376"\w*!  
\v 8 Der \w HERR|strong="H3068"\w* hat \w dir|strong="H5921"\w* \w vergolten|strong="H7725"\w* \w alles|strong="H3605"\w* \w Blut|strong="H1818"\w* des \w Hauses|strong="H1004"\w* \w Sauls|strong="H7586"\w*, daß du an \w seiner|strong="H0834"\w* \w Statt|strong="H8478"\w* bist König \w geworden|strong="H4427"\w*. Nun hat der \w HERR|strong="H3068"\w* das \w Reich|strong="H4410"\w* \w gegeben|strong="H5414"\w* in die \w Hand|strong="H3027"\w* deines \w Sohnes|strong="H1121"\w* \w Absalom|strong="H0053"\w*; und \w siehe|strong="H2009"\w*, nun steckst du in deinem \w Unglück|strong="H7451"\w*; \w denn|strong="H3588"\w* \w du|strong="H0859"\w* bist ein \w Bluthund|strong="H1818"\w*.  
\v 9 Aber \w Abisai|strong="H0052"\w*, der \w Zeruja|strong="H6870"\w* \w Sohn|strong="H1121"\w*, \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* dem \w König|strong="H4428"\w*: Sollte \w dieser|strong="H2088"\w* \w tote|strong="H4191"\w* \w Hund|strong="H3611"\w* meinem \w Herrn|strong="H0113"\w*, dem \w König|strong="H4428"\w*, \w fluchen|strong="H7043"\w*? Ich \w will|strong="H4994"\w* \w hingehen|strong="H5674"\w* und ihm den \w Kopf|strong="H7218"\w* \w abreißen|strong="H5493"\w*.  
\v 10 Der \w König|strong="H4428"\w* \w sprach|strong="H0559"\w*: Ihr \w Kinder|strong="H1121"\w* der \w Zeruja|strong="H6870"\w*, \w was|strong="H4100"\w* habe ich mit euch zu schaffen? Laßt ihn \w fluchen|strong="H7043"\w*; \w denn|strong="H3588"\w* der \w HERR|strong="H3068"\w* hat's ihn \w geheißen|strong="H0559"\w*: \w Fluche|strong="H7043"\w* \w David|strong="H1732"\w*! \w Wer|strong="H4310"\w* kann nun \w sagen|strong="H0559"\w*: \w Warum|strong="H4069"\w* \w tust|strong="H6213"\w* du \w also|strong="H3651"\w*?  
\v 11 Und \w David|strong="H1732"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Abisai|strong="H0052"\w* und \w zu|strong="H0413"\w* \w allen|strong="H3605"\w* seinen \w Knechten|strong="H5650"\w*: \w Siehe|strong="H2009"\w*, mein \w Sohn|strong="H1121"\w*, \w der|strong="H0834"\w* \w von|strong="H4480"\w* meinem \w Leibe|strong="H4578"\w* gekommen \w ist|strong="H3318"\w*, \w steht|strong="H1245"\w* mir nach meinem \w Leben|strong="H5315"\w*; \w warum|strong="H0637"\w* nicht \w auch|strong="H3588"\w* \w jetzt|strong="H6258"\w* der \w Benjaminiter|strong="H1145"\w*? Laßt \w ihn|strong="H3240"\w*, daß er \w fluche|strong="H7043"\w*; \w denn|strong="H3588"\w* der \w HERR|strong="H3068"\w* hat's ihn \w geheißen|strong="H0559"\w*.  
\v 12  \w Vielleicht|strong="H0194"\w* wird der \w HERR|strong="H3068"\w* mein \w Elend|strong="H5869"\w* \w ansehen|strong="H7200"\w* \w und|strong="H3068"\w* mir mit \w Gutem|strong="H2896"\w* \w vergelten|strong="H7725"\w* sein \w heutiges|strong="H2088"\w* \w Fluchen|strong="H7045"\w*.  
\v 13 Also \w ging|strong="H3212"\w* \w David|strong="H1732"\w* mit seinen \w Leuten|strong="H0582"\w* des \w Weges|strong="H1870"\w*; Aber \w Simei|strong="H8096"\w* \w ging|strong="H1980"\w* an des \w Berges|strong="H2022"\w* \w Seite|strong="H6763"\w* her ihm \w gegenüber|strong="H5980"\w* und \w fluchte|strong="H7043"\w* und \w warf|strong="H5619"\w* mit \w Steinen|strong="H0068"\w* nach ihm und \w besprengte|strong="H6080"\w* ihn mit \w Erdklößen|strong="H6083"\w*.  
\v 14 Und der \w König|strong="H4428"\w* kam \w hinein|strong="H0935"\w* mit \w allem|strong="H3605"\w* \w Volk|strong="H5971"\w*, \w das|strong="H0834"\w* \w bei|strong="H0854"\w* ihm war, \w müde|strong="H5889"\w* und \w erquickte|strong="H5314"\w* sich \w daselbst|strong="H8033"\w*.  
\v 15 Aber \w Absalom|strong="H0053"\w* und \w alles|strong="H3605"\w* \w Volk|strong="H5971"\w* der \w Männer|strong="H0376"\w* \w Israels|strong="H3478"\w* \w kamen|strong="H0935"\w* gen \w Jerusalem|strong="H3389"\w* und \w Ahithophel|strong="H0302"\w* \w mit|strong="H0854"\w* ihm.  
\v 16  \w Da|strong="H0834"\w* aber \w Husai|strong="H2365"\w*, der \w Arachiter|strong="H0757"\w*, \w Davids|strong="H1732"\w* \w Freund|strong="H7463"\w*, \w zu|strong="H0413"\w* \w Absalom|strong="H0053"\w* \w hineinkam|strong="H0935"\w*, \w sprach|strong="H0559"\w* \w er|strong="H2365"\w* \w zu|strong="H0413"\w* \w Absalom|strong="H0053"\w*: Glück \w zu|strong="H2421"\w*, Herr \w König|strong="H4428"\w*! Glück \w zu|strong="H2421"\w*, Herr \w König|strong="H4428"\w*!  
\v 17  \w Absalom|strong="H0053"\w* aber \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Husai|strong="H2365"\w*: Ist \w das|strong="H2088"\w* deine \w Barmherzigkeit|strong="H2617"\w* an deinem \w Freunde|strong="H7453"\w*? \w Warum|strong="H4100"\w* bist du \w nicht|strong="H3808"\w* mit deinem \w Freunde|strong="H7453"\w* \w gezogen|strong="H1980"\w*?  
\v 18  \w Husai|strong="H2365"\w* aber \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Absalom|strong="H0053"\w*: \w Nicht|strong="H3808"\w* also, \w sondern|strong="H3588"\w* \w welchen|strong="H0834"\w* der \w HERR|strong="H3068"\w* \w erwählt|strong="H0977"\w* und \w dies|strong="H2088"\w* \w Volk|strong="H5971"\w* und \w alle|strong="H3605"\w* \w Männer|strong="H0376"\w* in \w Israel|strong="H3478"\w*, \w des|strong="H3808"\w* will ich \w sein|strong="H1961"\w* und \w bei|strong="H0854"\w* ihm \w bleiben|strong="H3427"\w*.  
\v 19 Zum \w andern|strong="H8145"\w*, \w wem|strong="H4310"\w* sollte \w ich|strong="H0589"\w* \w dienen|strong="H5647"\w*? Sollte ich \w nicht|strong="H3808"\w* \w vor|strong="H6440"\w* seinem \w Sohn|strong="H1121"\w* dienen? \w Wie|strong="H0834"\w* ich \w vor|strong="H6440"\w* deinem \w Vater|strong="H0001"\w* gedient \w habe|strong="H5647"\w*, \w so|strong="H3651"\w* will ich auch vor \w dir|strong="H6440"\w* \w sein|strong="H1961"\w*.  
\v 20 Und \w Absalom|strong="H0053"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Ahithophel|strong="H0302"\w*: \w Ratet|strong="H6098"\w* \w zu|strong="H3051"\w*, \w was|strong="H4100"\w* sollen wir \w tun|strong="H6213"\w*?  
\v 21  \w Ahithophel|strong="H0302"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Absalom|strong="H0053"\w*: Gehe \w hinein|strong="H0935"\w* \w zu|strong="H0413"\w* den \w Kebsweibern|strong="H6370"\w* deines \w Vaters|strong="H0001"\w*, \w die|strong="H0834"\w* er zurückgelassen \w hat|strong="H3240"\w*, das \w Haus|strong="H1004"\w* zu \w bewahren|strong="H8104"\w*, so wird das \w ganze|strong="H3605"\w* \w Israel|strong="H3478"\w* \w hören|strong="H8085"\w*, \w daß|strong="H3588"\w* du dich bei deinem \w Vater|strong="H0001"\w* hast stinkend \w gemacht|strong="H0887"\w*, und wird \w aller|strong="H3605"\w* \w Hand|strong="H3027"\w*, \w die|strong="H0834"\w* \w bei|strong="H0854"\w* dir sind, desto kühner \w werden|strong="H2388"\w*.  
