\v 7 Und \w siehe|strong="H2009"\w*, nun steht \w auf|strong="H6965"\w* die \w ganze|strong="H3605"\w* \w Freundschaft|strong="H4940"\w* \w wider|strong="H5921"\w* deine \w Magd|strong="H8198"\w* und \w sagen|strong="H0559"\w*: \w Gib|strong="H5414"\w* her den, der seinen \w Bruder|strong="H0251"\w* erschlagen \w hat|strong="H5221"\w*, daß wir ihn \w töten|strong="H4191"\w* für die \w Seele|strong="H5315"\w* seines \w Bruders|strong="H0251"\w*, \w den|strong="H0834"\w* er erwürgt \w hat|strong="H2026"\w*, und \w auch|strong="H1571"\w* den \w Erben|strong="H3423"\w* \w vertilgen|strong="H8045"\w*; und wollen meinen \w Funken|strong="H1513"\w* \w auslöschen|strong="H3518"\w*, \w der|strong="H0834"\w* noch übrig \w ist|strong="H7760"\w*, \w daß|strong="H1115"\w* meinem \w Mann|strong="H0376"\w* \w kein|strong="H1115"\w* \w Name|strong="H8034"\w* und nichts \w Übriges|strong="H7611"\w* \w bleibe|strong="H7604"\w* \w auf|strong="H5921"\w* \w Erden|strong="H0127"\w*.  
\v 8 Der \w König|strong="H4428"\w* \w sprach|strong="H0559"\w* \w zum|strong="H0413"\w* \w Weibe|strong="H0802"\w*: \w Gehe|strong="H3212"\w* \w heim|strong="H1004"\w*, \w ich|strong="H0589"\w* will \w für|strong="H5921"\w* dich \w gebieten|strong="H6680"\w*.  
\v 9 Und das \w Weib|strong="H0802"\w* von \w Thekoa|strong="H8621"\w* \w sprach|strong="H0559"\w* \w zum|strong="H0413"\w* \w König|strong="H4428"\w*: Mein \w Herr|strong="H0113"\w* \w König|strong="H4428"\w*, die \w Missetat|strong="H5771"\w* sei \w auf|strong="H5921"\w* mir \w und|strong="H5921"\w* meines \w Vaters|strong="H0001"\w* \w Hause|strong="H1004"\w*; der \w König|strong="H4428"\w* aber und sein \w Stuhl|strong="H3678"\w* sei \w unschuldig|strong="H5355"\w*.  
\v 10 Der \w König|strong="H4428"\w* \w sprach|strong="H0559"\w*: Wer \w wider|strong="H0413"\w* dich \w redet|strong="H1696"\w*, den \w bringe|strong="H0935"\w* \w zu|strong="H0413"\w* mir, so \w soll|strong="H3254"\w* er \w nicht|strong="H3808"\w* \w mehr|strong="H5750"\w* dich \w antasten|strong="H5060"\w*.  
\v 11 Sie \w sprach|strong="H0559"\w*: Der \w König|strong="H4428"\w* \w gedenke|strong="H2142"\w* an den \w HERRN|strong="H3068"\w*, deinen \w Gott|strong="H0430"\w*, \w daß|strong="H4480"\w* der \w Bluträcher|strong="H1350"\w* \w nicht|strong="H4480"\w* noch \w mehr|strong="H7235"\w* \w Verderben|strong="H7843"\w* \w anrichte|strong="H7235"\w* und sie meinen \w Sohn|strong="H1121"\w* \w nicht|strong="H3808"\w* \w vertilgen|strong="H8045"\w*. Er \w sprach|strong="H0559"\w*: So wahr der \w HERR|strong="H3068"\w* \w lebt|strong="H2416"\w*, es soll \w kein|strong="H0518"\w* \w Haar|strong="H8185"\w* \w von|strong="H4480"\w* deinem \w Sohn|strong="H1121"\w* auf die \w Erde|strong="H0776"\w* \w fallen|strong="H5307"\w*.  
\v 12 Und das \w Weib|strong="H0802"\w* \w sprach|strong="H0559"\w*: \w Laß|strong="H4994"\w* deine \w Magd|strong="H8198"\w* \w meinem|strong="H0413"\w* \w Herrn|strong="H0113"\w* \w König|strong="H4428"\w* etwas \w sagen|strong="H1697"\w*. Er \w sprach|strong="H0559"\w*: Sage \w an|strong="H1696"\w*!  
\v 13 Das \w Weib|strong="H0802"\w* \w sprach|strong="H0559"\w*: \w Warum|strong="H4100"\w* bist du \w also|strong="H2063"\w* \w gesinnt|strong="H2803"\w* \w wider|strong="H5921"\w* \w Gottes|strong="H0430"\w* \w Volk|strong="H5971"\w*? Denn da der \w König|strong="H4428"\w* \w solches|strong="H2088"\w* geredet \w hat|strong="H1696"\w*, ist er wie ein \w Schuldiger|strong="H0818"\w*, \w dieweil|strong="H1115"\w* \w er|strong="H4428"\w* seinen \w Verstoßenen|strong="H5080"\w* \w nicht|strong="H1115"\w* wieder \w holen|strong="H7725"\w* läßt.  
\v 14  \w Denn|strong="H3588"\w* wir \w sterben|strong="H4191"\w* eines \w Todes|strong="H4191"\w* und sind wie \w Wasser|strong="H4325"\w*, \w so|strong="H0834"\w* in die \w Erde|strong="H0776"\w* \w verläuft|strong="H5064"\w*, das man \w nicht|strong="H3808"\w* \w aufhält|strong="H0622"\w*; und \w Gott|strong="H0430"\w* will \w nicht|strong="H3808"\w* das \w Leben|strong="H5315"\w* \w wegnehmen|strong="H5375"\w*, sondern bedenkt \w sich|strong="H4284"\w*, daß \w nicht|strong="H1115"\w* das \w Verstoßene|strong="H5080"\w* auch \w von|strong="H4480"\w* ihm verstoßen \w werde|strong="H5080"\w*.  
\v 15  \w So|strong="H0834"\w* \w bin|strong="H0935"\w* ich \w nun|strong="H6258"\w* \w gekommen|strong="H0935"\w*, \w mit|strong="H0413"\w* meinem \w Herrn|strong="H0113"\w* \w König|strong="H4428"\w* \w solches|strong="H2088"\w* zu \w reden|strong="H1696"\w*; \w denn|strong="H3588"\w* das \w Volk|strong="H5971"\w* macht mir \w bang|strong="H3372"\w*. Denn deine \w Magd|strong="H8198"\w* \w gedachte|strong="H0559"\w*: Ich will \w mit|strong="H0413"\w* dem \w König|strong="H4428"\w* \w reden|strong="H1696"\w*; \w vielleicht|strong="H0194"\w* wird \w er|strong="H4428"\w* \w tun|strong="H6213"\w*, was seine \w Magd|strong="H0519"\w* \w sagt|strong="H1697"\w*.  
\v 16  \w Denn|strong="H3588"\w* \w er|strong="H4428"\w* wird seine \w Magd|strong="H0519"\w* \w erhören|strong="H8085"\w*, daß er mich \w errette|strong="H5337"\w* \w von|strong="H4480"\w* der \w Hand|strong="H3709"\w* \w aller|strong="H0376"\w*, die \w mich|strong="H0853"\w* \w samt|strong="H3162"\w* meinem \w Sohn|strong="H1121"\w* \w vertilgen|strong="H8045"\w* wollen \w vom|strong="H4480"\w* \w Erbe|strong="H5159"\w* \w Gottes|strong="H0430"\w*.  
\v 17 Und deine \w Magd|strong="H8198"\w* \w gedachte|strong="H0559"\w*: Meines \w Herrn|strong="H0113"\w*, des \w Königs|strong="H4428"\w*, \w Wort|strong="H1697"\w* soll mir ein \w Trost|strong="H4496"\w* \w sein|strong="H1961"\w*; \w denn|strong="H3588"\w* mein \w Herr|strong="H0113"\w*, der \w König|strong="H4428"\w*, ist \w wie|strong="H3651"\w* ein \w Engel|strong="H4397"\w* \w Gottes|strong="H0430"\w*, daß er \w Gutes|strong="H2896"\w* und \w Böses|strong="H7451"\w* hören \w kann|strong="H8085"\w*. Darum wird der \w HERR|strong="H3068"\w*, dein \w Gott|strong="H0430"\w*, \w mit|strong="H5973"\w* dir \w sein|strong="H1961"\w*.  
\v 18 Der \w König|strong="H4428"\w* \w antwortete|strong="H6030"\w* und \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* dem \w Weibe|strong="H0802"\w*: \w Leugne|strong="H3582"\w* \w mir|strong="H4480"\w* \w nicht|strong="H0408"\w*, \w was|strong="H1697"\w* \w ich|strong="H0595"\w* \w dich|strong="H0854"\w* \w frage|strong="H7592"\w*. Das \w Weib|strong="H0802"\w* \w sprach|strong="H0559"\w*: Mein \w Herr|strong="H0113"\w*, der \w König|strong="H4428"\w*, \w rede|strong="H1696"\w*.  
\v 19 Der \w König|strong="H4428"\w* \w sprach|strong="H0559"\w*: Ist nicht die \w Hand|strong="H3027"\w* \w Joabs|strong="H3097"\w* \w mit|strong="H0854"\w* dir in \w diesem|strong="H2088"\w* \w allem|strong="H3605"\w*? Das \w Weib|strong="H0802"\w* \w antwortete|strong="H6030"\w* und \w sprach|strong="H0559"\w*: So wahr deine \w Seele|strong="H5315"\w* \w lebt|strong="H2416"\w*, mein \w Herr|strong="H0113"\w* \w König|strong="H4428"\w*, es ist \w nicht|strong="H0518"\w* anders, weder zur \w Rechten|strong="H3231"\w* noch zur \w Linken|strong="H8041"\w*, denn \w wie|strong="H4480"\w* mein \w Herr|strong="H0113"\w*, der \w König|strong="H4428"\w*, geredet \w hat|strong="H1696"\w*. \w Denn|strong="H3588"\w* dein \w Knecht|strong="H5650"\w* \w Joab|strong="H3097"\w* hat mir's \w geboten|strong="H6680"\w*, und \w er|strong="H1931"\w* hat \w solches|strong="H0428"\w* \w alles|strong="H3605"\w* seiner \w Magd|strong="H6310"\w* \w eingegeben|strong="H7760"\w*;  
