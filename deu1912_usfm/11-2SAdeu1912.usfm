\v 1  \w Nach|strong="H0310"\w* dem \w Tode|strong="H4194"\w* \w Sauls|strong="H7586"\w*, da \w David|strong="H1732"\w* \w von|strong="H4480"\w* der \w Amalekiter|strong="H6002"\w* \w Schlacht|strong="H5221"\w* \w wiedergekommen|strong="H7725"\w* \w und|strong="H1732"\w* \w zwei|strong="H8147"\w* \w Tage|strong="H3117"\w* in \w Ziklag|strong="H6860"\w* geblieben \w war|strong="H3427"\w*,  
\v 2  \w siehe|strong="H2009"\w*, \w da|strong="H1961"\w* \w kam|strong="H0935"\w* am \w dritten|strong="H7992"\w* \w Tage|strong="H3117"\w* ein \w Mann|strong="H0376"\w* \w aus|strong="H4480"\w* dem \w Heer|strong="H4264"\w* \w von|strong="H4480"\w* \w Saul|strong="H7586"\w* mit \w zerrissenen|strong="H7167"\w* \w Kleidern|strong="H0899"\w* und \w Erde|strong="H0127"\w* \w auf|strong="H5921"\w* seinem \w Haupt|strong="H7218"\w*. Und \w da|strong="H1961"\w* er \w zu|strong="H0413"\w* \w David|strong="H1732"\w* \w kam|strong="H0935"\w*, fiel \w er|strong="H5307"\w* zur \w Erde|strong="H0776"\w* und beugte sich \w nieder|strong="H7812"\w*.  
\v 3  \w David|strong="H1732"\w* aber \w sprach|strong="H0559"\w* zu ihm: \w Wo|strong="H0335"\w* kommst \w du|strong="H0935"\w* \w her|strong="H4480"\w*? Er \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: \w Aus|strong="H4480"\w* dem \w Heer|strong="H4264"\w* \w Israels|strong="H3478"\w* bin ich \w entronnen|strong="H4422"\w*.  
\v 4  \w David|strong="H1732"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: \w Sage|strong="H5046"\w* \w mir|strong="H4994"\w*, \w wie|strong="H4100"\w* \w geht|strong="H1961"\w* \w es|strong="H1697"\w* zu? Er \w sprach|strong="H0559"\w*: \w Das|strong="H0834"\w* \w Volk|strong="H5971"\w* ist \w geflohen|strong="H5127"\w* \w vom|strong="H4480"\w* \w Streit|strong="H4421"\w*, \w und|strong="H1571"\w* ist \w viel|strong="H7235"\w* \w Volks|strong="H4480"\w* \w gefallen|strong="H5307"\w*; \w dazu|strong="H1571"\w* ist \w Saul|strong="H7586"\w* \w tot|strong="H4191"\w* und sein \w Sohn|strong="H1121"\w* \w Jonathan|strong="H3083"\w*.  
\v 5  \w David|strong="H1732"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* dem \w Jüngling|strong="H5288"\w*, der ihm solches \w sagte|strong="H5046"\w*: \w Woher|strong="H0349"\w* weißt \w du|strong="H3045"\w*, \w daß|strong="H3588"\w* \w Saul|strong="H7586"\w* und \w Jonathan|strong="H1121"\w* tot \w sind|strong="H4191"\w*?  
\v 6 Der \w Jüngling|strong="H5288"\w*, der ihm solches \w sagte|strong="H5046"\w*, \w sprach|strong="H0559"\w*: Ich \w kam|strong="H7136"\w* von \w ungefähr|strong="H7122"\w* aufs \w Gebirge|strong="H2022"\w* \w Gilboa|strong="H1533"\w*, und \w siehe|strong="H2009"\w* \w Saul|strong="H7586"\w* \w lehnte|strong="H8172"\w* sich \w auf|strong="H5921"\w* seinen \w Spieß|strong="H2595"\w*, \w und|strong="H2009"\w* die \w Wagen|strong="H7393"\w* und \w Reiter|strong="H1167"\w* jagten \w hinter|strong="H1692"\w* ihm her.  
\v 7 Und er wandte sich \w um|strong="H6437"\w* und \w sah|strong="H7200"\w* mich und \w rief|strong="H7121"\w* \w mich|strong="H0413"\w*. Und ich \w sprach|strong="H0559"\w*: Hier bin ich.  
\v 8 Und er \w sprach|strong="H0559"\w* zu mir: \w Wer|strong="H4310"\w* bist \w du|strong="H0859"\w*? Ich \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: \w Ich|strong="H0595"\w* bin ein \w Amalekiter|strong="H6003"\w*.  
\v 9 Und er \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* mir: \w Tritt|strong="H5975"\w* \w zu|strong="H5921"\w* mir und \w töte|strong="H4191"\w* mich; \w denn|strong="H3588"\w* ich bin \w bedrängt|strong="H0270"\w* \w umher|strong="H7661"\w*, \w und|strong="H3588"\w* mein \w Leben|strong="H5315"\w* ist \w noch|strong="H5750"\w* \w ganz|strong="H3605"\w* in mir.  
\v 10 Da trat \w ich|strong="H5975"\w* \w zu|strong="H5921"\w* ihm und \w tötete|strong="H4191"\w* ihn; \w denn|strong="H3588"\w* ich wußte \w wohl|strong="H3045"\w*, \w daß|strong="H3588"\w* er \w nicht|strong="H3808"\w* leben \w konnte|strong="H2421"\w* \w nach|strong="H0310"\w* seinem \w Fall|strong="H5307"\w*; und \w nahm|strong="H3947"\w* die \w Krone|strong="H5145"\w* \w von|strong="H5921"\w* seinem \w Haupt|strong="H7218"\w* und das \w Armgeschmeide|strong="H0685"\w* \w von|strong="H5921"\w* seinem \w Arm|strong="H2220"\w* und habe es \w hergebracht|strong="H2008"\w* \w zu|strong="H0413"\w* dir, meinem \w Herrn|strong="H0113"\w*.  
\v 11 Da \w faßte|strong="H2388"\w* \w David|strong="H1732"\w* seine \w Kleider|strong="H0899"\w* und \w zerriß|strong="H7167"\w* sie, \w und|strong="H1571"\w* \w alle|strong="H3605"\w* \w Männer|strong="H0582"\w*, \w die|strong="H0834"\w* \w bei|strong="H0854"\w* ihm waren,  
\v 12 und trugen \w Leid|strong="H5594"\w* und \w weinten|strong="H1058"\w* und \w fasteten|strong="H6684"\w* bis \w an|strong="H5704"\w* den \w Abend|strong="H6153"\w* \w über|strong="H5921"\w* \w Saul|strong="H7586"\w* \w und|strong="H5921"\w* \w Jonathan|strong="H3083"\w*, seinen \w Sohn|strong="H1121"\w*, und \w über|strong="H5921"\w* das \w Volk|strong="H5971"\w* des \w HERRN|strong="H3068"\w* und \w über|strong="H5921"\w* das \w Haus|strong="H1004"\w* \w Israel|strong="H3478"\w*, \w daß|strong="H3588"\w* sie durchs \w Schwert|strong="H2719"\w* gefallen \w waren|strong="H5307"\w*.  
\v 13 Und \w David|strong="H1732"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* dem \w Jüngling|strong="H5288"\w*, der es ihm \w ansagte|strong="H5046"\w*: \w Wo|strong="H0335"\w* bist \w du|strong="H0859"\w* \w her|strong="H4480"\w*? Er \w sprach|strong="H0559"\w*: \w Ich|strong="H0595"\w* bin eines \w Fremdlings|strong="H1616"\w*, eines \w Amalekiters|strong="H6003"\w*, \w Sohn|strong="H1121"\w*.  
\v 14  \w David|strong="H1732"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: \w Wie|strong="H0349"\w*, daß du dich \w nicht|strong="H3808"\w* gefürchtet \w hast|strong="H3372"\w*, deine \w Hand|strong="H3027"\w* zu \w legen|strong="H7971"\w* an den \w Gesalbten|strong="H4899"\w* des \w HERRN|strong="H3068"\w*, ihn zu \w verderben|strong="H7843"\w*!  
\v 15 Und \w David|strong="H1732"\w* \w sprach|strong="H7121"\w* \w zu|strong="H4480"\w* seiner \w Jünglinge|strong="H5288"\w* \w einem|strong="H0259"\w*: \w Herzu|strong="H5066"\w*, und schlag \w ihn|strong="H6293"\w*! Und er \w schlug|strong="H5221"\w*, ihn daß er \w starb|strong="H4191"\w*.  
\v 16 Da \w sprach|strong="H0559"\w* \w David|strong="H1732"\w* \w zu|strong="H0413"\w* ihm: Dein \w Blut|strong="H1818"\w* sei \w über|strong="H5921"\w* deinem \w Kopf|strong="H7218"\w*; \w denn|strong="H3588"\w* dein \w Mund|strong="H6310"\w* hat wider dich selbst \w geredet|strong="H6030"\w* und \w gesprochen|strong="H0559"\w*: \w Ich|strong="H0595"\w* habe den \w Gesalbten|strong="H4899"\w* des \w HERRN|strong="H3068"\w* \w getötet|strong="H4191"\w*.  
\v 17 Und \w David|strong="H1732"\w* \w klagte|strong="H6969"\w* \w diese|strong="H2063"\w* \w Klage|strong="H7015"\w* \w über|strong="H5921"\w* \w Saul|strong="H7586"\w* \w und|strong="H5921"\w* \w Jonathan|strong="H3083"\w*, seinen \w Sohn|strong="H1121"\w*,  
\v 18 und \w befahl|strong="H0559"\w*, man sollte die \w Kinder|strong="H1121"\w* \w Juda|strong="H3063"\w* das \w Bogenlied|strong="H7198"\w* \w lehren|strong="H3925"\w*. \w Siehe|strong="H2009"\w*, es steht \w geschrieben|strong="H3789"\w* \w im|strong="H5921"\w* \w Buch|strong="H5612"\w* der \w Redlichen|strong="H3477"\w*:  
\v 19 “Die \w Edelsten|strong="H6643"\w* in \w Israel|strong="H3478"\w* sind \w auf|strong="H5921"\w* deiner \w Höhe|strong="H1116"\w* \w erschlagen|strong="H2491"\w*. \w Wie|strong="H0349"\w* sind die \w Helden|strong="H1368"\w* \w gefallen|strong="H5307"\w*!  
\v 20 Sagt'\w s|strong="H5046"\w* \w nicht|strong="H0408"\w* \w an|strong="H5046"\w* zu \w Gath|strong="H1661"\w*, verkündet'\w s|strong="H1319"\w* \w nicht|strong="H0408"\w* auf den \w Gassen|strong="H2351"\w* zu \w Askalon|strong="H0831"\w*, daß sich \w nicht|strong="H6435"\w* \w freuen|strong="H8055"\w* die \w Töchter|strong="H1323"\w* der \w Philister|strong="H6430"\w*, daß \w nicht|strong="H6435"\w* \w frohlocken|strong="H5937"\w* die \w Töchter|strong="H1323"\w* der \w Unbeschnittenen|strong="H6189"\w*.  
\v 21 Ihr \w Berge|strong="H2022"\w* zu \w Gilboa|strong="H1533"\w*, es \w müsse|strong="H5921"\w* \w weder|strong="H0408"\w* \w tauen|strong="H2919"\w* \w noch|strong="H0408"\w* \w regnen|strong="H4306"\w* auf \w euch|strong="H5921"\w* noch \w Äcker|strong="H7704"\w* \w sein|strong="H5921"\w*, davon \w Hebopfer|strong="H8641"\w* kommen; \w denn|strong="H3588"\w* \w daselbst|strong="H8033"\w* ist den \w Helden|strong="H1368"\w* ihr \w Schild|strong="H4043"\w* \w abgeschlagen|strong="H1602"\w*, der \w Schild|strong="H4043"\w* \w Sauls|strong="H7586"\w*, als wäre er \w nicht|strong="H1097"\w* \w gesalbt|strong="H4899"\w* mit \w Öl|strong="H8081"\w*.  
\v 22 Der \w Bogen|strong="H7198"\w* \w Jonathans|strong="H3083"\w* hat \w nie|strong="H3808"\w* \w gefehlt|strong="H0268"\w*, und das \w Schwert|strong="H2719"\w* \w Sauls|strong="H7586"\w* ist \w nie|strong="H3808"\w* \w leer|strong="H7387"\w* \w wiedergekommen|strong="H7725"\w* \w von|strong="H4480"\w* dem \w Blut|strong="H1818"\w* der \w Erschlagenen|strong="H2491"\w* und \w vom|strong="H4480"\w* \w Fett|strong="H2459"\w* der \w Helden|strong="H1368"\w*.  
\v 23  \w Saul|strong="H7586"\w* und \w Jonathan|strong="H3083"\w*, \w holdselig|strong="H0157"\w* und \w lieblich|strong="H5273"\w* in ihrem \w Leben|strong="H2416"\w*, sind auch im \w Tode|strong="H4194"\w* \w nicht|strong="H3808"\w* \w geschieden|strong="H6504"\w*; schneller \w waren|strong="H7043"\w* sie \w denn|strong="H4480"\w* die \w Adler|strong="H5404"\w* und \w stärker|strong="H1396"\w* \w denn|strong="H4480"\w* die \w Löwen|strong="H0738"\w*.  
\v 24 Ihr \w Töchter|strong="H1323"\w* \w Israels|strong="H3478"\w*, \w weint|strong="H1058"\w* \w über|strong="H0413"\w* \w Saul|strong="H7586"\w*, der euch \w kleidete|strong="H3847"\w* \w mit|strong="H5973"\w* \w Scharlach|strong="H8144"\w* \w säuberlich|strong="H5730"\w* und \w schmückte|strong="H5716"\w* euch mit \w goldenen|strong="H2091"\w* \w Kleinoden|strong="H5927"\w* \w an|strong="H5921"\w* euren \w Kleidern|strong="H3830"\w*.  
\v 25  \w Wie|strong="H0349"\w* sind die \w Helden|strong="H1368"\w* so \w gefallen|strong="H5307"\w* \w im|strong="H8432"\w* \w Streit|strong="H4421"\w*! \w Jonathan|strong="H3083"\w* ist \w auf|strong="H5921"\w* deinen \w Höhen|strong="H1116"\w* \w erschlagen|strong="H2491"\w*.  
\v 26 Es ist mir \w Leid|strong="H6887"\w* \w um|strong="H5921"\w* dich, mein \w Bruder|strong="H0251"\w* \w Jonathan|strong="H3083"\w*: ich habe \w große|strong="H3966"\w* Freude und Wonne an dir \w gehabt|strong="H5276"\w*; deine \w Liebe|strong="H0160"\w* ist mir \w sonderlicher|strong="H6381"\w* gewesen, \w denn|strong="H4480"\w* \w Frauenliebe|strong="H0802"\w* ist.  
\v 27  \w Wie|strong="H0349"\w* sind die \w Helden|strong="H1368"\w* \w gefallen|strong="H5307"\w* und die \w Streitbaren|strong="H3627"\w* \w umgekommen|strong="H0006"\w*!”   
\c 2  
\p
\v 1  \w Nach|strong="H0310"\w* dieser \w Geschichte|strong="H1961"\w* \w fragte|strong="H7592"\w* \w David|strong="H1732"\w* den \w HERRN|strong="H3068"\w* und \w sprach|strong="H0559"\w*: Soll ich \w hinauf|strong="H5927"\w* in der \w Städte|strong="H5892"\w* Juda'\w s|strong="H3063"\w* \w eine|strong="H0259"\w* \w ziehen|strong="H5927"\w*? Und der \w HERR|strong="H3068"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: Zieh \w hinauf|strong="H5927"\w*! \w David|strong="H1732"\w* \w sprach|strong="H0559"\w*: \w Wohin|strong="H0575"\w*? Er \w sprach|strong="H0559"\w*: Gen \w Hebron|strong="H2275"\w*.  
\v 2 Da \w zog|strong="H5927"\w* \w David|strong="H1732"\w* \w dahin|strong="H8033"\w* \w mit|strong="H1571"\w* seinen \w zwei|strong="H8147"\w* \w Weibern|strong="H0802"\w* \w Ahinoam|strong="H0293"\w*, der \w Jesreelitin|strong="H3159"\w*, und \w Abigail|strong="H0026"\w*, \w Nabals|strong="H5037"\w*, des \w Karmeliten|strong="H3761"\w*, \w Weib|strong="H0802"\w*.  
\v 3 Dazu die \w Männer|strong="H0582"\w*, \w die|strong="H0834"\w* \w bei|strong="H5973"\w* ihm waren, \w führte|strong="H5927"\w* \w David|strong="H1732"\w* \w hinauf|strong="H5927"\w*, einen \w jeglichen|strong="H0376"\w* mit seinem \w Hause|strong="H1004"\w*, und sie \w wohnten|strong="H3427"\w* in den \w Städten|strong="H5892"\w* \w Hebrons|strong="H2275"\w*.  
\v 4 Und die \w Männer|strong="H0582"\w* Juda'\w s|strong="H3063"\w* \w kamen|strong="H0935"\w* und \w salbten|strong="H4886"\w* \w daselbst|strong="H8033"\w* \w David|strong="H1732"\w* zum \w König|strong="H4428"\w* \w über|strong="H5921"\w* das \w Haus|strong="H1004"\w* \w Juda|strong="H3063"\w*. Und da es \w David|strong="H1732"\w* ward \w angesagt|strong="H5046"\w*, daß \w die|strong="H0582"\w* von \w Jabes|strong="H3003"\w* in \w Gilead|strong="H1568"\w* \w Saul|strong="H7586"\w* begraben \w hatten|strong="H6912"\w*,  
\v 5  \w sandte|strong="H7971"\w* \w er|strong="H1732"\w* \w Boten|strong="H4397"\w* \w zu|strong="H0413"\w* \w ihnen|strong="H0582"\w* und ließ \w ihnen|strong="H0413"\w* \w sagen|strong="H0559"\w*: \w Gesegnet|strong="H1288"\w* seid \w ihr|strong="H0859"\w* dem \w HERRN|strong="H3068"\w*, \w daß|strong="H0834"\w* ihr \w solche|strong="H2088"\w* \w Barmherzigkeit|strong="H2617"\w* \w an|strong="H5973"\w* eurem \w Herrn|strong="H0113"\w* \w Saul|strong="H7586"\w*, \w getan|strong="H6213"\w* und \w ihn|strong="H0853"\w* \w begraben|strong="H6912"\w* habt.  
\v 6 So \w tue|strong="H6213"\w* \w nun|strong="H6258"\w* \w an|strong="H5973"\w* euch der \w HERR|strong="H3068"\w* \w Barmherzigkeit|strong="H2617"\w* und \w Treue|strong="H0571"\w*; und \w ich|strong="H0595"\w* will \w euch|strong="H0854"\w* \w auch|strong="H1571"\w* \w Gutes|strong="H2063"\w* \w tun|strong="H6213"\w*, \w darum|strong="H0834"\w* daß ihr \w solches|strong="H2088"\w* getan \w habt|strong="H6213"\w*.  
\v 7 So \w seien|strong="H2388"\w* \w nun|strong="H6258"\w* eure \w Hände|strong="H3027"\w* \w getrost|strong="H2388"\w*, und \w seit|strong="H1961"\w* \w freudig|strong="H1121"\w*; \w denn|strong="H3588"\w* euer \w Herr|strong="H0113"\w*, \w Saul|strong="H7586"\w* ist \w tot|strong="H4191"\w*; \w so|strong="H1571"\w* hat \w mich|strong="H0853"\w* das \w Haus|strong="H1004"\w* \w Juda|strong="H3063"\w* zum \w König|strong="H4428"\w* \w gesalbt|strong="H4886"\w* \w über|strong="H5921"\w* sich.  
\v 8  \w Abner|strong="H0074"\w* aber, der \w Sohn|strong="H1121"\w* \w Ners|strong="H5369"\w*, \w der|strong="H0834"\w* \w Sauls|strong="H7586"\w* \w Feldhauptmann|strong="H8269"\w* war, \w nahm|strong="H3947"\w* Is-\w Boseth|strong="H0378"\w*, \w Sauls|strong="H7586"\w* \w Sohn|strong="H1121"\w*, und \w führte|strong="H5674"\w* ihn gen \w Mahanaim|strong="H4266"\w*  
\v 9 und machte ihn zum \w König|strong="H4427"\w* \w über|strong="H0413"\w* \w Gilead|strong="H1568"\w*, \w über|strong="H0413"\w* die \w Asuriter|strong="H0805"\w*, \w über|strong="H0413"\w* \w Jesreel|strong="H3157"\w*, \w Ephraim|strong="H0669"\w*, \w Benjamin|strong="H1144"\w* und \w über|strong="H5921"\w* \w ganz|strong="H3605"\w* \w Israel|strong="H3478"\w*.  
\v 10 Und Is-\w Boseth|strong="H0378"\w*, \w Sauls|strong="H7586"\w* \w Sohn|strong="H1121"\w*, war \w vierzig|strong="H0705"\w* \w Jahre|strong="H8141"\w* \w alt|strong="H1121"\w*, da er König \w ward|strong="H4427"\w* \w über|strong="H5921"\w* \w Israel|strong="H3478"\w*, und \w regierte|strong="H4427"\w* \w zwei|strong="H8147"\w* \w Jahre|strong="H8141"\w*. \w Aber|strong="H0389"\w* das \w Haus|strong="H1004"\w* \w Juda|strong="H3063"\w* \w hielt|strong="H1961"\w* es \w mit|strong="H0310"\w* \w David|strong="H1732"\w*.  
\v 11 Die \w Zeit|strong="H4557"\w* aber, \w da|strong="H0834"\w* \w David|strong="H1732"\w* \w König|strong="H4428"\w* \w war|strong="H1961"\w* zu \w Hebron|strong="H2275"\w* \w über|strong="H5921"\w* das \w Haus|strong="H1004"\w* \w Juda|strong="H3063"\w*, \w war|strong="H1961"\w* \w sieben|strong="H7651"\w* \w Jahre|strong="H8141"\w* und \w sechs|strong="H8337"\w* \w Monate|strong="H2320"\w*.  
\v 12 Und \w Abner|strong="H0074"\w*, der \w Sohn|strong="H1121"\w* \w Ners|strong="H5369"\w*, zog \w aus|strong="H3318"\w* samt den \w Knechten|strong="H5650"\w* Is-\w Boseths|strong="H0378"\w*, des \w Sohnes|strong="H1121"\w* \w Sauls|strong="H7586"\w*, \w von|strong="H4480"\w* \w Mahanaim|strong="H4266"\w*, gen \w Gibeon|strong="H1391"\w*;  
\v 13 und \w Joab|strong="H3097"\w*, der \w Zeruja|strong="H6870"\w* \w Sohn|strong="H1121"\w*, zog \w aus|strong="H3318"\w* samt den \w Knechten|strong="H5650"\w* \w Davids|strong="H1732"\w*; und sie \w stießen|strong="H6298"\w* \w aufeinander|strong="H3162"\w* \w am|strong="H5921"\w* \w Teich|strong="H1295"\w* zu \w Gibeon|strong="H1391"\w*, und \w lagerten|strong="H3427"\w* sich \w diese|strong="H0428"\w* \w auf|strong="H4480"\w* \w dieser|strong="H2088"\w* Seite \w des|strong="H5921"\w* \w Teichs|strong="H1295"\w*, \w jene|strong="H0428"\w* \w auf|strong="H4480"\w* \w jener|strong="H2088"\w* \w Seite|strong="H5921"\w*.  
\v 14 Und \w Abner|strong="H0074"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* \w Joab|strong="H3097"\w*: Laß \w sich|strong="H4994"\w* die \w Leute|strong="H5288"\w* \w aufmachen|strong="H6965"\w* und vor \w uns|strong="H6440"\w* \w spielen|strong="H7832"\w*. \w Joab|strong="H3097"\w* \w sprach|strong="H0559"\w*: Es gilt \w wohl|strong="H6965"\w*.  
