\v 26 So wird dein \w Name|strong="H8034"\w* groß \w werden|strong="H1431"\w* in \w Ewigkeit|strong="H5704"\w*, daß man wird \w sagen|strong="H0559"\w*: Der \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w* ist der \w Gott|strong="H0430"\w* \w über|strong="H5921"\w* \w Israel|strong="H3478"\w*, und das \w Haus|strong="H1004"\w* deines \w Knechtes|strong="H5650"\w* \w David|strong="H1732"\w* wird \w bestehen|strong="H3559"\w* vor \w dir|strong="H6440"\w*.  
\v 27  \w Denn|strong="H3588"\w* \w du|strong="H0859"\w*, \w HERR|strong="H3068"\w* \w Zebaoth|strong="H6635"\w*, du \w Gott|strong="H0430"\w* \w Israels|strong="H3478"\w*, hast das \w Ohr|strong="H0241"\w* deines \w Knechts|strong="H5650"\w* \w geöffnet|strong="H1540"\w* und \w gesagt|strong="H0559"\w*: Ich will dir ein \w Haus|strong="H1004"\w* \w bauen|strong="H1129"\w*. \w Darum|strong="H5921"\w* hat dein \w Knecht|strong="H5650"\w* sein \w Herz|strong="H3820"\w* \w gefunden|strong="H4672"\w*, daß er \w dieses|strong="H2063"\w* \w Gebet|strong="H8605"\w* \w zu|strong="H0413"\w* dir \w betet|strong="H6419"\w*.  
\v 28  \w Nun|strong="H6258"\w*, \w Herr|strong="H0136"\w* \w HERR|strong="H3069"\w*, \w du|strong="H0859"\w* \w bist|strong="H1931"\w* \w Gott|strong="H0430"\w*, und deine \w Worte|strong="H1697"\w* werden \w Wahrheit|strong="H0571"\w* \w sein|strong="H1961"\w*. Du hast \w solches|strong="H2063"\w* \w Gute|strong="H2896"\w* \w über|strong="H0413"\w* deinen \w Knecht|strong="H5650"\w* \w geredet|strong="H1696"\w*.  
\v 29 So \w hebe|strong="H2974"\w* \w nun|strong="H6258"\w* \w an|strong="H2974"\w* und \w segne|strong="H1288"\w* das \w Haus|strong="H1004"\w* deines \w Knechtes|strong="H5650"\w*, daß es \w ewiglich|strong="H5769"\w* vor \w dir|strong="H6440"\w* \w sei|strong="H1961"\w*; \w denn|strong="H3588"\w* \w du|strong="H0859"\w*, \w Herr|strong="H0136"\w* \w HERR|strong="H3069"\w*, hast's \w geredet|strong="H1696"\w*, und mit deinem \w Segen|strong="H1293"\w* wird deines \w Knechtes|strong="H5650"\w* \w Haus|strong="H1004"\w* \w gesegnet|strong="H1288"\w* \w ewiglich|strong="H5769"\w*.   
\c 8  
\p
\v 1 Und es begab \w sich|strong="H1961"\w* \w darnach|strong="H0310"\w*, daß \w David|strong="H1732"\w* die \w Philister|strong="H6430"\w* \w schlug|strong="H5221"\w* und schwächte \w sie|strong="H3665"\w* \w und|strong="H1732"\w* \w nahm|strong="H3947"\w* den \w Dienstzaum|strong="H4965"\w* \w von|strong="H4480"\w* der \w Philister|strong="H6430"\w* \w Hand|strong="H3027"\w*.  
\v 2 Er \w schlug|strong="H5221"\w* auch die \w Moabiter|strong="H4124"\w* \w also|strong="H0853"\w* zu \w Boden|strong="H0776"\w*, daß er \w zwei|strong="H8147"\w* \w Teile|strong="H2256"\w* zum \w Tode|strong="H4191"\w* \w brachte|strong="H4058"\w* und \w einen|strong="H4393"\w* \w Teil|strong="H2256"\w* am \w Leben|strong="H2421"\w* ließ. Also \w wurden|strong="H1961"\w* die \w Moabiter|strong="H4124"\w* \w David|strong="H1732"\w* \w untertänig|strong="H5650"\w*, daß sie ihm \w Geschenke|strong="H4503"\w* \w zutrugen|strong="H5375"\w*.  
\v 3  \w David|strong="H1732"\w* \w schlug|strong="H5221"\w* auch \w Hadadeser|strong="H1909"\w*, den \w Sohn|strong="H1121"\w* \w Rehobs|strong="H7340"\w*, \w König|strong="H4428"\w* zu \w Zoba|strong="H6678"\w*, da er \w hinzog|strong="H3212"\w*, seine \w Macht|strong="H3027"\w* wieder zu \w holen|strong="H7725"\w* an dem \w Wasser|strong="H5104"\w* \w Euphrat|strong="H6578"\w*.  
\v 4 Und \w David|strong="H1732"\w* \w fing|strong="H3920"\w* \w aus|strong="H4480"\w* ihnen \w tausendundsiebenhundert|strong="H0505"\w* \w Reiter|strong="H6571"\w* und \w zwanzigtausend|strong="H6242"\w* \w Mann|strong="H0376"\w* \w Fußvolk|strong="H7273"\w* \w und|strong="H1732"\w* \w verlähmte|strong="H6131"\w* \w alle|strong="H3605"\w* Rosse der \w Wagen|strong="H7393"\w* \w und|strong="H4480"\w* behielt \w übrig|strong="H3498"\w* \w hundert|strong="H3967"\w* \w Wagen|strong="H7393"\w*.  
\v 5 Es \w kamen|strong="H0935"\w* aber die \w Syrer|strong="H0758"\w* von \w Damaskus|strong="H1834"\w*, zu \w helfen|strong="H5826"\w* \w Hadadeser|strong="H1909"\w*, dem \w König|strong="H4428"\w* zu \w Zoba|strong="H6678"\w*; und \w David|strong="H1732"\w* \w schlug|strong="H5221"\w* der \w Syrer|strong="H0758"\w* \w zweiundzwanzigtausend|strong="H8147"\w* \w Mann|strong="H0376"\w*  
\v 6  \w und|strong="H1732"\w* \w legte|strong="H7760"\w* \w Volk|strong="H5333"\w* in das \w Syrien|strong="H0758"\w* von \w Damaskus|strong="H1834"\w*. Also \w ward|strong="H1961"\w* \w Syrien|strong="H0758"\w* \w David|strong="H1732"\w* \w untertänig|strong="H5650"\w*, daß sie ihm \w Geschenke|strong="H4503"\w* \w zutrugen|strong="H5375"\w*. Denn der \w HERR|strong="H3068"\w* \w half|strong="H3467"\w* \w David|strong="H1732"\w*, \w wo|strong="H0834"\w* er hin \w zog|strong="H1980"\w*.  
\v 7 Und \w David|strong="H1732"\w* \w nahm|strong="H3947"\w* die \w goldenen|strong="H2091"\w* \w Schilde|strong="H7982"\w*, \w die|strong="H0834"\w* \w Hadadesers|strong="H1909"\w* \w Knechte|strong="H5650"\w* gehabt \w hatten|strong="H1961"\w*, und \w brachte|strong="H0935"\w* sie gen \w Jerusalem|strong="H3389"\w*.  
\v 8 Aber \w von|strong="H4480"\w* \w Betah|strong="H0984"\w* \w und|strong="H4480"\w* \w Berothai|strong="H1268"\w*, den \w Städten|strong="H5892"\w* \w Hadadesers|strong="H1909"\w*, \w nahm|strong="H3947"\w* der \w König|strong="H4428"\w* \w David|strong="H1732"\w* \w sehr|strong="H3966"\w* \w viel|strong="H7235"\w* \w Erz|strong="H5178"\w*.  
\v 9 Da aber \w Thoi|strong="H8583"\w*, der \w König|strong="H4428"\w* zu \w Hamath|strong="H2574"\w*, \w hörte|strong="H8085"\w*, \w daß|strong="H3588"\w* \w David|strong="H1732"\w* hatte \w alle|strong="H3605"\w* \w Macht|strong="H2428"\w* des \w Hadadesers|strong="H1909"\w* \w geschlagen|strong="H5221"\w*,  
\v 10  \w sandte|strong="H7971"\w* \w er|strong="H8583"\w* \w Joram|strong="H3141"\w*, seinen \w Sohn|strong="H1121"\w*, \w zu|strong="H0413"\w* \w David|strong="H4428"\w*, ihn \w freundlich|strong="H7965"\w* zu \w grüßen|strong="H7592"\w* und ihn zu \w segnen|strong="H1288"\w*, \w daß|strong="H5921"\w* er wider \w Hadadeser|strong="H1909"\w* \w gestritten|strong="H3898"\w* und ihn geschlagen \w hatte|strong="H5221"\w* (\w denn|strong="H3588"\w* \w Thoi|strong="H8583"\w* \w hatte|strong="H1961"\w* \w einen|strong="H0376"\w* \w Streit|strong="H4421"\w* mit \w Hadadeser|strong="H1909"\w*): und er \w hatte|strong="H1961"\w* mit \w sich|strong="H3027"\w* \w silberne|strong="H3701"\w*, \w goldene|strong="H2091"\w* und \w eherne|strong="H5178"\w* \w Kleinode|strong="H3627"\w*,  
\v 11  \w welche|strong="H0853"\w* der \w König|strong="H4428"\w* \w David|strong="H1732"\w* \w auch|strong="H1571"\w* dem \w HERR|strong="H3068"\w* \w heiligte|strong="H6942"\w* \w samt|strong="H5973"\w* dem \w Silber|strong="H3701"\w* und \w Gold|strong="H2091"\w*, \w das|strong="H0834"\w* er \w heiligte|strong="H6942"\w* \w von|strong="H4480"\w* \w allen|strong="H3605"\w* \w Heiden|strong="H1471"\w*, \w die|strong="H0834"\w* er unter sich \w gebracht|strong="H3533"\w*;  
\v 12  \w von|strong="H4480"\w* \w Syrien|strong="H0758"\w*, \w von|strong="H4480"\w* \w Moab|strong="H4124"\w*, \w von|strong="H4480"\w* den \w Kindern|strong="H1121"\w* \w Ammon|strong="H5983"\w*, \w von|strong="H4480"\w* den \w Philistern|strong="H6430"\w*, \w von|strong="H4480"\w* \w Amalek|strong="H6002"\w*, \w von|strong="H4480"\w* der \w Beute|strong="H7998"\w* \w Hadadesers|strong="H1909"\w*, des \w Sohnes|strong="H1121"\w* \w Rehobs|strong="H7340"\w*, \w König|strong="H4428"\w* zu \w Zoba|strong="H6678"\w*.  
\v 13 Auch \w machte|strong="H6213"\w* sich \w David|strong="H1732"\w* einen \w Namen|strong="H8034"\w* da er \w wiederkam|strong="H7725"\w* \w von|strong="H4480"\w* der \w Syrer|strong="H0758"\w* \w Schlacht|strong="H5221"\w* und schlug im \w Salztal|strong="H1516"\w* \w achtzehntausend|strong="H8083"\w* Mann,  
\v 14 und \w legte|strong="H7760"\w* \w Volk|strong="H5333"\w* in \w ganz|strong="H3605"\w* \w Edom|strong="H0123"\w*, und \w ganz|strong="H3605"\w* \w Edom|strong="H0123"\w* \w war|strong="H1961"\w* \w David|strong="H1732"\w* \w unterworfen|strong="H5650"\w*; denn der \w HERR|strong="H3068"\w* \w half|strong="H3467"\w* \w David|strong="H1732"\w*, \w wo|strong="H0834"\w* er hin \w zog|strong="H1980"\w*.  
\v 15 Also \w war|strong="H4427"\w* \w David|strong="H1732"\w* \w König|strong="H4427"\w* \w über|strong="H5921"\w* \w ganz|strong="H3605"\w* \w Israel|strong="H3478"\w*, \w und|strong="H1732"\w* \w schaffte|strong="H1961"\w* \w Recht|strong="H4941"\w* und \w Gerechtigkeit|strong="H6666"\w* \w allem|strong="H3605"\w* \w Volk|strong="H5971"\w*.  
\v 16  \w Joab|strong="H3097"\w*, der \w Zeruja|strong="H6870"\w* \w Sohn|strong="H1121"\w*, war \w über|strong="H5921"\w* das \w Heer|strong="H6635"\w*; \w Josaphat|strong="H3092"\w* aber, der \w Sohn|strong="H1121"\w* \w Ahiluds|strong="H0286"\w* war \w Kanzler|strong="H2142"\w*;  
\v 17  \w Zadok|strong="H6659"\w*, der \w Sohn|strong="H1121"\w* \w Ahitobs|strong="H0285"\w*, und \w Ahimelech|strong="H0288"\w*, der \w Sohn|strong="H1121"\w* \w Abjathars|strong="H0054"\w*, waren \w Priester|strong="H3548"\w*; \w Seraja|strong="H8304"\w* war \w Schreiber|strong="H5608"\w*;  
\v 18  \w Benaja|strong="H1141"\w*, der \w Sohn|strong="H1121"\w* \w Jojadas|strong="H3077"\w*, war über die \w Krether|strong="H3774"\w* und \w Plether|strong="H6432"\w*, und die \w Söhne|strong="H1121"\w* \w Davids|strong="H1732"\w* \w waren|strong="H1961"\w* \w Priester|strong="H3548"\w*.   
\c 9  
\p
\v 1 Und \w David|strong="H1732"\w* \w sprach|strong="H0559"\w*: \w Ist|strong="H3426"\w* auch \w noch|strong="H5750"\w* \w jemand|strong="H0834"\w* \w übriggeblieben|strong="H3498"\w* von dem \w Hause|strong="H1004"\w* \w Sauls|strong="H7586"\w*, daß ich \w Barmherzigkeit|strong="H2617"\w* \w an|strong="H5973"\w* ihm \w tue|strong="H6213"\w* um \w Jonathans|strong="H3083"\w* willen?  
\v 2 Es war aber ein \w Knecht|strong="H5650"\w* vom \w Hause|strong="H1004"\w* \w Sauls|strong="H7586"\w*, der \w hieß|strong="H8034"\w* \w Ziba|strong="H6717"\w*; den \w riefen|strong="H7121"\w* sie \w zu|strong="H0413"\w* \w David|strong="H1732"\w*. Und der \w König|strong="H4428"\w* \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: Bist \w du|strong="H0859"\w* \w Ziba|strong="H6717"\w*? Er \w sprach|strong="H0559"\w*: Ja, dein \w Knecht|strong="H5650"\w*.  
\v 3 Der \w König|strong="H4428"\w* \w sprach|strong="H0559"\w*: \w Ist|strong="H0657"\w* \w noch|strong="H5750"\w* \w jemand|strong="H0376"\w* vom \w Hause|strong="H1004"\w* \w Sauls|strong="H7586"\w*, daß ich \w Gottes|strong="H0430"\w* \w Barmherzigkeit|strong="H2617"\w* \w an|strong="H5973"\w* ihm \w tue|strong="H6213"\w*? \w Ziba|strong="H6717"\w* \w sprach|strong="H0559"\w*: Es ist \w noch|strong="H5750"\w* da ein \w Sohn|strong="H1121"\w* \w Jonathans|strong="H3083"\w*, \w lahm|strong="H5223"\w* an den \w Füßen|strong="H7272"\w*.  
\v 4 Der \w König|strong="H4428"\w* \w sprach|strong="H0559"\w* zu ihm: \w Wo|strong="H0375"\w* ist \w er|strong="H1931"\w*? \w Ziba|strong="H6717"\w* \w sprach|strong="H0559"\w* \w zum|strong="H0413"\w* \w König|strong="H4428"\w*: \w Siehe|strong="H2009"\w*, \w er|strong="H1931"\w* ist zu Lo-\w Dabar|strong="H3810"\w* im \w Hause|strong="H1004"\w* \w Machirs|strong="H4353"\w*, des \w Sohnes|strong="H1121"\w* \w Ammiels|strong="H5988"\w*.  
\v 5 Da \w sandte|strong="H7971"\w* der \w König|strong="H4428"\w* \w David|strong="H1732"\w* hin und \w ließ|strong="H3947"\w* ihn \w holen|strong="H4480"\w* \w von|strong="H4480"\w* Lo-\w Dabar|strong="H3810"\w* aus dem \w Hause|strong="H1004"\w* \w Machirs|strong="H4353"\w*, des \w Sohnes|strong="H1121"\w* \w Ammiels|strong="H5988"\w*.  
\v 6 Da nun \w Mephiboseth|strong="H4648"\w*, der \w Sohn|strong="H1121"\w* \w Jonathans|strong="H3083"\w*, des \w Sohnes|strong="H1121"\w* \w Sauls|strong="H7586"\w*, \w zu|strong="H0413"\w* \w David|strong="H1732"\w* \w kam|strong="H0935"\w*, \w fiel|strong="H5307"\w* er \w auf|strong="H5921"\w* sein \w Angesicht|strong="H6440"\w* und beugte sich \w nieder|strong="H7812"\w*. \w David|strong="H1732"\w* aber \w sprach|strong="H0559"\w*: \w Mephiboseth|strong="H4648"\w*! Er \w sprach|strong="H0559"\w*: Hier bin ich, dein \w Knecht|strong="H5650"\w*.  
\v 7  \w David|strong="H1732"\w* \w sprach|strong="H0559"\w* zu ihm: \w Fürchte|strong="H3372"\w* dich \w nicht|strong="H0408"\w*; \w denn|strong="H3588"\w* ich \w will|strong="H6213"\w* \w Barmherzigkeit|strong="H2617"\w* \w an|strong="H5973"\w* dir \w tun|strong="H6213"\w* \w um|strong="H5668"\w* \w Jonathans|strong="H3083"\w*, deines \w Vaters|strong="H0001"\w*, willen und will dir \w allen|strong="H3605"\w* \w Acker|strong="H7704"\w* deines \w Vaters|strong="H0001"\w* \w Saul|strong="H7586"\w* \w wiedergeben|strong="H7725"\w*; \w du|strong="H0859"\w* sollst aber \w täglich|strong="H8548"\w* \w an|strong="H5921"\w* meinem \w Tisch|strong="H7979"\w* das \w Brot|strong="H3899"\w* \w essen|strong="H0398"\w*.  
\v 8 Er aber fiel \w nieder|strong="H7812"\w* und \w sprach|strong="H0559"\w*: \w Wer|strong="H4100"\w* bin ich, dein \w Knecht|strong="H5650"\w*, \w daß|strong="H3588"\w* du dich \w wendest|strong="H6437"\w* \w zu|strong="H0413"\w* einem \w toten|strong="H4191"\w* \w Hunde|strong="H3611"\w*, \w wie|strong="H0834"\w* \w ich|strong="H3644"\w* bin?  
\v 9 Da \w rief|strong="H7121"\w* der \w König|strong="H4428"\w* \w Ziba|strong="H0413"\w*, den \w Diener|strong="H5288"\w* \w Sauls|strong="H7586"\w*, und \w sprach|strong="H0559"\w* \w zu|strong="H0413"\w* ihm: \w Alles|strong="H3605"\w*, \w was|strong="H0834"\w* \w Saul|strong="H7586"\w* gehört \w hat|strong="H1961"\w* und seinem \w ganzen|strong="H3605"\w* \w Hause|strong="H1004"\w*, habe ich dem \w Sohn|strong="H1121"\w* deines \w Herrn|strong="H0113"\w* \w gegeben|strong="H5414"\w*.  
\v 10  \w So|strong="H0859"\w* \w arbeite|strong="H5647"\w* ihm nun seinen \w Acker|strong="H0127"\w*, du und deine \w Kinder|strong="H1121"\w* und \w Knechte|strong="H5650"\w*, und bringe es \w ein|strong="H0935"\w*, daß es das \w Brot|strong="H3899"\w* \w sei|strong="H1961"\w* des \w Sohnes|strong="H1121"\w* deines \w Herrn|strong="H0113"\w*, daß er sich \w nähre|strong="H0398"\w*; aber \w Mephiboseth|strong="H4648"\w*, deines \w Herrn|strong="H0113"\w* \w Sohn|strong="H1121"\w*, soll \w täglich|strong="H8548"\w* das \w Brot|strong="H3899"\w* \w essen|strong="H0398"\w* \w an|strong="H5921"\w* meinem \w Tisch|strong="H7979"\w*. \w Ziba|strong="H6717"\w* aber hatte \w fünfzehn|strong="H2568"\w* \w Söhne|strong="H1121"\w* und \w zwanzig|strong="H6242"\w* \w Knechte|strong="H5650"\w*.  
\v 11 Und \w Ziba|strong="H6717"\w* \w sprach|strong="H0559"\w* \w zum|strong="H0413"\w* \w König|strong="H4428"\w*: \w Alles|strong="H3605"\w*, \w wie|strong="H0834"\w* mein \w Herr|strong="H0113"\w*, der \w König|strong="H4428"\w*, seinem \w Knecht|strong="H5650"\w* geboten \w hat|strong="H6680"\w*, \w so|strong="H3651"\w* soll dein \w Knecht|strong="H5650"\w* \w tun|strong="H6213"\w*. Und \w Mephiboseth|strong="H4648"\w* (sprach David) \w esse|strong="H0398"\w* \w an|strong="H5921"\w* meinem \w Tisch|strong="H7979"\w* wie \w der|strong="H4480"\w* \w Königskinder|strong="H4428"\w* \w eins|strong="H0259"\w*.  
\v 12 Und \w Mephiboseth|strong="H4648"\w* hatte einen \w kleinen|strong="H6996"\w* \w Sohn|strong="H1121"\w*, der \w hieß|strong="H8034"\w* \w Micha|strong="H4316"\w*. Aber \w alles|strong="H3605"\w*, was im \w Hause|strong="H1004"\w* \w Zibas|strong="H6717"\w* \w wohnte|strong="H4186"\w*, das \w diente|strong="H5650"\w* \w Mephiboseth|strong="H4648"\w*.  
\v 13  \w Mephiboseth|strong="H4648"\w* aber \w wohnte|strong="H3427"\w* zu \w Jerusalem|strong="H3389"\w*; \w denn|strong="H3588"\w* \w er|strong="H1931"\w* \w aß|strong="H0398"\w* \w täglich|strong="H8548"\w* \w an|strong="H5921"\w* des \w Königs|strong="H4428"\w* \w Tisch|strong="H7979"\w*, und \w er|strong="H1931"\w* \w hinkte|strong="H6455"\w* mit seinen \w beiden|strong="H8147"\w* \w Füßen|strong="H7272"\w*.   
\c 10  
\p
\v 1 Und es begab \w sich|strong="H1961"\w* \w darnach|strong="H0310"\w*, daß der \w König|strong="H4428"\w* der \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w* \w starb|strong="H4191"\w*, und sein \w Sohn|strong="H1121"\w* \w Hanun|strong="H2586"\w* ward \w König|strong="H4427"\w* an seiner \w Statt|strong="H8478"\w*.  
\v 2 Da \w sprach|strong="H0559"\w* \w David|strong="H1732"\w*: Ich will \w Barmherzigkeit|strong="H2617"\w* \w tun|strong="H6213"\w* \w an|strong="H5973"\w* \w Hanun|strong="H2586"\w*, dem \w Sohn|strong="H1121"\w* \w Nahas|strong="H5176"\w*, \w wie|strong="H0834"\w* sein \w Vater|strong="H0001"\w* \w an|strong="H5973"\w* mir \w Barmherzigkeit|strong="H2617"\w* getan \w hat|strong="H6213"\w*. \w Und|strong="H1732"\w* \w sandte|strong="H7971"\w* hin und ließ ihn \w trösten|strong="H5162"\w* \w durch|strong="H3027"\w* seine \w Knechte|strong="H5650"\w* \w über|strong="H0413"\w* seinen \w Vater|strong="H0001"\w*. Da nun die \w Knechte|strong="H5650"\w* \w Davids|strong="H1732"\w* ins \w Land|strong="H0776"\w* der \w Kinder|strong="H1121"\w* \w Ammon|strong="H5983"\w* \w kamen|strong="H0935"\w*,  
