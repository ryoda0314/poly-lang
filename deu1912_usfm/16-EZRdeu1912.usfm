\c 1  
\p
\v 1 Im \w ersten|strong="H0259"\w* \w Jahr|strong="H8141"\w* des \w Kores|strong="H3566"\w*, des \w Königs|strong="H4428"\w* in \w Persien|strong="H6539"\w* (daß erfüllt \w würde|strong="H3615"\w* das \w Wort|strong="H1697"\w* des \w HERRN|strong="H3068"\w* \w durch|strong="H4480"\w* den \w Mund|strong="H6310"\w* Jeremia'\w s|strong="H3414"\w* geredet), \w erweckte|strong="H5782"\w* der \w HERR|strong="H3068"\w* den \w Geist|strong="H7307"\w* des \w Kores|strong="H3566"\w*, des \w Königs|strong="H4428"\w* in \w Persien|strong="H6539"\w*, daß \w er|strong="H6963"\w* ausrufen \w ließ|strong="H5674"\w* durch sein \w ganzes|strong="H3605"\w* \w Königreich|strong="H4438"\w*, auch \w durch|strong="H1571"\w* \w Schrift|strong="H4385"\w*, und \w sagen|strong="H0559"\w*:  
\v 2  \w So|strong="H3541"\w* \w spricht|strong="H0559"\w* \w Kores|strong="H3566"\w*, der \w König|strong="H4428"\w* in \w Persien|strong="H6539"\w*: Der \w HERR|strong="H3068"\w*, der \w Gott|strong="H0430"\w* des \w Himmels|strong="H8064"\w*, hat mir \w alle|strong="H3605"\w* \w Königreiche|strong="H4467"\w* der \w Erde|strong="H0776"\w* \w gegeben|strong="H5414"\w*, \w und|strong="H1931"\w* hat mir \w befohlen|strong="H6485"\w*, ihm ein \w Haus|strong="H1004"\w* zu \w bauen|strong="H1129"\w* zu \w Jerusalem|strong="H3389"\w* in \w Juda|strong="H3063"\w*.  
\v 3  \w Wer|strong="H4310"\w* nun unter \w euch|strong="H4480"\w* seine \w Volkes|strong="H5971"\w* \w ist|strong="H4480"\w*, \w mit|strong="H5973"\w* \w dem|strong="H5927"\w* \w Sei|strong="H1961"\w* \w Gott|strong="H0430"\w*, und er ziehe \w hinauf|strong="H5927"\w* gen \w Jerusalem|strong="H3389"\w* \w in|strong="H0834"\w* \w Juda|strong="H3063"\w* und \w baue|strong="H1129"\w* das \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w*, des \w Gottes|strong="H0430"\w* \w Israels|strong="H3478"\w*. \w Er|strong="H1931"\w* ist der \w Gott|strong="H0430"\w*, \w der|strong="H0834"\w* zu \w Jerusalem|strong="H3389"\w* ist.  
\v 4  \w Und|strong="H3605"\w* wer noch übrig \w ist|strong="H7604"\w* \w an|strong="H4480"\w* \w allen|strong="H3605"\w* \w Orten|strong="H4725"\w*, \w da|strong="H0834"\w* \w der|strong="H1931"\w* Fremdling \w ist|strong="H1481"\w*, dem \w sollen|strong="H0582"\w* \w helfen|strong="H5375"\w* die \w Leute|strong="H0582"\w* seines \w Orts|strong="H4725"\w* mit \w Silber|strong="H3701"\w* und \w Gold|strong="H2091"\w*, \w Gut|strong="H7399"\w* und \w Vieh|strong="H0929"\w*, außer \w dem|strong="H5973"\w*, was sie aus freiem Willen \w geben|strong="H5071"\w* zum \w Hause|strong="H1004"\w* \w Gottes|strong="H0430"\w* zu \w Jerusalem|strong="H3389"\w*.  
\v 5 Da machten sich \w auf|strong="H6965"\w* die \w Obersten|strong="H7218"\w* der \w Vaterhäuser|strong="H0001"\w* aus \w Juda|strong="H3063"\w* und \w Benjamin|strong="H1144"\w* und die \w Priester|strong="H3548"\w* und \w Leviten|strong="H3881"\w*, \w alle|strong="H3605"\w*, deren \w Geist|strong="H7307"\w* \w Gott|strong="H0430"\w* \w erweckte|strong="H5782"\w*, \w hinaufzuziehen|strong="H5927"\w* und zu \w bauen|strong="H1129"\w* das \w Haus|strong="H1004"\w* des \w HERRN|strong="H3068"\w* zu \w Jerusalem|strong="H3389"\w*.  
\v 6 Und \w alle|strong="H3605"\w*, die \w um|strong="H5439"\w* \w sie|strong="H2388"\w* \w her|strong="H5439"\w* waren, \w stärkten|strong="H2388"\w* ihre \w Hände|strong="H3027"\w* mit \w silbernem|strong="H3701"\w* und \w goldenem|strong="H2091"\w* \w Geräte|strong="H3627"\w*, mit \w Gut|strong="H7399"\w* und \w Vieh|strong="H0929"\w* und \w Kleinoden|strong="H4030"\w*, außer \w dem|strong="H0905"\w*, Was sie freiwillig \w gaben|strong="H5068"\w*.  
\v 7 Und der \w König|strong="H4428"\w* \w Kores|strong="H3566"\w* tat \w heraus|strong="H3318"\w* die \w Gefäße|strong="H3627"\w* des \w Hauses|strong="H1004"\w* des \w HERRN|strong="H3068"\w*, \w die|strong="H0834"\w* \w Nebukadnezar|strong="H5019"\w* \w aus|strong="H4480"\w* \w Jerusalem|strong="H3389"\w* genommen \w hatte|strong="H3318"\w* \w und|strong="H5414"\w* \w in|strong="H1004"\w* seines \w Gottes|strong="H0430"\w* \w Haus|strong="H1004"\w* getan \w hatte|strong="H5414"\w*.  
\v 8 Aber \w Kores|strong="H3566"\w*, der \w König|strong="H4428"\w* in \w Persien|strong="H6539"\w*, tat sie \w heraus|strong="H3318"\w* \w durch|strong="H5921"\w* \w Mithredath|strong="H4990"\w*, den \w Schatzmeister|strong="H1489"\w*; \w der|strong="H8339"\w* \w zählte|strong="H5608"\w* sie dar \w Sesbazar|strong="H8339"\w*, dem \w Fürsten|strong="H5387"\w* Juda'\w s|strong="H3063"\w*.  
\v 9 Und \w dies|strong="H0428"\w* ist ihre \w Zahl|strong="H4557"\w*: \w dreißig|strong="H7970"\w* \w goldene|strong="H2091"\w* \w Becken|strong="H0105"\w* und \w tausend|strong="H0505"\w* \w silberne|strong="H3701"\w* \w Becken|strong="H0105"\w*, \w neunundzwanzig|strong="H8672"\w* \w Messer|strong="H4252"\w*,  
\v 10  \w dreißig|strong="H7970"\w* \w goldene|strong="H2091"\w* \w Becher|strong="H3713"\w* und der \w andern|strong="H4932"\w*, \w silbernen|strong="H3701"\w* \w Becher|strong="H3713"\w* \w vierhundertundzehn|strong="H0702"\w* und \w anderer|strong="H0312"\w* \w Gefäße|strong="H3627"\w* \w tausend|strong="H0505"\w*,  
\v 11 daß \w aller|strong="H3605"\w* \w Gefäße|strong="H3627"\w*, \w golden|strong="H2091"\w* und \w silbern|strong="H3701"\w*, waren \w fünftausend|strong="H2568"\w* und \w vierhundert|strong="H0702"\w*. \w Alle|strong="H3605"\w* brachte \w sie|strong="H5927"\w* \w Sesbazar|strong="H8339"\w* \w herauf|strong="H5927"\w* \w mit|strong="H5973"\w* denen, die aus der \w Gefangenschaft|strong="H1473"\w* \w von|strong="H4480"\w* \w Babel|strong="H0894"\w* \w heraufzogen|strong="H5927"\w* gen \w Jerusalem|strong="H3389"\w*.   
