\v 14  \w Denn|strong="G1063"\w* \w ihr|strong="G5210"\w* seid \w Nachfolger|strong="G3402"\w* \w geworden|strong="G1096"\w*, liebe \w Brüder|strong="G0080"\w*, der \w Gemeinden|strong="G1577"\w* \w Gottes|strong="G2316"\w* \w in|strong="G1722"\w* \w Judäa|strong="G2449"\w* \w in|strong="G1722"\w* \w Christo|strong="G5547"\w* \w Jesu|strong="G2424"\w*, \w weil|strong="G3754"\w* \w ihr|strong="G5210"\w* \w ebendasselbe|strong="G5024"\w* erlitten \w habt|strong="G3958"\w* \w von|strong="G5259"\w* \w euren|strong="G2398"\w* \w Blutsfreunden|strong="G4853"\w*, \w was|strong="G2531"\w* \w jene|strong="G2532"\w* \w von|strong="G5259"\w* den \w Juden|strong="G2453"\w*,  
